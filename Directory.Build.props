<Project>
   <PropertyGroup>
      <!-- Disable auto-generated assembly info to prevent duplicates -->
      <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

      <!-- Disable framework attributes to prevent duplicates -->
      <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
      <GenerateNeutralResourcesLanguageAttribute>false</GenerateNeutralResourcesLanguageAttribute>

      <!-- Force disable warnings as errors globally -->
      <TreatWarningsAsErrors>false</TreatWarningsAsErrors>

      <!-- Treat CS0579 as warnings instead of errors -->
      <WarningsNotAsErrors>CS0579</WarningsNotAsErrors>

      <!-- Suppress all CS0579 warnings globally -->
      <NoWarn>CS0579;$(NoWarn)</NoWarn>

      <!-- Suppress additional potential duplicate attribute warnings -->
      <NoWarn>CS0579;CS1685;CS1701;$(NoWarn)</NoWarn>

      <!-- Special handling for temp WPF projects -->
      <WarningsNotAsErrors Condition="'$(MSBuildProjectName.EndsWith(`_wpftmp`))' == 'true'">CS0579;CS1685;CS1701;$(WarningsNotAsErrors)</WarningsNotAsErrors>
      <NoWarn Condition="'$(MSBuildProjectName.EndsWith(`_wpftmp`))' == 'true'">CS0579;CS1685;CS1701;$(NoWarn)</NoWarn>
      <TreatWarningsAsErrors Condition="'$(MSBuildProjectName.EndsWith(`_wpftmp`))' == 'true'">false</TreatWarningsAsErrors>
    </PropertyGroup>
 </Project>