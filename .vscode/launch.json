{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest: Debug Current Test File",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/guiv2/node_modules/.bin/jest",
                "--runInBand",
                "--no-cache",
                "--watchAll=false",
                "--testPathPatterns",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/guiv2",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "Jest: Debug All Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/guiv2/node_modules/.bin/jest",
                "--runInBand",
                "--no-cache",
                "--watchAll=false"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/guiv2",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": []
        }
    ]
}