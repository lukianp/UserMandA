{
  "metadata": {
    "version": "4.0.0",
    "companyName": "Zedra",
    "projectName": "M&A Discovery Suite",
    "description": "Automated discovery and migration planning for M&A activities",
    "author": "IT Migration Team",
    "lastUpdated": "2024-01-15"
  },
  "environment": {
    "outputPath": ".\\Output", 
    "tempPath": ".\\Temp", 
    "logLevel": "INFO", 
    "maxRetries": 3,
    "domainController": "DC01.contoso.com", 
    "logging": {
      "useEmojis": true,
      "useColors": true,
      "showTimestamp": true,
      "showComponent": true,
      "maxLogSizeMB": 50,
      "logRetentionDays": 30
    },
    "connectivity": {
      "preferInteractiveAuth": false,
      "proxyBypassForExchange": true,
      "maxConnectionRetries": 3,
      "connectionTimeout": 30, 
      "retryDelaySeconds": 5
    }
  },
  "authentication": {
    "useServicePrincipal": true,
    "useInteractiveAuth": false,
    "credentialStorePath": ".\\Credentials\\credentials.config", 
    "certificateThumbprint": "",
    "tokenRefreshThreshold": 600,
    "authenticationMethod": "ClientSecret" 
  },
  "discovery": {
    "enabledSources": [
      "ActiveDirectory",
      "Graph",
      "Exchange",
      "Azure",
      "Intune",
      "GPO",
      "ExternalIdentity"
    ],
    "skipExistingFiles": true,
    "parallelProcessing": true,
    "maxConcurrentJobs": 5,
    "batchSize": 1000, 
    "excludeDisabledUsers": false,
    "includeGuestUsers": true,
    "discoveryScope": {
      "includedOUs": [],
      "excludedOUs": [],
      "includedDomains": [],
      "excludedDomains": []
    },
    "compressionEnabled": true 
  },
  "processing": {
    "chunkSize": 100, 
    "includeDisabledUsers": false, 
    "generateWavesByDepartment": true,
    "maxWaveSize": 50, 
    "complexityThresholds": {
      "low": 3,
      "medium": 7,
      "high": 10 
    },
    "priorityWeights": {
      "complexity": 0.3,
      "readiness": 0.4,
      "businessImpact": 0.3
    },
    "riskFactors": {
      "largeMailboxThresholdGB": 10,
      "inactivityThresholdDays": 90,
      "complexLicenseCount": 3
    }
  },
  "export": {
    "formats": ["CSV", "JSON"], 
    "excelEnabled": true, 
    "powerAppsOptimized": true,
    "includeMetadata": true,
    "archiveResults": true,
    "reportRetentionDays": 90,
    "jsonExportDepth": 5, 
    "powerAppsJsonDepth": 3, 
    "exportOptions": {
      "includeRawData": false,
      "includeProcessedData": true,
      "includeSummaryReports": true,
      "includeVisualizations": false 
    }
  },
  "performance": {
    "memoryThresholdMB": 4096,
    "diskSpaceThresholdGB": 10, 
    "throttleLimit": 100, 
    "progressUpdateInterval": 100, 
    "enableCaching": true,
    "cacheExpirationMinutes": 60,
    "enableGarbageCollection": true 
  },
  "advancedSettings": {
    "debugMode": false,
    "verboseLogging": false,
    "simulationMode": false,
    "validateDataIntegrity": true,
    "enableAuditLog": true,
    "customModulePath": "",
    "bypassCertificateValidation": false,
    "createPlaceholderFunctions": false 
  },
  "notifications": {
    "enabled": false,
    "smtpServer": "",
    "smtpPort": 587,
    "useSSL": true,
    "from": "manda-discovery@contoso.com",
    "to": ["it-team@contoso.com"],
    "sendOnCompletion": true,
    "sendOnError": true
  },
  "graphAPI": {
    "apiVersion": "v1.0",
    "useBetaEndpoint": false,
    "pageSize": 999,
    "selectFields": {
      "users": ["id", "userPrincipalName", "displayName", "mail", "department", "jobTitle", "createdDateTime", "accountEnabled", "lastSignInDateTime", "onPremisesSyncEnabled", "onPremisesImmutableId", "companyName", "usageLocation", "assignedLicenses", "memberOf"],
      "groups": ["id", "displayName", "description", "mailEnabled", "securityEnabled", "groupTypes", "visibility"],
      "applications": ["id", "appId", "displayName", "publisherDomain", "signInAudience"],
      "servicePrincipals": ["id", "appId", "displayName", "servicePrincipalType", "accountEnabled", "appRoles", "oauth2PermissionScopes", "owners"]
    }
  },
  "exchangeOnline": {
    "includeSoftDeletedMailboxes": false,
    "includeArchiveMailboxes": true,
    "includeResourceMailboxes": false,
    "includeSharedMailboxes": true,
    "mailboxStatsBatchSize": 100
  },
  "azure": {
    "includeClassicResources": false,
    "subscriptionFilter": [],
    "resourceGroupFilter": [],
    "tagFilter": {}
  }
}
