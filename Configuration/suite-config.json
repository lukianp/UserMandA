{
    "metadata": {
        "version": "4.1.0",
        "companyName": "Enterprise Suite",
        "projectName": "M&A Discovery Suite Enterprise",
        "description": "Enterprise configuration for large-scale M&A Discovery Suite deployment",
        "author": "Enterprise IT Team",
        "lastUpdated": "2025-09-23"
    },
    "environment": {
        "profilesBasePath": "./EnterpriseProfiles",
        "outputPath": "./EnterpriseProfiles/Exports",
        "tempPath": "./EnterpriseProfiles/Temp",
        "logLevel": "INFO",
        "maxRetries": 5,
        "domainController": null,
        "globalCatalog": null,
        "logging": {
            "useEmojis": true,
            "useColors": true,
            "showTimestamp": true,
            "showComponent": true,
            "maxLogSizeMB": 100,
            "logRetentionDays": 90,
            "verboseProgress": true
        },
        "connectivity": {
            "preferInteractiveAuth": false,
            "proxyBypassForExchange": true,
            "maxConnectionRetries": 5,
            "connectionTimeout": 60,
            "retryDelaySeconds": 10,
            "haltOnConnectionError": [
                "ActiveDirectory",
                "Graph",
                "Exchange"
            ]
        },
        "timeouts": {
            "default": 7200,
            "discovery": 7200,
            "export": 7200,
            "authentication": 1200,
            "moduleExecution": 7200,
            "longRunningTasks": 14400
        }
    },
    "authentication": {
        "useServicePrincipal": true,
        "useInteractiveAuth": false,
        "credentialStorePath": "./EnterpriseProfiles",
        "tokenRefreshThreshold": 1200,
        "authenticationMethod": "ClientSecret"
    },
    "discovery": {
        "enabledSources": [
            "ActiveDirectory",
            "Azure",
            "GPO",
            "EnvironmentDetection",
            "Exchange",
            "ExternalIdentity",
            "FileServer",
            "Graph",
            "Intune",
            "Licensing",
            "NetworkInfrastructure",
            "SharePoint",
            "SQLServer",
            "Teams",
            "VMware",
            "CertificateAuthority",
            "DNSDHCP",
            "PowerPlatform",
            "SecurityInfrastructure"
        ],
        "skipExistingFiles": true,
        "parallelProcessing": true,
        "maxConcurrentJobs": 8,
        "batchSize": 2000,
        "excludeDisabledUsers": false,
        "includeGuestUsers": true,
        "discoveryScope": {
            "includedOUs": [],
            "excludedOUs": [],
            "includedDomains": [],
            "excludedDomains": []
        },
        "compressionEnabled": true,
        "powershellModules": {},
        "adDns": {
            "dnsServer": null,
            "detailedZones": ["*"]
        },
        "externalIdentity": {
            "getGuestAppRoleAssignments": true,
            "collectSharePointSettings": true,
            "collectTeamsSettings": true,
            "topPartnerDomainsToAnalyze": 20,
            "recentGuestCountForInvitationFallback": 100
        },
        "fileServer": {
            "targetServers": [],
            "excludedServers": [],
            "useSmbShareForEnumeration": true,
            "timeoutPerServerRemoteCommandSeconds": 180,
            "collectShareDetailsLevel": "Full",
            "timeoutPerShareAclSeconds": 120,
            "timeoutPerShareSizeSeconds": 600,
            "maxSharePathDepthForSize": 2,
            "excludedShareNames": [
                "ADMIN$",
                "IPC$",
                "PRINT$",
                "FAX$",
                "SYSVOL",
                "NETLOGON"
            ],
            "discoverDFS": true,
            "discoverStorageAnalysis": true,
            "discoverShadowCopies": true,
            "discoverClusters": true,
            "skipShareSizeCalculationForPathDepthExceeding": 2000000
        },
        "sharepoint": {
            "tenantName": "enterprise"
        }
    },
    "processing": {
        "chunkSize": 200,
        "includeDisabledUsers": false,
        "generateWavesByDepartment": true,
        "maxWaveSize": 100,
        "complexityThresholds": {
            "low": 3,
            "medium": 7,
            "high": 10
        },
        "priorityWeights": {
            "complexity": 0.3,
            "readiness": 0.4,
            "businessImpact": 0.3
        },
        "riskFactors": {
            "largeMailboxThresholdGB": 25,
            "inactivityThresholdDays": 180,
            "complexLicenseCount": 5
        }
    },
    "export": {
        "formats": [
            "CSV",
            "JSON",
            "Excel"
        ],
        "excelEnabled": true,
        "powerAppsOptimized": true,
        "includeMetadata": true,
        "archiveResults": true,
        "reportRetentionDays": 180,
        "jsonExportDepth": 5,
        "powerAppsJsonDepth": 3,
        "exportOptions": {
            "includeRawData": true,
            "includeProcessedData": true,
            "includeSummaryReports": true,
            "includeVisualizations": true
        }
    },
    "performance": {
        "memoryThresholdMB": 16384,
        "diskSpaceThresholdGB": 5,
        "throttleLimit": 200,
        "progressUpdateInterval": 50,
        "enableCaching": true,
        "cacheExpirationMinutes": 120,
        "enableGarbageCollection": true
    },
    "advancedSettings": {
        "debugMode": false,
        "verboseLogging": true,
        "simulationMode": false,
        "validateDataIntegrity": true,
        "enableAuditLog": true,
        "customModulePath": "",
        "bypassCertificateValidation": false,
        "createPlaceholderFunctions": false
    },
    "notifications": {
        "enabled": true,
        "smtpServer": "smtp.enterprise.com",
        "smtpPort": 587,
        "useSSL": true,
        "from": "manda-discovery@enterprise.com",
        "to": [
            "it-team@enterprise.com",
            "management@enterprise.com"
        ],
        "sendOnCompletion": true,
        "sendOnError": true
    },
    "graphAPI": {
        "apiVersion": "v1.0",
        "useBetaEndpoint": false,
        "pageSize": 999,
        "selectFields": {
            "users": [
                "id",
                "userPrincipalName",
                "displayName",
                "mail",
                "department",
                "jobTitle",
                "createdDateTime",
                "accountEnabled",
                "lastSignInDateTime",
                "onPremisesSyncEnabled",
                "onPremisesImmutableId",
                "companyName",
                "usageLocation",
                "assignedLicenses",
                "memberOf"
            ],
            "groups": [
                "id",
                "displayName",
                "description",
                "mailEnabled",
                "securityEnabled",
                "groupTypes",
                "visibility"
            ],
            "applications": [
                "id",
                "appId",
                "displayName",
                "publisherDomain",
                "signInAudience"
            ],
            "servicePrincipals": [
                "id",
                "appId",
                "displayName",
                "servicePrincipalType",
                "accountEnabled",
                "appRoles",
                "oauth2PermissionScopes",
                "owners"
            ]
        }
    },
    "exchangeOnline": {
        "includeSoftDeletedMailboxes": false,
        "includeArchiveMailboxes": true,
        "includeResourceMailboxes": false,
        "includeSharedMailboxes": true,
        "mailboxStatsBatchSize": 200
    },
    "azure": {
        "includeClassicResources": true,
        "subscriptionFilter": [],
        "resourceGroupFilter": [],
        "tagFilter": {}
    }
}