<Window x:Class="MandADiscoverySuite.Views.Migration.ConflictResolutionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Account Conflict Resolution"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="ConflictHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
        </Style>
        
        <Style x:Key="ConflictItemStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="#FFFAFAFA"/>
        </Style>
        
        <Style x:Key="SeverityHighStyle" TargetType="Border" BasedOn="{StaticResource ConflictItemStyle}">
            <Setter Property="BorderBrush" Value="#FFEF4444"/>
            <Setter Property="Background" Value="#FFFEF2F2"/>
        </Style>
        
        <Style x:Key="SeverityMediumStyle" TargetType="Border" BasedOn="{StaticResource ConflictItemStyle}">
            <Setter Property="BorderBrush" Value="#FFF59E0B"/>
            <Setter Property="Background" Value="#FFFEF3C7"/>
        </Style>
        
        <Style x:Key="SeverityLowStyle" TargetType="Border" BasedOn="{StaticResource ConflictItemStyle}">
            <Setter Property="BorderBrush" Value="#FF3B82F6"/>
            <Setter Property="Background" Value="#FFEFF6FF"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="User Account Migration Conflicts Detected" 
                       Style="{StaticResource ConflictHeaderStyle}" 
                       FontSize="20" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding SourceUserPrincipalName, StringFormat='Source User: {0}'}" 
                       FontSize="14" 
                       Foreground="#FF6B7280"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Conflicts List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DetectedConflicts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource ConflictItemStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Severity}" Value="High">
                                            <Setter Property="BorderBrush" Value="#FFEF4444"/>
                                            <Setter Property="Background" Value="#FFFEF2F2"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                            <Setter Property="BorderBrush" Value="#FFF59E0B"/>
                                            <Setter Property="Background" Value="#FFFEF3C7"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Severity}" Value="Low">
                                            <Setter Property="BorderBrush" Value="#FF3B82F6"/>
                                            <Setter Property="Background" Value="#FFEFF6FF"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Conflict Type and Severity -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding ConflictType}" 
                                               FontWeight="Bold" 
                                               FontSize="14"/>
                                    <Border Background="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"
                                            CornerRadius="10"
                                            Padding="8,2"
                                            Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Severity}" 
                                                   FontSize="12" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Conflicting Value -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="{Binding ConflictingValue, StringFormat='Conflicting Value: {0}'}" 
                                           Margin="0,5,0,0" 
                                           FontSize="12"
                                           Foreground="#FF6B7280"/>
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="{Binding Description}" 
                                           Margin="0,5,0,0" 
                                           TextWrapping="Wrap"/>
                                
                                <!-- Resolution Options -->
                                <ComboBox Grid.Row="3" Grid.Column="0" 
                                          ItemsSource="{Binding ResolutionOptions}"
                                          SelectedItem="{Binding RecommendedAction}"
                                          Margin="0,8,0,0"
                                          MinWidth="200"
                                          HorizontalAlignment="Left"/>
                                
                                <!-- Existing User Info (if applicable) -->
                                <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" 
                                            Orientation="Vertical"
                                            Margin="20,0,0,0"
                                            Visibility="{Binding ExistingUserPrincipalName, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="Existing User:" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock Text="{Binding ExistingUserPrincipalName}" 
                                               FontSize="12" 
                                               Foreground="#FF6B7280"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Resolution Summary -->
        <Border Grid.Row="2" 
                Background="#FFF7FAFC" 
                BorderBrush="#FFE2E8F0" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15" 
                Margin="0,20,0,10">
            <StackPanel>
                <TextBlock Text="Recommended Resolution:" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding RecommendedResolutionSummary}" 
                           Margin="0,5,0,0" 
                           TextWrapping="Wrap"
                           FontSize="12"/>
                
                <!-- New UPN Preview (if applicable) -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            Visibility="{Binding NewUserPrincipalName, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="New UPN:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NewUserPrincipalName, UpdateSourceTrigger=PropertyChanged}" 
                             MinWidth="200" 
                             IsReadOnly="False"/>
                </StackPanel>
                
                <!-- Email Preview (if applicable) -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,5,0,0"
                            Visibility="{Binding NewEmailAddress, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="New Email:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NewEmailAddress, UpdateSourceTrigger=PropertyChanged}" 
                             MinWidth="200" 
                             IsReadOnly="False"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Cancel Migration" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Apply Resolution" 
                    Padding="20,8" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="ApplyButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>