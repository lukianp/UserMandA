<UserControl x:Class="MandADiscoverySuite.Views.DiscoveryDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Discovery Dashboard" FontSize="28" FontWeight="Bold" Foreground="#FFE2E8F0"/>
                <TextBlock Text="Run individual discovery modules and monitor results across your organization" 
                           FontSize="16" Foreground="#FFA0AEC0" Margin="0,8,0,0"/>
            </StackPanel>
            
            <!-- Summary Statistics -->
            <Grid Grid.Row="1" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Users Card -->
                <Border Grid.Column="0" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="0,0,6,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF3B82F6" Offset="0"/>
                                                <GradientStop Color="#FF1E40AF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Users" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding UsersCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FF3B82F6" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Infrastructure Card -->
                <Border Grid.Column="1" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="3,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFFBBF24" Offset="0"/>
                                                <GradientStop Color="#FFD97706" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ–¥ï¸" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Infrastructure" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding InfrastructureCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FFFBBF24" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Applications Card -->
                <Border Grid.Column="2" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="3,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFEC4899" Offset="0"/>
                                                <GradientStop Color="#FFBE185D" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ“±" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Applications" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding ApplicationsCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FFEC4899" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Groups Card -->
                <Border Grid.Column="3" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="3,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF10B981" Offset="0"/>
                                                <GradientStop Color="#FF059669" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Groups" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding GroupsCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FF10B981" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Databases Card -->
                <Border Grid.Column="4" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="3,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF9B59B6" Offset="0"/>
                                                <GradientStop Color="#FF7C3AED" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ—„ï¸" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Databases" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding DatabasesCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FF9B59B6" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Mailboxes Card -->
                <Border Grid.Column="5" Background="#FF1F2937" CornerRadius="12" Padding="18" Margin="6,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="3" Opacity="0.25" BlurRadius="6"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF6366F1" Offset="0"/>
                                                <GradientStop Color="#FF4338CA" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="ðŸ“§" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Mailboxes" FontSize="13" Foreground="#FFA0AEC0" HorizontalAlignment="Center" Margin="0,6,0,4" FontWeight="Medium"/>
                        <TextBlock Text="{Binding MailboxCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#FF6366F1" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Discovery Modules Section -->
            <Border Grid.Row="2" Background="#FF1F2937" CornerRadius="8" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <TextBlock Grid.Row="0" Text="Discovery Modules" FontSize="20" FontWeight="SemiBold" 
                               Foreground="#FFE2E8F0" Margin="0,0,0,16"/>
                    
                    <!-- Module Tiles -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="650">
                        <ItemsControl ItemsSource="{Binding Modules}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF374151" CornerRadius="12" Padding="18" Margin="10" 
                                            Width="320" Height="240"
                                            BorderBrush="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                            BorderThickness="2">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
                                        </Border.Effect>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FF4B5563" Offset="0"/>
                                                                    <GradientStop Color="#FF374151" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="BorderThickness" Value="3"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Module Icon and Status -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Icon with background circle -->
                                                <Border Grid.Column="0" Background="#FF1F2937" Width="48" Height="48" CornerRadius="24" 
                                                        HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon, FallbackValue='ðŸ”'}" FontSize="24" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Status Badge -->
                                                <Border Grid.Column="2" Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                                        CornerRadius="12" Padding="8,4" VerticalAlignment="Top" MinWidth="60">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#FF000000" Direction="315" ShadowDepth="2" Opacity="0.4" BlurRadius="4"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding Status}" FontSize="10" Foreground="White" FontWeight="Bold" 
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Module Name -->
                                            <TextBlock Grid.Row="1" Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#FFE2E8F0" Margin="0,0,0,8" TextWrapping="Wrap" MaxHeight="44"/>
                                            
                                            <!-- Module Description -->
                                            <TextBlock Grid.Row="2" Text="{Binding Description}" FontSize="13" 
                                                       Foreground="#FFA0AEC0" TextWrapping="Wrap" VerticalAlignment="Top" 
                                                       MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- Progress Bar -->
                                            <ProgressBar Grid.Row="3" Value="{Binding Progress}" Maximum="100" 
                                                         Height="6" Background="#FF1F2937" Foreground="#FF10B981"
                                                         Margin="0,12,0,12" Visibility="{Binding Progress, Converter={StaticResource ProgressToVisibilityConverter}}"/>
                                            
                                            <!-- Action Button -->
                                            <Button Grid.Row="4" 
                                                    Height="40" FontSize="13" FontWeight="SemiBold"
                                                    Command="{Binding RunDiscoveryCommand}"
                                                    IsEnabled="{Binding IsEnabled}"
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                                        <Setter Property="Background" Value="#FF10B981"/>
                                                        <Setter Property="Content" Value="â–¶ï¸ Run Discovery"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                                <Setter Property="Background" Value="#FF9B59B6"/>
                                                                <Setter Property="Content" Value="ðŸ”„ Running..."/>
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Background" Value="#FF059669"/>
                                                                <Setter Property="Content" Value="âœ… Completed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                <Setter Property="Background" Value="#FFDC2626"/>
                                                                <Setter Property="Content" Value="âŒ Failed - Retry"/>
                                                            </DataTrigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect Color="#FF10B981" Direction="315" ShadowDepth="2" Opacity="0.6" BlurRadius="8"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Status Message -->
                    <TextBlock Grid.Row="2" Text="{Binding StatusMessage, FallbackValue='Click Run Discovery on any module tile above to start discovery for that specific module.'}" 
                               Foreground="#FF6B7280" FontSize="14" Margin="0,16,0,0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>