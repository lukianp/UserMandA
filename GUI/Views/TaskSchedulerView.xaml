<UserControl x:Class="MandADiscoverySuite.Views.TaskSchedulerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MandADiscoverySuite.Controls"
             xmlns:converters="clr-namespace:MandADiscoverySuite.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../Styles/DataGridStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Task Scheduler" Style="{StaticResource HeaderTextStyle}" 
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Border Background="{StaticResource AccentBrush}" CornerRadius="12" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Tasks.Count}" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="Tasks" Foreground="White" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Backup Tasks" Command="{Binding BackupTasksCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Tasks Panel -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="4" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SearchTextBoxStyle}"/>

                        <CheckBox Grid.Column="1" Content="Discovery Tasks Only" 
                                  IsChecked="{Binding ShowOnlyDiscoveryTasks}"
                                  Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Tasks DataGrid -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                    <DataGrid ItemsSource="{Binding TasksView}" 
                              SelectedItem="{Binding SelectedTask}"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Next Run" Binding="{Binding NextRunTime, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" Width="140"/>
                            <DataGridTextColumn Header="Last Run" Binding="{Binding LastRunTime, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" Width="140"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Task Actions -->
                <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="4" Padding="12" Margin="0,8,0,0">
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Run" Command="{Binding RunTaskCommand}" 
                                Style="{StaticResource SuccessButtonStyle}" Margin="4"/>
                        <Button Content="Stop" Command="{Binding StopTaskCommand}"
                                Style="{StaticResource DangerButtonStyle}" Margin="4"/>
                        <Button Content="Enable" Command="{Binding EnableTaskCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="4"/>
                        <Button Content="Disable" Command="{Binding DisableTaskCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="4"/>
                        <Button Content="Delete" Command="{Binding DeleteTaskCommand}"
                                Style="{StaticResource DangerButtonStyle}" Margin="4"/>
                        <Button Content="Export" Command="{Binding ExportTaskCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="4"/>
                        <Button Content="History" Command="{Binding ViewTaskHistoryCommand}"
                                Style="{StaticResource InfoButtonStyle}" Margin="4"/>
                    </WrapPanel>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"/>

            <!-- Details and Creation Panel -->
            <Grid Grid.Column="2">
                <TabControl Style="{StaticResource ModernTabControlStyle}">
                    
                    <!-- Task Details Tab -->
                    <TabItem Header="Details">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="12" DataContext="{Binding SelectedTask}">
                                <TextBlock Text="Task Details" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,12"/>
                                
                                <Grid Visibility="{Binding Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Status}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Enabled:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding IsEnabled}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Next Run:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding NextRunTime, StringFormat='{}{0:MM/dd/yyyy HH:mm:ss}'}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Last Run:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LastRunTime, StringFormat='{}{0:MM/dd/yyyy HH:mm:ss}'}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Executable:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Action.Executable}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Arguments:" FontWeight="Bold" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Action.Arguments}" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                </Grid>

                                <TextBlock Text="No task selected" 
                                           Visibility="{Binding Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                           Style="{StaticResource InfoTextStyle}" HorizontalAlignment="Center" Margin="0,20"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Create Task Tab -->
                    <TabItem Header="Create Task">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="12">
                                <TextBlock Text="Create New Task" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,12"/>

                                <!-- Task Name -->
                                <TextBlock Text="Task Name*" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewTask.Name, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,12"/>

                                <!-- Description -->
                                <TextBlock Text="Description" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewTask.Description, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,12"/>

                                <!-- Action Settings -->
                                <Expander Header="Action Settings" IsExpanded="True" Margin="0,0,0,12">
                                    <StackPanel Margin="12,8,0,0">
                                        <TextBlock Text="Executable*" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.Action.Executable, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Arguments" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.Action.Arguments, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Working Directory" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.Action.WorkingDirectory, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Trigger Settings -->
                                <Expander Header="Trigger Settings" IsExpanded="True" Margin="0,0,0,12">
                                    <StackPanel Margin="12,8,0,0">
                                        <TextBlock Text="Trigger Type" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding TriggerTypes}" 
                                                  SelectedItem="{Binding NewTask.Trigger.Type}"
                                                  Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Start Date" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <DatePicker SelectedDate="{Binding NewTask.Trigger.StartDate}"
                                                    Style="{StaticResource ModernDatePickerStyle}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Time of Day" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.Trigger.TimeOfDay, StringFormat=hh\\:mm}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Discovery Task Settings -->
                                <Expander Header="Discovery Task Settings" Margin="0,0,0,12">
                                    <StackPanel Margin="12,8,0,0">
                                        <TextBlock Text="Module Name" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.ModuleName, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Company Profile" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewTask.CompanyProfile, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Create Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                                    <Button Content="Create Task" Command="{Binding CreateTaskCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                    <Button Content="Create Discovery Task" Command="{Binding CreateDiscoveryTaskCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Templates Tab -->
                    <TabItem Header="Templates">
                        <Grid Margin="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Task Templates" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,12"/>

                            <!-- Templates List -->
                            <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                                <ListBox ItemsSource="{Binding TemplatesView}"
                                         SelectedItem="{Binding SelectedTemplate}"
                                         Style="{StaticResource ModernListBoxStyle}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="8">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Category}" 
                                                           Foreground="{StaticResource AccentBrush}" 
                                                           FontSize="10" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>

                            <!-- Template Actions -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                                <Button Content="Create from Template" Command="{Binding CreateFromTemplateCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                <Button Content="Save as Template" Command="{Binding SaveTemplateCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                                <Button Content="Delete Template" Command="{Binding DeleteTemplateCommand}"
                                        Style="{StaticResource DangerButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- Loading Indicator -->
        <Border Grid.Row="1" Background="Black" Opacity="0.3" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Loading tasks..." HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="White" FontSize="16" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>