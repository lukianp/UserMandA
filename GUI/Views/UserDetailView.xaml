<UserControl x:Class="MandADiscoverySuite.Views.UserDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGrid" x:Key="DetailDataGridStyle">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource AlternateRowBrush}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding DisplayName, FallbackValue='User Details'}" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text="Comprehensive user information and related assets" 
                           FontSize="14" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="🔄 Refresh" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding RefreshDataCommand}"
                        ToolTip="Refresh user data"
                        Style="{DynamicResource PrimaryButtonStyle}"/>
                
                <Button Content="📋 Add to Wave" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding AddToMigrationWaveCommand}"
                        ToolTip="Add user to migration wave"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                        
                <Button Content="💾 Export" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding ExportSnapshotCommand}"
                        ToolTip="Export user details"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                
                <Button Content="❌ Close" 
                        Padding="16,8"
                        Command="{Binding CloseCommand}"
                        ToolTip="Close user details"
                        Style="{DynamicResource DangerButtonStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- User Summary Card -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="12" 
                Padding="24" 
                Margin="0,0,0,24">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" Direction="315" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- User Info Column 1 -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="👤 User Information" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Display Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding DisplayName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="UPN:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding UserPrincipalName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Email:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
                
                <!-- User Info Column 2 -->
                <StackPanel Grid.Column="1" Margin="16,0">
                    <TextBlock Text="🏢 Organization" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Department:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Department, FallbackValue='N/A'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Job Title:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding JobTitle, FallbackValue='N/A'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Manager:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Manager, FallbackValue='N/A'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
                
                <!-- User Info Column 3 -->
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <TextBlock Text="📅 Account Status" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Status:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding AccountEnabled, StringFormat='{}Enabled: {0}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Last Sign-In:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding LastSignIn, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading Indicator -->
        <StackPanel Grid.Row="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="{Binding LoadingMessage}" 
                       FontSize="16" 
                       Foreground="{DynamicResource SecondaryTextBrush}" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- 9-Tab Structure -->
        <TabControl Grid.Row="2" 
                   Background="Transparent"
                   BorderThickness="0"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, 
                               ConverterParameter=Inverted}">
            
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Tab Headers -->
                                    <TabPanel Grid.Row="0" 
                                             IsItemsHost="True" 
                                             Background="{DynamicResource CardBackgroundBrush}"
                                             Margin="0,0,0,1"/>
                                    
                                    <!-- Tab Content -->
                                    <ContentPresenter Grid.Row="1" 
                                                     ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>
            
            <!-- Tab Item Style -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                       Background="{DynamicResource TabBackgroundBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       BorderThickness="1,1,1,0"
                                       CornerRadius="8,8,0,0"
                                       Margin="0,0,2,0"
                                       Padding="16,12">
                                    <ContentPresenter ContentSource="Header" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource AccentTextBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Tab 1: Overview -->
            <TabItem Header="📊 Overview">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="User Overview Summary" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <StackPanel Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Resource Summary" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Groups.Count, StringFormat='{}Groups: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Devices.Count, StringFormat='{}Devices: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Apps.Count, StringFormat='{}Applications: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding FileAccess.Count, StringFormat='{}File Access Entries: {0}'}" Margin="0,0,0,4"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Services Summary" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding MappedDrives.Count, StringFormat='{}Mapped Drives: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding AzureRoles.Count, StringFormat='{}Azure Roles: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SqlDatabases.Count, StringFormat='{}SQL Databases: {0}'}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Risks.Count, StringFormat='{}Risk Items: {0}'}" Margin="0,0,0,4"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Tab 2: Devices -->
            <TabItem Header="🖥️ Devices">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Devices}" Style="{StaticResource DetailDataGridStyle}" Margin="1" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Device Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="DNS Name" Binding="{Binding DNS}" Width="200"/>
                            <DataGridTextColumn Header="OS" Binding="{Binding OS}" Width="150"/>
                            <DataGridTextColumn Header="OU" Binding="{Binding OU}" Width="200"/>
                            <DataGridTextColumn Header="Primary User" Binding="{Binding PrimaryUserSid}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 3: Apps -->
            <TabItem Header="📱 Apps">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Apps}" Style="{StaticResource DetailDataGridStyle}" Margin="1" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Application Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"/>
                            <DataGridTextColumn Header="Install Count" Binding="{Binding InstallCounts}" Width="120"/>
                            <DataGridTextColumn Header="Publishers" Binding="{Binding Publishers}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 4: Groups -->
            <TabItem Header="👥 Groups">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Groups}" Style="{StaticResource DetailDataGridStyle}" Margin="1" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                            <DataGridTextColumn Header="SID" Binding="{Binding Sid}" Width="200"/>
                            <DataGridTextColumn Header="Member Count" Binding="{Binding Members.Count}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 5: GPOs -->
            <TabItem Header="🛡️ GPOs">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <GroupBox Grid.Row="0" Header="GPO Links" Margin="8">
                            <DataGrid ItemsSource="{Binding GpoLinks}" Style="{StaticResource DetailDataGridStyle}" VirtualizingStackPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="GPO Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="GUID" Binding="{Binding Guid}" Width="250"/>
                                    <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <GroupBox Grid.Row="1" Header="GPO Security Filters" Margin="8">
                            <DataGrid ItemsSource="{Binding GpoFilters}" Style="{StaticResource DetailDataGridStyle}" VirtualizingStackPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="GPO Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="GUID" Binding="{Binding Guid}" Width="250"/>
                                    <DataGridTextColumn Header="WMI Filter" Binding="{Binding WmiFilter}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Tab 6: File Access -->
            <TabItem Header="📁 File Access">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding FileAccess}" Style="{StaticResource DetailDataGridStyle}" Margin="1" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="300"/>
                            <DataGridTextColumn Header="Rights" Binding="{Binding Rights}" Width="150"/>
                            <DataGridCheckBoxColumn Header="Inherited" Binding="{Binding Inherited}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Is Share" Binding="{Binding IsShare}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Is NTFS" Binding="{Binding IsNTFS}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 7: Mailbox -->
            <TabItem Header="📧 Mailbox">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <StackPanel Margin="16" Visibility="{Binding Mailbox, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Mailbox GUID:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Mailbox.MailboxGuid}" Style="{StaticResource ValueStyle}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Size (MB):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Mailbox.SizeMB}" Style="{StaticResource ValueStyle}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Type:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Mailbox.Type}" Style="{StaticResource ValueStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </TabItem>
            
            <!-- Tab 8: Azure Roles -->
            <TabItem Header="☁️ Azure Roles">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding AzureRoles}" Style="{StaticResource DetailDataGridStyle}" Margin="1" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Role Name" Binding="{Binding RoleName}" Width="200"/>
                            <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="250"/>
                            <DataGridTextColumn Header="Principal ID" Binding="{Binding PrincipalObjectId}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 9: SQL & Risks -->
            <TabItem Header="SQL &amp; Risks">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <GroupBox Grid.Row="0" Header="SQL Databases" Margin="8">
                            <DataGrid ItemsSource="{Binding SqlDatabases}" Style="{StaticResource DetailDataGridStyle}" VirtualizingStackPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Server" Binding="{Binding Server}" Width="150"/>
                                    <DataGridTextColumn Header="Instance" Binding="{Binding Instance}" Width="150"/>
                                    <DataGridTextColumn Header="Database" Binding="{Binding Database}" Width="150"/>
                                    <DataGridTextColumn Header="App Hints" Binding="{Binding AppHints}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <GroupBox Grid.Row="1" Header="Risk Assessment" Margin="8">
                            <DataGrid ItemsSource="{Binding Risks}" Style="{StaticResource DetailDataGridStyle}" VirtualizingStackPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Risk Type" Binding="{Binding Type}" Width="150"/>
                                    <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                                    <DataGridTextColumn Header="Recommendation" Binding="{Binding Recommendation}" Width="250"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16,8" 
                Margin="0,16,0,0">
            <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                       FontSize="13" 
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</UserControl>