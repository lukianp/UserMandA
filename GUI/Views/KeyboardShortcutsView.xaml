<UserControl x:Class="MandADiscoverySuite.Views.KeyboardShortcutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    
    <UserControl.Resources>
        <!-- Converter for enum to string -->
        <DataTemplate x:Key="ConflictTemplate">
            <Border Background="#FFFFE6E6" BorderBrush="#FF8B0000" BorderThickness="1" 
                    Padding="8" Margin="2" CornerRadius="3">
                <StackPanel>
                    <TextBlock Text="{Binding DisplayText}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" Margin="0,2,0,0" FontSize="12"/>
                    <Button Content="Resolve" Command="{Binding DataContext.ResolveConflictCommand, 
                            RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            CommandParameter="{Binding}" HorizontalAlignment="Right" 
                            Margin="0,4,0,0" Padding="8,2"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <Style x:Key="ShortcutTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D5A87" Padding="15">
            <StackPanel>
                <TextBlock Text="Keyboard Shortcuts" FontSize="24" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,5"/>
                <TextBlock Text="Customize keyboard shortcuts and manage conflicts" 
                           FontSize="14" Foreground="White" Opacity="0.9"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Shortcuts Tab -->
            <TabItem Header="Shortcuts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#FFF8F8F8" BorderBrush="#FFDDDDDD" 
                            BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search and Filters -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBox x:Name="SearchBox" Width="200" Height="25"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <Label Content="Search shortcuts..." Foreground="Gray"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                
                                <ComboBox Width="120" Height="25" 
                                          ItemsSource="{Binding Categories}"
                                          SelectedItem="{Binding SelectedCategory}"
                                          VerticalAlignment="Center" Margin="0,0,10,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <CheckBox Content="Show conflicts only" 
                                          IsChecked="{Binding ShowConflictsOnly}"
                                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                                
                                <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}"
                                        Height="25" Padding="8,2" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Action Buttons -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Add" Command="{Binding AddShortcutCommand}"
                                        Height="25" Width="60" Margin="5,0"/>
                                <Button Content="Edit" Command="{Binding EditShortcutCommand}"
                                        CommandParameter="{Binding SelectedShortcut}"
                                        Height="25" Width="60" Margin="5,0"/>
                                <Button Content="Delete" Command="{Binding DeleteShortcutCommand}"
                                        CommandParameter="{Binding SelectedShortcut}"
                                        Height="25" Width="60" Margin="5,0"/>
                                <Button Content="Refresh" Command="{Binding RefreshCommand}"
                                        Height="25" Width="60" Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Shortcuts List -->
                    <DataGrid Grid.Row="1" x:Name="ShortcutsGrid"
                              ItemsSource="{Binding ShortcutsView}"
                              SelectedItem="{Binding SelectedShortcut}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="10">
                        
                        <DataGrid.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                   FontSize="14" Margin="5" Foreground="#FF2D5A87"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </DataGrid.GroupStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" 
                                                Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" 
                                                Width="300" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Shortcut" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding KeyCombination}" 
                                                   Style="{StaticResource ShortcutTextStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" 
                                                    Width="80"/>
                            <DataGridTextColumn Header="Context" Binding="{Binding Context}" 
                                                Width="100" IsReadOnly="True"/>
                            <DataGridCheckBoxColumn Header="Global" Binding="{Binding IsGlobal}" 
                                                    Width="60" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Status Bar -->
                    <StatusBar Grid.Row="2" Height="25">
                        <StatusBarItem>
                            <TextBlock>
                                <Run Text="{Binding Shortcuts.Count, Mode=OneWay}"/>
                                <Run Text="shortcuts"/>
                            </TextBlock>
                        </StatusBarItem>
                        <Separator/>
                        <StatusBarItem>
                            <TextBlock>
                                <Run Text="{Binding Conflicts.Count, Mode=OneWay}"/>
                                <Run Text="conflicts"/>
                            </TextBlock>
                        </StatusBarItem>
                        <StatusBarItem HorizontalAlignment="Right" Visibility="{Binding IsLoading, 
                                       Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar Width="100" Height="16" IsIndeterminate="True" Margin="0,0,5,0"/>
                                <TextBlock Text="Loading..." VerticalAlignment="Center"/>
                            </StackPanel>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </TabItem>
            
            <!-- Conflicts Tab -->
            <TabItem Header="Conflicts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Conflicts Header -->
                    <Border Grid.Row="0" Background="#FFFFF0E6" BorderBrush="#FFFF8C00" 
                            BorderThickness="1" Padding="10" Margin="10,10,10,0">
                        <StackPanel>
                            <TextBlock Text="Keyboard Shortcut Conflicts" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="The following shortcuts have conflicting key combinations. Please resolve these conflicts to avoid unexpected behavior."
                                       TextWrapping="Wrap" Margin="0,5,0,0"/>
                            <Button Content="Detect Conflicts" Command="{Binding DetectConflictsCommand}"
                                    HorizontalAlignment="Right" Margin="0,10,0,0" Padding="10,5"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Conflicts List -->
                    <ScrollViewer Grid.Row="1" Margin="10">
                        <ItemsControl ItemsSource="{Binding Conflicts}"
                                      ItemTemplate="{StaticResource ConflictTemplate}">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Conflicts.Count}" Value="0">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Border Background="#FFF0FFF0" BorderBrush="#FF90EE90" 
                                                                BorderThickness="1" Padding="20" CornerRadius="3">
                                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="âœ“" FontSize="48" Foreground="#FF228B22" 
                                                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                                <TextBlock Text="No conflicts detected" FontSize="18" 
                                                                           FontWeight="Bold" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="All keyboard shortcuts are properly configured."
                                                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer Margin="20">
                    <StackPanel DataContext="{Binding Settings}">
                        <TextBlock Text="General Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Enable global shortcuts" IsChecked="{Binding GlobalShortcutsEnabled}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Allows shortcuts to work even when the application is not focused"
                                   FontSize="12" Foreground="Gray" Margin="20,0,0,15"/>
                        
                        <CheckBox Content="Show tooltip on hover" IsChecked="{Binding ShowTooltipOnHover}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Display keyboard shortcut information in tooltips"
                                   FontSize="12" Foreground="Gray" Margin="20,0,0,15"/>
                        
                        <CheckBox Content="Play sound on action" IsChecked="{Binding PlaySoundOnAction}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Play a sound when a keyboard shortcut is executed"
                                   FontSize="12" Foreground="Gray" Margin="20,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Tooltip delay (ms):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Text="{Binding TooltipDelay}" Width="100" Height="25"/>
                        </StackPanel>
                        <TextBlock Text="Time to wait before showing shortcut tooltips"
                                   FontSize="12" Foreground="Gray" Margin="20,0,0,15"/>
                        
                        <CheckBox Content="Enable sequence shortcuts" IsChecked="{Binding EnableSequenceShortcuts}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Allow multi-key sequences like Ctrl+K, Ctrl+C (advanced feature)"
                                   FontSize="12" Foreground="Gray" Margin="20,0,0,20"/>
                        
                        <Separator Margin="0,10"/>
                        
                        <TextBlock Text="Presets" FontSize="18" FontWeight="Bold" Margin="0,20,0,15"/>
                        
                        <WrapPanel Margin="0,0,0,15">
                            <Button Content="Default" Command="{Binding DataContext.LoadPresetCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="Default" Margin="0,0,10,5" Padding="15,5"/>
                            <Button Content="Visual Studio" Command="{Binding DataContext.LoadPresetCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="Visual Studio" Margin="0,0,10,5" Padding="15,5"/>
                            <Button Content="IntelliJ" Command="{Binding DataContext.LoadPresetCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="IntelliJ" Margin="0,0,10,5" Padding="15,5"/>
                            <Button Content="Sublime Text" Command="{Binding DataContext.LoadPresetCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="Sublime Text" Margin="0,0,10,5" Padding="15,5"/>
                        </WrapPanel>
                        
                        <WrapPanel>
                            <Button Content="Save Current as Preset" Command="{Binding DataContext.SavePresetCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Margin="0,0,10,0" Padding="15,5"/>
                            <Button Content="Reset to Defaults" Command="{Binding DataContext.ResetToDefaultsCommand, 
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Margin="0,0,10,0" Padding="15,5" Background="#FFFFEEEE"/>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Import/Export Tab -->
            <TabItem Header="Import/Export">
                <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Backup and Restore" FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <Button Content="Export Shortcuts" Command="{Binding ExportShortcutsCommand}"
                            Width="200" Height="40" Margin="0,10" FontSize="14"/>
                    <TextBlock Text="Save all keyboard shortcuts to a file"
                               HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0,0,0,20"/>
                    
                    <Button Content="Import Shortcuts" Command="{Binding ImportShortcutsCommand}"
                            Width="200" Height="40" Margin="0,10" FontSize="14"/>
                    <TextBlock Text="Load keyboard shortcuts from a file"
                               HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </TabItem>
            
        </TabControl>
        
        <!-- Bottom Action Bar -->
        <Border Grid.Row="2" Background="#FFF8F8F8" BorderBrush="#FFDDDDDD" 
                BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}"
                        Width="100" Height="30" Margin="0,0,10,0"/>
                <Button Content="Close" Width="80" Height="30" 
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>