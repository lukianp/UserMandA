<UserControl x:Class="MandADiscoverySuite.Views.ConditionalAccessPoliciesDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="{DynamicResource SurfaceBrush}">

        <UserControl.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../Resources/Converters.xaml" />
                    <ResourceDictionary Source="../Resources/DataGridTheme.xaml" />
                    <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
                    <ResourceDictionary Source="../Themes/Colors.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <Style x:Key="DetailsPanelStyle" TargetType="Border">
                    <Setter Property="Visibility" Value="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource LessThanConverter}, ConverterParameter=1200}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ResourceDictionary>
        </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Conditional Access Policies Discovery" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="Discover and analyze Azure AD Conditional Access policies"
                        FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Header Warnings Banner -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding HeaderWarnings}"
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibility}}"
                      Margin="20,0,20,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                            CornerRadius="4" Margin="0,0,0,8" Padding="8">
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="2" Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                CornerRadius="4" Margin="20,0,20,10" Padding="8"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}" />
        </Border>

        <!-- Summary Cards -->
        <WrapPanel Grid.Row="3" Margin="20,0,20,20" Orientation="Horizontal">
            <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,16,0" Width="200">
                <StackPanel>
                    <TextBlock Text="Total Policies" Style="{StaticResource MetricLabelStyle}" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalPolicies}" Style="{StaticResource MetricNumberStyle}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,16,0" Width="200">
                <StackPanel>
                    <TextBlock Text="Enabled Policies" Style="{StaticResource MetricLabelStyle}" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding EnabledPolicies}" Style="{StaticResource MetricNumberStyle}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource SecondaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,16,0" Width="200">
                <StackPanel>
                    <TextBlock Text="Disabled Policies" Style="{StaticResource MetricLabelStyle}" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding DisabledPolicies}" Style="{StaticResource MetricNumberStyle}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TertiaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SummaryCardStyle}" Width="250">
                <StackPanel>
                    <TextBlock Text="Last Discovery" Style="{StaticResource MetricLabelStyle}" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding LastDiscoveryTime, StringFormat='{}{0:g}'}" Style="{StaticResource MetricNumberStyle}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Action Buttons and Data Area -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,0,20,10">
                <Button Content="?? Run Discovery"
                        Command="{Binding RunDiscoveryCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,12,0"/>

                <Button Content="?? Refresh Data"
                        Command="{Binding RefreshDataCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,12,0"/>

                <Button Content="?? Export"
                        Command="{Binding ExportCommand}"
                        Style="{StaticResource OutlineButtonStyle}"/>

                <Button Content="?? Show Logs"
                        Command="{Binding ViewLogsCommand}"
                        Style="{StaticResource GhostButtonStyle}"
                        Margin="12,0,0,0"/>
            </StackPanel>

            <!-- Data Grid and Details Panel -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding SplitterPosition, Mode=TwoWay}" MinWidth="400" MaxWidth="1000"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="Auto" MinWidth="300" MaxWidth="800"/>
                </Grid.ColumnDefinitions>

                <!-- Loading Spinner -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                        <TextBlock Text="{Binding ProcessingMessage, FallbackValue='Processing...'}" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Column="0"
                          ItemsSource="{Binding SelectedResults}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="20,0,20,20"
                          SelectedItem="{Binding SelectedItem}"
                          Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}" VirtualizingStackPanel.IsVirtualizing="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Policy Name"
                                            Binding="{Binding policyname}"
                                            Width="250"/>

                        <DataGridTextColumn Header="State"
                                            Binding="{Binding state}"
                                            Width="100"/>

                        <DataGridTextColumn Header="User Groups Affected"
                                            Binding="{Binding usergroupsaffected}"
                                            Width="150"/>

                        <DataGridTextColumn Header="Grant Controls"
                                            Binding="{Binding grantcontrols}"
                                            Width="150"/>

                        <DataGridTextColumn Header="Include Users"
                                            Binding="{Binding includeusers}"
                                            Width="120"/>

                        <DataGridTextColumn Header="Exclude Users"
                                            Binding="{Binding excludeusers}"
                                            Width="120"/>

                        <DataGridTextColumn Header="Created Date"
                                            Binding="{Binding createddatetime, StringFormat='yyyy-MM-dd'}"
                                            Width="120"/>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!-- No Data Message -->
                <TextBlock Grid.Column="0"
                           Text="No Conditional Access Policies data available"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="{DynamicResource MutedForegroundBrush}"
                           Visibility="{Binding HasResults, Converter={StaticResource InverseBoolToVisibility}}"/>

                <!-- Separator -->
                <GridSplitter Grid.Column="1" Width="2" Background="{DynamicResource BorderBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

                <!-- Details Panel -->
                <Border Grid.Column="2" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                        Margin="0,0,20,20" CornerRadius="4" Style="{StaticResource DetailsPanelStyle}">
                    <Grid>
                        <!-- Loading State -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding IsLoadingDetails, Converter={StaticResource BoolToVisibility}}">
                            <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,8"/>
                            <TextBlock Text="Loading details..." FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>

                        <!-- No Loading State -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                     Visibility="{Binding IsLoadingDetails, Converter={StaticResource InverseBoolToVisibility}}">
                            <StackPanel Margin="16">
                                <TextBlock Text="Policy Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

                                <!-- Dynamic Detail Fields -->
                                <ItemsControl ItemsSource="{Binding SelectedItemDetails}" Grid.IsSharedSizeScope="True">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,12" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}" Opacity="0.5">
                                                <Grid Margin="0,4,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="FieldName"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding FieldName}" Grid.Column="0"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource AccentBrush}"
                                                               VerticalAlignment="Top"
                                                               Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding FieldValue, FallbackValue='Not available'}" Grid.Column="1"
                                                               FontSize="14" FontWeight="Normal"
                                                               Foreground="{DynamicResource ForegroundBrush}"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Top"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- No Details Message -->
                                <TextBlock Text="No details available" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"
                                           Visibility="{Binding SelectedItemDetails.Count, Converter={StaticResource InverseCountToVisibility}}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
