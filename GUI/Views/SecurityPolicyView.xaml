<UserControl x:Class="MandADiscoverySuite.Views.SecurityPolicyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GUI/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Tab Button Style -->
            <Style x:Key="SecurityTabButton" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="Margin" Value="0,0,2,0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6,6,0,0" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="{Binding ActiveTab}">
                                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- KPI Card Style -->
            <Style x:Key="KPICard" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,15,0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Data Grid Style -->
            <Style x:Key="SecurityDataGrid" TargetType="DataGrid">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="CanUserReorderColumns" Value="True"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
                <Setter Property="CanUserSortColumns" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AlternatingRowBackground" Value="#0F172A"/>
                <Setter Property="RowBackground" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Security Policy &amp; Group Policy Management" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Comprehensive security assessment and policy management for M&amp;A integration" 
                               FontSize="14" 
                               Foreground="{DynamicResource MutedForegroundBrush}" 
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource SuccessBrush}" CornerRadius="16" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding EnvironmentInfo.Icon}" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding EnvironmentType}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Button Content="🔄 Refresh" 
                            Style="{StaticResource SecurityTabButton}" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1"
                            Command="{Binding RefreshDataCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Tab Navigation -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="24,0">
                <Button Content="📊 Dashboard" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="Dashboard"
                        Tag="Dashboard"/>
                <Button Content="📋 Group Policies" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="GroupPolicies"
                        Tag="GroupPolicies"/>
                <Button Content="👥 Security Groups" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="SecurityGroups"
                        Tag="SecurityGroups"/>
                <Button Content="🛡️ Infrastructure" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="Infrastructure"
                        Tag="Infrastructure"/>
                <Button Content="⚠️ Threats" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="Threats"
                        Tag="Threats"/>
                <Button Content="📜 Compliance" 
                        Style="{StaticResource SecurityTabButton}"
                        Command="{Binding NavigateTabCommand}" 
                        CommandParameter="Compliance"
                        Tag="Compliance"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="2" Background="{DynamicResource BackgroundBrush}" Padding="24">
            <Grid>
                <!-- Dashboard Tab -->
                <Grid x:Name="DashboardTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Dashboard}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- KPI Cards -->
                            <TextBlock Text="Security Overview" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                            
                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource AccentBrush}">
                                    <StackPanel>
                                        <TextBlock Text="Overall Security Score" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="{Binding OverallSecurityScore}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                            <TextBlock Text="/100" FontSize="16" Foreground="{DynamicResource MutedForegroundBrush}" VerticalAlignment="Bottom"/>
                                        </StackPanel>
                                        <TextBlock Text="🛡️ Security Posture" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource SuccessBrush}">
                                    <StackPanel>
                                        <TextBlock Text="Active GPOs" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <TextBlock Text="{Binding ActiveGPOCount}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Text="📋 Group Policies" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="2" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource ErrorBrush}">
                                    <StackPanel>
                                        <TextBlock Text="High-Risk Groups" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <TextBlock Text="{Binding HighRiskGroupsCount}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Text="👥 Security Groups" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="3" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource WarningBrush}">
                                    <StackPanel>
                                        <TextBlock Text="Active Threats" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <TextBlock Text="{Binding ActiveThreatsCount}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource WarningBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Text="⚠️ Threat Indicators" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="4" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource InfoBrush}">
                                    <StackPanel>
                                        <TextBlock Text="Compliance Score" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="{Binding CompliancePercentage}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource InfoBrush}"/>
                                            <TextBlock Text="%" FontSize="16" Foreground="{DynamicResource MutedForegroundBrush}" VerticalAlignment="Bottom"/>
                                        </StackPanel>
                                        <TextBlock Text="📜 Regulatory" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Critical Issues -->
                            <TextBlock Text="Critical Issues Requiring Immediate Action" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding FilteredCriticalIssues}" 
                                          Style="{StaticResource SecurityDataGrid}"
                                          MaxHeight="300">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Severity" Binding="{Binding SeverityIcon}" Width="60"/>
                                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                                        <DataGridTextColumn Header="Category" Binding="{Binding CategoryIcon}" Width="80"/>
                                        <DataGridTextColumn Header="Affected System" Binding="{Binding AffectedSystem}" Width="150"/>
                                        <DataGridTextColumn Header="Time to Resolution" Binding="{Binding TimeToResolution}" Width="120"/>
                                        <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="120"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                
                <!-- Group Policies Tab -->
                <Grid x:Name="GroupPoliciesTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=GroupPolicies}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filter Controls -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}" 
                                     Foreground="White" 
                                     BorderBrush="{DynamicResource BorderBrush}" 
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,10,0">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="6">
                                            <Grid>
                                                <TextBlock Text="🔍 Search policies..." 
                                                           Foreground="{DynamicResource MutedForegroundBrush}" 
                                                           Margin="10,0,0,0" 
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="10,0,0,0" 
                                                              VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                            
                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding SelectedSeverityFilter}"
                                      ItemsSource="{Binding SeverityFilterOptions}"
                                      Background="{DynamicResource BackgroundBrush}" 
                                      Foreground="White" 
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="10"
                                      Margin="0,0,10,0"
                                      MinWidth="100"/>
                                      
                            <CheckBox Grid.Column="2" 
                                      Content="Enabled Only" 
                                      IsChecked="{Binding ShowEnabledOnly}"
                                      Foreground="White" 
                                      Margin="0,0,10,0" 
                                      VerticalAlignment="Center"/>
                                      
                            <CheckBox Grid.Column="3" 
                                      Content="Recently Modified" 
                                      IsChecked="{Binding ShowRecentlyModified}"
                                      Foreground="White" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- GPO Data Grid -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding FilteredGPOs}" 
                                  Style="{StaticResource SecurityDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Risk" Binding="{Binding RiskIcon}" Width="60"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusIcon}" Width="60"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*"/>
                                <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="120"/>
                                <DataGridTextColumn Header="Linked OUs" Binding="{Binding LinkedOUs}" Width="150"/>
                                <DataGridTextColumn Header="Computer Settings" Binding="{Binding ComputerSettingsEnabled}" Width="130"/>
                                <DataGridTextColumn Header="User Settings" Binding="{Binding UserSettingsEnabled}" Width="110"/>
                                <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedTime, StringFormat='{}{0:MM/dd/yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
                
                <!-- Security Groups Tab -->
                <Grid x:Name="SecurityGroupsTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=SecurityGroups}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Controls -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}" 
                                     Foreground="White" 
                                     BorderBrush="{DynamicResource BorderBrush}" 
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,10,0">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="6">
                                            <Grid>
                                                <TextBlock Text="🔍 Search security groups..." 
                                                           Foreground="{DynamicResource MutedForegroundBrush}" 
                                                           Margin="10,0,0,0" 
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="10,0,0,0" 
                                                              VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                            
                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding SelectedSeverityFilter}"
                                      ItemsSource="{Binding SeverityFilterOptions}"
                                      Background="{DynamicResource BackgroundBrush}" 
                                      Foreground="White" 
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="10"
                                      MinWidth="100"/>
                        </Grid>
                    </Border>
                    
                    <!-- Security Groups Data Grid -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding FilteredSecurityGroups}" 
                                  Style="{StaticResource SecurityDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Risk" Binding="{Binding RiskIcon}" Width="60"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding GroupTypeIcon}" Width="60"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*"/>
                                <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="120"/>
                                <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80"/>
                                <DataGridTextColumn Header="Privileged" Binding="{Binding IsPrivileged}" Width="90"/>
                                <DataGridTextColumn Header="Risk Score" Binding="{Binding RiskScore}" Width="80"/>
                                <DataGridTextColumn Header="Mail Enabled" Binding="{Binding MailEnabled}" Width="90"/>
                                <DataGridTextColumn Header="Security Enabled" Binding="{Binding SecurityEnabled}" Width="110"/>
                                <DataGridTextColumn Header="Managed By" Binding="{Binding ManagedBy}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
                
                <!-- Infrastructure Tab -->
                <Grid x:Name="InfrastructureTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Infrastructure}">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="🛡️ Antivirus" Foreground="White">
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" Margin="0,10,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding AntivirusProducts}" 
                                          Style="{StaticResource SecurityDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Status" Binding="{Binding StatusIcon}" Width="60"/>
                                        <DataGridTextColumn Header="Computer" Binding="{Binding ComputerName}" Width="100"/>
                                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="120"/>
                                        <DataGridTextColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                                        <DataGridTextColumn Header="Up to Date" Binding="{Binding IsUpToDate}" Width="90"/>
                                        <DataGridTextColumn Header="Last Scan" Binding="{Binding LastScanText}" Width="100"/>
                                        <DataGridTextColumn Header="Threats" Binding="{Binding ThreatsDetected}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </TabItem>
                        
                        <TabItem Header="🔥 Firewall" Foreground="White">
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" Margin="0,10,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding FirewallProfiles}" 
                                          Style="{StaticResource SecurityDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Profile" Binding="{Binding ProfileIcon}" Width="60"/>
                                        <DataGridTextColumn Header="Computer" Binding="{Binding ComputerName}" Width="100"/>
                                        <DataGridTextColumn Header="Profile Name" Binding="{Binding ProfileName}" Width="100"/>
                                        <DataGridTextColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                                        <DataGridTextColumn Header="Inbound Action" Binding="{Binding InboundAction}" Width="110"/>
                                        <DataGridTextColumn Header="Outbound Action" Binding="{Binding OutboundAction}" Width="120"/>
                                        <DataGridTextColumn Header="Stealth Mode" Binding="{Binding EnableStealthMode}" Width="100"/>
                                        <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat='{}{0:MM/dd/yyyy}'}" Width="110"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </TabItem>
                        
                        <TabItem Header="⚙️ Appliances" Foreground="White">
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" Margin="0,10,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding SecurityAppliances}" 
                                          Style="{StaticResource SecurityDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding TypeIcon}" Width="60"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="100"/>
                                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="120"/>
                                        <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="120"/>
                                        <DataGridTextColumn Header="Health" Binding="{Binding Health}" Width="80"/>
                                        <DataGridTextColumn Header="Alerts" Binding="{Binding AlertCount}" Width="70"/>
                                        <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:MM/dd/yyyy}'}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
                
                <!-- Threats Tab -->
                <Grid x:Name="ThreatsTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Threats}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filter -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}" 
                                     Foreground="White" 
                                     BorderBrush="{DynamicResource BorderBrush}" 
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,10,0">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="6">
                                            <Grid>
                                                <TextBlock Text="🔍 Search threats..." 
                                                           Foreground="{DynamicResource MutedForegroundBrush}" 
                                                           Margin="10,0,0,0" 
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="10,0,0,0" 
                                                              VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                            
                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding SelectedSeverityFilter}"
                                      ItemsSource="{Binding SeverityFilterOptions}"
                                      Background="{DynamicResource BackgroundBrush}" 
                                      Foreground="White" 
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="10"
                                      Margin="0,0,10,0"
                                      MinWidth="100"/>
                                      
                            <ComboBox Grid.Column="2" 
                                      SelectedItem="{Binding SelectedStatusFilter}"
                                      ItemsSource="{Binding StatusFilterOptions}"
                                      Background="{DynamicResource BackgroundBrush}" 
                                      Foreground="White" 
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="10"
                                      MinWidth="100"/>
                        </Grid>
                    </Border>
                    
                    <!-- Threats Data Grid -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding FilteredThreats}" 
                                  Style="{StaticResource SecurityDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Severity" Binding="{Binding SeverityIcon}" Width="70"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding TypeIcon}" Width="60"/>
                                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                <DataGridTextColumn Header="Threat Type" Binding="{Binding ThreatType}" Width="120"/>
                                <DataGridTextColumn Header="MITRE Tactic" Binding="{Binding MitreTactic}" Width="120"/>
                                <DataGridTextColumn Header="Campaign" Binding="{Binding Campaign}" Width="100"/>
                                <DataGridTextColumn Header="Confidence" Binding="{Binding ConfidenceText}" Width="90"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="First Seen" Binding="{Binding FirstSeen, StringFormat='{}{0:MM/dd/yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:MM/dd/yyyy}'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
                
                <!-- Compliance Tab -->
                <Grid x:Name="ComplianceTab" Visibility="{Binding ActiveTab, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Compliance}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Compliance Summary -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource SuccessBrush}">
                            <StackPanel>
                                <TextBlock Text="Compliant Controls" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                <TextBlock Text="{Binding ComplianceControls.Count}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}" Margin="0,5,0,0"/>
                                <TextBlock Text="✅ Meeting Standards" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource WarningBrush}">
                            <StackPanel>
                                <TextBlock Text="Partial Compliance" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                <TextBlock Text="2" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource WarningBrush}" Margin="0,5,0,0"/>
                                <TextBlock Text="⚠️ Needs Attention" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource ErrorBrush}">
                            <StackPanel>
                                <TextBlock Text="Non-Compliant" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                <TextBlock Text="1" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}" Margin="0,5,0,0"/>
                                <TextBlock Text="❌ Action Required" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="3" Style="{StaticResource KPICard}" BorderBrush="{DynamicResource InfoBrush}">
                            <StackPanel>
                                <TextBlock Text="Overall Score" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding CompliancePercentage}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource InfoBrush}"/>
                                    <TextBlock Text="%" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <TextBlock Text="📊 Compliance Rate" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Compliance Controls Data Grid -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding FilteredComplianceControls}" 
                                  Style="{StaticResource SecurityDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusIcon}" Width="60"/>
                                <DataGridTextColumn Header="Framework" Binding="{Binding FrameworkIcon}" Width="80"/>
                                <DataGridTextColumn Header="Control ID" Binding="{Binding ControlId}" Width="100"/>
                                <DataGridTextColumn Header="Control Name" Binding="{Binding ControlName}" Width="*"/>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                                <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="120"/>
                                <DataGridTextColumn Header="Risk Rating" Binding="{Binding RiskRating}" Width="90"/>
                                <DataGridTextColumn Header="Last Assessed" Binding="{Binding LastAssessed, StringFormat='{}{0:MM/dd/yyyy}'}" Width="110"/>
                                <DataGridTextColumn Header="Next Review" Binding="{Binding NextReview, StringFormat='{}{0:MM/dd/yyyy}'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>