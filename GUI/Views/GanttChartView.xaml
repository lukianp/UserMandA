<UserControl x:Class="MandADiscoverySuite.Views.GanttChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlockStyle}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}"/>
        <Style TargetType="CheckBox" BasedOn="{StaticResource ModernCheckBoxStyle}"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding ProjectTitle}" FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="{Binding ProjectDescription}" FontSize="14" 
                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding AddTaskCommand}" Content="Add Task" Margin="0,0,8,0" Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Command="{Binding AddMilestoneCommand}" Content="Add Milestone" Margin="0,0,8,0" Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Command="{Binding RefreshCommand}" Content="Refresh" Margin="0,0,8,0" Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Command="{Binding ExportCommand}" Content="Export" Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Time Scale Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Time Scale:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding TimeScaleOptions}" 
                              SelectedItem="{Binding SelectedTimeScale}" Width="120"/>
                </StackPanel>

                <!-- View Options -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <CheckBox Content="Critical Path" IsChecked="{Binding ShowCriticalPath}" Margin="0,0,16,0"/>
                    <CheckBox Content="Dependencies" IsChecked="{Binding ShowDependencies}" Margin="0,0,16,0"/>
                    <CheckBox Content="Milestones" IsChecked="{Binding ShowMilestones}" Margin="0,0,16,0"/>
                    <CheckBox Content="Today Line" IsChecked="{Binding ShowTodayLine}"/>
                </StackPanel>

                <!-- Zoom Controls -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding ZoomOutCommand}" Content="âˆ’" Width="32" Height="24" Margin="0,0,4,0" Style="{StaticResource RoundedButtonStyle}"/>
                    <TextBlock Text="{Binding ZoomLevel, StringFormat='{}{0:P0}'}" VerticalAlignment="Center" 
                               MinWidth="40" TextAlignment="Center"/>
                    <Button Command="{Binding ZoomInCommand}" Content="+" Width="32" Height="24" Margin="4,0,8,0" Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Command="{Binding GoToTodayCommand}" Content="Today" Margin="8,0,0,0" Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Task List Panel -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Tasks}" Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" Height="40" BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="0,0,0,1">
                                    <Grid Margin="{Binding IndentMargin}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Expand/Collapse Button -->
                                        <Button Grid.Column="0"
                                                Command="{Binding ToggleExpandCommand}"
                                                Content="{Binding IsExpanded, Converter={StaticResource BoolToExpandIconConverter}}"
                                                Width="16" Height="16" Margin="0,0,8,0"
                                                Visibility="{Binding HasSubTasks, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Style="{StaticResource RoundedButtonStyle}"/>

                                        <!-- Task Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TaskName}" FontWeight="Medium" 
                                                       Foreground="{Binding IsCriticalPath, Converter={StaticResource BoolToColorConverter}, 
                                                                    ConverterParameter='#FF6B7280|#FFDC2626'}"/>
                                            <ProgressBar Value="{Binding Progress}" Maximum="1" Height="4" 
                                                         Background="{DynamicResource SurfaceBrush}" 
                                                         Foreground="{Binding ProgressColor, Converter={StaticResource StringToBrushConverter}}"
                                                         Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                          Background="{DynamicResource BorderBrush}"/>

            <!-- Timeline Panel -->
            <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}">
                <ScrollViewer Name="TimelineScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <Canvas Name="TimelineCanvas" 
                            Width="{Binding TimelineWidth}" 
                            Height="{Binding TimelineHeight}"
                            Background="Transparent">

                        <!-- Row Backgrounds -->
                        <ItemsControl ItemsSource="{Binding RowBackgrounds}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    <Setter Property="Canvas.Left" Value="0"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle Width="{Binding DataContext.TimelineWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" 
                                               Height="40" 
                                               Fill="{Binding BackgroundColor, Converter={StaticResource StringToBrushConverter}}"
                                               Opacity="0.3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Time Grid Lines -->
                        <ItemsControl ItemsSource="{Binding TimeGridLines}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="0"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line Y2="{Binding DataContext.TimelineHeight, RelativeSource={RelativeSource AncestorType=Canvas}}" 
                                          Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Task Bars -->
                        <ItemsControl ItemsSource="{Binding TaskBars}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="{Binding Width}" Height="24" 
                                            Background="{Binding TaskColor, Converter={StaticResource StringToBrushConverter}}"
                                            BorderBrush="{Binding BorderColor, Converter={StaticResource StringToBrushConverter}}"
                                            BorderThickness="{Binding IsCriticalPath, Converter={StaticResource BoolToThicknessConverter}, ConverterParameter='1|2'}"
                                            CornerRadius="3"
                                            ToolTip="{Binding ToolTip}">
                                        
                                        <!-- Progress Bar -->
                                        <Rectangle Fill="{Binding ProgressColor, Converter={StaticResource StringToBrushConverter}}" 
                                                   Width="{Binding ProgressWidth}" 
                                                   HorizontalAlignment="Left"
                                                   Opacity="0.7"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Dependencies -->
                        <ItemsControl ItemsSource="{Binding Dependencies}" 
                                      Visibility="{Binding ShowDependencies, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Path Data="{Binding PathGeometry}" 
                                          Stroke="{Binding DependencyColor, Converter={StaticResource StringToBrushConverter}}" 
                                          StrokeThickness="2"
                                          ToolTip="{Binding DependencyDescription}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Milestones -->
                        <ItemsControl ItemsSource="{Binding Milestones}" 
                                      Visibility="{Binding ShowMilestones, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="30" Height="30" ToolTip="{Binding ToolTip}">
                                        <!-- Diamond Shape -->
                                        <Polygon Points="15,0 30,15 15,30 0,15" 
                                                 Fill="{Binding MilestoneColor, Converter={StaticResource StringToBrushConverter}}"
                                                 Stroke="{Binding BorderColor, Converter={StaticResource StringToBrushConverter}}"
                                                 StrokeThickness="2"/>
                                        
                                        <!-- Completion Indicator -->
                                        <Ellipse Width="8" Height="8" 
                                                 Fill="White" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"
                                                 Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Today Line -->
                        <Line Visibility="{Binding ShowTodayLine, Converter={StaticResource BoolToVisibilityConverter}}"
                              X1="{Binding TodayPosition}" X2="{Binding TodayPosition}"
                              Y1="0" Y2="{Binding TimelineHeight}"
                              Stroke="#FFDC2626" StrokeThickness="2" StrokeDashArray="5,3"/>

                    </Canvas>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,16,0"/>
                    
                    <TextBlock Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,16,0">
                        <Run Text="Tasks:"/>
                        <Run Text="{Binding CompletedTasks}" FontWeight="Medium"/>
                        <Run Text="/"/>
                        <Run Text="{Binding TotalTasks}" FontWeight="Medium"/>
                    </TextBlock>
                    
                    <TextBlock Foreground="{DynamicResource SecondaryTextBrush}">
                        <Run Text="Progress:"/>
                        <Run Text="{Binding OverallProgress, StringFormat='{}{0:P0}'}" FontWeight="Medium"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding ProjectStartDate, StringFormat='Start: {0:MMM dd}'}" 
                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding ProjectEndDate, StringFormat='End: {0:MMM dd}'}" 
                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding ProjectDuration, StringFormat='Duration: {0} days'}" 
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                <TextBlock Text="Loading Gantt Chart..." HorizontalAlignment="Center" 
                           Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>