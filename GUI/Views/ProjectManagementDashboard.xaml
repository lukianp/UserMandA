&lt;UserControl x:Class="MandADiscoverySuite.Views.ProjectManagementDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:MandADiscoverySuite.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    &lt;UserControl.Resources>
        &lt;ResourceDictionary>
            &lt;ResourceDictionary.MergedDictionaries>
                &lt;ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            &lt;/ResourceDictionary.MergedDictionaries>
            
            &lt;converters:HealthScoreToColorConverter x:Key="HealthScoreColorConverter" />
            &lt;converters:ProgressBarHeightConverter x:Key="ProgressBarHeightConverter" />
            
            &lt;!-- Dashboard Card Style -->
            &lt;Style x:Key="DashboardCardStyle" TargetType="Border">
                &lt;Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                &lt;Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                &lt;Setter Property="BorderThickness" Value="1"/>
                &lt;Setter Property="CornerRadius" Value="8"/>
                &lt;Setter Property="Margin" Value="8"/>
                &lt;Setter Property="Effect">
                    &lt;Setter.Value>
                        &lt;DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                    &lt;/Setter.Value>
                &lt;/Setter>
            &lt;/Style>

            &lt;!-- Metric Value Style -->
            &lt;Style x:Key="MetricValueStyle" TargetType="TextBlock">
                &lt;Setter Property="FontSize" Value="32"/>
                &lt;Setter Property="FontWeight" Value="Bold"/>
                &lt;Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                &lt;Setter Property="HorizontalAlignment" Value="Center"/>
                &lt;Setter Property="Margin" Value="0,8"/>
            &lt;/Style>

            &lt;!-- Metric Label Style -->
            &lt;Style x:Key="MetricLabelStyle" TargetType="TextBlock">
                &lt;Setter Property="FontSize" Value="12"/>
                &lt;Setter Property="FontWeight" Value="Medium"/>
                &lt;Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                &lt;Setter Property="HorizontalAlignment" Value="Center"/>
                &lt;Setter Property="TextWrapping" Value="Wrap"/>
            &lt;/Style>

            &lt;!-- Risk Item Style -->
            &lt;Style x:Key="RiskItemStyle" TargetType="Border">
                &lt;Setter Property="BorderThickness" Value="0,0,0,1"/>
                &lt;Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                &lt;Setter Property="Padding" Value="8"/>
                &lt;Setter Property="Margin" Value="0,2"/>
            &lt;/Style>
        &lt;/ResourceDictionary>
    &lt;/UserControl.Resources>

    &lt;ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        &lt;Grid Margin="16">
            &lt;Grid.RowDefinitions>
                &lt;RowDefinition Height="Auto"/>
                &lt;RowDefinition Height="Auto"/>
                &lt;RowDefinition Height="Auto"/>
                &lt;RowDefinition Height="*"/>
            &lt;/Grid.RowDefinitions>

            &lt;!-- Header Section -->
            &lt;Border Grid.Row="0" Style="{StaticResource ThemedCardStyle}" Margin="0,0,0,16">
                &lt;Grid>
                    &lt;Grid.ColumnDefinitions>
                        &lt;ColumnDefinition Width="*"/>
                        &lt;ColumnDefinition Width="Auto"/>
                    &lt;/Grid.ColumnDefinitions>
                    
                    &lt;StackPanel Grid.Column="0">
                        &lt;TextBlock Text="{Binding CurrentProject.Name, FallbackValue='Project Management Dashboard'}" 
                                 Style="{StaticResource ThemedHeaderTextStyle}"/>
                        &lt;TextBlock Text="{Binding CurrentProject.CompanyName, FallbackValue='M&amp;A Integration Runbook'}" 
                                 Style="{StaticResource ThemedSubHeaderTextStyle}"/>
                    &lt;/StackPanel>
                    
                    &lt;StackPanel Grid.Column="1" Orientation="Horizontal">
                        &lt;Button Content="Refresh" 
                              Style="{StaticResource ThemedSecondaryButtonStyle}"
                              Command="{Binding RefreshDashboardCommand}"
                              Margin="8,0"/>
                        &lt;Button Content="Export Report" 
                              Style="{StaticResource ThemedButtonStyle}"
                              Command="{Binding GenerateReportCommand}"
                              Margin="8,0"/>
                    &lt;/StackPanel>
                &lt;/Grid>
            &lt;/Border>

            &lt;!-- Key Metrics Row -->
            &lt;Grid Grid.Row="1" Margin="0,0,0,16">
                &lt;Grid.ColumnDefinitions>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                &lt;/Grid.ColumnDefinitions>

                &lt;!-- Project Health Score -->
                &lt;Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                    &lt;StackPanel Padding="16">
                        &lt;Ellipse Width="60" Height="60" 
                               Fill="{Binding CurrentProject.HealthScore, Converter={StaticResource HealthScoreColorConverter}}"
                               HorizontalAlignment="Center"/>
                        &lt;TextBlock Text="{Binding CurrentProject.HealthScore, StringFormat='{}{0:F1}%', FallbackValue='87.5%'}" 
                                 Style="{StaticResource MetricValueStyle}"
                                 FontSize="24"/>
                        &lt;TextBlock Text="Project Health Score" 
                                 Style="{StaticResource MetricLabelStyle}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Overall Progress -->
                &lt;Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                    &lt;StackPanel Padding="16">
                        &lt;ProgressBar Value="{Binding CurrentProject.OverallProgress, FallbackValue=35.2}" 
                                   Maximum="100" 
                                   Height="8" 
                                   Style="{StaticResource ThemedProgressBarStyle}"
                                   Margin="0,16"/>
                        &lt;TextBlock Text="{Binding CurrentProject.OverallProgress, StringFormat='{}{0:F1}%', FallbackValue='35.2%'}" 
                                 Style="{StaticResource MetricValueStyle}"
                                 FontSize="24"/>
                        &lt;TextBlock Text="Overall Progress" 
                                 Style="{StaticResource MetricLabelStyle}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Total Tasks -->
                &lt;Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}">
                    &lt;StackPanel Padding="16">
                        &lt;TextBlock Text="{Binding TotalTasks, FallbackValue='156'}" 
                                 Style="{StaticResource MetricValueStyle}"/>
                        &lt;TextBlock Text="{Binding CompletedTasks, StringFormat='({0} completed)', FallbackValue='(54 completed)'}" 
                                 Style="{StaticResource MetricLabelStyle}"
                                 Margin="0,0,0,8"/>
                        &lt;TextBlock Text="Total Tasks" 
                                 Style="{StaticResource MetricLabelStyle}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Overdue Tasks -->
                &lt;Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                    &lt;StackPanel Padding="16">
                        &lt;TextBlock Text="{Binding OverdueTaskCount, FallbackValue='3'}" 
                                 Style="{StaticResource MetricValueStyle}"
                                 Foreground="{DynamicResource ErrorBrush}"/>
                        &lt;TextBlock Text="Overdue Tasks" 
                                 Style="{StaticResource MetricLabelStyle}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- High Risks -->
                &lt;Border Grid.Column="4" Style="{StaticResource DashboardCardStyle}">
                    &lt;StackPanel Padding="16">
                        &lt;TextBlock Text="{Binding HighRiskCount, FallbackValue='2'}" 
                                 Style="{StaticResource MetricValueStyle}"
                                 Foreground="{DynamicResource ErrorBrush}"/>
                        &lt;TextBlock Text="High Risk Items" 
                                 Style="{StaticResource MetricLabelStyle}"/>
                    &lt;/StackPanel>
                &lt;/Border>
            &lt;/Grid>

            &lt;!-- Phase Progress Overview -->
            &lt;Border Grid.Row="2" Style="{StaticResource ThemedCardStyle}" Margin="0,0,0,16">
                &lt;StackPanel>
                    &lt;TextBlock Text="Phase Progress Overview" 
                             Style="{StaticResource ThemedSubHeaderTextStyle}"
                             Margin="0,0,0,16"/>
                    
                    &lt;ItemsControl ItemsSource="{Binding CurrentProject.Phases}">
                        &lt;ItemsControl.ItemTemplate>
                            &lt;DataTemplate>
                                &lt;Border Style="{StaticResource RiskItemStyle}">
                                    &lt;Grid>
                                        &lt;Grid.ColumnDefinitions>
                                            &lt;ColumnDefinition Width="200"/>
                                            &lt;ColumnDefinition Width="*"/>
                                            &lt;ColumnDefinition Width="100"/>
                                            &lt;ColumnDefinition Width="80"/>
                                        &lt;/Grid.ColumnDefinitions>
                                        
                                        &lt;TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                 Style="{StaticResource ThemedTextBlockStyle}"
                                                 FontWeight="Medium"/>
                                        
                                        &lt;ProgressBar Grid.Column="1" 
                                                   Value="{Binding Progress}" 
                                                   Maximum="100" 
                                                   Height="6"
                                                   Style="{StaticResource ThemedProgressBarStyle}"
                                                   Margin="8,0"/>
                                        
                                        &lt;TextBlock Grid.Column="2" 
                                                 Text="{Binding Progress, StringFormat='{}{0:F0}%'}" 
                                                 Style="{StaticResource ThemedTextBlockStyle}"
                                                 HorizontalAlignment="Right"/>
                                        
                                        &lt;Border Grid.Column="3" 
                                              Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                              CornerRadius="12" 
                                              Padding="8,2" 
                                              Margin="8,0">
                                            &lt;TextBlock Text="{Binding Status}" 
                                                     Foreground="White" 
                                                     FontSize="10"
                                                     HorizontalAlignment="Center"/>
                                        &lt;/Border>
                                    &lt;/Grid>
                                &lt;/Border>
                            &lt;/DataTemplate>
                        &lt;/ItemsControl.ItemTemplate>
                    &lt;/ItemsControl>
                &lt;/StackPanel>
            &lt;/Border>

            &lt;!-- Bottom Section: Active Items -->
            &lt;Grid Grid.Row="3">
                &lt;Grid.ColumnDefinitions>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="*"/>
                &lt;/Grid.ColumnDefinitions>

                &lt;!-- Upcoming Milestones -->
                &lt;Border Grid.Column="0" Style="{StaticResource ThemedCardStyle}">
                    &lt;StackPanel>
                        &lt;DockPanel Margin="0,0,0,16">
                            &lt;TextBlock Text="Upcoming Milestones" 
                                     Style="{StaticResource ThemedSubHeaderTextStyle}"
                                     DockPanel.Dock="Left"/>
                            &lt;Button Content="View All" 
                                  Style="{StaticResource ThemedSecondaryButtonStyle}"
                                  FontSize="10" 
                                  Padding="8,4"
                                  HorizontalAlignment="Right"
                                  Command="{Binding NavigateToViewCommand}"
                                  CommandParameter="Timeline"/>
                        &lt;/DockPanel>
                        
                        &lt;ItemsControl ItemsSource="{Binding UpcomingMilestones}" MaxHeight="300">
                            &lt;ItemsControl.ItemTemplate>
                                &lt;DataTemplate>
                                    &lt;Border Style="{StaticResource RiskItemStyle}">
                                        &lt;StackPanel>
                                            &lt;TextBlock Text="{Binding Name}" 
                                                     Style="{StaticResource ThemedTextBlockStyle}"
                                                     FontWeight="Medium"
                                                     TextTrimming="CharacterEllipsis"/>
                                            &lt;TextBlock Text="{Binding TargetDate, StringFormat='Due: {0:MMM dd, yyyy}'}" 
                                                     Style="{StaticResource ThemedSecondaryTextStyle}"/>
                                        &lt;/StackPanel>
                                    &lt;/Border>
                                &lt;/DataTemplate>
                            &lt;/ItemsControl.ItemTemplate>
                        &lt;/ItemsControl>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Active Risks -->
                &lt;Border Grid.Column="1" Style="{StaticResource ThemedCardStyle}">
                    &lt;StackPanel>
                        &lt;DockPanel Margin="0,0,0,16">
                            &lt;TextBlock Text="Active Risks" 
                                     Style="{StaticResource ThemedSubHeaderTextStyle}"
                                     DockPanel.Dock="Left"/>
                            &lt;Button Content="Manage" 
                                  Style="{StaticResource ThemedSecondaryButtonStyle}"
                                  FontSize="10" 
                                  Padding="8,4"
                                  HorizontalAlignment="Right"
                                  Command="{Binding NavigateToViewCommand}"
                                  CommandParameter="RiskManagement"/>
                        &lt;/DockPanel>
                        
                        &lt;ItemsControl ItemsSource="{Binding ActiveRisks}" MaxHeight="300">
                            &lt;ItemsControl.ItemTemplate>
                                &lt;DataTemplate>
                                    &lt;Border Style="{StaticResource RiskItemStyle}">
                                        &lt;Grid>
                                            &lt;Grid.ColumnDefinitions>
                                                &lt;ColumnDefinition Width="*"/>
                                                &lt;ColumnDefinition Width="40"/>
                                            &lt;/Grid.ColumnDefinitions>
                                            
                                            &lt;StackPanel Grid.Column="0">
                                                &lt;TextBlock Text="{Binding Description}" 
                                                         Style="{StaticResource ThemedTextBlockStyle}"
                                                         FontWeight="Medium"
                                                         TextTrimming="CharacterEllipsis"/>
                                                &lt;TextBlock Text="{Binding Category}" 
                                                         Style="{StaticResource ThemedSecondaryTextStyle}"/>
                                            &lt;/StackPanel>
                                            
                                            &lt;Border Grid.Column="1" 
                                                  Background="{Binding RiskScoreColor}"
                                                  CornerRadius="4" 
                                                  Padding="4"
                                                  HorizontalAlignment="Right">
                                                &lt;TextBlock Text="{Binding RiskScore}" 
                                                         Foreground="White" 
                                                         FontSize="10" 
                                                         FontWeight="Bold"
                                                         HorizontalAlignment="Center"/>
                                            &lt;/Border>
                                        &lt;/Grid>
                                    &lt;/Border>
                                &lt;/DataTemplate>
                            &lt;/ItemsControl.ItemTemplate>
                        &lt;/ItemsControl>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Overdue Tasks -->
                &lt;Border Grid.Column="2" Style="{StaticResource ThemedCardStyle}">
                    &lt;StackPanel>
                        &lt;DockPanel Margin="0,0,0,16">
                            &lt;TextBlock Text="Overdue Tasks" 
                                     Style="{StaticResource ThemedSubHeaderTextStyle}"
                                     DockPanel.Dock="Left"/>
                            &lt;Button Content="View All" 
                                  Style="{StaticResource ThemedSecondaryButtonStyle}"
                                  FontSize="10" 
                                  Padding="8,4"
                                  HorizontalAlignment="Right"
                                  Command="{Binding NavigateToViewCommand}"
                                  CommandParameter="PhaseTracker"/>
                        &lt;/DockPanel>
                        
                        &lt;ItemsControl ItemsSource="{Binding OverdueTasks}" MaxHeight="300">
                            &lt;ItemsControl.ItemTemplate>
                                &lt;DataTemplate>
                                    &lt;Border Style="{StaticResource RiskItemStyle}">
                                        &lt;StackPanel>
                                            &lt;TextBlock Text="{Binding Name}" 
                                                     Style="{StaticResource ThemedTextBlockStyle}"
                                                     FontWeight="Medium"
                                                     TextTrimming="CharacterEllipsis"/>
                                            &lt;StackPanel Orientation="Horizontal">
                                                &lt;TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MMM dd}'}" 
                                                         Style="{StaticResource ThemedSecondaryTextStyle}"
                                                         Foreground="{DynamicResource ErrorBrush}"/>
                                                &lt;TextBlock Text=" | " 
                                                         Style="{StaticResource ThemedSecondaryTextStyle}"/>
                                                &lt;TextBlock Text="{Binding AssignedTo}" 
                                                         Style="{StaticResource ThemedSecondaryTextStyle}"/>
                                            &lt;/StackPanel>
                                        &lt;/StackPanel>
                                    &lt;/Border>
                                &lt;/DataTemplate>
                            &lt;/ItemsControl.ItemTemplate>
                        &lt;/ItemsControl>
                    &lt;/StackPanel>
                &lt;/Border>
            &lt;/Grid>
        &lt;/Grid>
    &lt;/ScrollViewer>
&lt;/UserControl>