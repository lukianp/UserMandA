<UserControl x:Class="MandADiscoverySuite.Views.ManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MandADiscoverySuite.Views"
             xmlns:vm="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- DataTemplates for different ViewModels -->
        <DataTemplate DataType="{x:Type vm:ManagementDashboardViewModel}">
            <views:ManagementDashboardView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:GanttViewModel}">
            <views:GanttView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:WaveViewModel}">
            <views:WaveView/>
        </DataTemplate>

        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF334155"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#FF3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Header -->
        <Border Grid.Row="0" Background="#FF1E293B" BorderBrush="#FF334155" BorderThickness="0,0,0,1">
            <Grid Margin="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" 
                           Text="Migration Management" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="40,0">
                    
                    <Button Content="Dashboard" 
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Dashboard"
                            Margin="0,0,8,0">
                        <Button.Tag>
                            <MultiBinding Converter="{StaticResource ViewModelTypeComparisonConverter}">
                                <Binding Path="SelectedViewModel"/>
                                <Binding Path="DashboardViewModel"/>
                            </MultiBinding>
                        </Button.Tag>
                        <Button.Style>
                            <Style BasedOn="{StaticResource NavigationButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Background" Value="#FF3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Gantt Chart" 
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Gantt"
                            Margin="0,0,8,0">
                        <Button.Tag>
                            <MultiBinding Converter="{StaticResource ViewModelTypeComparisonConverter}">
                                <Binding Path="SelectedViewModel"/>
                                <Binding Path="GanttViewModel"/>
                            </MultiBinding>
                        </Button.Tag>
                        <Button.Style>
                            <Style BasedOn="{StaticResource NavigationButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Background" Value="#FF3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Wave Management" 
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Waves">
                        <Button.Tag>
                            <MultiBinding Converter="{StaticResource ViewModelTypeComparisonConverter}">
                                <Binding Path="SelectedViewModel"/>
                                <Binding Path="WaveViewModel"/>
                            </MultiBinding>
                        </Button.Tag>
                        <Button.Style>
                            <Style BasedOn="{StaticResource NavigationButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Background" Value="#FF3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Project Info -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentProject.ProjectName}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="14"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding CurrentProject.OverallProgress, StringFormat='Progress: {0:F1}%'}" 
                               Foreground="#FF94A3B8" 
                               FontSize="12"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Debug text to verify the view is loading -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Panel.ZIndex="100">
                <TextBlock Text="ManagementView is loaded - DEBUG" 
                           Foreground="Yellow" 
                           FontSize="20" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding SelectedViewModel, StringFormat='Selected: {0}'}" 
                           Foreground="Cyan" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
                <TextBlock Text="{Binding DashboardViewModel, StringFormat='Dashboard VM: {0}'}" 
                           Foreground="Lime" 
                           FontSize="12" 
                           HorizontalAlignment="Center" 
                           Margin="0,2,0,0"/>
            </StackPanel>
            
            <ContentControl Content="{Binding SelectedViewModel}" 
                            HorizontalContentAlignment="Stretch" 
                            VerticalContentAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>