<UserControl x:Class="MandADiscoverySuite.Views.SharePointDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SharePointDiscoveryControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Converters.xaml" />
                <ResourceDictionary Source="../Resources/DataGridTheme.xaml" />
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
                <ResourceDictionary Source="../Themes/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#2D3748"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
            <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
                <Setter Property="MinWidth" Value="150"/>
                <Setter Property="Margin" Value="8,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
                <Setter Property="MinWidth" Value="200"/>
                <Setter Property="Margin" Value="8,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                <Setter Property="Padding" Value="8,6"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Header Section -->
        <TextBlock Grid.Row="0" Text="SharePoint Discovery" Style="{StaticResource HeaderTextStyle}" FontSize="20"/>

        <!-- ToolBar for Action Buttons -->
        <ToolBar Grid.Row="2" Margin="0,0,0,16">
            <Button Content="? Run Discovery"
                    Command="{Binding RunDiscoveryCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="?? Refresh Data"
                    Command="{Binding RefreshDataCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="?? Export"
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="?? View Logs"
                    Command="{Binding ViewLogsCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Padding="12,6" Margin="0,0,8,0"/>
        </ToolBar>

        <!-- UniformGrid for 4 Summary Statistic Cards -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
            <!-- Total Sites Card -->
            <Border Background="#F8FAFC" BorderBrush="#0891B2" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="Total Sites" FontWeight="Bold" FontSize="14" Foreground="#0891B2"/>
                    <TextBlock Text="??" FontSize="24" HorizontalAlignment="Center" Margin="0,8,0,8"/>
                    <TextBlock Text="{Binding TotalSites}" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Document Libraries Card -->
            <Border Background="#F8FAFC" BorderBrush="#DC2626" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="Document Libraries" FontWeight="Bold" FontSize="14" Foreground="#DC2626"/>
                    <TextBlock Text="??" FontSize="24" HorizontalAlignment="Center" Margin="0,8,0,8"/>
                    <TextBlock Text="{Binding TotalDocumentLibraries}" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Lists Card -->
            <Border Background="#F8FAFC" BorderBrush="#16A34A" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="Lists" FontWeight="Bold" FontSize="14" Foreground="#16A34A"/>
                    <TextBlock Text="??" FontSize="24" HorizontalAlignment="Center" Margin="0,8,0,8"/>
                    <TextBlock Text="{Binding TotalLists}" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Storage Used Card -->
            <Border Background="#F8FAFC" BorderBrush="#7C3AED" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="Storage Used" FontWeight="Bold" FontSize="14" Foreground="#7C3AED"/>
                    <TextBlock Text="??" FontSize="24" HorizontalAlignment="Center" Margin="0,8,0,8"/>
                    <TextBlock Text="{Binding TotalStorageUsed, StringFormat='{}{0} GB'}" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>


        <!-- Grid with GridSplitter to separate DataGrid from Details Panel -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Main DataGrid Placeholder -->
            <Border Grid.Column="0" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <DataGrid ItemsSource="{Binding SelectedResults}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="8"
                              SelectedItem="{Binding SelectedItem}"
                              SelectionMode="Extended"
                              Visibility="{Binding SelectedResults.Count, Converter={StaticResource CountToVisibility}}" VirtualizingStackPanel.IsVirtualizing="True">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Site Name"
                                                Binding="{Binding sitename}"
                                                Width="200"/>
                            <DataGridTextColumn Header="URL"
                                                Binding="{Binding url}"
                                                Width="250"/>
                            <DataGridTextColumn Header="Template"
                                                Binding="{Binding sitetemplate}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Owner"
                                                Binding="{Binding owner}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Storage Used (GB)"
                                                Binding="{Binding storageused}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Created Date"
                                                Binding="{Binding createddate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="120"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details"
                                                FontSize="11"
                                                Padding="8,4"
                                                Background="#0891B2"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E6F7FF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#B3E5FC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- No Data Message -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding SelectedResults.Count, Converter={StaticResource InverseCountToVisibility}}"
                            Background="#F8FAFC">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="??" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="No SharePoint data found" FontSize="16" HorizontalAlignment="Center"
                                        Margin="0,10,0,0" Opacity="0.7"/>
                            <TextBlock Text="Check CSV files in data directory" FontSize="12" HorizontalAlignment="Center"
                                        Margin="0,5,0,0" Opacity="0.5"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="Gray" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

            <!-- Right-hand Details Panel with Site Hierarchy and Permission Levels -->
            <Border Grid.Column="2" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16" Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}">
                        <TextBlock Text="Site Details &amp; Hierarchy" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16" Foreground="#0891B2"/>

                        <!-- Site Hierarchy Section -->
                        <TextBlock Text="Site Hierarchy" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#16A34A"/>
                        <ItemsControl ItemsSource="{Binding SiteHierarchy}" Margin="0,0,0,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F9FF" BorderBrush="#0891B2" BorderThickness="1" Margin="0,0,0,4" Padding="8" CornerRadius="4">
                                        <TextBlock Text="{Binding}" FontSize="12" Foreground="#0891B2"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Permission Levels Section -->
                        <TextBlock Text="Permission Levels" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#DC2626"/>
                        <ItemsControl ItemsSource="{Binding PermissionLevels}" Margin="0,0,0,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FEF2F2" BorderBrush="#DC2626" BorderThickness="1" Margin="0,0,0,4" Padding="8" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Level}" FontSize="12" FontWeight="Bold" Foreground="#DC2626"/>
                                            <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#DC2626" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Standard Site Details -->
                        <TextBlock Text="Site Information" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#7C3AED"/>
                        <ItemsControl ItemsSource="{Binding SelectedItemDetails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Key}" FontSize="12" FontWeight="SemiBold" Foreground="#7C3AED"/>
                                        <TextBlock Text="{Binding Value}" FontSize="14" Foreground="#1A202C" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

       <!-- Footer or Empty State Placeholder -->
       <Border Grid.Row="4" Background="#F8FAFC" Padding="16" Margin="0,16,0,0">
           <StackPanel HorizontalAlignment="Center">
               <TextBlock Text="SharePoint Discovery Module - Ready" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#4A5568"/>
               <TextBlock Text="{Binding StatusText}" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="#718096"/>
               <TextBlock Text="{Binding LastUpdated, StringFormat='{}{0:g}'}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="#A0AEC0"/>
           </StackPanel>
       </Border>
   </Grid>
</UserControl>
