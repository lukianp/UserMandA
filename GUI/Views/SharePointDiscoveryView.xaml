<UserControl x:Class="MandADiscoverySuite.Views.SharePointDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SharePointDiscoveryControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

        <UserControl.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="../Resources/Converters.xaml" />
                 <ResourceDictionary Source="../Resources/DataGridTheme.xaml" />
                 <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
                 <ResourceDictionary Source="../Themes/Colors.xaml" />
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
     </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Summary Cards -->
            <RowDefinition Height="Auto"/>  <!-- Warning Banners -->
            <RowDefinition Height="Auto"/>  <!-- Error Banner -->
            <RowDefinition Height="Auto"/>  <!-- Loading -->
            <RowDefinition Height="*"/>     <!-- Data and Details -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="SharePoint Discovery" FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalSites, StringFormat='({0} sites)'}"
                       FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"
                       Visibility="Visible"/>
        </StackPanel>

        <!-- Toolbar Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,10">
            <Button Content="▶ Run Discovery"
                    Command="{Binding RunDiscoveryCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,0,12,0"/>
            <Button Content="🔄 Refresh Data"
                    Command="{Binding RefreshDataCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,12,0"/>
            <Button Content="📤 Export"
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource OutlineButtonStyle}"/>
            <Button Content="📋 View Logs"
                    Command="{Binding ViewLogsCommand}"
                    Style="{StaticResource GhostButtonStyle}"
                    Margin="12,0,0,0"/>
        </StackPanel>

        <!-- Summary Cards Section -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,10,10">
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Site Collections" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="🏢" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalSiteCollections}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Sites" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="🌐" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalSites}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Lists" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="📋" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalLists}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Last Discovery" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="📅" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding LastDiscovery, StringFormat='MMM dd, yyyy'}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Red Warning Banners for Missing CSV Headers -->
        <ItemsControl Grid.Row="3" ItemsSource="{Binding HeaderWarnings}"
                      Margin="10,0,10,10"
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibility}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                            CornerRadius="4" Margin="0,0,0,8" Padding="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠" FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="4" Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                CornerRadius="4" Margin="10,0,10,10" Padding="8"
                Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="❌" FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Loading Spinner -->
        <Border Grid.Row="5" HorizontalAlignment="Center" Margin="10"
                Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"
                            VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ProcessingMessage}" Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Data Section -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding SelectedResults}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Margin="20,0,20,20"
                      SelectedItem="{Binding SelectedItem}"
                      SelectionMode="Extended"
                      Visibility="{Binding SelectedResults.Count, Converter={StaticResource CountToVisibility}}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Site Name"
                                        Binding="{Binding sitename}"
                                        Width="200"/>
                    <DataGridTextColumn Header="URL"
                                        Binding="{Binding url}"
                                        Width="200"/>
                    <DataGridTextColumn Header="Owner"
                                        Binding="{Binding owner}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Created Date"
                                        Binding="{Binding createddate, StringFormat='{}{0:yyyy-MM-dd}'}"  Width="120"/>
                    <DataGridTextColumn Header="Storage Used"
                                        Binding="{Binding storageused}"
                                        Width="120"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <!-- No Data Message -->
            <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding SelectedResults.Count, Converter={StaticResource InverseCountToVisibility}}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="🌐" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="No SharePoint data found" FontSize="16" HorizontalAlignment="Center"
                               Margin="0,10,0,0" Opacity="0.7"/>
                    <TextBlock Text="Check CSV files in data directory" FontSize="12" HorizontalAlignment="Center"
                               Margin="0,5,0,0" Opacity="0.5"/>
                </StackPanel>
            </Border>

            <!-- GridSplitter for Details Panel -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource BorderBrush}"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    Margin="0,10,10,10" CornerRadius="8"
                    Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Site Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding SelectedItemDetails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Key}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource MutedForegroundBrush}"/>
                                        <TextBlock Text="{Binding Value}" FontSize="14" Foreground="{DynamicResource ForegroundBrush}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</UserControl>
