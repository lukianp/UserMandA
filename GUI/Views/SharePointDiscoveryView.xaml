<UserControl x:Class="MandADiscoverySuite.Views.SharePointDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Converters.xaml"/>
                <ResourceDictionary Source="../Resources/DataGridTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Summary Cards -->
            <RowDefinition Height="Auto"/>  <!-- Warning Banners -->
            <RowDefinition Height="Auto"/>  <!-- Error Banner -->
            <RowDefinition Height="Auto"/>  <!-- Loading -->
            <RowDefinition Height="*"/>     <!-- Data and Details -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="SharePoint Discovery" FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalSites, StringFormat='({0} sites)'}"
                       FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"
                       Visibility="Visible"/>
        </StackPanel>

        <!-- Toolbar Section -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="10,0,10,10">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="â–¶ Run Discovery" Command="{Binding RunDiscoveryCommand}" Margin="10"/>
                <Button Content="ðŸ”„ Refresh Data" Command="{Binding RefreshDataCommand}" Margin="0,10,10,10"/>
                <Button Content="ðŸ“¤ Export" Command="{Binding ExportCommand}" Margin="0,10,10,10"/>
                <Button Content="ðŸ“‹ View Logs" Command="{Binding ViewLogsCommand}" Margin="0,10,10,10"/>
            </WrapPanel>
        </Border>

        <!-- Summary Cards Section -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,10,10">
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Site Collections" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="ðŸ¢" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalSiteCollections}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Sites" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="ðŸŒ" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalSites}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Lists" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="ðŸ“‹" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding TotalLists}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Last Discovery" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="ðŸ“…" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding LastDiscovery, StringFormat='MMM dd, yyyy'}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Red Warning Banners for Missing CSV Headers -->
        <ItemsControl Grid.Row="3" ItemsSource="{Binding HeaderWarnings}"
                      Margin="10,0,10,10"
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibility}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                            CornerRadius="4" Margin="0,0,0,8" Padding="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš " FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="4" Background="{DynamicResource ErrorBrush}" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                CornerRadius="4" Margin="10,0,10,10" Padding="8" Opacity="0.33"
                Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âŒ" FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Loading Spinner -->
        <Border Grid.Row="5" HorizontalAlignment="Center" Margin="10"
                Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"
                             VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ProcessingMessage}" Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Data Section -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding SelectedResults}"
                      Margin="10"
                      SelectedItem="{Binding SelectedItem}"
                      Visibility="{Binding SelectedResults.Count, Converter={StaticResource CountToVisibility}}"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      SelectionMode="Extended" GridLinesVisibility="Horizontal"
                      AutoGenerateColumns="False"
                      Background="Transparent">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Site Name" Binding="{Binding sitename}" Width="*" />
                    <DataGridTextColumn Header="URL" Binding="{Binding url}" Width="200" />
                    <DataGridTextColumn Header="Owner" Binding="{Binding owner}" Width="150" />
                    <DataGridTextColumn Header="Site Template" Binding="{Binding sitetemplate}" Width="120" />
                    <DataGridTextColumn Header="Storage Used" Binding="{Binding storageused}" Width="100" />
                    <DataGridTextColumn Header="Created Date" Binding="{Binding createddate, StringFormat=yyyy-MM-dd}" Width="120" />
                    <DataGridTextColumn Header="Modified Date" Binding="{Binding modifieddate, StringFormat=yyyy-MM-dd}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- No Data Message -->
            <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding SelectedResults.Count, Converter={StaticResource InverseCountToVisibility}}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒ" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="No SharePoint data found" FontSize="16" HorizontalAlignment="Center"
                               Margin="0,10,0,0" Opacity="0.7"/>
                    <TextBlock Text="Check CSV files in data directory" FontSize="12" HorizontalAlignment="Center"
                               Margin="0,5,0,0" Opacity="0.5"/>
                </StackPanel>
            </Border>

            <!-- GridSplitter for Details Panel -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource BorderBrush}"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,10,10,10"
                    Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Site Details" FontSize="18" FontWeight="Bold" Margin="15,15,15,10"/>
                        <ItemsControl ItemsSource="{Binding SelectedItemDetails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="15,0,15,10">
                                        <TextBlock Text="{Binding Key}" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        <TextBlock Text="{Binding Value}" Foreground="{DynamicResource MutedForegroundBrush}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</UserControl>