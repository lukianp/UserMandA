<UserControl x:Class="MandADiscoverySuite.Views.SnapshotComparisonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Change Type to Color Converter -->
        <Style x:Key="ChangeTypeColorStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="Added">
                    <Setter Property="Background" Value="#FF48BB78"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Removed">
                    <Setter Property="Background" Value="#FFF56565"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Modified">
                    <Setter Property="Background" Value="#FFFBBF24"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📊" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock Text="Snapshot Comparison" Foreground="#FFE2E8F0" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="📷 Create Snapshot" Command="{Binding CreateSnapshotCommand}" 
                        Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
                <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}" 
                        Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"/>
                <Button Content="📤 Export" Command="{Binding ExportComparisonCommand}" 
                        Style="{StaticResource ModernButtonStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- Snapshot Selection -->
        <Border Grid.Row="1" Background="#FF1C2433" BorderBrush="#FF374151" BorderThickness="1" 
                CornerRadius="8" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Baseline Snapshot Selection -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Baseline Snapshot" Foreground="#FFE2E8F0" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableSnapshots}" 
                              SelectedItem="{Binding BaselineSnapshot}"
                              DisplayMemberPath="Name"
                              Background="#FF2D3748" 
                              Foreground="#FFE2E8F0"
                              BorderBrush="#FF4A5568"
                              BorderThickness="1"
                              Padding="12,8"
                              FontSize="13"/>
                    <TextBlock Text="{Binding BaselineSnapshot.CreatedDate, StringFormat='Created: {0:yyyy-MM-dd HH:mm}'}" 
                               Foreground="#FFA0AEC0" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Compare Snapshot Selection -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Compare Snapshot" Foreground="#FFE2E8F0" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableSnapshots}" 
                              SelectedItem="{Binding CompareSnapshot}"
                              DisplayMemberPath="Name"
                              Background="#FF2D3748" 
                              Foreground="#FFE2E8F0"
                              BorderBrush="#FF4A5568"
                              BorderThickness="1"
                              Padding="12,8"
                              FontSize="13"/>
                    <TextBlock Text="{Binding CompareSnapshot.CreatedDate, StringFormat='Created: {0:yyyy-MM-dd HH:mm}'}" 
                               Foreground="#FFA0AEC0" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Compare Button -->
                <Button Grid.Row="0" Grid.Column="4" Content="🔍 Compare" 
                        Command="{Binding CompareSnapshotsCommand}"
                        Style="{StaticResource ModernButtonStyle}" 
                        VerticalAlignment="Bottom" MinWidth="120" Height="40"/>
                
                <!-- Comparison Summary -->
                <Border Grid.Row="1" Grid.ColumnSpan="5" Background="#FF2D3748" CornerRadius="6" 
                        Padding="16" Margin="0,16,0,0"
                        Visibility="{Binding ComparisonResult, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ComparisonResult.Summary.TotalChanges}" 
                                       Foreground="#FFE2E8F0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Changes" Foreground="#FFA0AEC0" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ComparisonResult.Summary.AddedItems}" 
                                       Foreground="#FF48BB78" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Added" Foreground="#FFA0AEC0" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ComparisonResult.Summary.RemovedItems}" 
                                       Foreground="#FFF56565" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Removed" Foreground="#FFA0AEC0" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ComparisonResult.Summary.ModifiedItems}" 
                                       Foreground="#FFFBBF24" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Modified" Foreground="#FFA0AEC0" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Filters -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal" 
                            Margin="0,16,0,0"
                            Visibility="{Binding ComparisonResult, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Filters:" Foreground="#FFE2E8F0" FontSize="13" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <ComboBox ItemsSource="{Binding ChangeTypes}" SelectedItem="{Binding SelectedChangeType}"
                              Background="#FF2D3748" Foreground="#FFE2E8F0" BorderBrush="#FF4A5568"
                              Width="100" Height="32" Margin="0,0,8,0"/>
                    
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"
                              Background="#FF2D3748" Foreground="#FFE2E8F0" BorderBrush="#FF4A5568"
                              Width="120" Height="32" Margin="0,0,8,0"/>
                    
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#FF2D3748" Foreground="#FFE2E8F0" BorderBrush="#FF4A5568"
                             Width="200" Height="32" Padding="8,6" Margin="0,0,8,0"
                             Tag="Search changes..."/>
                    
                    <Button Content="Clear" Command="{Binding ClearFiltersCommand}" 
                            Style="{StaticResource ModernButtonStyle}" Height="32"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Changes List -->
        <Border Grid.Row="2" Background="#FF1C2433" BorderBrush="#FF374151" BorderThickness="1" 
                CornerRadius="8" Padding="0">
            <Grid>
                <DataGrid ItemsSource="{Binding FilteredChanges}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="#FF1C2433"
                          AlternatingRowBackground="#FF2D3748"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF374151"/>
                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,6"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF4A5568"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Type" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ChangeTypeColorStyle}" 
                                            CornerRadius="4" Padding="8,4" MinWidth="60">
                                        <TextBlock Text="{Binding Type}" 
                                                   Foreground="White" 
                                                   FontSize="10" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="200"/>
                        <DataGridTextColumn Header="Property" Binding="{Binding PropertyName}" Width="120"/>
                        <DataGridTextColumn Header="Old Value" Binding="{Binding OldValue}" Width="150"/>
                        <DataGridTextColumn Header="New Value" Binding="{Binding NewValue}" Width="150"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Detected" Binding="{Binding DetectedAt, StringFormat='{}{0:HH:mm:ss}'}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding ComparisonResult, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FilteredChanges.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    
                    <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.5"/>
                    <TextBlock Text="No changes found" Foreground="#FFA0AEC0" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="The selected snapshots are identical or your filters are too restrictive." 
                               Foreground="#FFA0AEC0" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- No Comparison State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ComparisonResult}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    
                    <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.5"/>
                    <TextBlock Text="Select snapshots to compare" Foreground="#FFA0AEC0" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="Choose a baseline and compare snapshot, then click Compare to see the differences." 
                               Foreground="#FFA0AEC0" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" 
                             Background="Transparent" Foreground="#FF667eea" Margin="0,0,0,16"/>
                <TextBlock Text="Loading snapshots..." Foreground="#FFE2E8F0" FontSize="14" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Comparing Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsComparing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" 
                             Background="Transparent" Foreground="#FF667eea" Margin="0,0,0,16"/>
                <TextBlock Text="Comparing snapshots..." Foreground="#FFE2E8F0" FontSize="14" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>