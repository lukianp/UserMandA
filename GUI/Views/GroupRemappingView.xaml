<UserControl x:Class="MandADiscoverySuite.Views.GroupRemappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FF0F1419">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Border Grid.Row="0" Background="#FF1E1E1E" BorderBrush="#FF4A5568" BorderThickness="0,0,0,1" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Security Group Remapping" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Advanced group remapping with intelligent conflict resolution and M&amp;A-specialized mapping templates" 
                               FontSize="16" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#EBF8FF" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20a3 3 0 117.444 0M14 7a3 3 0 11-6 0 3 3 0 016 0z" Fill="#0078D4" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="M&amp;A Optimized" FontSize="12" FontWeight="Medium" Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#F0FDF4" CornerRadius="6" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" Fill="#059669" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Smart Mapping" FontSize="12" FontWeight="Medium" Foreground="#059669"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="24" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="20,12">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Discovery Tab -->
            <TabItem Header="🔍 Discovery">
                <Grid Background="#FF1E1E1E" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Discovery Controls -->
                    <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Security Group Discovery" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="Discover and analyze security groups from source and target domains"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🔄 Refresh" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding RefreshGroupsCommand}" Background="#F3F4F6" BorderBrush="#D1D5DB"/>
                                <Button Content="🔍 Analyze Dependencies" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding AnalyzeDependenciesCommand}" Background="#FEF3C7" BorderBrush="#F59E0B"/>
                                <Button Content="▶️ Start Discovery" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding StartDiscoveryCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Discovery Metrics -->
                    <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="24,16">
                        <Border Style="{StaticResource CardStyle}" Background="#EBF8FF">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalSourceGroups}" FontSize="32" FontWeight="Bold" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                <TextBlock Text="Source Groups" FontSize="12" Foreground="#0078D4" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Background="#F0FDF4">
                            <StackPanel>
                                <TextBlock Text="{Binding AutoMappedGroups}" FontSize="32" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Center"/>
                                <TextBlock Text="Auto-Mapped" FontSize="12" Foreground="#059669" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Background="#FEF3C7">
                            <StackPanel>
                                <TextBlock Text="{Binding ConflictGroups}" FontSize="32" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                <TextBlock Text="Conflicts" FontSize="12" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Background="#FEF2F2">
                            <StackPanel>
                                <TextBlock Text="{Binding UnmappedGroups}" FontSize="32" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                <TextBlock Text="Unmapped" FontSize="12" Foreground="#EF4444" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Group Lists -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Source Groups -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="24,0,12,24">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <TextBlock Text="Source Domain Groups" FontSize="16" FontWeight="Medium"/>
                                    <TextBox Text="{Binding SourceGroupFilter}" Width="200" Height="28" HorizontalAlignment="Right"
                                             VerticalContentAlignment="Center" Padding="8,4" TextWrapping="Wrap">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Grid>

                                <DataGrid ItemsSource="{Binding SourceGroups}" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" SelectionMode="Extended" MaxHeight="400">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="50"/>
                                        <DataGridTemplateColumn Header="Status" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource StatusIndicatorStyle}" Background="{Binding StatusColor}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="200"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding GroupType}" Width="80"/>
                                        <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="70"/>
                                        <DataGridTextColumn Header="Mapping Status" Binding="{Binding MappingStatus}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Target Groups -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,24,24">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <TextBlock Text="Target Domain Groups" FontSize="16" FontWeight="Medium"/>
                                    <Button Content="➕ Create Group" HorizontalAlignment="Right" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateTargetGroupCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"/>
                                </Grid>

                                <DataGrid ItemsSource="{Binding TargetGroups}" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" SelectionMode="Extended" MaxHeight="400">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="Status" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource StatusIndicatorStyle}" Background="{Binding StatusColor}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="200"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding GroupType}" Width="80"/>
                                        <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="70"/>
                                        <DataGridTextColumn Header="Source Mappings" Binding="{Binding MappedSourceGroups}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Mapping Tab -->
            <TabItem Header="🔗 Mapping">
                <Grid Background="#FF1E1E1E" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Mapping Controls -->
                    <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Group Mapping Configuration" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="Configure one-to-one, one-to-many, and many-to-one group mappings with conflict resolution"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🤖 Auto-Map Similar" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding AutoMapSimilarCommand}" Background="#EBF8FF" BorderBrush="#0078D4"/>
                                <Button Content="📋 Apply Template" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding ApplyTemplateCommand}" Background="#F0F9FF" BorderBrush="#0284C7"/>
                                <Button Content="💾 Save Mapping" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding SaveMappingCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Mapping Configuration -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="24,16,24,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Mapping Template Selection -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mapping Template" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox Name="MappingTemplate" SelectedItem="{Binding SelectedMappingTemplate}" Height="32" Margin="0,0,8,0">
                                    <ComboBoxItem Content="M&amp;A Standard Mapping"/>
                                    <ComboBoxItem Content="Domain Consolidation"/>
                                    <ComboBoxItem Content="Department Restructure"/>
                                    <ComboBoxItem Content="Custom Mapping"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Mapping Strategy -->
                            <StackPanel Grid.Column="1" Margin="16,0">
                                <TextBlock Text="Strategy" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox Name="MappingStrategy" SelectedItem="{Binding SelectedMappingStrategy}" Width="200" Height="32">
                                    <ComboBoxItem Content="Preserve Source Names"/>
                                    <ComboBoxItem Content="Apply Naming Convention"/>
                                    <ComboBoxItem Content="Merge Similar Groups"/>
                                    <ComboBoxItem Content="Create New Structure"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Conflict Resolution -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Conflict Resolution" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox Name="ConflictResolution" SelectedItem="{Binding SelectedConflictResolution}" Height="32" Margin="8,0,0,0">
                                    <ComboBoxItem Content="Auto-Resolve with Suffix"/>
                                    <ComboBoxItem Content="Manual Review Required"/>
                                    <ComboBoxItem Content="Skip Conflicting Groups"/>
                                    <ComboBoxItem Content="Merge into Existing"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Mapping Editor -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Mapping Details -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="24,16,12,24">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <TextBlock Text="Group Mapping Details" FontSize="16" FontWeight="Medium"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <ComboBox Name="MappingTypeFilter" SelectedItem="{Binding MappingTypeFilter}" Width="120" Margin="0,0,8,0">
                                            <ComboBoxItem Content="All Mappings"/>
                                            <ComboBoxItem Content="One-to-One"/>
                                            <ComboBoxItem Content="One-to-Many"/>
                                            <ComboBoxItem Content="Many-to-One"/>
                                            <ComboBoxItem Content="Conflicts"/>
                                        </ComboBox>
                                        <Button Content="🔧 Edit Selected" Style="{StaticResource ActionButtonStyle}"
                                                Command="{Binding EditMappingCommand}" Background="#F3F4F6" BorderBrush="#D1D5DB"/>
                                    </StackPanel>
                                </Grid>

                                <DataGrid ItemsSource="{Binding GroupMappings}" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" SelectionMode="Extended" SelectedItem="{Binding SelectedMapping}">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="Status" Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Style="{StaticResource StatusIndicatorStyle}" Background="{Binding StatusColor}"/>
                                                        <Path Data="{Binding MappingTypeIcon}" Fill="#6B7280" Width="12" Height="12"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Source Group(s)" Binding="{Binding SourceGroupNames}" Width="200"/>
                                        <DataGridTextColumn Header="Target Group(s)" Binding="{Binding TargetGroupNames}" Width="200"/>
                                        <DataGridTextColumn Header="Mapping Type" Binding="{Binding MappingType}" Width="100"/>
                                        <DataGridTextColumn Header="Members" Binding="{Binding TotalMembers}" Width="70"/>
                                        <DataGridTextColumn Header="Conflicts" Binding="{Binding ConflictCount}" Width="70"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding MappingStatus}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Mapping Operations -->
                        <StackPanel Grid.Column="1">
                            <!-- Quick Actions -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,16,24,8">
                                <StackPanel>
                                    <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                                    
                                    <Button Content="📝 Create Custom Mapping" Margin="0,4" Padding="12,8" 
                                            Command="{Binding CreateCustomMappingCommand}" HorizontalContentAlignment="Left"/>
                                    <Button Content="🔀 Bulk Remap Selected" Margin="0,4" Padding="12,8" 
                                            Command="{Binding BulkRemapCommand}" HorizontalContentAlignment="Left"/>
                                    <Button Content="🚫 Remove Mapping" Margin="0,4" Padding="12,8" 
                                            Command="{Binding RemoveMappingCommand}" HorizontalContentAlignment="Left"/>
                                    <Button Content="✅ Validate All Mappings" Margin="0,4" Padding="12,8" 
                                            Command="{Binding ValidateAllMappingsCommand}" HorizontalContentAlignment="Left"/>
                                    <Button Content="📊 Preview Changes" Margin="0,4" Padding="12,8" 
                                            Command="{Binding PreviewChangesCommand}" HorizontalContentAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <!-- Mapping Statistics -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,8,24,8">
                                <StackPanel>
                                    <TextBlock Text="Mapping Statistics" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                                    
                                    <StackPanel Margin="0,4">
                                        <Grid>
                                            <TextBlock Text="Completion" FontSize="12"/>
                                            <TextBlock Text="{Binding MappingCompletionPercentage, StringFormat={}{0:F1}%}" FontSize="12" HorizontalAlignment="Right"/>
                                        </Grid>
                                        <ProgressBar Value="{Binding MappingCompletionPercentage}" Maximum="100" Height="6" Margin="0,2"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,8,0,4">
                                        <Grid>
                                            <TextBlock Text="Validation Status" FontSize="12"/>
                                            <TextBlock Text="{Binding ValidationPercentage, StringFormat={}{0:F1}%}" FontSize="12" HorizontalAlignment="Right"/>
                                        </Grid>
                                        <ProgressBar Value="{Binding ValidationPercentage}" Maximum="100" Height="6" Margin="0,2"/>
                                    </StackPanel>

                                    <Border Background="#F8F9FA" CornerRadius="4" Padding="8" Margin="0,8">
                                        <StackPanel>
                                            <TextBlock Text="Summary:" FontSize="10" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding TotalMappings, StringFormat={}Total Mappings: {0}}" FontSize="10"/>
                                            <TextBlock Text="{Binding ValidatedMappings, StringFormat={}Validated: {0}}" FontSize="10"/>
                                            <TextBlock Text="{Binding ConflictMappings, StringFormat={}Conflicts: {0}}" FontSize="10" Foreground="#EF4444"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Naming Convention -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,8,24,24">
                                <StackPanel>
                                    <TextBlock Text="Naming Convention" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Prefix:" FontSize="12" Margin="0,4,0,2"/>
                                        <TextBox Text="{Binding NamingConventionPrefix}" Height="28" Padding="8,4"/>
                                        
                                        <TextBlock Text="Suffix:" FontSize="12" Margin="0,8,0,2"/>
                                        <TextBox Text="{Binding NamingConventionSuffix}" Height="28" Padding="8,4"/>
                                        
                                        <CheckBox Content="Apply to all new mappings" IsChecked="{Binding ApplyNamingConvention}" 
                                                  Margin="0,8,0,4" FontSize="12"/>
                                        
                                        <Button Content="Apply Convention" Margin="0,8,0,0" Padding="8,4" FontSize="12"
                                                Command="{Binding ApplyNamingConventionCommand}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Validation Tab -->
            <TabItem Header="✅ Validation">
                <Grid Background="#FF1E1E1E" Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Mapping Validation &amp; Testing" Style="{StaticResource SectionHeaderStyle}"/>

                            <!-- Validation Summary -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Validation Summary" FontSize="18" FontWeight="Medium" Margin="0,0,0,16"/>

                                        <!-- Validation Metrics -->
                                        <UniformGrid Rows="2" Columns="2" Margin="0,0,16,0">
                                            <Border Background="#EBF8FF" CornerRadius="6" Padding="12" Margin="0,0,8,8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ValidTestsPassed}" FontSize="20" FontWeight="Bold" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Tests Passed" FontSize="10" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#FEF2F2" CornerRadius="6" Padding="12" Margin="8,0,0,8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ValidTestsFailed}" FontSize="20" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Tests Failed" FontSize="10" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#F0FDF4" CornerRadius="6" Padding="12" Margin="0,8,8,0">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ValidMappingsVerified}" FontSize="20" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Mappings Verified" FontSize="10" Foreground="#059669" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#FEF3C7" CornerRadius="6" Padding="12" Margin="8,8,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ValidIssuesFound}" FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Issues Found" FontSize="10" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </UniformGrid>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Validation Actions" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                        
                                        <Button Content="🔍 Run Full Validation" Margin="0,4" Padding="12,8" 
                                                Command="{Binding RunFullValidationCommand}" Background="#0078D4" Foreground="White"/>
                                        <Button Content="⚡ Quick Check" Margin="0,4" Padding="12,8" 
                                                Command="{Binding RunQuickCheckCommand}" Background="#F3F4F6"/>
                                        <Button Content="🧪 Test Sample Groups" Margin="0,4" Padding="12,8" 
                                                Command="{Binding TestSampleGroupsCommand}" Background="#FEF3C7"/>
                                        <Button Content="📊 Generate Report" Margin="0,4" Padding="12,8" 
                                                Command="{Binding GenerateValidationReportCommand}" Background="#F0FDF4"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Validation Results -->
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,16">
                                        <TextBlock Text="Validation Results" FontSize="16" FontWeight="Medium"/>
                                        <ComboBox Name="ValidationFilter" SelectedItem="{Binding ValidationFilter}" Width="120" HorizontalAlignment="Right">
                                            <ComboBoxItem Content="All Results"/>
                                            <ComboBoxItem Content="Passed"/>
                                            <ComboBoxItem Content="Failed"/>
                                            <ComboBoxItem Content="Warnings"/>
                                        </ComboBox>
                                    </Grid>

                                    <DataGrid ItemsSource="{Binding ValidationResults}" AutoGenerateColumns="False" 
                                              CanUserAddRows="False" MaxHeight="300">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="Severity" Width="80">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border Style="{StaticResource StatusIndicatorStyle}" Background="{Binding SeverityColor}"/>
                                                            <TextBlock Text="{Binding Severity}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Test Category" Binding="{Binding Category}" Width="120"/>
                                            <DataGridTextColumn Header="Test Name" Binding="{Binding TestName}" Width="200"/>
                                            <DataGridTextColumn Header="Source Group" Binding="{Binding SourceGroup}" Width="150"/>
                                            <DataGridTextColumn Header="Target Group" Binding="{Binding TargetGroup}" Width="150"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Execution Tab -->
            <TabItem Header="🚀 Execution">
                <Grid Background="#FF1E1E1E" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Execution Controls -->
                    <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Group Remapping Execution" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding ExecutionStatusText}" FontSize="14" Foreground="#6B7280"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🧪 Test Execute" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding TestExecuteCommand}" Background="#FEF3C7" BorderBrush="#F59E0B"/>
                                <Button Content="▶️ Execute Remapping" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding ExecuteRemappingCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"
                                        IsEnabled="{Binding CanExecuteRemapping}"/>
                                <Button Content="⏹️ Cancel" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding CancelExecutionCommand}" Background="#FEF2F2" BorderBrush="#EF4444"
                                        Visibility="{Binding IsExecutionInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Execution Progress -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Progress Details -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="24,24,12,24">
                            <StackPanel>
                                <!-- Overall Progress -->
                                <StackPanel Margin="0,0,0,24">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding CurrentExecutionPhase}" FontSize="18" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding ExecutionProgressText}" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding ExecutionProgressPercentage, StringFormat={}{0:F1}%}" 
                                                   FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                                    </Grid>

                                    <Border Background="#F3F4F6" CornerRadius="8" Height="12" Margin="0,12,0,0">
                                        <Border Background="#0078D4" CornerRadius="8" HorizontalAlignment="Left" 
                                                Width="{Binding ExecutionProgressPercentage, Converter={StaticResource PercentageToWidthConverter}}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Group-Specific Progress -->
                                <TextBlock Text="Group Remapping Progress" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding ExecutionProgress}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="120"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding SourceGroupName}" FontWeight="Medium" VerticalAlignment="Center"/>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="12,0">
                                                        <Border Background="#E5E7EB" CornerRadius="4" Height="6">
                                                            <Border Background="{Binding ProgressColor}" CornerRadius="4" HorizontalAlignment="Left" 
                                                                    Width="{Binding ProgressPercentage, Converter={StaticResource PercentageToWidthConverter}}"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding CurrentOperation}" FontSize="10" Foreground="#6B7280" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" Text="{Binding ProgressPercentage, StringFormat={}{0:F0}%}" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                                    
                                                    <TextBlock Grid.Column="3" Text="{Binding Status}" VerticalAlignment="Center" 
                                                               HorizontalAlignment="Right" Foreground="{Binding StatusColor}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Execution Log and Summary -->
                        <StackPanel Grid.Column="1">
                            <!-- Live Events -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,24,24,12">
                                <StackPanel>
                                    <TextBlock Text="Execution Log" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding ExecutionEvents}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,4">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Ellipse Width="8" Height="8" Fill="{Binding EventColor}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" FontSize="10" 
                                                                       Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding EventType}" FontSize="10" FontWeight="Medium" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap" Margin="16,2,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <!-- Execution Summary -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,12,24,24">
                                <StackPanel>
                                    <TextBlock Text="Execution Summary" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                    
                                    <StackPanel>
                                        <Grid Margin="0,4">
                                            <TextBlock Text="Groups Processed" FontSize="12"/>
                                            <TextBlock Text="{Binding ProcessedGroupsCount}" FontSize="12" HorizontalAlignment="Right"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,4">
                                            <TextBlock Text="Members Migrated" FontSize="12"/>
                                            <TextBlock Text="{Binding MigratedMembersCount}" FontSize="12" HorizontalAlignment="Right"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,4">
                                            <TextBlock Text="Errors Encountered" FontSize="12"/>
                                            <TextBlock Text="{Binding ExecutionErrorsCount}" FontSize="12" HorizontalAlignment="Right" 
                                                       Foreground="#EF4444"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,8,0,0">
                                            <TextBlock Text="Success Rate" FontSize="12" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding ExecutionSuccessRate, StringFormat={}{0:F1}%}" FontSize="12" 
                                                       HorizontalAlignment="Right" FontWeight="Medium" Foreground="#059669"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>