<UserControl x:Class="MandADiscoverySuite.Views.RiskAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <!-- Risk Level to Color Converter -->
        <Style x:Key="RiskLevelIndicator" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CurrentLevel}" Value="Low">
                    <Setter Property="Background" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentLevel}" Value="Medium">
                    <Setter Property="Background" Value="Yellow"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentLevel}" Value="High">
                    <Setter Property="Background" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentLevel}" Value="Critical">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Heatmap Cell Style -->
        <Style x:Key="HeatmapCell" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Level}" Value="Low">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="Medium">
                    <Setter Property="Background" Value="Yellow"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="High">
                    <Setter Property="Background" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="Critical">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Controls -->
        <Grid Grid.Row="0" Background="#F5F5F5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search and Filters -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10">
                <!-- Search Box -->
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" Height="30" VerticalContentAlignment="Center"
                         Margin="0,0,10,0" ToolTip="Search risks..."/>

                <!-- Category Filter -->
                <ComboBox ItemsSource="{Binding RiskCategories}" 
                         SelectedItem="{Binding SelectedCategory}"
                         Width="120" Height="30" Margin="5,0" ToolTip="Filter by category"/>

                <!-- Level Filter -->
                <ComboBox ItemsSource="{Binding RiskLevels}" 
                         SelectedItem="{Binding SelectedLevel}"
                         Width="100" Height="30" Margin="5,0" ToolTip="Filter by level"/>

                <!-- Status Filter -->
                <ComboBox ItemsSource="{Binding RiskStatuses}" 
                         SelectedItem="{Binding SelectedStatus}"
                         Width="100" Height="30" Margin="5,0" ToolTip="Filter by status"/>

                <!-- Clear Filters -->
                <Button Content="Clear" Command="{Binding ClearFiltersCommand}" 
                       Width="60" Height="30" Margin="10,0"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10">
                <Button Content="➕ New Risk" Command="{Binding CreateRiskCommand}" 
                       Width="90" Height="30" Margin="5,0"/>
                <Button Content="📊 Report" Command="{Binding GenerateReportCommand}" 
                       Width="80" Height="30" Margin="5,0"/>
                <Button Content="🔄 Refresh" Command="{Binding RefreshDataCommand}" 
                       Width="70" Height="30" Margin="5,0"/>
                <Button Content="📤 Export" Command="{Binding ExportRisksCommand}" 
                       Width="70" Height="30" Margin="5,0"/>
                <Button Content="📥 Import" Command="{Binding ImportRisksCommand}" 
                       Width="70" Height="30" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Risk List and Heatmap -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Risk List -->
                <GroupBox Grid.Row="0" Header="Risk Assessments" Margin="5">
                    <ListView ItemsSource="{Binding Risks}" 
                             SelectedItem="{Binding SelectedRisk}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Level" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource RiskLevelIndicator}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}"/>
                                
                                <GridViewColumn Header="Category" Width="120" DisplayMemberBinding="{Binding Category}"/>
                                
                                <GridViewColumn Header="Score" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RiskScore, StringFormat=F2}" 
                                                      HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Probability" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Probability, StringFormat=P0}" 
                                                      HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Impact" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Impact, StringFormat=P0}" 
                                                      HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                
                                <GridViewColumn Header="Owner" Width="120" DisplayMemberBinding="{Binding Owner}"/>
                                
                                <GridViewColumn Header="Last Assessed" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastAssessed, StringFormat='{}{0:MM/dd/yyyy}'}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Actions" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" Command="{Binding DataContext.EditRiskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                       CommandParameter="{Binding}" Width="25" Height="25" Margin="1" ToolTip="Edit"/>
                                                <Button Content="🗑️" Command="{Binding DataContext.DeleteRiskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                       CommandParameter="{Binding}" Width="25" Height="25" Margin="1" ToolTip="Delete"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="Gray"/>

                <!-- Risk Heatmap -->
                <GroupBox Grid.Row="2" Header="Risk Heatmap" Margin="5">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding HeatmapCells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" Rows="5"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource HeatmapCell}">
                                        <Grid>
                                            <TextBlock Text="{Binding RiskCount}" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Level}" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Bottom"
                                                      FontSize="8" Margin="2"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Background="Gray" Width="5"/>

            <!-- Right Panel - Details and Statistics -->
            <Grid Grid.Column="2">
                <TabControl>
                    <!-- Risk Details Tab -->
                    <TabItem Header="Risk Details">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="Selected Risk Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <Grid Visibility="{Binding SelectedRisk, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Risk Info -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="{Binding SelectedRisk.Title}" FontWeight="Bold" FontSize="12" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding SelectedRisk.Description}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Score: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding SelectedRisk.RiskScore, StringFormat=F2}"/>
                                            <TextBlock Text=" | Level: " FontWeight="Bold" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding SelectedRisk.CurrentLevel}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Mitigation Actions -->
                                    <GroupBox Grid.Row="1" Header="Mitigation Actions" Margin="0,5">
                                        <StackPanel>
                                            <Button Content="➕ Add Action" Command="{Binding CreateActionCommand}" 
                                                   Width="100" Height="25" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                                            <ListView ItemsSource="{Binding SelectedRisk.MitigationActions}" Height="120">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Action" Width="150" DisplayMemberBinding="{Binding Action}"/>
                                                        <GridViewColumn Header="Type" Width="80" DisplayMemberBinding="{Binding Type}"/>
                                                        <GridViewColumn Header="Status" Width="80" DisplayMemberBinding="{Binding Status}"/>
                                                        <GridViewColumn Header="Due" Width="80">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding DueDate, StringFormat='{}{0:MM/dd}'}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- Risk Indicators -->
                                    <GroupBox Grid.Row="2" Header="Risk Indicators" Margin="0,5">
                                        <StackPanel>
                                            <Button Content="➕ Add Indicator" Command="{Binding CreateIndicatorCommand}" 
                                                   Width="110" Height="25" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                                            <ListView ItemsSource="{Binding SelectedRisk.Indicators}" Height="120">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                                                        <GridViewColumn Header="Current" Width="60" DisplayMemberBinding="{Binding CurrentValue, StringFormat=F2}"/>
                                                        <GridViewColumn Header="Threshold" Width="70" DisplayMemberBinding="{Binding Threshold, StringFormat=F2}"/>
                                                        <GridViewColumn Header="Status" Width="60" DisplayMemberBinding="{Binding Status}"/>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </StackPanel>
                                    </GroupBox>
                                </Grid>

                                <TextBlock Text="Select a risk to view details" 
                                          Visibility="{Binding SelectedRisk, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          FontStyle="Italic" Foreground="Gray"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Statistics Tab -->
                    <TabItem Header="Statistics">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="Risk Statistics" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                <!-- Overall Stats -->
                                <GroupBox Header="Overview" Margin="0,5">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="Total Risks: " FontWeight="Bold" Width="100"/>
                                            <TextBlock Text="{Binding RiskStatistics.TotalRisks}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="Avg Score: " FontWeight="Bold" Width="100"/>
                                            <TextBlock Text="{Binding RiskStatistics.AverageRiskScore, StringFormat=F2}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="Org Risk Score: " FontWeight="Bold" Width="100"/>
                                            <TextBlock Text="{Binding OrganizationalRiskScore, StringFormat=F2}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Risk by Level -->
                                <GroupBox Header="Risks by Level" Margin="0,5">
                                    <ItemsControl ItemsSource="{Binding RiskStatistics.RisksByLevel}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <TextBlock Text="{Binding Key}" FontWeight="Bold" Width="80"/>
                                                    <TextBlock Text="{Binding Value}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>

                                <!-- Risk by Category -->
                                <GroupBox Header="Risks by Category" Margin="0,5">
                                    <ItemsControl ItemsSource="{Binding RiskStatistics.RisksByCategory}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <TextBlock Text="{Binding Key}" FontWeight="Bold" Width="80"/>
                                                    <TextBlock Text="{Binding Value}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>

                                <!-- Compliance Scores -->
                                <GroupBox Header="Compliance Scores" Margin="0,5">
                                    <ItemsControl ItemsSource="{Binding ComplianceScores}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <TextBlock Text="{Binding Key}" FontWeight="Bold" Width="80"/>
                                                    <TextBlock Text="{Binding Value, StringFormat=P0}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>

                                <!-- Analysis Actions -->
                                <GroupBox Header="Analysis Actions" Margin="0,10">
                                    <StackPanel>
                                        <Button Content="🔍 Run Automated Assessment" Command="{Binding RunAutomatedAssessmentCommand}" 
                                               Height="30" Margin="0,2"/>
                                        <Button Content="⚡ Update Risk Levels" Command="{Binding UpdateRiskLevelsCommand}" 
                                               Height="30" Margin="0,2"/>
                                        <Button Content="🔮 Identify Emerging Risks" Command="{Binding IdentifyEmergingRisksCommand}" 
                                               Height="30" Margin="0,2"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="{Binding Risks.Count, StringFormat='Risks: {0}'}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Margin="10,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Risk Editor Modal -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding ShowRiskEditor, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#FF1E1E1E" Width="500" Height="450" CornerRadius="8" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,15">
                        <TextBlock.Text>
                            <Binding Path="IsEditingRisk">
                                <Binding.Converter>
                                    <StaticResource ResourceKey="BooleanToTextConverter"/>
                                </Binding.Converter>
                                <Binding.ConverterParameter>Edit Risk|Create Risk</Binding.ConverterParameter>
                            </Binding>
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock Grid.Row="1" Text="Title:" Margin="0,5,0,2"/>
                    <TextBox Grid.Row="1" Text="{Binding NewRiskTitle}" Margin="0,20,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Category:" Margin="0,5,0,2"/>
                            <ComboBox ItemsSource="{Binding RiskCategories}" 
                                     SelectedItem="{Binding NewRiskCategory}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Owner:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding NewRiskOwner}" Height="30"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Probability:" Margin="0,5,0,2"/>
                            <Slider Value="{Binding NewRiskProbability}" Minimum="0" Maximum="1" 
                                   TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding NewRiskProbability, StringFormat=P0}" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Impact:" Margin="0,5,0,2"/>
                            <Slider Value="{Binding NewRiskImpact}" Minimum="0" Maximum="1" 
                                   TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding NewRiskImpact, StringFormat=P0}" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="4" Text="Description:" Margin="0,15,0,2"/>
                    <TextBox Grid.Row="5" Text="{Binding NewRiskDescription}" 
                            AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>

                    <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Save" Command="{Binding SaveRiskCommand}" Width="70" Height="30" Margin="5,0"/>
                        <Button Content="Cancel" Command="{Binding CancelRiskEditCommand}" Width="70" Height="30" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Action Editor Modal -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding ShowActionEditor, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#FF1E1E1E" Width="450" Height="350" CornerRadius="8" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Mitigation Action" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="1" Text="Action:" Margin="0,5,0,2"/>
                    <TextBox Grid.Row="1" Text="{Binding NewActionAction}" Margin="0,20,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Type:" Margin="0,5,0,2"/>
                            <ComboBox ItemsSource="{Binding MitigationTypes}" 
                                     SelectedItem="{Binding NewActionType}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Due Date:" Margin="0,5,0,2"/>
                            <DatePicker SelectedDate="{Binding NewActionDueDate}" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="3" Text="Assigned To:" Margin="0,15,0,2"/>
                    <TextBox Grid.Row="3" Text="{Binding NewActionAssignedTo}" Margin="0,20,0,10"/>

                    <TextBlock Grid.Row="4" Text="Description:" Margin="0,5,0,2"/>
                    <TextBox Grid.Row="4" Text="{Binding NewActionDescription}" 
                            AcceptsReturn="True" TextWrapping="Wrap" Margin="0,20,0,0"/>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Save" Command="{Binding SaveActionCommand}" Width="70" Height="30" Margin="5,0"/>
                        <Button Content="Cancel" Command="{Binding CancelActionEditCommand}" Width="70" Height="30" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Indicator Editor Modal -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding ShowIndicatorEditor, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#FF1E1E1E" Width="400" Height="280" CornerRadius="8" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Risk Indicator" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="1" Text="Name:" Margin="0,5,0,2"/>
                    <TextBox Grid.Row="1" Text="{Binding NewIndicatorName}" Margin="0,20,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Threshold:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding NewIndicatorThreshold}" Margin="0,20,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Unit:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding NewIndicatorUnit}" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Save" Command="{Binding SaveIndicatorCommand}" Width="70" Height="30" Margin="5,0"/>
                        <Button Content="Cancel" Command="{Binding CancelIndicatorEditCommand}" Width="70" Height="30" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="10"/>
                <TextBlock Text="Loading..." Foreground="White" FontSize="14" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>