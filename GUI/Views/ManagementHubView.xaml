<UserControl x:Class="MandADiscoverySuite.Views.ManagementHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MandADiscoverySuite.Views"
             xmlns:viewModels="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Tab Style -->
        <Style x:Key="ManagementTab" TargetType="Button">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                    <Setter Property="Foreground" Value="#E2E8F0"/>
                </Trigger>
                <!-- Use a simpler approach for active state -->
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Projects">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Timeline">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Dashboard">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Analytics">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Active tab indicator -->
        <Style x:Key="ActiveTabIndicator" TargetType="Border">
            <Setter Property="Height" Value="3"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Projects">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Timeline">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Dashboard">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ActiveTab, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Analytics">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Migration Management Suite" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Comprehensive project management with Gantt charts, timeline tracking, and risk management" 
                               FontSize="14" 
                               Foreground="#94A3B8" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#10B981" CornerRadius="16" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🟢" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding OverallProgressText}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Button Content="⚙️ Settings" 
                            Style="{StaticResource ManagementTab}" 
                            Background="Transparent" 
                            BorderBrush="#475569" 
                            BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation Tabs -->
        <Border Grid.Row="1" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="24,0">
                <Button Content="📊 Dashboard" 
                        Style="{StaticResource ManagementTab}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Dashboard"
                        Tag="Dashboard"/>
                <Button Content="📈 Gantt Chart" 
                        Style="{StaticResource ManagementTab}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Gantt"
                        Tag="Gantt"/>
                <Button Content="📋 Project Details" 
                        Style="{StaticResource ManagementTab}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="ProjectDetails"
                        Tag="ProjectDetails"/>
                <Button Content="🌊 Wave Management" 
                        Style="{StaticResource ManagementTab}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Waves"
                        Tag="Waves"/>
                <Button Content="⚠️ Risk Management" 
                        Style="{StaticResource ManagementTab}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Risks"
                        Tag="Risks"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Row="2" 
                        Content="{Binding SelectedViewModel}" 
                        Margin="0">
            <ContentControl.Resources>
                <!-- DataTemplates for ViewModels - This is the correct approach for MVVM -->
                <DataTemplate DataType="{x:Type viewModels:ManagementDashboardViewModel}">
                    <views:ManagementDashboardView DataContext="{Binding}"/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:GanttViewModel}">
                    <views:GanttView DataContext="{Binding}"/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:ProjectManagementViewModel}">
                    <views:ProjectManagementView DataContext="{Binding}"/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:WaveViewModel}">
                    <views:WaveView DataContext="{Binding}"/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl>