<UserControl x:Class="MandADiscoverySuite.Views.WaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="WaveCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{StaticResource DarkBackgroundColor}" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource DisabledBrush}"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ErrorDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Status Color Converters would go here in a real implementation -->
    </UserControl.Resources>

    <Grid Background="#0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Migration Wave Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>

            <Button Grid.Column="1" 
                    Content="Create New Wave" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CreateWaveCommand}"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Wave List (Left Panel) -->
            <Border Grid.Column="0" Style="{StaticResource WaveCard}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Migration Waves" Style="{StaticResource HeaderText}"/>
                    
                    <ListBox ItemsSource="{Binding MigrationWaves}"
                             SelectedItem="{Binding SelectedWave}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#374151" 
                                        CornerRadius="6" 
                                        Margin="0,0,0,8" 
                                        Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Wave Name -->
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding Name}" 
                                                   FontWeight="Bold" 
                                                   Foreground="#E2E8F0" 
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Description}" 
                                                   Foreground="#94A3B8" 
                                                   FontSize="12" 
                                                   Margin="0,4,0,0"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Dates -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="{Binding StartDate, StringFormat='{}{0:MMM dd}'}" 
                                                       Foreground="#94A3B8" 
                                                       FontSize="11"/>
                                            <TextBlock Text=" - " Foreground="#94A3B8" FontSize="11"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat='{}{0:MMM dd}'}" 
                                                       Foreground="#94A3B8" 
                                                       FontSize="11"/>
                                        </StackPanel>

                                        <!-- Status and Progress -->
                                        <Grid Grid.Row="3" Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ProgressBar Grid.Column="0" 
                                                         Value="{Binding Progress}" 
                                                         Maximum="100" 
                                                         Height="6" 
                                                         Background="#4B5563" 
                                                         Foreground="#3B82F6" 
                                                         BorderThickness="0"/>

                                            <Border Grid.Column="1" 
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                                    CornerRadius="10" 
                                                    Padding="6,2" 
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="White" 
                                                           FontSize="10" 
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Wave Details (Right Panel) -->
            <Border Grid.Column="1" Style="{StaticResource WaveCard}" Margin="8,0,0,0">
                <Grid>
                    <Grid Visibility="{Binding IsWaveSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Actions -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding SelectedWave.Name}" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="{Binding SelectedWave.Description}" 
                                       Foreground="#94A3B8" 
                                       FontSize="14" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="Delete Wave" 
                                Style="{StaticResource DangerButton}"
                                Command="{Binding DeleteWaveCommand}"/>
                    </Grid>

                    <!-- Wave Details Form -->
                    <Grid Grid.Row="1" Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Start Date -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                            <TextBlock Text="Start Date" Foreground="#94A3B8" FontSize="12" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding SelectedWave.StartDate, Mode=TwoWay}"
                                        Background="#374151"
                                        Foreground="White"
                                        BorderBrush="#4B5563"/>
                        </StackPanel>

                        <!-- End Date -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="12,0,0,12">
                            <TextBlock Text="End Date" Foreground="#94A3B8" FontSize="12" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding SelectedWave.EndDate, Mode=TwoWay}"
                                        Background="#374151"
                                        Foreground="White"
                                        BorderBrush="#4B5563"/>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,12">
                            <TextBlock Text="Status" Foreground="#94A3B8" FontSize="12" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding SelectedWave.Status, Mode=TwoWay}"
                                      Background="#374151"
                                      Foreground="White"
                                      BorderBrush="#4B5563">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Planned"/>
                                    <ComboBoxItem Content="Active"/>
                                    <ComboBoxItem Content="Completed"/>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!-- Progress -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,12">
                            <TextBlock Text="Progress" Foreground="#94A3B8" FontSize="12" Margin="0,0,0,4"/>
                            <Grid>
                                <ProgressBar Value="{Binding SelectedWave.Progress}" 
                                             Maximum="100" 
                                             Height="24" 
                                             Background="#374151" 
                                             Foreground="#3B82F6" 
                                             BorderThickness="0"/>
                                <TextBlock Text="{Binding SelectedWave.Progress, StringFormat='{}{0:F1}%'}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Assigned Users -->
                    <Grid Grid.Row="2" Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Current Assignments -->
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Assigned Users" Style="{StaticResource HeaderText}"/>
                            
                            <DataGrid ItemsSource="{Binding SelectedWaveUsers}"
                                      Background="#374151"
                                      BorderThickness="1"
                                      BorderBrush="#4B5563"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      MaxHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Padding" Value="8,4"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#94A3B8"/>
                                                <Setter Property="Padding" Value="8,4"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remove" 
                                                        Style="{StaticResource DangerButton}"
                                                        Padding="4"
                                                        FontSize="10"
                                                        Command="{Binding DataContext.RemoveUserFromWaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Available Users -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Available Users" Style="{StaticResource HeaderText}"/>
                            
                            <DataGrid ItemsSource="{Binding UnassignedUsers}"
                                      Background="#374151"
                                      BorderThickness="1"
                                      BorderBrush="#4B5563"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      MaxHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Padding" Value="8,4"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#94A3B8"/>
                                                <Setter Property="Padding" Value="8,4"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Add" 
                                                        Style="{StaticResource PrimaryButton}"
                                                        Padding="4"
                                                        FontSize="10"
                                                        Command="{Binding DataContext.AddUserToWaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- No Wave Selected Message -->
                <StackPanel Visibility="{Binding IsWaveSelected, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <TextBlock Text="No Wave Selected" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#6B7280" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a wave from the list to view details" 
                               FontSize="14" 
                               Foreground="#6B7280" 
                               HorizontalAlignment="Center" 
                               Margin="0,8,0,0"/>
                </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>