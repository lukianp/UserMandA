<UserControl x:Class="MandADiscoverySuite.Views.WebServerConfigurationDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="WebServerConfigDiscoveryControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

        <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Converters.xaml" />
                <ResourceDictionary Source="../Resources/DataGridTheme.xaml" />
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
                <ResourceDictionary Source="../Themes/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Summary Cards -->
            <RowDefinition Height="Auto"/>  <!-- Warning Banners -->
            <RowDefinition Height="Auto"/>  <!-- Error Banner -->
            <RowDefinition Height="Auto"/>  <!-- Loading -->
            <RowDefinition Height="*"/>     <!-- Data and Details -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Web Server Configuration Discovery" FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding SelectedResults.Count, StringFormat='({0} items)'}"
                       FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"
                       Visibility="Visible"/>
        </StackPanel>

        <!-- Toolbar Section -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="10,0,10,10">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="▶ Run Discovery" Command="{Binding RunDiscoveryCommand}" Margin="10"/>
                <Button Content="🔄 Refresh" Command="{Binding RefreshDataCommand}" Margin="0,10,10,10"/>
                <Button Content="📤 Export" Command="{Binding ExportCommand}" Margin="0,10,10,10"/>
            </WrapPanel>
        </Border>

        <!-- Summary Cards Section -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,10,10">
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Servers" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalServers}" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Websites" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalWebsites}" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Configurations" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalConfigurations}" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Red Warning Banners for Missing CSV Headers -->
        <ItemsControl Grid.Row="3" ItemsSource="{Binding HeaderWarnings}"
                      Margin="10,0,10,10"
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibility}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource ErrorBrush}" Opacity="0.33" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                            CornerRadius="4" Margin="0,0,0,8" Padding="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠" FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="4" Background="{DynamicResource ErrorBrush}" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1"
                CornerRadius="4" Margin="10,0,10,10" Padding="8" Opacity="0.33"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="❌" FontSize="16" Foreground="{DynamicResource WhiteBrush}"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" Foreground="{DynamicResource WhiteBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Loading Spinner -->
        <Border Grid.Row="5" HorizontalAlignment="Center" Margin="10"
                Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"
                             VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ProcessingMessage}" Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Data Section -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding SelectedResults}"
                       AutoGenerateColumns="False" Margin="10"
                       SelectedItem="{Binding SelectedItem}"
                       Visibility="{Binding SelectedResults.Count, Converter={StaticResource CountToVisibility}}"
                       CanUserAddRows="False" CanUserDeleteRows="False"
                       SelectionMode="Single" GridLinesVisibility="Horizontal">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Object Type" Binding="{Binding ObjectType}" Width="120" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                    <DataGridTextColumn Header="Type" Binding="{Binding FrameworkName}" Width="150" />
                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100" />
                    <DataGridTextColumn Header="Status/State" Binding="{Binding State}" Width="100" />
                    <DataGridTextColumn Header="Path" Binding="{Binding PhysicalPath}" Width="150" />
                </DataGrid.Columns>

            </DataGrid>

            <!-- No Data Message -->
            <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding SelectedResults.Count, Converter={StaticResource InverseCountToVisibility}}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="🌐" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="No Web Server data found" FontSize="16" HorizontalAlignment="Center"
                               Margin="0,10,0,0" Opacity="0.7"/>
                    <TextBlock Text="Check CSV files in data directory" FontSize="12" HorizontalAlignment="Center"
                               Margin="0,5,0,0" Opacity="0.5"/>
                </StackPanel>
            </Border>

            <!-- GridSplitter for Details Panel -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource BorderBrush}"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,10,10,10"
                    Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Web Server Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource WhiteBrush}"/>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Object Type:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.ObjectType}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Name:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.Name}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Framework/Type:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.FrameworkName}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Version:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.Version}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Status/State:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.State}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Path/Install:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.PhysicalPath, FallbackValue={Binding SelectedItem.InstallPath}}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Last Modified:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.LastModified, StringFormat=g}" FontSize="14" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Additional Info:" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedItem.Bindings, FallbackValue={Binding SelectedItem.EnabledProtocols}, StringFormat={}Additional: {0}}" FontSize="12" Foreground="{DynamicResource WhiteBrush}" TextWrapping="Wrap" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</UserControl>
