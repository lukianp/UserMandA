<UserControl x:Class="MandADiscoverySuite.Views.VMMigrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="1"/>
            <!-- CornerRadius not supported in standard Button -->
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Virtual Machine Migration" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Enterprise VM migration with Azure Site Recovery integration and comprehensive discovery" 
                               FontSize="16" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#EBF8FF" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12 2C13.1046 2 14 2.89543 14 4V20C14 21.1046 13.1046 22 12 22H4C2.89543 22 2 21.1046 2 20V4C2 2.89543 2.89543 2 4 2H12ZM16 6V18C16 19.1046 16.8954 20 18 20C19.1046 20 20 19.1046 20 18V6C20 4.89543 19.1046 4 18 4C16.8954 4 16 4.89543 16 6ZM22 8V16C22 17.1046 21.1046 18 20 18C21.1046 18 22 17.1046 22 16V8C22 6.89543 21.1046 6 20 6C21.1046 6 22 6.89543 22 8Z" Fill="#0078D4" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Azure Ready" FontSize="12" FontWeight="Medium" Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#F0FDF4" CornerRadius="6" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" Fill="#059669" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Site Recovery" FontSize="12" FontWeight="Medium" Foreground="#059669"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="24" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="20,12">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Discovery Tab -->
            <TabItem Header="🔍 Discovery">
                <Grid Background="#FFFFFF" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Discovery Controls -->
                    <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="VM Discovery" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="Discover virtual machines across Azure, VMware, Hyper-V, and physical environments"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🔄 Refresh Discovery" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding RefreshDiscoveryCommand}" Background="#F3F4F6" BorderBrush="#D1D5DB"/>
                                <Button Content="▶️ Start Discovery" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding StartDiscoveryCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Discovery Metrics -->
                    <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="24,16">
                        <Border Style="{StaticResource MetricCardStyle}" Background="#EBF8FF">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalVMs}" FontSize="32" FontWeight="Bold" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total VMs" FontSize="12" Foreground="#0078D4" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricCardStyle}" Background="#F0FDF4">
                            <StackPanel>
                                <TextBlock Text="{Binding ReadyForMigration}" FontSize="32" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Center"/>
                                <TextBlock Text="Ready for Migration" FontSize="12" Foreground="#059669" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricCardStyle}" Background="#FEF3C7">
                            <StackPanel>
                                <TextBlock Text="{Binding RequireAttention}" FontSize="32" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                <TextBlock Text="Require Attention" FontSize="12" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricCardStyle}" Background="#FEF2F2">
                            <StackPanel>
                                <TextBlock Text="{Binding MigrationInProgress}" FontSize="32" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                <TextBlock Text="In Progress" FontSize="12" Foreground="#EF4444" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- VM List -->
                    <Border Grid.Row="2" Style="{StaticResource MetricCardStyle}" Margin="24,0,24,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Discovered Virtual Machines" FontSize="16" FontWeight="Medium"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ComboBox Name="EnvironmentFilter" SelectedItem="{Binding SelectedEnvironmentFilter}" Width="150" Margin="0,0,8,0">
                                        <ComboBoxItem Content="All Environments"/>
                                        <ComboBoxItem Content="Azure"/>
                                        <ComboBoxItem Content="VMware"/>
                                        <ComboBoxItem Content="Hyper-V"/>
                                        <ComboBoxItem Content="Physical"/>
                                    </ComboBox>
                                    <TextBox Name="SearchBox" Text="{Binding SearchFilter}" Width="200" Height="28" 
                                             VerticalContentAlignment="Center" Padding="8,4">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <DataGrid Grid.Row="1" ItemsSource="{Binding DiscoveredVMs}" AutoGenerateColumns="False" 
                                      CanUserAddRows="False" SelectionMode="Extended" SelectedItem="{Binding SelectedVM}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                                    <DataGridTextColumn Header="VM Name" Binding="{Binding VMName}" Width="200"/>
                                    <DataGridTextColumn Header="Host/Environment" Binding="{Binding HostName}" Width="150"/>
                                    <DataGridTextColumn Header="OS" Binding="{Binding OSType}" Width="120"/>
                                    <DataGridTextColumn Header="CPU" Binding="{Binding CPUCount}" Width="60"/>
                                    <DataGridTextColumn Header="Memory (GB)" Binding="{Binding MemoryGB}" Width="100"/>
                                    <DataGridTextColumn Header="Disk Size" Binding="{Binding TotalDiskSizeFormatted}" Width="100"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding MigrationStatus}" Width="120"/>
                                    <DataGridTextColumn Header="Compatibility" Binding="{Binding CompatibilityStatus}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Planning Tab -->
            <TabItem Header="📋 Planning">
                <Grid Background="#FFFFFF" Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Migration Planning &amp; Assessment" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Planning Controls -->
                                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                    <!-- Source Environment -->
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Source Environment Configuration" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Environment:" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <ComboBox Grid.Row="0" Grid.Column="1" SelectedItem="{Binding SourceEnvironment}" Margin="8,4" Height="32">
                                                    <ComboBoxItem Content="VMware vCenter"/>
                                                    <ComboBoxItem Content="Hyper-V"/>
                                                    <ComboBoxItem Content="Azure Subscription"/>
                                                    <ComboBoxItem Content="Physical Servers"/>
                                                </ComboBox>
                                                <Button Grid.Row="0" Grid.Column="2" Content="🔧 Configure" Padding="8" Margin="8,4" 
                                                        Command="{Binding ConfigureSourceCommand}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Connection:" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="8,4">
                                                    <Ellipse Width="12" Height="12" Fill="{Binding SourceConnectionStatusColor}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding SourceConnectionStatus}" Margin="8,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button Grid.Row="1" Grid.Column="2" Content="🔌 Test" Padding="8" Margin="8,4" 
                                                        Command="{Binding TestSourceConnectionCommand}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Target Environment -->
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Target Azure Environment" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subscription:" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <ComboBox Grid.Row="0" Grid.Column="1" SelectedItem="{Binding TargetSubscription}" 
                                                          ItemsSource="{Binding AzureSubscriptions}" Margin="8,4" Height="32"/>
                                                
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Resource Group:" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding TargetResourceGroup}" 
                                                          ItemsSource="{Binding ResourceGroups}" Margin="8,4" Height="32"/>
                                                <Button Grid.Row="1" Grid.Column="2" Content="➕ Create" Padding="8" Margin="8,4" 
                                                        Command="{Binding CreateResourceGroupCommand}"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Region:" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <ComboBox Grid.Row="2" Grid.Column="1" SelectedItem="{Binding TargetRegion}" 
                                                          ItemsSource="{Binding AzureRegions}" Margin="8,4" Height="32"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Migration Settings -->
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="20">
                                        <StackPanel>
                                            <TextBlock Text="Migration Settings" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                            
                                            <UniformGrid Rows="3" Columns="2">
                                                <CheckBox Content="Enable Accelerated Networking" IsChecked="{Binding EnableAcceleratedNetworking}" Margin="8,4"/>
                                                <CheckBox Content="Use Managed Disks" IsChecked="{Binding UseManagedDisks}" Margin="8,4"/>
                                                <CheckBox Content="Enable Boot Diagnostics" IsChecked="{Binding EnableBootDiagnostics}" Margin="8,4"/>
                                                <CheckBox Content="Preserve VM Sizes" IsChecked="{Binding PreserveVMSizes}" Margin="8,4"/>
                                                <CheckBox Content="Create Availability Set" IsChecked="{Binding CreateAvailabilitySet}" Margin="8,4"/>
                                                <CheckBox Content="Enable Site Recovery" IsChecked="{Binding EnableSiteRecovery}" Margin="8,4"/>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Assessment Results -->
                                <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Assessment Summary" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                                        
                                        <!-- Readiness -->
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="Migration Readiness" FontSize="12" FontWeight="Medium" Margin="0,0,0,4"/>
                                            <ProgressBar Value="{Binding MigrationReadiness}" Maximum="100" Height="8" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding MigrationReadiness, StringFormat={}{0}% Ready}" FontSize="10" Foreground="#6B7280"/>
                                        </StackPanel>

                                        <!-- Estimated Costs -->
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="Estimated Monthly Cost" FontSize="12" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding EstimatedMonthlyCost}" FontSize="16" FontWeight="Bold" Foreground="#0078D4"/>
                                        </StackPanel>

                                        <!-- Migration Time -->
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="Estimated Migration Time" FontSize="12" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding EstimatedMigrationTime}" FontSize="16" FontWeight="Bold" Foreground="#059669"/>
                                        </StackPanel>

                                        <!-- Recommendations -->
                                        <StackPanel>
                                            <TextBlock Text="Recommendations" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                                            <Ellipse Width="6" Height="6" Fill="#F59E0B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                            <TextBlock Text="{Binding}" FontSize="10" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Migration Tab -->
            <TabItem Header="🚀 Migration">
                <Grid Background="#FFFFFF" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Migration Controls -->
                    <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="VM Migration Execution" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding MigrationStatusText}" FontSize="14" Foreground="#6B7280"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="🧪 Test Migration" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding StartTestMigrationCommand}" Background="#FEF3C7" BorderBrush="#F59E0B"/>
                                <Button Content="▶️ Start Migration" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding StartMigrationCommand}" Background="#059669" Foreground="White" BorderBrush="#059669"
                                        IsEnabled="{Binding CanStartMigration}"/>
                                <Button Content="⏹️ Cancel" Style="{StaticResource ActionButtonStyle}" 
                                        Command="{Binding CancelMigrationCommand}" Background="#FEF2F2" BorderBrush="#EF4444"
                                        Visibility="{Binding IsMigrationInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Migration Progress -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Progress Details -->
                        <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="24,24,12,24">
                            <StackPanel>
                                <!-- Overall Progress -->
                                <StackPanel Margin="0,0,0,24">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding CurrentMigrationPhase}" FontSize="18" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding MigrationProgressText}" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding OverallProgressPercentage, StringFormat={}{0:F1}%}" 
                                                   FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                                    </Grid>

                                    <Border Background="#F3F4F6" CornerRadius="8" Height="12" Margin="0,12,0,0">
                                        <Border Background="#0078D4" CornerRadius="8" HorizontalAlignment="Left" 
                                                Width="{Binding OverallProgressPercentage, Converter={StaticResource PercentageToWidthConverter}}"/>
                                    </Border>
                                </StackPanel>

                                <!-- VM-Specific Progress -->
                                <TextBlock Text="VM Migration Progress" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding MigrationProgress}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="120"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding VMName}" FontWeight="Medium" VerticalAlignment="Center"/>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="12,0">
                                                        <Border Background="#E5E7EB" CornerRadius="4" Height="6">
                                                            <Border Background="{Binding ProgressColor}" CornerRadius="4" HorizontalAlignment="Left" 
                                                                    Width="{Binding ProgressPercentage, Converter={StaticResource PercentageToWidthConverter}}"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding CurrentPhase}" FontSize="10" Foreground="#6B7280" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" Text="{Binding ProgressPercentage, StringFormat={}{0:F0}%}" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                                    
                                                    <TextBlock Grid.Column="3" Text="{Binding Status}" VerticalAlignment="Center" 
                                                               HorizontalAlignment="Right" Foreground="{Binding StatusColor}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Migration Log and Status -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Live Events -->
                            <Border Grid.Row="0" Style="{StaticResource MetricCardStyle}" Margin="12,24,24,12">
                                <StackPanel>
                                    <TextBlock Text="Live Events" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding MigrationEvents}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,4">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Ellipse Width="8" Height="8" Fill="{Binding EventColor}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" FontSize="10" 
                                                                       Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding EventType}" FontSize="10" FontWeight="Medium" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap" Margin="16,2,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <!-- Resource Utilization -->
                            <Border Grid.Row="1" Style="{StaticResource MetricCardStyle}" Margin="12,12,24,24">
                                <StackPanel>
                                    <TextBlock Text="Resource Utilization" FontSize="16" FontWeight="Medium" Margin="0,0,0,12"/>
                                    
                                    <StackPanel>
                                        <StackPanel Margin="0,0,0,8">
                                            <Grid>
                                                <TextBlock Text="Network Throughput" FontSize="12"/>
                                                <TextBlock Text="{Binding NetworkThroughputMBps, StringFormat={}{0:F1} MB/s}" FontSize="12" HorizontalAlignment="Right"/>
                                            </Grid>
                                            <ProgressBar Value="{Binding NetworkUtilization}" Maximum="100" Height="6" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,0,0,8">
                                            <Grid>
                                                <TextBlock Text="Replication Health" FontSize="12"/>
                                                <TextBlock Text="{Binding ReplicationHealth}" FontSize="12" HorizontalAlignment="Right" 
                                                           Foreground="{Binding ReplicationHealthColor}"/>
                                            </Grid>
                                            <ProgressBar Value="{Binding ReplicationHealthPercentage}" Maximum="100" Height="6" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <Grid>
                                                <TextBlock Text="Disk Sync" FontSize="12"/>
                                                <TextBlock Text="{Binding DiskSyncPercentage, StringFormat={}{0:F1}%}" FontSize="12" HorizontalAlignment="Right"/>
                                            </Grid>
                                            <ProgressBar Value="{Binding DiskSyncPercentage}" Maximum="100" Height="6" Margin="0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Monitoring Tab -->
            <TabItem Header="📊 Monitoring">
                <Grid Background="#FFFFFF" Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Migration Monitoring &amp; Analytics" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <!-- Summary Cards -->
                            <UniformGrid Rows="1" Columns="4" Margin="0,0,0,24">
                                <Border Style="{StaticResource MetricCardStyle}" Background="#EBF8FF">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CompletedMigrations}" FontSize="28" FontWeight="Bold" 
                                                   Foreground="#0078D4" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Completed" FontSize="12" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource MetricCardStyle}" Background="#F0FDF4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SuccessRate, StringFormat={}{0:F1}%}" FontSize="28" FontWeight="Bold" 
                                                   Foreground="#059669" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Success Rate" FontSize="12" Foreground="#059669" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource MetricCardStyle}" Background="#FEF3C7">
                                    <StackPanel>
                                        <TextBlock Text="{Binding AverageMigrationTime}" FontSize="28" FontWeight="Bold" 
                                                   Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Avg Time" FontSize="12" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource MetricCardStyle}" Background="#EDE9FE">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TotalDataMigrated}" FontSize="28" FontWeight="Bold" 
                                                   Foreground="#7C3AED" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Data Migrated" FontSize="12" Foreground="#7C3AED" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <!-- Migration History -->
                            <Border Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Migration History" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                                    
                                    <DataGrid ItemsSource="{Binding MigrationHistory}" AutoGenerateColumns="False" 
                                              CanUserAddRows="False" MaxHeight="300">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="VM Name" Binding="{Binding VMName}" Width="200"/>
                                            <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat={}{0:MM/dd/yyyy HH:mm}}" Width="140"/>
                                            <DataGridTextColumn Header="Duration" Binding="{Binding DurationFormatted}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                                            <DataGridTextColumn Header="Data Size" Binding="{Binding DataSizeFormatted}" Width="100"/>
                                            <DataGridTextColumn Header="Target Region" Binding="{Binding TargetRegion}" Width="120"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>