<UserControl x:Class="MandADiscoverySuite.Views.FileServerDiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="FileServerDiscoveryControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="{DynamicResource SurfaceBrush}">

        <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeResources.xaml"/>
                <ResourceDictionary Source="../Resources/Converters.xaml"/>
                <ResourceDictionary Source="../Resources/DataGridTheme.xaml"/>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml"/>
                <ResourceDictionary Source="../Themes/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Header Section -->
        <TextBlock Grid.Row="0" Text="File Server Discovery View" Style="{StaticResource HeaderTextStyle}" FontSize="20"/>
        <!-- Placeholder: Replace with customized header content in each view -->

        <!-- UniformGrid for 4 Summary Statistic Cards -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
            <!-- File Servers Card -->
            <Border Background="#FFE3F2FD" BorderBrush="#FF2196F3" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="📁 File Servers" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding FileServersCount}" FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            <!-- Shares Card -->
            <Border Background="#FFF3E5F5" BorderBrush="#FF9C27B0" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="📂 Shares" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding SharesCount}" FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            <!-- Storage (TB) Card -->
            <Border Background="#FFFFF3E0" BorderBrush="#FFFF9800" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="💾 Storage (TB)" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding StorageTB}" FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            <!-- Accessible Shares Card -->
            <Border Background="#FFE8F5E8" BorderBrush="#FF4CAF50" BorderThickness="1" Padding="16" Margin="4">
                <StackPanel>
                    <TextBlock Text="✅ Accessible Shares" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding AccessibleSharesCount}" FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- ToolBar for Action Buttons -->
        <ToolBar Grid.Row="2" Margin="0,0,0,16">
            <Button Content="Refresh" Style="{StaticResource RoundedButtonStyle}" Padding="12,6" Margin="0,0,8,0" Command="{Binding RefreshDataCommand}"/>
            <Button Content="Export" Style="{StaticResource RoundedButtonStyle}" Padding="12,6" Margin="0,0,8,0" Command="{Binding ExportCommand}"/>
            <Button Content="Clear Filters" Style="{StaticResource RoundedButtonStyle}" Padding="12,6" Margin="0,0,8,0"/>
            <!-- Placeholder: Add more buttons as needed in each view -->
        </ToolBar>

        <!-- Grid with GridSplitter to separate DataGrid from Details Panel -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Main DataGrid -->
            <Border Grid.Column="0" Background="#FF1A202C" BorderBrush="#FFE2E8F0" BorderThickness="1">
                <DataGrid ItemsSource="{Binding ServerSummaries}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectedItem="{Binding SelectedItem}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Server Name" Binding="{Binding ServerName}" Width="150"/>
                        <DataGridTextColumn Header="IP" Binding="{Binding IP}" Width="120"/>
                        <DataGridTextColumn Header="OS" Binding="{Binding OS}" Width="100"/>
                        <DataGridTextColumn Header="Total Shares" Binding="{Binding TotalShares}" Width="100"/>
                        <DataGridTextColumn Header="Total Storage" Binding="{Binding TotalStorage}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="Gray" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

            <!-- Right-hand Details Panel -->
            <Border Grid.Column="2" Background="#FF1A202C" BorderBrush="#FFE2E8F0" BorderThickness="1"
                    Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Server Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding SelectedItemDetails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Key}" FontSize="12" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                                        <TextBlock Text="{Binding Value}" FontSize="14" Foreground="#FF4A5568" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="Shares" FontSize="16" FontWeight="SemiBold" Margin="0,16,0,8"/>
                        <DataGrid ItemsSource="{Binding SelectedServerShares}" AutoGenerateColumns="False" CanUserAddRows="False" Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Share Name" Binding="{Binding ShareName}" Width="120"/>
                                <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="150"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="80"/>
                                <DataGridTextColumn Header="Permissions" Binding="{Binding Permissions}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer or Empty State Placeholder -->
        <Border Grid.Row="4" Background="#FF1A202C" Padding="16" Margin="0,16,0,0">
            <TextBlock Text="File Server Discovery Complete" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF4A5568"/>
            <!-- Placeholder: Replace with footer or empty state content in each view -->
        </Border>
    </Grid>
</UserControl>
