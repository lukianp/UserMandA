<UserControl x:Class="MandADiscoverySuite.Views.SecurityGroupsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#FF0F1419">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF4A5568"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="StatsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>
        
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Security Groups" Style="{StaticResource HeaderTextStyle}"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshGroupsCommand}" 
                        Style="{StaticResource FilterButtonStyle}" Background="#FF10B981"/>
                <Button Content="ðŸ“¤ Export" Command="{Binding ExportGroupsCommand}" 
                        Style="{StaticResource FilterButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Statistics Cards -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,16" HorizontalAlignment="Center">
            <Border Style="{StaticResource StatsCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalGroupsCount}" FontSize="28" FontWeight="Bold" 
                              Foreground="#FF3182CE" HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Groups" FontSize="12" Foreground="#FFA0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Style="{StaticResource StatsCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SecurityGroupsCount}" FontSize="28" FontWeight="Bold" 
                              Foreground="#FFE53E3E" HorizontalAlignment="Center"/>
                    <TextBlock Text="Security Groups" FontSize="12" Foreground="#FFA0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Style="{StaticResource StatsCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding DistributionGroupsCount}" FontSize="28" FontWeight="Bold" 
                              Foreground="#FF10B981" HorizontalAlignment="Center"/>
                    <TextBlock Text="Distribution Groups" FontSize="12" Foreground="#FFA0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Style="{StaticResource StatsCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding MailEnabledSecurityGroupsCount}" FontSize="28" FontWeight="Bold" 
                              Foreground="#FFED8936" HorizontalAlignment="Center"/>
                    <TextBlock Text="Mail-Enabled Security" FontSize="12" Foreground="#FFA0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Filters and Search -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Search and Filters Row -->
            <WrapPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Width="300" Height="32" Padding="8" 
                         VerticalContentAlignment="Center"/>
                
                <TextBlock Text="Type:" VerticalAlignment="Center" Margin="16,0,8,0" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding GroupTypeFilters}" 
                          SelectedItem="{Binding SelectedGroupTypeFilter}"
                          Width="200" Height="32" Padding="8"/>
                
                <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" 
                        Style="{StaticResource FilterButtonStyle}" Background="#FF718096" Margin="16,0,0,0"/>
            </WrapPanel>
            
            <!-- Status Row -->
            <TextBlock Grid.Row="1" Text="{Binding StatusInfo}" 
                      Foreground="#FF718096" FontSize="14" Margin="0,4,0,0"/>
        </Grid>

        <!-- Loading Indicator -->
        <Border Grid.Row="3" Background="#FF1E1E1E" Opacity="0.9"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,16"/>
                <TextBlock Text="{Binding LoadingMessage}" HorizontalAlignment="Center" 
                           Foreground="#FF4A5568" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="3" Background="#FFFEF2F2" BorderBrush="#FFED8077" 
                BorderThickness="1" Padding="16" Margin="16"
                Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Error" FontWeight="Bold" Foreground="#FFE53E3E" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FFE53E3E" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Groups DataGrid -->
        <DataGrid x:Name="GroupsDataGrid"
                  Grid.Row="3"
                  ItemsSource="{Binding SecurityGroupsView}"
                  SelectedItem="{Binding SelectedGroup}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFF8FAFC"
                  Background="#FF1E1E1E"
                  BorderBrush="#FFE2E8F0"
                  BorderThickness="1"
                  RowHeight="40">

            <DataGrid.Columns>
                <!-- Group Name -->
                <DataGridTextColumn Header="Group Name" Binding="{Binding DisplayName}" Width="*" MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding DisplayName}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Group Type -->
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150" MinWidth="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Mail Enabled -->
                <DataGridTemplateColumn Header="Mail Enabled" Width="100" MinWidth="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding MailEnabled, Mode=OneWay}" 
                                     IsEnabled="False" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Security Enabled -->
                <DataGridTemplateColumn Header="Security Enabled" Width="120" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding SecurityEnabled, Mode=OneWay}" 
                                     IsEnabled="False" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Mail Address -->
                <DataGridTextColumn Header="Mail Address" Binding="{Binding Mail}" Width="200" MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Mail}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Member Count -->
                <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80" MinWidth="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Owner Count -->
                <DataGridTextColumn Header="Owners" Binding="{Binding OwnerCount}" Width="70" MinWidth="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Created Date -->
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedDateTime}" Width="120" MinWidth="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Description -->
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250" MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Description}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- View Details Button -->
                <DataGridTemplateColumn Header="Actions" Width="120" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View Details"
                                    Command="{Binding DataContext.OpenSecurityGroupDetailCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Padding="8,4" Margin="4"
                                    FontSize="10"
                                    Background="#FF3182CE"
                                    Foreground="White"
                                    BorderThickness="0"
                                    ToolTip="View detailed information and relationships for this group">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF2C5282"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasGroups}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
        </DataGrid>

        <!-- Empty State -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="{Binding HasGroups, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="No Security Groups Found" FontSize="20" FontWeight="SemiBold" 
                      Foreground="#FF4A5568" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Run discovery modules to populate this view with security groups" 
                      FontSize="14" Foreground="#FFA0AEC0" HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>