<UserControl x:Class="MandADiscoverySuite.Views.NotificationTemplateEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Modern Dark Theme Styles -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6B7280"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#374151"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TokenButton" TargetType="Button">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#64748B"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Notification Template Editor" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Create and manage email notification templates for migration workflows" 
                           Foreground="#94A3B8" 
                           FontSize="14" 
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Import Templates" 
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ImportTemplatesCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="Export Templates" 
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ExportTemplatesCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="New Template" 
                        Style="{StaticResource ModernButton}"
                        Command="{Binding CreateTemplateCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Template List (Left Panel) -->
            <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,8,0">
                <DockPanel>
                    <!-- Search and Filter -->
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                        <TextBlock Text="Templates" Style="{StaticResource SectionTitle}"/>
                        
                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,8"
                                 ToolTip="Search templates by name or description">
                            <TextBox.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="#374151"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                            <Setter Property="Tag" Value="Search templates..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <ComboBox SelectedItem="{Binding SelectedTemplateType, Mode=TwoWay}"
                                  Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="All Types"/>
                            <ComboBoxItem Content="Pre-Migration"/>
                            <ComboBoxItem Content="Post-Migration"/>
                            <ComboBoxItem Content="Alert"/>
                            <ComboBoxItem Content="Custom"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Template List -->
                    <ListBox DockPanel.Dock="Bottom"
                             ItemsSource="{Binding FilteredTemplates}"
                             SelectedItem="{Binding SelectedTemplate}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#475569" 
                                        CornerRadius="6" 
                                        Margin="0,0,0,8" 
                                        Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="Bold" 
                                                   Foreground="#E2E8F0" 
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <TextBlock Text="{Binding Type}" 
                                                   Foreground="#94A3B8" 
                                                   FontSize="11" 
                                                   Margin="0,2,0,0"/>
                                        
                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="#94A3B8" 
                                                   FontSize="11" 
                                                   Margin="0,4,0,0"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="40"
                                                   TextWrapping="Wrap"/>
                                        
                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                    Background="{Binding IsActive, Converter={StaticResource BoolToActiveBrushConverter}}" 
                                                    CornerRadius="10" 
                                                    Padding="6,2">
                                                <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToActiveTextConverter}}" 
                                                           Foreground="White" 
                                                           FontSize="9" 
                                                           FontWeight="Bold"/>
                                            </Border>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UpdatedAt, StringFormat='MMM dd'}" 
                                                       Foreground="#6B7280" 
                                                       FontSize="10"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Template Editor (Right Panel) -->
            <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="8,0,0,0">
                <Grid>
                    <!-- Template Selected View -->
                    <ScrollViewer Visibility="{Binding IsTemplateSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Template Header -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBox Text="{Binding SelectedTemplate.Name, Mode=TwoWay}" 
                                             Style="{StaticResource ModernTextBox}"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding SelectedTemplate.Description, Mode=TwoWay}" 
                                             Style="{StaticResource ModernTextBox}"
                                             FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="Duplicate" 
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DuplicateTemplateCommand}"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Delete" 
                                            Style="{StaticResource DangerButton}"
                                            Command="{Binding DeleteTemplateCommand}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Template Configuration -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Template Type" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox SelectedItem="{Binding SelectedTemplate.Type, Mode=TwoWay}"
                                              Style="{StaticResource ModernComboBox}">
                                        <ComboBoxItem Content="PreMigration"/>
                                        <ComboBoxItem Content="PostMigration"/>
                                        <ComboBoxItem Content="Alert"/>
                                        <ComboBoxItem Content="Custom"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="6,0,6,0">
                                    <TextBlock Text="Status" Style="{StaticResource FieldLabel}"/>
                                    <CheckBox Content="Active" 
                                              IsChecked="{Binding SelectedTemplate.IsActive, Mode=TwoWay}"
                                              Foreground="White"
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="12,0,0,0">
                                    <TextBlock Text="Tags" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding TemplateTagsText, Mode=TwoWay}" 
                                             Style="{StaticResource ModernTextBox}"
                                             ToolTip="Comma-separated tags"/>
                                </StackPanel>
                            </Grid>

                            <!-- Email Subject -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Email Subject" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding SelectedTemplate.Subject, Mode=TwoWay}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Available Tokens Panel -->
                            <Border Background="#374151" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Available Tokens" 
                                               Style="{StaticResource FieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <ScrollViewer MaxHeight="120" 
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl ItemsSource="{Binding AvailableTokens}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Name, StringFormat='\{{}}{0}\{{}}'}" 
                                                            Style="{StaticResource TokenButton}"
                                                            Command="{Binding DataContext.InsertTokenCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding Name}"
                                                            ToolTip="{Binding Description}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <!-- Email Body Editor -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Email Body" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding SelectedTemplate.Body, Mode=TwoWay}" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="300"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         FontFamily="Consolas, Courier New"
                                         FontSize="12"/>
                            </StackPanel>

                            <!-- Recipients -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Default Recipients" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding RecipientsText, Mode=TwoWay}" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="60"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         ToolTip="Comma-separated email addresses"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Preview Template"
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding PreviewTemplateCommand}"/>

                                <Button Grid.Column="2"
                                        Content="Test Send"
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding TestSendCommand}"
                                        Margin="0,0,8,0"/>

                                <Button Grid.Column="3"
                                        Content="Save Template"
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding SaveTemplateCommand}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- No Template Selected View -->
                    <StackPanel Visibility="{Binding IsTemplateSelected, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“§" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="No Template Selected" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#6B7280" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a template from the list or create a new one" 
                                   FontSize="14" 
                                   Foreground="#6B7280" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,24"/>
                        <Button Content="Create New Template" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding CreateTemplateCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>