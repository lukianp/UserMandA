<UserControl x:Class="MandADiscoverySuite.Views.ScriptEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:MandADiscoverySuite.Views"
             xmlns:vm="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatusBarStyle" TargetType="StatusBar">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <ToolBar Header="File" Band="1" BandIndex="1">
                <Button Command="{Binding NewFileCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="New File (Ctrl+N)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📄" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="New"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding OpenFileCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Open File (Ctrl+O)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📁" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Open"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding SaveFileCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Save File (Ctrl+S)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Save"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding SaveAsFileCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Save As...">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Save As..."/>
                    </StackPanel>
                </Button>
            </ToolBar>
            
            <ToolBar Header="Script" Band="1" BandIndex="2">
                <Button Command="{Binding ExecuteScriptCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Execute Script (F5)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="▶️" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Run"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding CancelExecutionCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Cancel Execution">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏹️" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Stop"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Command="{Binding ValidateScriptCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Validate Syntax">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Validate"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding FormatScriptCommand}" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Format Script">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎨" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Format"/>
                    </StackPanel>
                </Button>
            </ToolBar>
            
            <ToolBar Header="View" Band="1" BandIndex="3">
                <ToggleButton IsChecked="{Binding ShowOutput}" Style="{StaticResource {x:Type ToggleButton}}" ToolTip="Toggle Output Panel">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📄" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Output"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton IsChecked="{Binding ShowTemplates}" Style="{StaticResource {x:Type ToggleButton}}" ToolTip="Toggle Templates Panel">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,4,0"/>
                        <TextBlock Text="Templates"/>
                    </StackPanel>
                </ToggleButton>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Templates Panel -->
            <Border Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" 
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding ShowTemplates, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Templates" FontWeight="Bold" Margin="8,8,8,4"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding ScriptTemplates}" 
                             SelectedItem="{Binding SelectedTemplate}" Margin="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Category}" FontSize="10" Foreground="Blue"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding LoadTemplateCommand}" CommandParameter="{Binding SelectedTemplate}"/>
                        </ListBox.InputBindings>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
                        <Button Content="Load" Command="{Binding LoadTemplateCommand}" CommandParameter="{Binding SelectedTemplate}" Margin="2"/>
                        <Button Content="Save As Template..." Command="{Binding SaveAsTemplateCommand}" Margin="2"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                          Background="Transparent" ShowsPreview="True"
                          Visibility="{Binding ShowTemplates, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Editor Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100" MinHeight="50"/>
                </Grid.RowDefinitions>

                <!-- Script Editor -->
                <Border Grid.Row="0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1">
                    <TextBox x:Name="ScriptEditor" 
                             Text="{Binding ScriptText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Margin="2"/>
                </Border>

                <!-- Syntax Errors Panel -->
                <Expander Grid.Row="1" Header="Syntax Errors" IsExpanded="False" Margin="0,4,0,0">
                    <DataGrid ItemsSource="{Binding SyntaxErrors}" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column" MaxHeight="150" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Line" Binding="{Binding Line}" Width="60"/>
                            <DataGridTextColumn Header="Column" Binding="{Binding Column}" Width="60"/>
                            <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>

                <!-- Execution Progress -->
                <Border Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" 
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
                        BorderThickness="0,1,0,0" Margin="0,4,0,0"
                        Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="8">
                        <TextBlock Text="Script Executing..." FontWeight="Bold" Margin="0,0,0,4"/>
                        <ProgressBar IsIndeterminate="True" Height="20"/>
                        <Button Content="Cancel" Command="{Binding CancelExecutionCommand}" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                          Background="Transparent" ShowsPreview="True"
                          Visibility="{Binding ShowOutput, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Output Panel -->
            <TabControl Grid.Column="4" Visibility="{Binding ShowOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TabItem Header="Output">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                            <Button Content="Clear" Command="{Binding ClearOutputCommand}" Margin="2"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding ExecutionOutput}" IsReadOnly="True" 
                                     FontFamily="Consolas" FontSize="11" 
                                     Background="Black" Foreground="White"
                                     TextWrapping="NoWrap" Margin="4"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                
                <TabItem Header="History">
                    <DataGrid ItemsSource="{Binding ExecutionResults}" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column" VirtualizingStackPanel.IsVirtualizing="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="70"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding State}" Width="80"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding ExecutionTime, StringFormat={}{0:F2}s}" Width="70"/>
                            <DataGridCheckBoxColumn Header="Success" Binding="{Binding IsSuccess}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Style="{StaticResource StatusBarStyle}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding WindowTitle}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ExecutionResults.Count, StringFormat=History: {0}}" Margin="0,0,10,0"/>
                    <TextBlock Text="Ready"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>