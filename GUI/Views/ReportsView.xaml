<UserControl x:Class="MandADiscoverySuite.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Panel Styles -->
        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF1A202C"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#FF2D3748"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFF7FAFC"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- Template Card Style -->
        <Style x:Key="TemplateCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A5568"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3182CE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2C5AA0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#FF68D391"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF48BB78"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Input Styles -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- DataGrid Style -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FF4A5568"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#FF1A202C"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="8,8,8,0">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Report Builder" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#FFF7FAFC" 
                          Margin="0,0,0,8"/>
                <TextBlock Text="Create, generate, and manage reports from discovered data" 
                          FontSize="14" 
                          Foreground="#FFA0AEC0"/>
                
                <!-- Loading Indicator -->
                <Border Background="#FF2D3748" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,12,0,0"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LoadingMessage}" 
                                  FontSize="12" 
                                  Foreground="#FFE2E8F0" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Error Message -->
                <Border Background="#FFEF4444" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,8,0,0"
                        Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                              Foreground="White" 
                              FontSize="12"/>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Main Content - 3 Panel Layout -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panel 1: Template Library -->
            <Border Grid.Column="0" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Report Templates" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <!-- Search and Filter -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                        <TextBox Style="{StaticResource InputStyle}" 
                                Text="{Binding TemplateSearchText, UpdateSourceTrigger=PropertyChanged}"
                                Tag="Search templates..."/>
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                 ItemsSource="{Binding AvailableCategories}"
                                 SelectedItem="{Binding SelectedCategory}"/>
                    </StackPanel>
                    
                    <!-- Quick Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                Content="New" 
                                Command="{Binding NewReportCommand}"
                                FontSize="12" 
                                Padding="12,6"/>
                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                Content="Refresh" 
                                Command="{Binding RefreshTemplatesCommand}"
                                FontSize="12" 
                                Padding="12,6"/>
                    </StackPanel>
                    
                    <!-- Template List -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReportTemplates}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TemplateCardStyle}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                         Command="{Binding DataContext.LoadTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" 
                                                      Text="{Binding Name}" 
                                                      FontWeight="Bold" 
                                                      Foreground="#FFF7FAFC" 
                                                      FontSize="14"/>
                                            <TextBlock Grid.Row="1" 
                                                      Text="{Binding Description}" 
                                                      Foreground="#FFA0AEC0" 
                                                      FontSize="12" 
                                                      Margin="0,4,0,0"
                                                      TextWrapping="Wrap"/>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="#FF4A5568" 
                                                       CornerRadius="3" 
                                                       Padding="6,2">
                                                    <TextBlock Text="{Binding Category}" 
                                                              Foreground="#FFE2E8F0" 
                                                              FontSize="10"/>
                                                </Border>
                                                <Border Background="#FF68D391" 
                                                       CornerRadius="3" 
                                                       Padding="6,2" 
                                                       Margin="4,0,0,0"
                                                       Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="Built-in" 
                                                              Foreground="White" 
                                                              FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Template Actions -->
                    <StackPanel Grid.Row="4" Margin="0,8,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                Content="Load Template" 
                                Command="{Binding LoadTemplateCommand}"
                                IsEnabled="{Binding SelectedTemplate, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                Content="Save as Template" 
                                Command="{Binding SaveTemplateCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Panel 2: Configuration -->
            <Border Grid.Column="1" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <TextBlock Grid.Row="0" Text="âš™ï¸ Report Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <!-- Basic Settings -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="Report Name" Foreground="#FFA0AEC0" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Style="{StaticResource InputStyle}" 
                                Text="{Binding CurrentReport.Name, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <TextBlock Text="Description" Foreground="#FFA0AEC0" FontSize="12" Margin="0,8,0,4"/>
                        <TextBox Style="{StaticResource InputStyle}" 
                                Text="{Binding CurrentReport.Description, UpdateSourceTrigger=PropertyChanged}"
                                Height="60" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"/>
                        
                        <TextBlock Text="Report Type" Foreground="#FFA0AEC0" FontSize="12" Margin="0,8,0,4"/>
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                 SelectedItem="{Binding CurrentReport.ReportType}">
                            <ComboBoxItem Content="Table"/>
                            <ComboBoxItem Content="Chart"/>
                            <ComboBoxItem Content="Dashboard"/>
                            <ComboBoxItem Content="Summary"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Data Source Selection -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ“Š Data Source" 
                                      Foreground="#FFF7FAFC" 
                                      FontWeight="Bold" 
                                      FontSize="14" 
                                      VerticalAlignment="Center"/>
                            <Button Style="{StaticResource SecondaryButtonStyle}" 
                                    Content="Refresh" 
                                    Command="{Binding RefreshDataSourcesCommand}"
                                    FontSize="10" 
                                    Padding="8,4" 
                                    Margin="8,0,0,0"/>
                        </StackPanel>
                        
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                 ItemsSource="{Binding AvailableDataSources}"
                                 SelectedItem="{Binding SelectedDataSource}"
                                 DisplayMemberPath="DisplayName"/>
                        
                        <!-- Data Source Info -->
                        <Border Background="#FF2D3748" 
                               CornerRadius="4" 
                               Padding="8" 
                               Margin="0,8,0,0"
                               Visibility="{Binding SelectedDataSource, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Foreground="#FFA0AEC0" FontSize="11">
                                    <Run Text="Records: "/>
                                    <Run Text="{Binding SelectedDataSource.RecordCount, StringFormat=N0}" Foreground="#FF68D391"/>
                                </TextBlock>
                                <TextBlock Foreground="#FFA0AEC0" FontSize="11" Margin="0,2,0,0">
                                    <Run Text="Updated: "/>
                                    <Run Text="{Binding SelectedDataSource.LastUpdated, StringFormat=yyyy-MM-dd HH:mm}" Foreground="#FF68D391"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Parameters (if any) -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReportParameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="{Binding DisplayName}" 
                                                  Foreground="#FFA0AEC0" 
                                                  FontSize="12" 
                                                  Margin="0,0,0,4"/>
                                        <TextBox Style="{StaticResource InputStyle}" 
                                                Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Margin="0,8,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                Content="Preview Report" 
                                Command="{Binding PreviewReportCommand}"/>
                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                Content="Generate Report" 
                                Command="{Binding GenerateReportCommand}"
                                IsEnabled="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- Generation Progress -->
                        <Border Background="#FF2D3748" 
                               CornerRadius="4" 
                               Padding="8" 
                               Margin="0,8,0,0"
                               Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="â³ Generating Report..." 
                                          Foreground="#FF4299E1" 
                                          FontWeight="Bold" 
                                          FontSize="12"/>
                                <TextBlock Text="{Binding GenerationProgress}" 
                                          Foreground="#FFA0AEC0" 
                                          FontSize="11" 
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Panel 3: Preview/Results -->
            <Border Grid.Column="2" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ‘ï¸ Preview &amp; Results" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="{Binding PreviewRowCount, StringFormat='({0:N0} rows)'}" 
                                  Foreground="#FFA0AEC0" 
                                  FontSize="12" 
                                  VerticalAlignment="Bottom" 
                                  Margin="8,0,0,2"
                                  Visibility="{Binding IsPreviewMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <!-- Preview Content -->
                    <TabControl Grid.Row="1" 
                               Background="Transparent" 
                               BorderThickness="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Background" Value="#FF2D3748"/>
                                <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="Margin" Value="0,0,4,0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF4A5568"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TabControl.Resources>
                        
                        <!-- Data Preview Tab -->
                        <TabItem Header="Data Preview">
                            <DataGrid Style="{StaticResource DataGridStyle}"
                                     ItemsSource="{Binding PreviewData}"
                                     Margin="0,8,0,0"/>
                        </TabItem>
                        
                        <!-- Generated Reports Tab -->
                        <TabItem Header="Generated Reports">
                            <Grid Margin="0,8,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <ListBox Grid.Row="0" 
                                        ItemsSource="{Binding GeneratedReports}"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FF2D3748" 
                                                   CornerRadius="6" 
                                                   Padding="12" 
                                                   Margin="0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="#FFF7FAFC" 
                                                                  FontSize="14"/>
                                                        <TextBlock Foreground="#FFA0AEC0" FontSize="11" Margin="0,2,0,0">
                                                            <Run Text="Generated: "/>
                                                            <Run Text="{Binding GeneratedDate, StringFormat=yyyy-MM-dd HH:mm}"/>
                                                        </TextBlock>
                                                        <TextBlock Foreground="#FFA0AEC0" FontSize="11">
                                                            <Run Text="Records: "/>
                                                            <Run Text="{Binding RecordCount, StringFormat=N0}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                                               Content="Open" 
                                                               Command="{Binding DataContext.OpenReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               CommandParameter="{Binding}"
                                                               FontSize="10" 
                                                               Padding="8,4"/>
                                                        <Button Style="{StaticResource SecondaryButtonStyle}" 
                                                               Content="Delete" 
                                                               Command="{Binding DataContext.DeleteReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               CommandParameter="{Binding}"
                                                               FontSize="10" 
                                                               Padding="8,4"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <!-- Export Options -->
                                <StackPanel Grid.Row="1" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,12,0,0">
                                    <TextBlock Text="Export as:" 
                                              Foreground="#FFA0AEC0" 
                                              FontSize="12" 
                                              VerticalAlignment="Center" 
                                              Margin="0,0,8,0"/>
                                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                                           Content="PDF" 
                                           FontSize="10" 
                                           Padding="8,4"/>
                                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                                           Content="Excel" 
                                           FontSize="10" 
                                           Padding="8,4"/>
                                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                                           Content="CSV" 
                                           FontSize="10" 
                                           Padding="8,4"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                           Background="#FF2D3748" 
                           CornerRadius="4" 
                           Padding="8" 
                           Margin="0,8,0,0"
                           Visibility="{Binding StatusMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding StatusMessage}" 
                                  Foreground="#FF68D391" 
                                  FontSize="12"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>