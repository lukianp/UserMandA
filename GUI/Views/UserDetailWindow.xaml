<Window x:Class="MandADiscoverySuite.Views.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Details" Height="700" Width="900"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Icon="pack://application:,,,/Resources/Icons/user.ico">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2D5A87"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="StatusStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D5A87" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- User Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                        Background="#FF4A90E2" CornerRadius="30" 
                        Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayName, Converter={StaticResource InitialsConverter}}" 
                               FontSize="24" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayName}" FontSize="22" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" 
                               Foreground="White" Opacity="0.9"/>
                    <TextBlock Text="{Binding Title}" FontSize="12" 
                               Foreground="White" Opacity="0.8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Status Indicator -->
                    <Border Style="{StaticResource StatusStyle}" Margin="0,0,15,0">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding IsEnabled, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#FF4CAF50|#FFF44336'}"/>
                        </Border.Background>
                        <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Active|Disabled'}" 
                                   FontSize="11" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                            Width="80" Height="30" Margin="0,0,10,0"
                            Background="Transparent" BorderBrush="White" Foreground="White"/>
                    <Button Content="Ã—" FontSize="16" Width="30" Height="30"
                            Background="Transparent" BorderBrush="White" Foreground="White"
                            Click="CloseButton_Click" ToolTip="Close Window"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Tabs -->
        <TabControl Grid.Row="1" Margin="0" Background="White">
            
            <!-- General Information Tab -->
            <TabItem Header="General" IsSelected="True">
                <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Loading Indicator -->
                        <Border Background="#FFF0F8FF" BorderBrush="#FF4682B4" BorderThickness="1"
                                Padding="15" Margin="0,0,0,20" CornerRadius="5"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar IsIndeterminate="True" Width="100" Height="20" 
                                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Loading user data..." VerticalAlignment="Center" 
                                         FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <!-- Basic Information -->
                        <TextBlock Text="Basic Information" Style="{StaticResource HeaderStyle}"/>
                        
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Display Name:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DisplayName}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Email:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Department:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Department}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Job Title:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Title}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Manager:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Manager}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Status:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding IsEnabled, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Active|Disabled'}" 
                                     Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Logon:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LastLogon, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                     Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Groups Count:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Groups.Count}" Style="{StaticResource ValueStyle}"/>
                        </Grid>

                        <!-- Quick Actions -->
                        <TextBlock Text="Quick Actions" Style="{StaticResource HeaderStyle}"/>
                        <WrapPanel Margin="0,0,0,25">
                            <Button Content="Reset Password" Command="{Binding ResetPasswordCommand}" 
                                    Width="130" Height="35" Margin="0,0,10,10"/>
                            <Button Content="Unlock Account" Command="{Binding UnlockAccountCommand}" 
                                    Width="120" Height="35" Margin="0,0,10,10"/>
                            <Button Content="Disable User" Command="{Binding DisableUserCommand}" 
                                    Width="100" Height="35" Margin="0,0,10,10"/>
                            <Button Content="Export Details" Command="{Binding ExportCommand}" 
                                    Width="120" Height="35" Margin="0,0,10,10"/>
                        </WrapPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Groups Tab -->
            <TabItem Header="Groups">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Group Memberships" Style="{StaticResource HeaderStyle}" 
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Groups.Count, StringFormat='({0} groups)'}" 
                                 FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="10,0,0,5"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Groups}" 
                            AutoGenerateColumns="False" IsReadOnly="True"
                            GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Assets Tab -->
            <TabItem Header="Assets">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Assigned Assets" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Assets.Count, StringFormat='({0} assets)'}" FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="10,0,0,5"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Assets}" AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Attributes Tab -->
            <TabItem Header="Attributes">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="User Attributes" Style="{StaticResource HeaderStyle}" 
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Attributes.Count, StringFormat='({0} attributes)'}" 
                                 FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="10,0,0,5"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Attributes}" 
                            AutoGenerateColumns="False" IsReadOnly="True"
                            GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Attribute" Binding="{Binding Key}" Width="200"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Activity Tab -->
            <TabItem Header="Activity">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Recent Activity" Style="{StaticResource HeaderStyle}"/>
                    
                    <ScrollViewer Grid.Row="1">
                        <StackPanel>
                            <Border Background="#FFF8F8F8" BorderBrush="#FFDDDDDD" BorderThickness="1"
                                    Padding="15" Margin="0,0,0,10" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Ellipse Grid.Column="0" Width="8" Height="8" Fill="#FF4CAF50" 
                                           VerticalAlignment="Top" Margin="0,6,15,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Last Successful Logon" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding LastLogon, StringFormat='Logged in at {0:yyyy-MM-dd HH:mm:ss}'}" 
                                                 FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding LastLogon, Converter={StaticResource TimeAgoConverter}}" 
                                             FontSize="12" Foreground="Gray" VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                            
                            <!-- More activity items would be added here -->
                            <TextBlock Text="No additional activity data available" 
                                     FontStyle="Italic" Foreground="Gray" 
                                     HorizontalAlignment="Center" Margin="0,20"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="User Details"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding Id}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Active|Inactive'}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding LastUpdated, StringFormat='Last updated: {0:HH:mm:ss}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>