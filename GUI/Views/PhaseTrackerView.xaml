<UserControl x:Class="MandADiscoverySuite.Views.PhaseTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="PhaseStatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="Text" Value="Completed">
                    <Setter Property="Foreground" Value="#10B981"/>
                </Trigger>
                <Trigger Property="Text" Value="In Progress">
                    <Setter Property="Foreground" Value="#3B82F6"/>
                </Trigger>
                <Trigger Property="Text" Value="Pending">
                    <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Phase Tracker" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="#E2E8F0"/>
            <TextBlock Text="Project phase management and progress tracking" 
                       FontSize="14" 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Header Warnings Banner -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding HeaderWarnings}" 
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#55FF0000" Padding="10" Margin="0,0,0,5" CornerRadius="4">
                        <TextBlock Text="{Binding}" Foreground="White" FontWeight="Medium"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="2" Background="#55FF6B6B" Padding="10" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding LastError, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding LastError}" Foreground="White" FontWeight="Medium"/>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="3" 
                Background="#1A202C" 
                BorderBrush="#2D3748" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="24">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,16"/>
                    <TextBlock Text="Loading phase data..." 
                               FontSize="16" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Phase Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <!-- Project Overview -->
                        <Grid Margin="0,0,0,32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Current Phase -->
                            <Border Grid.Column="0" Background="#2D3748" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ Current Phase" FontSize="14" FontWeight="Bold" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding CurrentPhase}" FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Overall Progress -->
                            <Border Grid.Column="1" Background="#2D3748" CornerRadius="8" Padding="16" Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“Š Overall Progress" FontSize="14" FontWeight="Bold" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding OverallProgress, StringFormat={}{0:F1}%}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                    <ProgressBar Value="{Binding OverallProgress}" Maximum="100" Height="6" Margin="0,8,0,0" 
                                                Background="#1A202C" Foreground="#10B981"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Estimated Completion -->
                            <Border Grid.Column="2" Background="#2D3748" CornerRadius="8" Padding="16" Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ¯ Est. Completion" FontSize="14" FontWeight="Bold" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding EstimatedCompletion}" FontSize="16" FontWeight="Bold" Foreground="#FBBF24"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Phase List -->
                        <TextBlock Text="Project Phases" FontSize="20" FontWeight="Bold" Foreground="#E2E8F0" Margin="0,0,0,16"/>
                        
                        <DataGrid ItemsSource="{Binding Phases}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal" 
                                  HeadersVisibility="Column"
                                  Background="#2D3748"
                                  BorderBrush="#374151"
                                  RowBackground="#374151"
                                  AlternatingRowBackground="#2D3748" VirtualizingStackPanel.IsVirtualizing="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Phase" Binding="{Binding Name}" Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#E2E8F0"/>
                                            <Setter Property="FontWeight" Value="Medium"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource PhaseStatusStyle}">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTemplateColumn Header="Progress" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <ProgressBar Value="{Binding Progress}" Maximum="100" Width="80" Height="6" Margin="0,0,8,0"
                                                            Background="#1A202C" Foreground="#10B981"/>
                                                <TextBlock Text="{Binding Progress, StringFormat={}{0:F0}%}" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Actions -->
                        <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                            <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" 
                                    Background="#3B82F6" Foreground="White" Padding="16,8" Margin="0,0,8,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- No Data State -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding HasData, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“‹" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="No phase data available" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#E2E8F0" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Use the refresh button to load project phases" 
                               FontSize="14"
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               HorizontalAlignment="Center" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>