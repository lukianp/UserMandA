<Window x:Class="MandADiscoverySuite.Views.ThemeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Selection"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F1419">
   
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
       
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Choose Theme"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
       
        <!-- Theme Options -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
               
                <!-- Light Theme -->
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15"
                        Background="#1E1E1E">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                       
                        <RadioButton x:Name="LightThemeRadioButton"
                                     Grid.Column="0"
                                     GroupName="Theme"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"/>
                       
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Light Theme" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Clean, bright interface with light backgrounds. Ideal for well-lit environments."
                                       TextWrapping="Wrap" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                       
                        <!-- Light Theme Preview -->
                        <Border Grid.Column="2" Width="80" Height="50" CornerRadius="4" BorderBrush="LightGray" BorderThickness="1">
                            <Grid Background="#1E1E1E">
                                <Rectangle Fill="#F8FAFC" Margin="2"/>
                                <Rectangle Fill="#4299E1" Width="30" Height="8" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,8,0,0"/>
                                <Rectangle Fill="#CBD5E0" Width="40" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,20,0,0"/>
                                <Rectangle Fill="#E2E8F0" Width="35" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,28,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
               
                <!-- Dark Theme -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15"
                        Background="#2D3748">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                       
                        <RadioButton x:Name="DarkThemeRadioButton"
                                     Grid.Column="0"
                                     GroupName="Theme"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"
                                     IsChecked="True"/>
                       
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Dark Theme" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                            <TextBlock Text="Easy on the eyes with dark backgrounds. Perfect for low-light conditions and extended use."
                                       TextWrapping="Wrap" FontSize="12" Foreground="#A0AEC0" Margin="0,5,0,0"/>
                        </StackPanel>
                       
                        <!-- Dark Theme Preview -->
                        <Border Grid.Column="2" Width="80" Height="50" CornerRadius="4" BorderBrush="Gray" BorderThickness="1">
                            <Grid Background="#1A202C">
                                <Rectangle Fill="#2D3748" Margin="2"/>
                                <Rectangle Fill="#4299E1" Width="30" Height="8" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,8,0,0"/>
                                <Rectangle Fill="#4A5568" Width="40" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,20,0,0"/>
                                <Rectangle Fill="#718096" Width="35" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,28,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
               
                <!-- High Contrast Theme -->
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8" Margin="0,0,0,15"
                        Background="Black">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                       
                        <RadioButton x:Name="HighContrastThemeRadioButton"
                                     Grid.Column="0"
                                     GroupName="Theme"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"/>
                       
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="High Contrast Theme" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                            <TextBlock Text="Maximum contrast for accessibility. Designed for users with visual impairments."
                                       TextWrapping="Wrap" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                       
                        <!-- High Contrast Preview -->
                        <Border Grid.Column="2" Width="80" Height="50" CornerRadius="4" BorderBrush="White" BorderThickness="2">
                            <Grid Background="Black">
                                <Rectangle Fill="#000000" Margin="2"/>
                                <Rectangle Fill="#00D4FF" Width="30" Height="8" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,8,0,0"/>
                                <Rectangle Fill="White" Width="40" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,20,0,0"/>
                                <Rectangle Fill="White" Width="35" Height="4" HorizontalAlignment="Left"
                                          VerticalAlignment="Top" Margin="8,28,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
               
                <!-- System Theme Option -->
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15"
                        Background="#F7FAFC">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                       
                        <CheckBox x:Name="UseSystemThemeCheckBoxControl"
                                  Grid.Column="0"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                       
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Follow System Theme" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Automatically matches your Windows theme settings. Changes when system theme changes."
                                       TextWrapping="Wrap" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
       
        <!-- Additional Options -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,20">
            <TextBlock Text="Additional Options" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
           
            <CheckBox x:Name="ReducedMotionCheckBoxControl"
                      Content="Reduce motion and animations"
                      Margin="0,0,0,5"
                      ToolTip="Reduces animations for better performance and accessibility"/>
           
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Font Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider x:Name="FontSizeSliderControl"
                        Width="150"
                        Minimum="0.8"
                        Maximum="1.4"
                        Value="1.0"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBlock x:Name="FontSizeLabelControl"
                           Text="100%"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           MinWidth="40"/>
            </StackPanel>
        </StackPanel>
       
        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
           
            <Button x:Name="ApplyButtonControl"
                    Content="Apply"
                    Width="80"
                    Height="30"
                    IsDefault="True"
                    Click="ApplyButton_Click"
                    Margin="0,0,10,0"/>
           
            <Button x:Name="CancelButtonControl"
                    Content="Cancel"
                    Width="80"
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>