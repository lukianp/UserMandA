<UserControl x:Class="MandADiscoverySuite.Views.ComputerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="24">
        <StackPanel>
            
            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Computer.Name}" 
                               FontSize="28" 
                               FontWeight="SemiBold"
                               Foreground="#FFE2E8F0"/>
                    <TextBlock Text="{Binding Computer.Type}" 
                               FontSize="16" 
                               Foreground="#FFA0AEC0" 
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Refresh" 
                            Command="{Binding RefreshCommand}"
                            Background="#FF3182CE"
                            Foreground="#FFFFFFFF"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="14"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF2C5CE6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="📄 Export" 
                            Command="{Binding ExportCommand}"
                            Background="#FF4A5568"
                            Foreground="#FFE2E8F0"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF5A6578"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Loading Indicator -->
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,50"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="{Binding LoadingMessage}" 
                           FontSize="16" 
                           Foreground="#FFA0AEC0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Main Content (hidden when loading) -->
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                
                <!-- Computer Summary Card -->
                <Border Background="#FF1A202C" 
                        BorderBrush="#FF2D3748" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="24"
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                                   Text="Computer Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="#FFE2E8F0"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Left Column -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Name:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Name}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Type:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Type}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="IP Address:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.IPAddress}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Status:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Status}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Location:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Location}" Foreground="#FFE2E8F0"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Right Column -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="16,0,0,0">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="OS:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.OperatingSystem}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Version:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Version}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Manufacturer:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Manufacturer}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Model:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.Model}" Foreground="#FFE2E8F0"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Last Seen:" FontWeight="Medium" Foreground="#FFA0AEC0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Computer.LastSeen}" Foreground="#FFE2E8F0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Tabbed Content Area -->
                <TabControl Background="Transparent" 
                           BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="#FF2D3748"/>
                            <Setter Property="Foreground" Value="#FFA0AEC0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="Margin" Value="0,0,1,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4,4,0,0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              ContentSource="Header"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF1A202C"/>
                                    <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4A5568"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Assigned Users Tab -->
                    <TabItem Header="👥 Assigned Users">
                        <Border Background="#FF1A202C" 
                                BorderBrush="#FF2D3748" 
                                BorderThickness="1,0,1,1"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding AssignedUsers.Count, StringFormat='Found {0} assigned users'}" 
                                           FontSize="14" 
                                           Foreground="#FFA0AEC0" 
                                           Margin="0,0,0,12"
                                           Visibility="{Binding HasAssignedUsers, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding AssignedUsers}"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          Visibility="{Binding HasAssignedUsers, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF2D3748"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF2D3748"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="200"/>
                                        <DataGridTextColumn Header="User Principal Name" Binding="{Binding UserPrincipalName}" Width="250"/>
                                        <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="150"/>
                                        <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="150"/>
                                        <DataGridTextColumn Header="Last Sign In" Binding="{Binding LastSignInDateTime}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- No Users Message -->
                                <StackPanel Grid.Row="1" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasAssignedUsers}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#FF6B7280"/>
                                    <TextBlock Text="No assigned users found" 
                                               FontSize="16" 
                                               Foreground="#FF6B7280" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                    
                    <!-- Installed Applications Tab -->
                    <TabItem Header="📦 Applications">
                        <Border Background="#FF1A202C" 
                                BorderBrush="#FF2D3748" 
                                BorderThickness="1,0,1,1"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding InstalledApplications.Count, StringFormat='Found {0} installed applications'}" 
                                           FontSize="14" 
                                           Foreground="#FFA0AEC0" 
                                           Margin="0,0,0,12"
                                           Visibility="{Binding HasInstalledApplications, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding InstalledApplications}"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          Visibility="{Binding HasInstalledApplications, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF2D3748"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF2D3748"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Application Name" Binding="{Binding Name}" Width="250"/>
                                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                                        <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="200"/>
                                        <DataGridTextColumn Header="Install Date" Binding="{Binding InstallDate}" Width="120"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- No Applications Message -->
                                <StackPanel Grid.Row="1" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasInstalledApplications}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#FF6B7280"/>
                                    <TextBlock Text="No installed applications found" 
                                               FontSize="16" 
                                               Foreground="#FF6B7280" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                    
                    <!-- Device Groups Tab -->
                    <TabItem Header="🏷️ Groups">
                        <Border Background="#FF1A202C" 
                                BorderBrush="#FF2D3748" 
                                BorderThickness="1,0,1,1"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding DeviceGroups.Count, StringFormat='Found {0} device groups'}" 
                                           FontSize="14" 
                                           Foreground="#FFA0AEC0" 
                                           Margin="0,0,0,12"
                                           Visibility="{Binding HasDeviceGroups, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding DeviceGroups}"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          Visibility="{Binding HasDeviceGroups, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF2D3748"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF2D3748"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Group Name" Binding="{Binding Name}" Width="250"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                                        <DataGridTextColumn Header="Member Count" Binding="{Binding MemberCount}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- No Groups Message -->
                                <StackPanel Grid.Row="1" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasDeviceGroups}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="🏷️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#FF6B7280"/>
                                    <TextBlock Text="No device groups found" 
                                               FontSize="16" 
                                               Foreground="#FF6B7280" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                    
                    <!-- GPOs Tab -->
                    <TabItem Header="🔐 Policies">
                        <Border Background="#FF1A202C" 
                                BorderBrush="#FF2D3748" 
                                BorderThickness="1,0,1,1"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding AppliedGpos.Count, StringFormat='Found {0} applied policies'}" 
                                           FontSize="14" 
                                           Foreground="#FFA0AEC0" 
                                           Margin="0,0,0,12"
                                           Visibility="{Binding HasAppliedGpos, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding AppliedGpos}"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          Visibility="{Binding HasAppliedGpos, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF2D3748"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF2D3748"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Policy Name" Binding="{Binding Name}" Width="300"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                        <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- No GPOs Message -->
                                <StackPanel Grid.Row="1" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasAppliedGpos}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="🔐" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#FF6B7280"/>
                                    <TextBlock Text="No applied policies found" 
                                               FontSize="16" 
                                               Foreground="#FF6B7280" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                    
                    <!-- Child Assets Tab -->
                    <TabItem Header="🖥️ Child Assets">
                        <Border Background="#FF1A202C" 
                                BorderBrush="#FF2D3748" 
                                BorderThickness="1,0,1,1"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding ChildAssets.Count, StringFormat='Found {0} child assets'}" 
                                           FontSize="14" 
                                           Foreground="#FFA0AEC0" 
                                           Margin="0,0,0,12"
                                           Visibility="{Binding HasChildAssets, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding ChildAssets}"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          Visibility="{Binding HasChildAssets, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF2D3748"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="BorderBrush" Value="#FF4A5568"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFE2E8F0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF2D3748"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Asset Name" Binding="{Binding Name}" Width="200"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Operating System" Binding="{Binding OperatingSystem}" Width="150"/>
                                        <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="120"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                        <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- No Child Assets Message -->
                                <StackPanel Grid.Row="1" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasChildAssets}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="🖥️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#FF6B7280"/>
                                    <TextBlock Text="No child assets found" 
                                               FontSize="16" 
                                               Foreground="#FF6B7280" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>