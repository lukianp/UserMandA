<UserControl x:Class="MandADiscoverySuite.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="#FFE2E8F0"/>
            <TextBlock Text="Configure application settings and preferences" 
                       FontSize="14" 
                       Foreground="#FFA0AEC0" 
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Content -->
        <Border Grid.Row="1" 
                Background="#FF1A202C" 
                BorderBrush="#FF2D3748" 
                BorderThickness="1" 
                CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Loading Indicator -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="{Binding LoadingMessage}" 
                                   FontSize="16" 
                                   Foreground="#FFA0AEC0" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Settings Sections -->
                    <StackPanel Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!-- General Settings -->
                        <Border Background="#FF2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="⚙️ General Settings" FontSize="18" FontWeight="Bold" 
                                           Foreground="#FFE2E8F0" Margin="0,0,0,16"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Company Profile:" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding CompanyProfiles}" 
                                              SelectedItem="{Binding SelectedProfile}" Width="300" HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Theme:" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding Themes}" 
                                              SelectedItem="{Binding SelectedTheme}" Width="200" HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Auto-refresh interval:" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBox Text="{Binding RefreshInterval}" Width="100" Margin="0,0,8,0"/>
                                        <TextBlock Text="seconds" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Path Settings -->
                        <Border Background="#FF2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="📁 Path Settings" FontSize="18" FontWeight="Bold" 
                                           Foreground="#FFE2E8F0" Margin="0,0,0,16"/>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Data Directory:" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DataDirectory}" Foreground="#FFE2E8F0"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Log Directory:" VerticalAlignment="Center" Foreground="#FFA0AEC0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding LogDirectory}" Foreground="#FFE2E8F0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Actions -->
                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" 
                                    Background="#FF10B981" Foreground="White" BorderThickness="0" 
                                    Padding="16,8" Margin="0,0,8,0" FontWeight="Bold"/>
                            <Button Content="Reset to Defaults" Command="{Binding ResetSettingsCommand}" 
                                    Background="#FF6B7280" Foreground="White" BorderThickness="0" 
                                    Padding="16,8" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>