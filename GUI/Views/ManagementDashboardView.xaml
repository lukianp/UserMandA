<UserControl x:Class="MandADiscoverySuite.Views.ManagementDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Metric Value Style -->
        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>

        <!-- Metric Label Style -->
        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#0F172A">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Migration Management Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,20"/>

            <!-- Top KPI Row -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Overall Progress Card -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Overall Progress" Style="{StaticResource CardHeader}"/>
                        <ProgressBar Value="{Binding OverallProgress}" 
                                     Maximum="100" 
                                     Height="12" 
                                     Background="#334155" 
                                     Foreground="#10B981" 
                                     BorderThickness="0" 
                                     Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding OverallProgressText}" Style="{StaticResource MetricValue}"/>
                        <TextBlock Text="Complete" Style="{StaticResource MetricLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Tasks at Risk Card -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Tasks at Risk" Style="{StaticResource CardHeader}"/>
                        <TextBlock Text="{Binding TasksAtRisk}" 
                                   Style="{StaticResource MetricValue}"
                                   Foreground="{Binding TasksAtRisk, Converter={StaticResource RiskLevelToBrushConverter}}"/>
                        <TextBlock Text="Need Attention" Style="{StaticResource MetricLabel}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding BlockedTasks}" Foreground="#EF4444" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="Blocked" Foreground="#94A3B8" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Project Timeline Card -->
                <Border Grid.Column="2" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Timeline" Style="{StaticResource CardHeader}"/>
                        <TextBlock Text="{Binding DaysRemaining}" Style="{StaticResource MetricValue}"/>
                        <TextBlock Text="Days Remaining" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Text="{Binding ProjectDuration}" 
                                   Foreground="#94A3B8" 
                                   FontSize="12" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Current Phase Card -->
                <Border Grid.Column="3" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Current Phase" Style="{StaticResource CardHeader}"/>
                        <TextBlock Text="{Binding CurrentPhase}" Style="{StaticResource MetricValue}"/>
                        <TextBlock Text="Active Now" Style="{StaticResource MetricLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Middle Row - Task Summary and Risk Overview -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Task Summary Card -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Task Summary" Style="{StaticResource CardHeader}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalTasks}" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="#3B82F6" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Tasks" 
                                           Foreground="#94A3B8" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CompletedTasks}" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="#10B981" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Completed" 
                                           Foreground="#94A3B8" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding InProgressTasks}" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="#F59E0B" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="In Progress" 
                                           Foreground="#94A3B8" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BlockedTasks}" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="#EF4444" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Blocked" 
                                           Foreground="#94A3B8" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Risk Overview Card -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Risk Overview" Style="{StaticResource CardHeader}"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="12" Height="12" Fill="#EF4444" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding HighRiskItems}" Foreground="White" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="High Risk" Foreground="#94A3B8" FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="12" Height="12" Fill="#F59E0B" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding MediumRiskItems}" Foreground="White" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="Medium Risk" Foreground="#94A3B8" FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding LowRiskItems}" Foreground="White" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="Low Risk" Foreground="#94A3B8" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Row - Upcoming Deadlines and Wave Status -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Upcoming Deadlines Card -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Upcoming Deadlines (Next 7 Days)" Style="{StaticResource CardHeader}"/>
                        <DataGrid ItemsSource="{Binding UpcomingDeadlines}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Task" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#E2E8F0"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#94A3B8"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Due Date" Binding="{Binding EndDate, StringFormat='{}{0:MMM dd}'}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#94A3B8"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}" 
                                                    CornerRadius="12" 
                                                    Padding="8,4" 
                                                    Margin="4">
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="White" 
                                                           FontSize="11" 
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGrid.Style>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Wave Completion Status Card -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Wave Progress" Style="{StaticResource CardHeader}"/>
                        <ItemsControl ItemsSource="{Binding WaveCompletionStatus}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding WaveName}" 
                                                       Foreground="#E2E8F0" 
                                                       FontWeight="Bold" 
                                                       FontSize="12"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Completion, StringFormat='{}{0:F0}%'}" 
                                                       Foreground="#94A3B8" 
                                                       FontSize="12"/>
                                        </Grid>
                                        <ProgressBar Value="{Binding Completion}" 
                                                     Maximum="100" 
                                                     Height="8" 
                                                     Background="#334155" 
                                                     Foreground="#3B82F6" 
                                                     BorderThickness="0" 
                                                     Margin="0,4,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>