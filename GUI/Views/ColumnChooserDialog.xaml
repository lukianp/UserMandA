<Window x:Class="MandADiscoverySuite.Views.ColumnChooserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Column Chooser" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        ShowInTaskbar="False" Icon="pack://application:,,,/Resources/Icons/columns.ico">

    <Window.Resources>
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Customize Column Display" 
                   Style="{StaticResource HeaderStyle}"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Available Columns -->
            <GroupBox Grid.Column="0" Header="Available Columns" Margin="0,0,5,0">
                <ListBox x:Name="AvailableColumnsListBox"
                         ItemsSource="{Binding AvailableColumns}"
                         SelectedItem="{Binding SelectedAvailableColumn}"
                         ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" 
                                     ToolTip="{Binding PropertyName}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <!-- Show/Hide Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <Button Content="&gt;&gt;" 
                        Command="{Binding ShowColumnCommand}"
                        Style="{StaticResource ButtonStyle}"
                        ToolTip="Show selected column"/>
                <Button Content="&lt;&lt;" 
                        Command="{Binding HideColumnCommand}"
                        Style="{StaticResource ButtonStyle}"
                        ToolTip="Hide selected column"/>
                <Separator Margin="0,10" Height="2"/>
                <Button Content="Show All" 
                        Command="{Binding ShowAllCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Width="100"
                        ToolTip="Show all columns"/>
                <Button Content="Hide All" 
                        Command="{Binding HideAllCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Width="100"
                        ToolTip="Hide all columns (except first)"/>
            </StackPanel>

            <!-- Visible Columns -->
            <GroupBox Grid.Column="2" Header="Visible Columns" Margin="5,0,0,0">
                <ListBox x:Name="VisibleColumnsListBox"
                         ItemsSource="{Binding VisibleColumns}"
                         SelectedItem="{Binding SelectedVisibleColumn}"
                         ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                         Text="{Binding DisplayOrder, StringFormat='{}{0:00}'}" 
                                         FontFamily="Consolas"
                                         Foreground="Gray"
                                         Margin="0,0,8,0"
                                         VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding Header}" 
                                         VerticalAlignment="Center"
                                         ToolTip="{Binding PropertyName}"/>
                                
                                <CheckBox Grid.Column="2" 
                                        IsChecked="{Binding IsSortable}"
                                        ToolTip="Sortable"
                                        Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <!-- Order Buttons -->
            <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="10,0,0,0">
                <Button Content="↑" 
                        Command="{Binding MoveUpCommand}"
                        Style="{StaticResource ButtonStyle}"
                        FontSize="16"
                        ToolTip="Move up"/>
                <Button Content="↓" 
                        Command="{Binding MoveDownCommand}"
                        Style="{StaticResource ButtonStyle}"
                        FontSize="16"
                        ToolTip="Move down"/>
                <Separator Margin="0,10" Height="2"/>
                <Button Content="Reset" 
                        Command="{Binding ResetCommand}"
                        Style="{StaticResource ButtonStyle}"
                        ToolTip="Reset to original"/>
            </StackPanel>
        </Grid>

        <!-- Status and Instructions -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Instructions -->
            <Border Grid.Row="0" Background="#FFF0F8FF" BorderBrush="#FF4682B4" 
                    BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    <Run Text="• Double-click a column to show/hide it"/>
                    <LineBreak/>
                    <Run Text="• Use arrow buttons to reorder visible columns"/>
                    <LineBreak/>
                    <Run Text="• The checkbox indicates if the column is sortable"/>
                </TextBlock>
            </Border>

            <!-- Status -->
            <StatusBar Grid.Row="1" Height="25" Margin="0,0,0,10">
                <StatusBarItem>
                    <TextBlock>
                        <Run Text="{Binding VisibleColumns.Count, Mode=OneWay}"/>
                        <Run Text="visible columns"/>
                    </TextBlock>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock>
                        <Run Text="{Binding AvailableColumns.Count, Mode=OneWay}"/>
                        <Run Text="hidden columns"/>
                    </TextBlock>
                </StatusBarItem>
            </StatusBar>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" 
                        Command="{Binding OkCommand}"
                        Style="{StaticResource ButtonStyle}"
                        IsDefault="True"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource ButtonStyle}"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>