<UserControl x:Class="MandADiscoverySuite.Views.GroupPolicySecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Styles -->
            <Style x:Key="SecurityTabStyle" TargetType="TabItem">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Margin" Value="0,0,5,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{DynamicResource MutedForegroundBrush}" 
                                    BorderThickness="1,1,1,0" 
                                    CornerRadius="8,8,0,0"
                                    Margin="{TemplateBinding Margin}">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#FF10B981"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#FF059669"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="SecurityCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="0,0,10,10"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Group Policy &amp; Security" FontSize="28" FontWeight="Bold" 
                       Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBlock Text="Comprehensive security analysis and group policy management" 
                       FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Header Warnings Banner -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding HeaderWarnings}"
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibility}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#55FF0000" Padding="10" Margin="0,0,0,5" CornerRadius="4">
                        <TextBlock Text="{Binding}" Foreground="White" FontWeight="Medium" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="2" Background="#55FF6B6B" Padding="10" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding LastError, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding LastError}" Foreground="White" FontWeight="Medium"/>
        </Border>
        
        <!-- Security Dashboard Metrics -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Group Policies Card -->
            <Border Grid.Column="0" Style="{StaticResource SecurityCardStyle}" BorderBrush="#FF10B981">
                <StackPanel>
                    <TextBlock Text="🛡️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Group Policies" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DashboardMetrics.GroupPolicyCount}" FontSize="24" FontWeight="Bold" Foreground="#FF10B981" HorizontalAlignment="Center"/>
                    <TextBlock Text="policies" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Security Groups Card -->
            <Border Grid.Column="1" Style="{StaticResource SecurityCardStyle}" BorderBrush="#FF3B82F6">
                <StackPanel>
                    <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Security Groups" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DashboardMetrics.SecurityGroupCount}" FontSize="24" FontWeight="Bold" Foreground="#FF3B82F6" HorizontalAlignment="Center"/>
                    <TextBlock Text="groups" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Infrastructure Items Card -->
            <Border Grid.Column="2" Style="{StaticResource SecurityCardStyle}" BorderBrush="#FF8B5CF6">
                <StackPanel>
                    <TextBlock Text="🏗️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Infrastructure" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DashboardMetrics.InfrastructureItemCount}" FontSize="24" FontWeight="Bold" Foreground="#FF8B5CF6" HorizontalAlignment="Center"/>
                    <TextBlock Text="items" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Threat Indicators Card -->
            <Border Grid.Column="3" Style="{StaticResource SecurityCardStyle}" BorderBrush="#FFEF4444">
                <StackPanel>
                    <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Threats" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DashboardMetrics.ThreatIndicatorCount}" FontSize="24" FontWeight="Bold" Foreground="#FFEF4444" HorizontalAlignment="Center"/>
                    <TextBlock Text="indicators" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Compliance Score Card -->
            <Border Grid.Column="4" Style="{StaticResource SecurityCardStyle}" BorderBrush="#FFFBBF24">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Compliance" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DashboardMetrics.ComplianceScore, StringFormat='{}{0:F0}%'}" FontSize="24" FontWeight="Bold" Foreground="#FFFBBF24" HorizontalAlignment="Center"/>
                    <TextBlock Text="score" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main Content - Tabbed Interface -->
        <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Action Bar -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="0,0,0,1" 
                        Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search and Filter -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBox x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="300" Padding="8" Margin="0,0,10,0"
                                     Background="{DynamicResource SurfaceBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource MutedForegroundBrush}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="1" CornerRadius="4">
                                                        <Grid>
                                                            <TextBlock Text="🔍 Search..."
                                                                       Foreground="{DynamicResource MutedForegroundBrush}"
                                                                       Margin="8,0" VerticalAlignment="Center"
                                                                       Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource EmptyStringToVisibility}, ConverterParameter=Inverted}"/>
                                                            <ScrollViewer x:Name="PART_ContentHost" Margin="8,0" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <ComboBox x:Name="FilterComboBox" SelectedItem="{Binding SelectedFilter}" 
                                      ItemsSource="{Binding AvailableFilters}" Width="150" Margin="0,0,10,0"
                                      Background="{DynamicResource SurfaceBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Border CornerRadius="4" Margin="0,0,10,0">
                                <Button Content="📊 Export" Command="{Binding ExportCommand}" 
                                        Background="#FF10B981" Foreground="White" 
                                        BorderThickness="0" Padding="15,8" 
                                        FontWeight="SemiBold"/>
                            </Border>
                            <Border CornerRadius="4">
                                <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}" 
                                        Background="#FF3B82F6" Foreground="White" 
                                        BorderThickness="0" Padding="15,8" 
                                        FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Tabbed Content -->
                <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0">
                    <TabControl.Resources>
                        <Style TargetType="TabPanel">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="15,15,0,0"/>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Group Policies Tab -->
                    <TabItem Header="Group Policies" Style="{StaticResource SecurityTabStyle}">
                        <Grid Margin="20">
                            <!-- Loading State -->
                            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,0,0,10"/>
                                <TextBlock Text="Loading group policies..." FontSize="14" 
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Group Policies DataGrid -->
                            <DataGrid ItemsSource="{Binding FilteredGroupPolicies}"
                                      Visibility="{Binding HasGroupPolicyData, Converter={StaticResource BoolToVisibilityConverter}}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"
                                      IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="250"/>
                                    <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="120"/>
                                    <DataGridTextColumn Header="Linked OUs" Binding="{Binding LinkedOUs}" Width="200"/>
                                    <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                                    <DataGridCheckBoxColumn Header="Computer" Binding="{Binding ComputerSettingsEnabled}" Width="90"/>
                                    <DataGridCheckBoxColumn Header="User" Binding="{Binding UserSettingsEnabled}" Width="80"/>
                                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedTime, StringFormat=yyyy-MM-dd}" Width="100"/>
                                    <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedTime, StringFormat=yyyy-MM-dd}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- No Data State -->
                            <StackPanel Visibility="{Binding HasGroupPolicyData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No group policies found" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run discovery to populate data" FontSize="14"
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    
                    <!-- Security Groups Tab -->
                    <TabItem Header="Security Groups" Style="{StaticResource SecurityTabStyle}">
                        <Grid Margin="20">
                            <!-- Loading State -->
                            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,0,0,10"/>
                                <TextBlock Text="Loading security groups..." FontSize="14" 
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Security Groups DataGrid -->
                            <DataGrid ItemsSource="{Binding FilteredSecurityGroups}"
                                      Visibility="{Binding HasSecurityGroupData, Converter={StaticResource BoolToVisibilityConverter}}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"
                                      IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="200"/>
                                    <DataGridTextColumn Header="Group Type" Binding="{Binding GroupType}" Width="120"/>
                                    <DataGridCheckBoxColumn Header="Security Enabled" Binding="{Binding SecurityEnabled}" Width="120"/>
                                    <DataGridCheckBoxColumn Header="Mail Enabled" Binding="{Binding MailEnabled}" Width="100"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Mail}" Width="200"/>
                                    <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80"/>
                                    <DataGridTextColumn Header="Owners" Binding="{Binding OwnerCount}" Width="80"/>
                                    <DataGridTextColumn Header="Visibility" Binding="{Binding Visibility}" Width="100"/>
                                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedDateTime, StringFormat=yyyy-MM-dd}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- No Data State -->
                            <StackPanel Visibility="{Binding HasSecurityGroupData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No security groups found" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run discovery to populate data" FontSize="14"
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    
                    <!-- Infrastructure Tab -->
                    <TabItem Header="Infrastructure" Style="{StaticResource SecurityTabStyle}">
                        <Grid Margin="20">
                            <!-- Loading State -->
                            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,0,0,10"/>
                                <TextBlock Text="Loading security infrastructure..." FontSize="14" 
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Infrastructure DataGrid -->
                            <DataGrid ItemsSource="{Binding FilteredInfrastructureItems}"
                                      Visibility="{Binding HasInfrastructureData, Converter={StaticResource BoolToVisibilityConverter}}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"
                                      IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Component" Binding="{Binding Component}" Width="150"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="120"/>
                                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="150"/>
                                    <DataGridTextColumn Header="Risk Level" Binding="{Binding RiskLevel}" Width="100"/>
                                    <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat=yyyy-MM-dd}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- No Data State -->
                            <StackPanel Visibility="{Binding HasInfrastructureData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🏗️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No infrastructure data found" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run discovery to populate data" FontSize="14"
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    
                    <!-- Threat Detection Tab -->
                    <TabItem Header="Threat Detection" Style="{StaticResource SecurityTabStyle}">
                        <Grid Margin="20">
                            <!-- Loading State -->
                            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,0,0,10"/>
                                <TextBlock Text="Loading threat indicators..." FontSize="14" 
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Threat Detection DataGrid -->
                            <DataGrid ItemsSource="{Binding FilteredThreatIndicators}"
                                      Visibility="{Binding HasThreatData, Converter={StaticResource BoolToVisibilityConverter}}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"
                                      IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Threat Type" Binding="{Binding ThreatType}" Width="150"/>
                                    <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"/>
                                    <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="150"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Detected" Binding="{Binding DetectedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="120"/>
                                    <DataGridTextColumn Header="Last Activity" Binding="{Binding LastActivity, StringFormat=yyyy-MM-dd HH:mm}" Width="120"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- No Data State -->
                            <StackPanel Visibility="{Binding HasThreatData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⚠️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No threat indicators found" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run discovery to populate data" FontSize="14"
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    
                    <!-- Compliance Tab -->
                    <TabItem Header="Compliance" Style="{StaticResource SecurityTabStyle}">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Compliance Summary -->
                            <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                                    CornerRadius="8" Padding="15" Margin="0,0,0,15"
                                    BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Overall Score -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Overall Score" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding DashboardMetrics.ComplianceScore, StringFormat='{}{0:F0}%'}" 
                                                   FontSize="32" FontWeight="Bold" Foreground="#FF10B981" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Passed Controls -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Passed Controls" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding DashboardMetrics.PassedControls}" 
                                                   FontSize="24" FontWeight="Bold" Foreground="#FF10B981" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding DashboardMetrics.TotalControls, StringFormat='of {0}'}" 
                                                   FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Failed Controls -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Failed Controls" FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding DashboardMetrics.FailedControls}" 
                                                   FontSize="24" FontWeight="Bold" Foreground="#FFEF4444" HorizontalAlignment="Center"/>
                                        <TextBlock Text="require attention" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Compliance Details -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredComplianceItems}"
                                      Visibility="{Binding HasComplianceData, Converter={StaticResource BoolToVisibilityConverter}}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderBrush="{DynamicResource MutedForegroundBrush}"
                                      IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Control" Binding="{Binding ControlId}" Width="120"/>
                                    <DataGridTextColumn Header="Framework" Binding="{Binding Framework}" Width="100"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Risk Level" Binding="{Binding RiskLevel}" Width="100"/>
                                    <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="120"/>
                                    <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- No Compliance Data State -->
                            <StackPanel Grid.Row="1" Visibility="{Binding HasComplianceData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No compliance data found" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Run compliance assessment to populate data" FontSize="14"
                                           Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
