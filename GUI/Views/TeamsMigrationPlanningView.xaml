<UserControl x:Class="MandADiscoverySuite.Views.TeamsMigrationPlanningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.DataContext>
        <viewmodels:TeamsMigrationPlanningViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <!-- Teams-inspired purple color scheme -->
        <SolidColorBrush x:Key="TeamsPrimaryBrush" Color="#FF6264A7"/>
        <SolidColorBrush x:Key="TeamsSecondaryBrush" Color="#FF464775"/>
        <SolidColorBrush x:Key="TeamsAccentBrush" Color="#FF8B5CF6"/>
        <SolidColorBrush x:Key="TeamsLightBrush" Color="#FFE0E7FF"/>
        
        <!-- Gradient brushes for modern appeal -->
        <LinearGradientBrush x:Key="TeamsGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6264A7" Offset="0"/>
            <GradientStop Color="#FF8B5CF6" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Metric card style -->
        <Style x:Key="TeamsMetricCard" TargetType="Border">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Button styles -->
        <Style x:Key="TeamsPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TeamsGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5A5FCF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4C51BF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TeamsSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF4A5568"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF6B7280"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5A6378"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Progress bar style -->
        <Style x:Key="TeamsProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#FF374151"/>
            <Setter Property="Foreground" Value="{StaticResource TeamsGradientBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                            <Border Background="{TemplateBinding Foreground}" 
                                    CornerRadius="4"
                                    HorizontalAlignment="Left"
                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={StaticResource ProgressToWidthConverter}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DataGrid style -->
        <Style x:Key="TeamsDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#FF1F2937"/>
            <Setter Property="Foreground" Value="#FFE5E7EB"/>
            <Setter Property="BorderBrush" Value="#FF374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FF374151"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#FF1F2937"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#FF111827">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TeamsGradientBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Microsoft Teams Migration Planning" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Comprehensive Teams discovery, analysis, and migration planning" 
                               FontSize="16" 
                               Foreground="#FFE0E7FF" 
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Refresh" 
                            Command="{Binding RefreshCommand}" 
                            Style="{StaticResource TeamsSecondaryButton}" 
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“¤ Export Plan" 
                            Command="{Binding ExportPlanCommand}" 
                            Style="{StaticResource TeamsSecondaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Statistics Dashboard -->
        <Border Grid.Row="1" Background="#FF1F2937" Padding="24,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Migration Overview" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#FFE5E7EB" 
                           Margin="0,0,0,16"/>
                
                <UniformGrid Grid.Row="1" Columns="7">
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalTeams}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FF6264A7" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Teams" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalChannels}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FF8B5CF6" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Channels" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalMembers}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FF10B981" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Members" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalDataSizeGB, StringFormat={}{0:F1} GB}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FFF59E0B" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Data" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TeamsWithIssues}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FFEF4444" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Teams w/ Issues" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding EstimatedMigrationHours}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FF06B6D4" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Est. Hours" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource TeamsMetricCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding EstimatedCost, StringFormat=C0}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#FFE11D48" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Est. Cost" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="2" 
                    Background="#FF111827" 
                    BorderThickness="0"
                    Margin="16">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#FF374151"/>
                    <Setter Property="Foreground" Value="#FFE5E7EB"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="16,12"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8,8,0,0" 
                                        Margin="0,0,2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource TeamsGradientBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4B5563"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- Project Settings Tab -->
            <TabItem Header="Project Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Project Configuration" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FFE5E7EB" 
                                   Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left column -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Project Name" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding ProjectName}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Source Tenant" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding SourceTenant}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Planned Start Date" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding PlannedStartDate}" 
                                            Background="#FF374151" 
                                            Foreground="#FFE5E7EB" 
                                            BorderBrush="#FF6B7280" 
                                            Padding="12,8" 
                                            FontSize="14" 
                                            Margin="0,0,0,16"/>
                            </StackPanel>
                            
                            <!-- Right column -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Project Description" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding ProjectDescription}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Target Tenant" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding TargetTenant}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Planned End Date" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding PlannedEndDate}" 
                                            Background="#FF374151" 
                                            Foreground="#FFE5E7EB" 
                                            BorderBrush="#FF6B7280" 
                                            Padding="12,8" 
                                            FontSize="14" 
                                            Margin="0,0,0,16"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Migration Settings -->
                        <TextBlock Text="Migration Settings" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FFE5E7EB" 
                                   Margin="0,32,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <CheckBox Content="Preserve Team Settings" 
                                          IsChecked="{Binding PreserveTeamSettings}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                <CheckBox Content="Preserve Conversations" 
                                          IsChecked="{Binding PreserveConversations}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                <CheckBox Content="Preserve Tabs" 
                                          IsChecked="{Binding PreserveTabs}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Batch Size" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,16,0,8"/>
                                <TextBox Text="{Binding BatchSize}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Width="120" 
                                         HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <CheckBox Content="Preserve Channel Settings" 
                                          IsChecked="{Binding PreserveChannelSettings}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                <CheckBox Content="Preserve Files" 
                                          IsChecked="{Binding PreserveFiles}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                <CheckBox Content="Preserve Apps" 
                                          IsChecked="{Binding PreserveApps}" 
                                          Foreground="#FFE5E7EB" 
                                          Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Max Concurrent Migrations" 
                                           FontWeight="Medium" 
                                           Foreground="#FFE5E7EB" 
                                           Margin="0,16,0,8"/>
                                <TextBox Text="{Binding MaxConcurrentMigrations}" 
                                         Background="#FF374151" 
                                         Foreground="#FFE5E7EB" 
                                         BorderBrush="#FF6B7280" 
                                         Padding="12,8" 
                                         FontSize="14" 
                                         Width="120" 
                                         HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Teams & Channels Tab -->
            <TabItem Header="Teams &amp; Channels">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Discovery Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="ðŸ” Discover Teams" 
                                    Command="{Binding DiscoverTeamsCommand}" 
                                    Style="{StaticResource TeamsPrimaryButton}" 
                                    Margin="0,0,12,0"/>
                            <Button Content="ðŸ”¬ Analyze Content" 
                                    Command="{Binding AnalyzeContentCommand}" 
                                    Style="{StaticResource TeamsPrimaryButton}" 
                                    Margin="0,0,12,0"/>
                            <Button Content="âœ… Validate Permissions" 
                                    Command="{Binding ValidatePermissionsCommand}" 
                                    Style="{StaticResource TeamsPrimaryButton}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Content="ðŸ§¹ Clear Filters" 
                                Command="{Binding ClearFiltersCommand}" 
                                Style="{StaticResource TeamsSecondaryButton}"/>
                    </Grid>
                    
                    <!-- Progress Indicators -->
                    <StackPanel Grid.Row="0" 
                                Margin="0,50,0,20" 
                                Visibility="{Binding IsDiscoveryRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding DiscoveryStatusMessage}" 
                                   FontSize="14" 
                                   Foreground="#FFE5E7EB" 
                                   Margin="0,0,0,8"/>
                        <ProgressBar Value="{Binding DiscoveryProgress}" 
                                     Style="{StaticResource TeamsProgressBar}" 
                                     Height="6"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" 
                                Margin="0,50,0,20" 
                                Visibility="{Binding IsAnalysisRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding AnalysisStatusMessage}" 
                                   FontSize="14" 
                                   Foreground="#FFE5E7EB" 
                                   Margin="0,0,0,8"/>
                        <ProgressBar Value="{Binding AnalysisProgress}" 
                                     Style="{StaticResource TeamsProgressBar}" 
                                     Height="6"/>
                    </StackPanel>
                    
                    <!-- Main Content Grid -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Teams Panel -->
                        <Border Grid.Column="0" 
                                Background="#FF1F2937" 
                                CornerRadius="8" 
                                BorderBrush="#FF374151" 
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Teams Header -->
                                <Border Grid.Row="0" 
                                        Background="{StaticResource TeamsGradientBrush}" 
                                        CornerRadius="8,8,0,0" 
                                        Padding="16,12">
                                    <TextBlock Text="Teams Discovery" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"/>
                                </Border>
                                
                                <!-- Teams Filters -->
                                <StackPanel Grid.Row="1" Margin="16" Orientation="Vertical">
                                    <TextBox Text="{Binding TeamsSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#FF374151" 
                                             Foreground="#FFE5E7EB" 
                                             BorderBrush="#FF6B7280" 
                                             Padding="12,8" 
                                             FontSize="14" 
                                             Margin="0,0,0,12">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="6">
                                                                <Grid>
                                                                    <TextBlock Text="ðŸ” Search teams..." 
                                                                               FontSize="14" 
                                                                               Foreground="#FF9CA3AF" 
                                                                               Margin="12,8" 
                                                                               IsHitTestVisible="False">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                                  Margin="12,8" 
                                                                                  VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ComboBox Grid.Column="0" 
                                                  ItemsSource="{Binding TeamTypeFilters}" 
                                                  SelectedItem="{Binding SelectedTeamTypeFilter}" 
                                                  Background="#FF374151" 
                                                  Foreground="#FFE5E7EB" 
                                                  BorderBrush="#FF6B7280" 
                                                  Padding="12,8"/>
                                        
                                        <CheckBox Grid.Column="2" 
                                                  Content="Issues Only" 
                                                  IsChecked="{Binding ShowOnlyTeamsWithIssues}" 
                                                  Foreground="#FFE5E7EB" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Teams DataGrid -->
                                <DataGrid Grid.Row="2" 
                                          ItemsSource="{Binding TeamsView}" 
                                          SelectedItem="{Binding SelectedTeam}"
                                          SelectionChanged="TeamsDataGrid_SelectionChanged"
                                          Style="{StaticResource TeamsDataGrid}" 
                                          Margin="16,0,16,16">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Team Name" 
                                                            Binding="{Binding DisplayName}" 
                                                            Width="*"/>
                                        <DataGridTextColumn Header="Type" 
                                                            Binding="{Binding TeamType}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Members" 
                                                            Binding="{Binding MemberCount}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Channels" 
                                                            Binding="{Binding ChannelCount}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Data Size" 
                                                            Binding="{Binding FormattedDataSize}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Status" 
                                                            Binding="{Binding ActivityStatus}" 
                                                            Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                        
                        <!-- Channels Panel -->
                        <Border Grid.Column="2" 
                                Background="#FF1F2937" 
                                CornerRadius="8" 
                                BorderBrush="#FF374151" 
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Channels Header -->
                                <Border Grid.Row="0" 
                                        Background="{StaticResource TeamsSecondaryBrush}" 
                                        CornerRadius="8,8,0,0" 
                                        Padding="16,12">
                                    <TextBlock Text="Channels Analysis" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"/>
                                </Border>
                                
                                <!-- Channels Filters -->
                                <StackPanel Grid.Row="1" Margin="16" Orientation="Vertical">
                                    <TextBox Text="{Binding ChannelsSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#FF374151" 
                                             Foreground="#FFE5E7EB" 
                                             BorderBrush="#FF6B7280" 
                                             Padding="12,8" 
                                             FontSize="14" 
                                             Margin="0,0,0,12">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="6">
                                                                <Grid>
                                                                    <TextBlock Text="ðŸ” Search channels..." 
                                                                               FontSize="14" 
                                                                               Foreground="#FF9CA3AF" 
                                                                               Margin="12,8" 
                                                                               IsHitTestVisible="False">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                                  Margin="12,8" 
                                                                                  VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    
                                    <ComboBox ItemsSource="{Binding ChannelTypeFilters}" 
                                              SelectedItem="{Binding SelectedChannelTypeFilter}" 
                                              Background="#FF374151" 
                                              Foreground="#FFE5E7EB" 
                                              BorderBrush="#FF6B7280" 
                                              Padding="12,8"/>
                                </StackPanel>
                                
                                <!-- Channels DataGrid -->
                                <DataGrid Grid.Row="2" 
                                          ItemsSource="{Binding ChannelsView}" 
                                          SelectedItem="{Binding SelectedChannel}"
                                          SelectionChanged="ChannelsDataGrid_SelectionChanged"
                                          Style="{StaticResource TeamsDataGrid}" 
                                          Margin="16,0,16,16">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Channel Name" 
                                                            Binding="{Binding DisplayName}" 
                                                            Width="*"/>
                                        <DataGridTextColumn Header="Team" 
                                                            Binding="{Binding TeamName}" 
                                                            Width="120"/>
                                        <DataGridTextColumn Header="Type" 
                                                            Binding="{Binding ChannelType}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Messages" 
                                                            Binding="{Binding MessageCount}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Files" 
                                                            Binding="{Binding FileCount}" 
                                                            Width="60"/>
                                        <DataGridTextColumn Header="Activity" 
                                                            Binding="{Binding ActivityLevel}" 
                                                            Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Migration Batches Tab -->
            <TabItem Header="Migration Batches">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Batch Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="ðŸ”¨ Generate Batches" 
                                Command="{Binding GenerateBatchesCommand}" 
                                Style="{StaticResource TeamsPrimaryButton}" 
                                Margin="0,0,12,0"/>
                        <Button Content="ðŸ“… Schedule Migration" 
                                Style="{StaticResource TeamsPrimaryButton}" 
                                Margin="0,0,12,0"/>
                        <Button Content="ðŸ“‹ Review Plan" 
                                Style="{StaticResource TeamsSecondaryButton}"/>
                    </StackPanel>
                    
                    <!-- Batches DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding BatchesView}" 
                              SelectedItem="{Binding SelectedBatch}"
                              SelectionChanged="BatchesDataGrid_SelectionChanged"
                              Style="{StaticResource TeamsDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Batch Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Teams Count" 
                                                Binding="{Binding TotalItems}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Data Size" 
                                                Binding="{Binding FormattedTotalSize}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Priority" 
                                                Binding="{Binding Priority}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Status" 
                                                Binding="{Binding Status}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Planned Start" 
                                                Binding="{Binding PlannedStartDate, StringFormat=yyyy-MM-dd}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Est. Duration" 
                                                Binding="{Binding EstimatedDuration}" 
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Content Issues Tab -->
            <TabItem Header="Content Issues">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Migration Validation Issues" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#FFE5E7EB" 
                               Margin="0,0,0,16"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding IssuesView}" 
                              Style="{StaticResource TeamsDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Severity" 
                                                Binding="{Binding Severity}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Category" 
                                                Binding="{Binding Category}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Team/Item" 
                                                Binding="{Binding ItemName}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Description" 
                                                Binding="{Binding Description}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Recommended Action" 
                                                Binding="{Binding RecommendedAction}" 
                                                Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>