<UserControl x:Class="MandADiscoverySuite.Views.ApplicationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GUI/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Applications" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBlock Text="Discover and analyze installed applications across your infrastructure" 
                       FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="15" Margin="0,0,10,0" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Total Apps" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalApplicationsCount}" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="15" Margin="5,0" BorderBrush="{DynamicResource SecondaryBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Unique Apps" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding UniqueApplicationsCount}" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource SecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="8"
                    Padding="15" Margin="5,0" BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Outdated" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding OutdatedApplicationsCount}" FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource ErrorBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="3" Background="{DynamicResource SurfaceBrush}" CornerRadius="8"
                    Padding="15" Margin="10,0,0,0" BorderBrush="{DynamicResource WarningBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Unlicensed" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding UnlicensedApplicationsCount}" FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource WarningBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Applications Grid -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="20" Margin="0,0,10,0" BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Installed Applications" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                    
                    <!-- Search/Filter Bar -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="32" VerticalContentAlignment="Center" Margin="0,0,10,0"
                                 Background="{DynamicResource BackgroundBrush}"
                                 BorderBrush="{DynamicResource MutedForegroundBrush}"/>
                        <ComboBox Grid.Column="1" Width="120" SelectedItem="{Binding SelectedCategory}"
                                  ItemsSource="{Binding CategoryFilter}" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="2" Width="100" SelectedItem="{Binding SelectedStatus}"
                                  ItemsSource="{Binding StatusFilter}" Margin="0,0,10,0"/>
                        <Button Grid.Column="3" Content="Search" Padding="15,5"
                                Command="{Binding SearchCommand}"/>
                    </Grid>
                    
                    <!-- Loading/Content States -->
                    <Grid Grid.Row="2">
                        <!-- Loading State -->
                        <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,10"/>
                            <TextBlock Text="Loading applications..." FontSize="14" 
                                       Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Applications Grid -->
                        <DataGrid ItemsSource="{Binding FilteredApplications}" SelectedItem="{Binding SelectedApplication}"
                                  Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  Background="{DynamicResource BackgroundBrush}"
                                  BorderBrush="{DynamicResource MutedForegroundBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Application" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="150"/>
                                <DataGridTextColumn Header="Installs" Binding="{Binding InstallCount}" Width="70"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- No Data State -->
                        <StackPanel Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“±" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="No applications found" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Run application discovery to populate data" FontSize="14"
                                       Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="20" BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Application Details" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,15"/>
                    
                    <StackPanel Grid.Row="1" Visibility="{Binding HasSelectedApplication, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding SelectedApplication.Name}" FontSize="18" FontWeight="Bold" 
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Version: " FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedApplication.Version}" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Publisher: " FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedApplication.Publisher}" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Install Count: " FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedApplication.InstallCount}" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Status: " FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedApplication.Status}" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Category: " FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBlock Text="{Binding SelectedApplication.Category}" Foreground="{DynamicResource MutedForegroundBrush}"/>
                        </StackPanel>
                        
                        <Button Content="View Install Locations" Margin="0,15,0,0" Padding="15,8"
                                Command="{Binding ViewInstallLocationsCommand}"/>
                        <Button Content="License Analysis" Margin="0,10,0,0" Padding="15,8"
                                Command="{Binding ViewLicenseAnalysisCommand}"/>
                        <Button Content="Dependency Mapping" Margin="0,10,0,0" Padding="15,8"
                                Command="{Binding ViewDependenciesCommand}"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1" Text="Select an application to view details" 
                               FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding HasNoSelectedApplication, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>