<Window x:Class="MandADiscoverySuite.Views.GenericDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detail Window" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Icon="pack://application:,,,/Resources/Icons/detail_window.ico"
        Background="#0F1419">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D5A87"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D5A87"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="TabStyle" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding IconSource}" Width="16" Height="16" 
                                   Margin="0,0,5,0" Visibility="{Binding IconSource, 
                                   Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding Header}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D5A87" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding Subtitle}" FontSize="14" 
                               Foreground="White" Opacity="0.9"
                               Visibility="{Binding Subtitle, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                            Width="80" Height="30" Margin="0,0,10,0"
                            Background="Transparent" BorderBrush="White" Foreground="White"
                            Visibility="{Binding RefreshCommand, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <Button Content="Ã—" FontSize="16" Width="30" Height="30"
                            Background="Transparent" BorderBrush="White" Foreground="White"
                            Click="CloseButton_Click" ToolTip="Close Window"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="0" Background="#1E1E1E">
            
            <!-- General Tab -->
            <TabItem Header="General" IsSelected="True">
                <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Loading Indicator -->
                        <Border Background="#F0F8FF" BorderBrush="#4682B4" BorderThickness="1"
                                Padding="15" Margin="0,0,0,20" CornerRadius="5"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar IsIndeterminate="True" Width="100" Height="20" 
                                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Loading data..." VerticalAlignment="Center" 
                                         FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <!-- Title Section -->
                        <TextBlock Text="{Binding WindowType}" Style="{StaticResource HeaderStyle}"/>
                        
                        <!-- Basic Information -->
                        <TextBlock Text="Basic Information" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Updated:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastUpdated, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                     Style="{StaticResource ValueStyle}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WindowType}" Style="{StaticResource ValueStyle}"/>
                        </Grid>

                        <!-- Detail Data -->
                        <TextBlock Text="Details" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <ItemsControl x:Name="DetailDataItemsControl" Margin="0,0,0,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Key, StringFormat='{}{0}:'}" 
                                                 Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Value}" 
                                                 Style="{StaticResource ValueStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Actions Section -->
                        <TextBlock Text="Actions" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <WrapPanel Margin="0,0,0,20">
                            <Button Content="Export Details" Command="{Binding ExportCommand}" 
                                    Width="120" Height="35" Margin="0,0,10,10"
                                    Visibility="{Binding ExportCommand, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <Button Content="Print" Command="{Binding PrintCommand}" 
                                    Width="80" Height="35" Margin="0,0,10,10"
                                    Visibility="{Binding PrintCommand, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <Button Content="Copy to Clipboard" Command="{Binding CopyCommand}" 
                                    Width="140" Height="35" Margin="0,0,10,10"
                                    Visibility="{Binding CopyCommand, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </WrapPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Raw Data Tab -->
            <TabItem Header="Raw Data">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Raw Data View" Style="{StaticResource SectionHeaderStyle}" 
                                 VerticalAlignment="Center"/>
                        <Button Content="Copy JSON" Command="{Binding CopyJsonCommand}" 
                                Width="100" Height="25" Margin="20,0,0,0"
                                Visibility="{Binding CopyJsonCommand, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="RawDataTextBox" IsReadOnly="True" 
                               Background="#F8F8F8" BorderThickness="1" 
                               FontFamily="Consolas, Courier New" FontSize="12"
                               Padding="10" TextWrapping="Wrap"
                               VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="{Binding WindowType}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding Id}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding LastUpdated, StringFormat='Last updated: {0:HH:mm:ss}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>