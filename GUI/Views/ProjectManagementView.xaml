&lt;UserControl x:Class="MandADiscoverySuite.Views.ProjectManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MandADiscoverySuite.Views"
             xmlns:viewmodels="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    &lt;UserControl.Resources>
        &lt;ResourceDictionary>
            &lt;ResourceDictionary.MergedDictionaries>
                &lt;ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            &lt;/ResourceDictionary.MergedDictionaries>
        &lt;/ResourceDictionary>
    &lt;/UserControl.Resources>

    &lt;Grid>
        &lt;Grid.RowDefinitions>
            &lt;RowDefinition Height="Auto"/>
            &lt;RowDefinition Height="*"/>
        &lt;/Grid.RowDefinitions>

        &lt;!-- Navigation Tab Control -->
        &lt;TabControl Grid.Row="0" 
                    Style="{StaticResource ThemedTabControlStyle}"
                    SelectedItem="{Binding SelectedView, Mode=TwoWay}">
            
            &lt;TabItem Header="Dashboard" 
                   Style="{StaticResource ThemedTabItemStyle}"
                   Tag="Dashboard">
                &lt;TabItem.Content>
                    &lt;views:ProjectManagementDashboard DataContext="{Binding}"/>
                &lt;/TabItem.Content>
            &lt;/TabItem>
            
            &lt;TabItem Header="Phase Tracker" 
                   Style="{StaticResource ThemedTabItemStyle}"
                   Tag="PhaseTracker">
                &lt;TabItem.Content>
                    &lt;Grid>
                        &lt;TextBlock Text="Phase Tracker - Coming Soon" 
                                 Style="{StaticResource ThemedHeaderTextStyle}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    &lt;/Grid>
                &lt;/TabItem.Content>
            &lt;/TabItem>
            
            &lt;TabItem Header="Timeline &amp; Milestones" 
                   Style="{StaticResource ThemedTabItemStyle}"
                   Tag="Timeline">
                &lt;TabItem.Content>
                    &lt;Grid>
                        &lt;TextBlock Text="Timeline &amp; Milestones - Coming Soon" 
                                 Style="{StaticResource ThemedHeaderTextStyle}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    &lt;/Grid>
                &lt;/TabItem.Content>
            &lt;/TabItem>
            
            &lt;TabItem Header="Risk Management" 
                   Style="{StaticResource ThemedTabItemStyle}"
                   Tag="RiskManagement">
                &lt;TabItem.Content>
                    &lt;Grid>
                        &lt;TextBlock Text="Risk Management - Coming Soon" 
                                 Style="{StaticResource ThemedHeaderTextStyle}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    &lt;/Grid>
                &lt;/TabItem.Content>
            &lt;/TabItem>
            
            &lt;TabItem Header="Document Hub" 
                   Style="{StaticResource ThemedTabItemStyle}"
                   Tag="DocumentHub">
                &lt;TabItem.Content>
                    &lt;Grid>
                        &lt;TextBlock Text="Document Hub - Coming Soon" 
                                 Style="{StaticResource ThemedHeaderTextStyle}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    &lt;/Grid>
                &lt;/TabItem.Content>
            &lt;/TabItem>
        &lt;/TabControl>
    &lt;/Grid>
&lt;/UserControl>