<UserControl x:Class="MandADiscoverySuite.Views.AdvancedFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:services="clr-namespace:MandADiscoverySuite.Services"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FF0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Filter Rule Template -->
        <DataTemplate x:Key="FilterRuleTemplate">
            <Border Background="#FF1C2433" BorderBrush="#FF374151" BorderThickness="1" 
                    CornerRadius="6" Padding="12" Margin="0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Enable Checkbox -->
                    <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}" 
                              VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <!-- Property Name -->
                    <ComboBox Grid.Column="1" 
                              Text="{Binding PropertyName}"
                              IsEditable="True"
                              Background="#FF2D3748" 
                              Foreground="#FFE2E8F0"
                              BorderBrush="#FF4A5568"
                              BorderThickness="1"
                              Padding="8,6"
                              FontSize="12"
                              Margin="0,0,8,0"/>
                    
                    <!-- Operator -->
                    <ComboBox Grid.Column="2" 
                              SelectedItem="{Binding Operator}"
                              Background="#FF2D3748" 
                              Foreground="#FFE2E8F0"
                              BorderBrush="#FF4A5568"
                              BorderThickness="1"
                              Padding="8,6"
                              FontSize="12"
                              Margin="0,0,8,0"/>
                    
                    <!-- Value -->
                    <Grid Grid.Column="3" Margin="0,0,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Primary Value -->
                        <TextBox Grid.Column="0" 
                                 Text="{Binding Value}"
                                 Background="#FF2D3748" 
                                 Foreground="#FFE2E8F0"
                                 BorderBrush="#FF4A5568"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 FontSize="12"/>
                        
                        <!-- 'And' label for Between operators -->
                        <TextBlock Grid.Column="1" Text=" and " 
                                   Foreground="#FFA0AEC0" 
                                   VerticalAlignment="Center"
                                   Margin="8,0"
                                   FontSize="11"
                                   Visibility="{Binding IsBetweenOperator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- Secondary Value (for Between operators) -->
                        <TextBox Grid.Column="2" 
                                 Text="{Binding SecondaryValue}"
                                 Background="#FF2D3748" 
                                 Foreground="#FFE2E8F0"
                                 BorderBrush="#FF4A5568"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 FontSize="12"
                                 Visibility="{Binding IsBetweenOperator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                    
                    <!-- Data Type -->
                    <ComboBox Grid.Column="4" 
                              SelectedItem="{Binding DataType}"
                              ItemsSource="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Background="#FF2D3748" 
                              Foreground="#FFE2E8F0"
                              BorderBrush="#FF4A5568"
                              BorderThickness="1"
                              Padding="8,6"
                              FontSize="12"
                              Width="80"
                              Margin="0,0,8,0"/>
                    
                    <!-- Remove Button -->
                    <Button Grid.Column="5" 
                            Content="✕"
                            Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Background="#FFF56565" 
                            Foreground="White"
                            BorderThickness="0"
                            Width="28" Height="28"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource ModernButtonStyle}"/>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Quick Filter Template -->
        <DataTemplate x:Key="QuickFilterTemplate">
            <Border Background="#FF2D3748" BorderBrush="#FF4A5568" BorderThickness="1" 
                    CornerRadius="4" Padding="8,4" Margin="0,0,8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" 
                               Foreground="#FFE2E8F0" 
                               FontSize="11" 
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <ComboBox ItemsSource="{Binding PredefinedValues}"
                              Background="Transparent" 
                              Foreground="#FFE2E8F0"
                              BorderThickness="0"
                              FontSize="11"
                              MinWidth="60"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <!-- Filter Panel Toggle Button -->
        <Button Content="🔍 Filters" 
                Command="{Binding ToggleFilterPanelCommand}"
                Style="{StaticResource ModernButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="16"
                Padding="12,6"
                FontSize="13"
                Panel.ZIndex="10"/>
        
        <!-- Filter Panel -->
        <Border Background="#FF0F1419" 
                BorderBrush="#FF374151" 
                BorderThickness="1,0,0,0"
                Visibility="{Binding IsFilterPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                HorizontalAlignment="Right"
                Width="400"
                Panel.ZIndex="5">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🔍" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Advanced Filters" Foreground="#FFE2E8F0" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <ToggleButton Grid.Column="1" 
                                  Content="{Binding IsQuickFilterMode, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Quick|Advanced'}"
                                  Command="{Binding ToggleFilterModeCommand}"
                                  Style="{StaticResource ModernToggleButtonStyle}"
                                  Margin="0,0,8,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="✕"
                            Command="{Binding ToggleFilterPanelCommand}"
                            Background="Transparent" 
                            Foreground="#FFA0AEC0"
                            BorderThickness="0"
                            FontSize="14"
                            Width="24" Height="24"/>
                </Grid>
                
                <!-- Quick Filters Mode -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Hidden"
                              Visibility="{Binding IsQuickFilterMode, Converter={StaticResource BoolToVisibilityConverter}}"
                              Margin="0,0,0,16">
                    <ItemsControl ItemsSource="{Binding QuickFilters}" 
                                  ItemTemplate="{StaticResource QuickFilterTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Advanced Filters Mode -->
                <Grid Grid.Row="1" 
                      Visibility="{Binding IsQuickFilterMode, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                      Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter Logic and Actions -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Logic:" Foreground="#FFA0AEC0" FontSize="12" Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding FilterLogicOptions}" 
                                      SelectedItem="{Binding CurrentFilter.Logic}"
                                      Background="#FF2D3748" 
                                      Foreground="#FFE2E8F0"
                                      BorderBrush="#FF4A5568"
                                      FontSize="12"
                                      MinWidth="60"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" 
                                Content="+ Add Rule"
                                Command="{Binding AddRuleCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#FF48BB78"
                                FontSize="12"
                                Padding="8,4"/>
                    </Grid>
                    
                    <!-- Saved Filters -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0" 
                                  ItemsSource="{Binding SavedFilters}"
                                  SelectedItem="{Binding SelectedSavedFilter}"
                                  DisplayMemberPath="Name"
                                  Background="#FF2D3748" 
                                  Foreground="#FFE2E8F0"
                                  BorderBrush="#FF4A5568"
                                  FontSize="12"
                                  Margin="0,0,8,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CreatedDate, StringFormat='{}{0:MM/dd}'}" 
                                                   Foreground="#FFA0AEC0" FontSize="10" Margin="8,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button Grid.Column="1" 
                                Content="🗑️"
                                Command="{Binding DeleteFilterCommand}"
                                CommandParameter="{Binding SelectedSavedFilter}"
                                Background="#FFF56565"
                                Style="{StaticResource ModernButtonStyle}"
                                FontSize="12"
                                Width="28" Height="28"/>
                    </Grid>
                </Grid>
                
                <!-- Filter Rules -->
                <ScrollViewer Grid.Row="3" 
                              VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsQuickFilterMode, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding FilterRules}" 
                                  ItemTemplate="{StaticResource FilterRuleTemplate}"/>
                </ScrollViewer>
                
                <!-- Action Buttons -->
                <Grid Grid.Row="4" Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Save Filter Row -->
                    <Grid Grid.Row="0" Margin="0,0,0,12"
                          Visibility="{Binding IsQuickFilterMode, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding FilterName, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FF2D3748" 
                                 Foreground="#FFE2E8F0"
                                 BorderBrush="#FF4A5568"
                                 FontSize="12"
                                 Padding="8,6"
                                 Margin="0,0,8,0"
                                 Tag="Filter name..."/>
                        
                        <Button Grid.Column="1" 
                                Content="💾"
                                Command="{Binding SaveFilterCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#FF667eea"
                                FontSize="12"
                                Width="32" Height="32"/>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                                Content="Apply"
                                Command="{Binding ApplyFilterCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#FF48BB78"
                                FontWeight="SemiBold"
                                Margin="0,0,4,0"/>
                        
                        <Button Grid.Column="1" 
                                Content="Clear"
                                Command="{Binding ClearFilterCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#FFF56565"
                                Margin="2,0"/>
                        
                        <Button Grid.Column="2" 
                                Content="Export"
                                Command="{Binding ExportFilterCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#FF667eea"
                                Margin="4,0,0,0"/>
                    </Grid>
                </Grid>
                
                <!-- Loading Overlay -->
                <Border Grid.RowSpan="5" 
                        Background="#80000000" 
                        CornerRadius="8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" 
                                     Background="Transparent" Foreground="#FF667eea" Margin="0,0,0,12"/>
                        <TextBlock Text="Applying filters..." 
                                   Foreground="#FFE2E8F0" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>