<UserControl x:Class="MandADiscoverySuite.Views.AssetDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGrid" x:Key="DetailDataGridStyle">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource AlternateRowBrush}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding DeviceName, FallbackValue='Asset Details'}" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text="Comprehensive asset information and related resources" 
                           FontSize="14" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="🔄 Refresh" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding RefreshDataCommand}"
                        ToolTip="Refresh asset data"
                        Style="{DynamicResource PrimaryButtonStyle}"/>
                
                <Button Content="📋 Add to Wave" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding AddToMigrationWaveCommand}"
                        ToolTip="Add asset to migration wave"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                        
                <Button Content="💾 Export" 
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Command="{Binding ExportSnapshotCommand}"
                        ToolTip="Export asset details"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                
                <Button Content="❌ Close" 
                        Padding="16,8"
                        Command="{Binding CloseCommand}"
                        ToolTip="Close asset details"
                        Style="{DynamicResource DangerButtonStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- Asset Summary Card -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="12" 
                Padding="24" 
                Margin="0,0,0,24">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" Direction="315" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Asset Info Column 1 -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="💻 Asset Information" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Device Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding DeviceName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="DNS Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding DnsName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Operating System:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding OperatingSystem}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
                
                <!-- Asset Info Column 2 -->
                <StackPanel Grid.Column="1" Margin="16,0">
                    <TextBlock Text="📂 Organization" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="OU:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding OrganizationalUnit, FallbackValue='N/A'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Primary User:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding PrimaryUserName, FallbackValue='N/A'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
                
                <!-- Asset Info Column 3 -->
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <TextBlock Text="📅 Status" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Status:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding IsOnline, StringFormat='{}Online: {0}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Last Seen:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding LastSeen, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading Indicator -->
        <StackPanel Grid.Row="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="{Binding LoadingMessage}" 
                       FontSize="16" 
                       Foreground="{DynamicResource SecondaryTextBrush}" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- 7-Tab Structure -->
        <TabControl Grid.Row="2" 
                   Background="Transparent"
                   BorderThickness="0"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, 
                               ConverterParameter=Inverted}">
            
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Tab Headers -->
                                    <TabPanel Grid.Row="0" 
                                             IsItemsHost="True" 
                                             Background="{DynamicResource CardBackgroundBrush}"
                                             Margin="0,0,0,1"/>
                                    
                                    <!-- Tab Content -->
                                    <ContentPresenter Grid.Row="1" 
                                                     ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>
            
            <!-- Tab Item Style -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                       Background="{DynamicResource TabBackgroundBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       BorderThickness="1,1,1,0"
                                       CornerRadius="8,8,0,0"
                                       Margin="0,0,2,0"
                                       Padding="16,12">
                                    <ContentPresenter ContentSource="Header" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource AccentTextBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Tab 1: Overview -->
            <TabItem Header="📊 Overview">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Hardware Section -->
                        <Border Grid.Row="0" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,16" Padding="3" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="🖥️ Hardware Information" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                        <TextBlock Text="CPU Model:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.Processor, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="RAM:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.InstalledRAM, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="Storage:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.Storage, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                        <TextBlock Text="Model:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.Model, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="Serial Number:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.SerialNumber, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="BIOS Version:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.BIOSVersion, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,0,0">
                                        <TextBlock Text="Manufacturer:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.Manufacturer, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="Chassis Type:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.ChassisType, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="IP Address:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Hardware?.IPAddress, FallbackValue='Not Available'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Owner Information Section -->
                        <Border Grid.Row="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,16" Padding="3" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="👤 Owner Information" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                        <TextBlock Text="Primary User:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding PrimaryUserName, FallbackValue='Not Assigned'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="User SID:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding PrimaryUserSid, FallbackValue='N/A'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                        <TextBlock Text="Department:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding OwnerDepartment, FallbackValue='N/A'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="Manager:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding OwnerManager, FallbackValue='N/A'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,0,0">
                                        <TextBlock Text="Location:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding OwnerLocation, FallbackValue='N/A'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                        <TextBlock Text="Employee ID:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding OwnerEmployeeId, FallbackValue='N/A'}"
                                                  Style="{StaticResource ValueStyle}" Margin="0,0,0,12"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Applications Summary Section -->
                        <Border Grid.Row="2" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,16" Padding="3" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="📱 Installed Applications" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                                <TextBlock Text="Current Status:"
                                          Style="{StaticResource LabelStyle}" FontSize="14" FontWeight="SemiBold"/>
                                <Border Background="{DynamicResource CardBackgroundBrush}"  Padding="12" CornerRadius="6" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Total Apps:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding Apps.Count, StringFormat='{}{0} applications'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="Microsoft Apps:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding MicrosoftApps.Count, StringFormat='{}{0} apps'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Third-Party Apps:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding ThirdPartyApps.Count, StringFormat='{}{0} apps'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="CrowdStrike Apps:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding CrowdStrikeApps.Count, StringFormat='{}{0} apps'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Critical Apps:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding CriticalApps.Count, StringFormat='{}{0} apps'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="Last Updated:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding LastAppsScan, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Risk Summary -->
                        <Border Grid.Row="3" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,16" Padding="3" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="⚠️ Risk Assessment" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                                <TextBlock Text="Current Risk Profile:"
                                          Style="{StaticResource LabelStyle}" FontSize="14" FontWeight="SemiBold"/>
                                <Border Background="{DynamicResource CardBackgroundBrush}" Padding="12" CornerRadius="6" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Total Risks:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding Risks.Count, StringFormat='{}{0} items'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="High Priority:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding HighRiskCount, StringFormat='{}{0} risks'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Migration Status:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding MigrationReadinessStatus, FallbackValue='Not Assessed'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="Compatibility:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding OSCompatibilityStatus, FallbackValue='Checking'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Backup Status:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding BackupStatus, FallbackValue='Unknown'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                            <TextBlock Text="Last Assessment:" Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding LastRiskAssessment, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                      Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 2: Users -->
            <TabItem Header="👥 Users">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Users}" Style="{StaticResource DetailDataGridStyle}" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="200"/>
                            <DataGridTextColumn Header="UPN" Binding="{Binding UPN}" Width="200"/>
                            <DataGridTextColumn Header="SID" Binding="{Binding Sid}" Width="300"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Dept}" Width="150"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details" 
                                                FontSize="11" 
                                                Padding="8,4"
                                                Background="#10B981" 
                                                Foreground="White" 
                                                BorderThickness="0"
                                                Command="{Binding DataContext.OpenUserDetailCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4"
                                                                        BorderThickness="0">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#059669"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 3: Apps -->
            <TabItem Header="📱 Apps">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Apps}" Style="{StaticResource DetailDataGridStyle}" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Application Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"/>
                            <DataGridTextColumn Header="Install Count" Binding="{Binding InstallCounts}" Width="120"/>
                            <DataGridTextColumn Header="Publishers" Binding="{Binding Publishers}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 4: File Access -->
            <TabItem Header="📁 File Access">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding FileAccess}" Style="{StaticResource DetailDataGridStyle}" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="300"/>
                            <DataGridTextColumn Header="Rights" Binding="{Binding Rights}" Width="150"/>
                            <DataGridCheckBoxColumn Header="Inherited" Binding="{Binding Inherited}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Is Share" Binding="{Binding IsShare}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Is NTFS" Binding="{Binding IsNTFS}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 5: GPOs -->
            <TabItem Header="🛡️ GPOs">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding GpoLinks}" Style="{StaticResource DetailDataGridStyle}" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="GPO Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="GUID" Binding="{Binding Guid}" Width="250"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                            <DataGridTextColumn Header="WMI Filter" Binding="{Binding WmiFilter}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 6: Groups -->
            <TabItem Header="👥 Groups">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <DataGrid ItemsSource="{Binding Groups}" Style="{StaticResource DetailDataGridStyle}" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                            <DataGridTextColumn Header="SID" Binding="{Binding Sid}" Width="200"/>
                            <DataGridTextColumn Header="Member Count" Binding="{Binding Members.Count}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            
            <!-- Tab 7: SQL & Risks -->
            <TabItem Header="🗄️ SQL &amp; Risks">
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <GroupBox Grid.Row="0" Header="SQL Databases" Margin="8">
                            <DataGrid ItemsSource="{Binding SqlDatabases}" Style="{StaticResource DetailDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Server" Binding="{Binding Server}" Width="150"/>
                                    <DataGridTextColumn Header="Instance" Binding="{Binding Instance}" Width="150"/>
                                    <DataGridTextColumn Header="Database" Binding="{Binding Database}" Width="150"/>
                                    <DataGridTextColumn Header="App Hints" Binding="{Binding AppHints}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <GroupBox Grid.Row="1" Header="Risk Assessment" Margin="8">
                            <DataGrid ItemsSource="{Binding Risks}" Style="{StaticResource DetailDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Risk Type" Binding="{Binding Type}" Width="150"/>
                                    <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                                    <DataGridTextColumn Header="Recommendation" Binding="{Binding Recommendation}" Width="250"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16,8" 
                Margin="0,16,0,0">
            <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                       FontSize="13" 
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</UserControl>