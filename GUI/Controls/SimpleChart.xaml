<UserControl x:Class="MandADiscoverySuite.Controls.SimpleChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="White" 
            BorderBrush="#dee2e6" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Chart Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="{Binding ChartTitle}" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center" />
                
                <ComboBox ItemsSource="{Binding ChartTypes}"
                         SelectedItem="{Binding SelectedChartType}"
                         Margin="20,0,0,0"
                         MinWidth="150" />
            </StackPanel>
            
            <!-- Chart Area -->
            <Canvas Grid.Row="2" 
                   Name="ChartCanvas" 
                   Background="#f8f9fa"
                   ClipToBounds="True" />
            
            <!-- Legend -->
            <WrapPanel Grid.Row="4" 
                      Orientation="Horizontal"
                      HorizontalAlignment="Center">
                <WrapPanel.Resources>
                    <DataTemplate x:Key="LegendItemTemplate">
                        <StackPanel Orientation="Horizontal" Margin="10,5">
                            <Rectangle Width="12" Height="12" 
                                     Fill="{Binding Color}" 
                                     VerticalAlignment="Center" />
                            <TextBlock Text="{Binding DisplayText}" 
                                     Margin="5,0,0,0" 
                                     FontSize="12" 
                                     VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </WrapPanel.Resources>
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>