<UserControl x:Class="MandADiscoverySuite.Controls.ProgressOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Overlay Background Style -->
            <Style x:Key="OverlayBackgroundStyle" TargetType="Border">
                <Setter Property="Background" Value="#80000000"/>
                <Setter Property="Opacity" Value="0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsVisible}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="1" Duration="0:0:0.3"
                                                     AccelerationRatio="0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Progress Card Style -->
            <Style x:Key="ProgressCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="24"/>
                <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
                <Setter Property="MinWidth" Value="300"/>
                <Setter Property="MaxWidth" Value="500"/>
            </Style>

            <!-- Spinning Animation -->
            <Storyboard x:Key="SpinStoryboard" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                 From="0" To="360" Duration="0:0:2"/>
            </Storyboard>

            <!-- Pulse Animation -->
            <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="1" To="0.3" Duration="0:0:1"/>
            </Storyboard>

            <!-- Loading Dots Animation -->
            <Storyboard x:Key="LoadingDotsStoryboard" RepeatBehavior="Forever">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot1" Storyboard.TargetProperty="Opacity">
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.3" Value="0.3"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:1.2" Value="0.3"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot2" Storyboard.TargetProperty="Opacity">
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0.3"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.6" Value="0.3"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:1.2" Value="0.3"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot3" Storyboard.TargetProperty="Opacity">
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0.3"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.6" Value="1"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.9" Value="0.3"/>
                    <DiscreteDoubleKeyFrame KeyTime="0:0:1.2" Value="0.3"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="OverlayRoot" 
          Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
        
        <!-- Overlay Background -->
        <Border Style="{StaticResource OverlayBackgroundStyle}"/>

        <!-- Progress Content -->
        <Border Style="{StaticResource ProgressCardStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Progress Type: Indeterminate -->
                <StackPanel Visibility="{Binding IsIndeterminate, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- Spinner Animation -->
                    <Grid Visibility="{Binding ShowSpinner, Converter={StaticResource BoolToVisibilityConverter}}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16">
                        <Ellipse Width="48" Height="48"
                                 Stroke="{DynamicResource AccentBrush}"
                                 StrokeThickness="4"
                                 StrokeDashArray="12,4"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource SpinStoryboard}"/>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>

                    <!-- Loading Dots -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding ShowDots, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,0,0,16">
                        <Ellipse x:Name="Dot1" Width="12" Height="12" 
                                 Fill="{DynamicResource AccentBrush}" 
                                 Margin="0,0,8,0"/>
                        <Ellipse x:Name="Dot2" Width="12" Height="12" 
                                 Fill="{DynamicResource AccentBrush}" 
                                 Margin="0,0,8,0"/>
                        <Ellipse x:Name="Dot3" Width="12" Height="12" 
                                 Fill="{DynamicResource AccentBrush}"/>
                        <StackPanel.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource LoadingDotsStoryboard}"/>
                            </EventTrigger>
                        </StackPanel.Triggers>
                    </StackPanel>

                    <!-- Pulse Effect -->
                    <Border Width="32" Height="32"
                            Background="{DynamicResource AccentBrush}"
                            CornerRadius="16"
                            HorizontalAlignment="Center"
                            Visibility="{Binding ShowPulse, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,0,16">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource PulseStoryboard}"/>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </StackPanel>

                <!-- Progress Type: Determinate -->
                <StackPanel Visibility="{Binding IsDeterminate, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- Progress Bar -->
                    <ProgressBar Value="{Binding ProgressValue}"
                                 Maximum="{Binding ProgressMaximum}"
                                 Height="8"
                                 Style="{StaticResource ThemedProgressBarStyle}"
                                 Margin="0,0,0,16"/>

                    <!-- Progress Percentage -->
                    <TextBlock Text="{Binding ProgressPercentage, StringFormat='{0:P0}'}"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,0,0,8"/>

                    <!-- Progress Details -->
                    <TextBlock Text="{Binding ProgressDetails}"
                               HorizontalAlignment="Center"
                               FontSize="11"
                               Foreground="{DynamicResource MutedForegroundBrush}"
                               Visibility="{Binding ProgressDetails, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,8"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Text="{Binding Title}"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,8"/>

                <!-- Message -->
                <TextBlock Text="{Binding Message}"
                           HorizontalAlignment="Center"
                           FontSize="13"
                           Foreground="{DynamicResource MutedForegroundBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"
                           Margin="0,0,0,16"/>

                <!-- Sub Tasks -->
                <ItemsControl ItemsSource="{Binding SubTasks}"
                              Visibility="{Binding HasSubTasks, Converter={StaticResource BoolToVisibilityConverter}}"
                              Margin="0,0,0,16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding StatusIcon}" 
                                           FontSize="12" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="12"
                                           Foreground="{DynamicResource MutedForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Elapsed Time -->
                <TextBlock Text="{Binding ElapsedTime, StringFormat='Elapsed: {0}'}"
                           HorizontalAlignment="Center"
                           FontSize="11"
                           Foreground="{DynamicResource MutedForegroundBrush}"
                           Visibility="{Binding ShowElapsedTime, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,0,0,16"/>

                <!-- Actions -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasActions, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ThemedDangerButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <Button Content="Hide"
                            Command="{Binding HideCommand}"
                            Style="{StaticResource ThemedSecondaryButtonStyle}"
                            Padding="12,6"
                            Visibility="{Binding CanHide, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>