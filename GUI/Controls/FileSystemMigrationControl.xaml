<UserControl x:Class="MandADiscoverySuite.Controls.FileSystemMigrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="ProgressCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F7FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Path Data="M3,17V19H9V17H3M3,5V7H13V5H3M13,21V19H21V17H13V15H21V13H13V11H21V9H13V7H21V5H13V3H21V1H1V3H11V5H1V7H11V9H1V11H11V13H1V15H11V17H1V19H11V21H13M3,9V11H9V9H3M3,13V15H9V13H3Z" 
                          Fill="#059669" Width="24" Height="24" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="File System Migration" FontSize="20" FontWeight="SemiBold" Foreground="#1A202C"/>
                        <TextBlock Text="Enterprise-grade file migration with permission preservation" FontSize="14" Foreground="#718096"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="EstimateButton" Content="📊 Estimate" Padding="12,8" Margin="0,0,8,0" 
                            Command="{Binding EstimateMigrationCommand}"/>
                    <Button Name="ValidateButton" Content="✓ Validate" Padding="12,8" Margin="0,0,8,0"
                            Command="{Binding ValidatePathsCommand}"/>
                    <Button Name="StartButton" Content="▶️ Start Migration" Padding="12,8" 
                            Background="#059669" Foreground="White" FontWeight="Medium"
                            Command="{Binding StartMigrationCommand}" IsEnabled="{Binding CanStartMigration}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Configuration Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="300" Padding="24,16">
            <StackPanel>
                <!-- Source and Destination -->
                <TextBlock Text="Migration Paths" Style="{StaticResource SectionHeaderStyle}"/>
                <Grid Margin="0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Source Path -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" VerticalAlignment="Center" FontWeight="Medium"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="8,4" Padding="8" Height="32"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="📁" Padding="8" Margin="8,4" Height="32" Width="40"
                            Command="{Binding BrowseSourceCommand}"/>

                    <!-- Destination Path -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Destination:" VerticalAlignment="Center" FontWeight="Medium"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DestinationPath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="8,4" Padding="8" Height="32"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="📁" Padding="8" Margin="8,4" Height="32" Width="40"
                            Command="{Binding BrowseDestinationCommand}"/>
                </Grid>

                <!-- Migration Options -->
                <TextBlock Text="Migration Options" Style="{StaticResource SectionHeaderStyle}"/>
                <UniformGrid Rows="2" Columns="3" Margin="0,8">
                    <CheckBox Content="Preserve Permissions" IsChecked="{Binding PreservePermissions}" Margin="8,4"/>
                    <CheckBox Content="Preserve Timestamps" IsChecked="{Binding PreserveTimestamps}" Margin="8,4"/>
                    <CheckBox Content="Preserve Attributes" IsChecked="{Binding PreserveAttributes}" Margin="8,4"/>
                    <CheckBox Content="Overwrite Existing" IsChecked="{Binding OverwriteExisting}" Margin="8,4"/>
                    <CheckBox Content="Skip Existing Files" IsChecked="{Binding SkipExistingFiles}" Margin="8,4"/>
                    <CheckBox Content="Verify Integrity" IsChecked="{Binding VerifyIntegrity}" Margin="8,4"/>
                </UniformGrid>

                <!-- Advanced Options -->
                <Expander Header="Advanced Options" Margin="0,8">
                    <StackPanel Margin="0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Max Concurrency:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MaxConcurrency}" Margin="8,4" Width="80" HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Max File Size:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" Margin="8,4">
                                <TextBox Text="{Binding MaxFileSizeBytes}" Width="100"/>
                                <TextBlock Text="{Binding MaxFileSizeFormatted}" VerticalAlignment="Center" Margin="8,0" Foreground="#718096"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Conflict Resolution:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding ConflictResolution}" Margin="8,4" Width="120" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Overwrite"/>
                                <ComboBoxItem Content="Skip"/>
                                <ComboBoxItem Content="Rename"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Progress and Results Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Area -->
            <Border Grid.Column="0" Style="{StaticResource ProgressCardStyle}" Margin="24,0,12,24">
                <StackPanel>
                    <!-- Status -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding CurrentStatus}" FontSize="16" FontWeight="Medium" Foreground="#1A202C"/>
                            <TextBlock Text="{Binding CurrentPhase}" FontSize="12" Foreground="#718096" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" Content="⏹️ Cancel" Padding="8,4" 
                                Command="{Binding CancelMigrationCommand}" 
                                Visibility="{Binding IsMigrationInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Progress Bar -->
                    <Border Background="#F7FAFC" CornerRadius="8" Height="8" Margin="0,0,0,16">
                        <Border Background="#059669" CornerRadius="8" HorizontalAlignment="Left" 
                                Width="{Binding ProgressPercentage, Converter={StaticResource PercentageToWidthConverter}}"/>
                    </Border>

                    <!-- Progress Details -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="Complete" Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding ProcessedFiles}" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="{Binding TotalFiles, StringFormat={}of {0} files}" Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{Binding TransferRateMBps, StringFormat={}{0:F1} MB/s}" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="Transfer Rate" Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Size Information -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding ProcessedSizeFormatted}" FontSize="16" FontWeight="Medium"/>
                            <TextBlock Text="{Binding TotalSizeFormatted, StringFormat={}of {0}}" FontSize="12" Foreground="#718096"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat={}{0:hh\\:mm\\:ss}}" FontSize="16" FontWeight="Medium"/>
                            <TextBlock Text="ETA" FontSize="12" Foreground="#718096"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Results and Errors Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Recent Results -->
                <Border Grid.Row="0" Style="{StaticResource ProgressCardStyle}" Margin="12,0,24,12">
                    <StackPanel>
                        <TextBlock Text="Migration History" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                        <ListBox ItemsSource="{Binding MigrationHistory}" MaxHeight="200" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4">
                                        <TextBlock Text="{Binding SourcePath}" FontSize="12" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding StatusDisplay}" FontSize="10" Foreground="#718096"/>
                                        <TextBlock Text="{Binding DurationDisplay}" FontSize="10" Foreground="#718096"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Errors -->
                <Border Grid.Row="1" Style="{StaticResource ProgressCardStyle}" Margin="12,12,24,24">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="Migration Errors" FontSize="14" FontWeight="Medium"/>
                            <Button Content="Clear" HorizontalAlignment="Right" Padding="8,4" FontSize="10"
                                    Command="{Binding ClearErrorsCommand}"/>
                        </Grid>
                        <ListBox ItemsSource="{Binding MigrationErrors}" MaxHeight="200" Margin="0,8,0,0" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4">
                                        <TextBlock Text="{Binding Path}" FontSize="11" FontWeight="Medium" Foreground="#E53E3E"/>
                                        <TextBlock Text="{Binding ErrorMessage}" FontSize="10" Foreground="#718096" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" FontSize="9" Foreground="#A0AEC0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>