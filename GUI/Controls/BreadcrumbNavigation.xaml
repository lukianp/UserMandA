<UserControl x:Class="MandADiscoverySuite.Controls.BreadcrumbNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Breadcrumb Item Template -->
            <DataTemplate x:Key="BreadcrumbItemTemplate">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{Binding DisplayName}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource BreadcrumbButtonStyle}"
                            IsEnabled="{Binding IsNavigable}"
                            ToolTip="{Binding ToolTip}"/>
                    
                    <!-- Separator -->
                    <TextBlock Text="&#xE76C;" 
                               FontFamily="{StaticResource IconFontFamily}"
                               FontSize="{StaticResource FontSizeSmall}"
                               Foreground="{DynamicResource MutedForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="8,0,8,0"
                               Visibility="{Binding ShowSeparator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </DataTemplate>


            <!-- Overflow Menu Style -->
            <Style x:Key="OverflowMenuStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>
                <Setter Property="Content" Value="..."/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="16,8">
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            
            <!-- Home Button -->
            <Button Style="{StaticResource BreadcrumbButtonStyle}"
                    Command="{Binding NavigateHomeCommand}"
                    ToolTip="Navigate to Dashboard"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE80F;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <TextBlock Text="Home" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Separator after Home -->
            <TextBlock Text="&#xE76C;" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="12"
                       Foreground="{DynamicResource MutedForegroundBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Visibility="{Binding HasBreadcrumbs, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Overflow Menu (shows when breadcrumbs are too long) -->
            <Button Style="{StaticResource OverflowMenuStyle}"
                    Click="OverflowButton_Click"
                    Visibility="{Binding ShowOverflow, Converter={StaticResource BoolToVisibilityConverter}}"
                    x:Name="OverflowButton">
                <Button.ContextMenu>
                    <ContextMenu x:Name="OverflowMenu" 
                                 ItemsSource="{Binding OverflowItems}">
                        <ContextMenu.ItemTemplate>
                            <DataTemplate>
                                <MenuItem Header="{Binding DisplayName}"
                                          Command="{Binding NavigateCommand}"
                                          CommandParameter="{Binding}"
                                          ToolTip="{Binding ToolTip}"/>
                            </DataTemplate>
                        </ContextMenu.ItemTemplate>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <!-- Separator after Overflow -->
            <TextBlock Text="&#xE76C;" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="12"
                       Foreground="{DynamicResource MutedForegroundBrush}"
                       VerticalAlignment="Center"
                       Margin="8,0"
                       Visibility="{Binding ShowOverflow, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Visible Breadcrumb Items -->
            <ItemsControl ItemsSource="{Binding VisibleBreadcrumbs}"
                          ItemTemplate="{StaticResource BreadcrumbItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

        </StackPanel>
    </Border>
</UserControl>