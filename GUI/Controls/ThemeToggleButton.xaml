<UserControl x:Class="MandADiscoverySuite.Controls.ThemeToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="80">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- No animations in resource dictionary since they will be used in Style triggers -->
        </ResourceDictionary>
    </UserControl.Resources>

    <Button Background="Transparent"
            BorderThickness="0"
            Padding="0"
            Click="ThemeToggleButton_Click"
            ToolTip="{Binding TooltipText}"
            Cursor="Hand">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                    <!-- Remove animations from Style triggers since TargetName is not allowed -->
                </Style.Triggers>
            </Style>
        </Button.Style>

        <!-- Toggle Switch -->
        <Border Background="{Binding ToggleBackgroundColor}"
                BorderBrush="{Binding ToggleBorderColor}"
                BorderThickness="2"
                CornerRadius="20"
                Width="72" Height="36">
            <Canvas>
                <!-- Background Icons -->
                <TextBlock x:Name="SunIcon"
                           Text="&#xE706;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="#FFF59E0B"
                           Canvas.Left="48"
                           Canvas.Top="8"
                           Opacity="{Binding SunOpacity}"/>

                <TextBlock x:Name="MoonIcon"
                           Text="&#xE708;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="#FF6366F1"
                           Canvas.Left="12"
                           Canvas.Top="8"
                           Opacity="{Binding MoonOpacity}"/>

                <!-- Toggle Thumb -->
                <Border x:Name="ToggleThumb"
                        Background="{Binding ThumbColor}"
                        BorderBrush="{Binding ThumbBorderColor}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Width="28" Height="28"
                        Canvas.Top="2"
                        Canvas.Left="{Binding ThumbPosition}">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                    </Border.Effect>

                    <!-- Thumb Icon -->
                    <TextBlock Text="{Binding ThumbIcon}"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="{Binding ThumbIconColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Canvas>
        </Border>
    </Button>
</UserControl>