<UserControl x:Class="MandADiscoverySuite.Controls.ColumnChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D3748" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Column Visibility" Foreground="#FFE2E8F0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="CloseButton" Content="âœ•" Width="24" Height="24" 
                        Background="Transparent" BorderThickness="0" Foreground="#FFE2E8F0"
                        Click="CloseButton_Click" Cursor="Hand"/>
            </Grid>
        </Border>
        
        <!-- Column List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FF1A202C">
            <ItemsControl x:Name="ColumnsItemsControl" Margin="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FF2D3748" BorderBrush="#FF4A5568" BorderThickness="1" 
                                CornerRadius="4" Margin="0,4" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible, Mode=TwoWay}" 
                                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Header}" Foreground="#FFE2E8F0" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border Grid.Row="2" Background="#FF2D3748" Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SelectAllButton" Content="Select All" Width="80" Height="28" 
                        Margin="4" Click="SelectAllButton_Click"
                        Background="#FF4A5568" Foreground="#FFE2E8F0" BorderBrush="#FF63B3ED"/>
                <Button x:Name="DeselectAllButton" Content="Deselect All" Width="80" Height="28" 
                        Margin="4" Click="DeselectAllButton_Click"
                        Background="#FF4A5568" Foreground="#FFE2E8F0" BorderBrush="#FF63B3ED"/>
                <Button x:Name="ResetButton" Content="Reset" Width="80" Height="28" 
                        Margin="4" Click="ResetButton_Click"
                        Background="#FF4A5568" Foreground="#FFE2E8F0" BorderBrush="#FF63B3ED"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>