<UserControl x:Class="MandADiscoverySuite.Controls.GlobalSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Border Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="3">
            <Grid>
                <!-- Search Box -->
                <TextBox x:Name="SearchTextBox"
                        Height="30"
                        FontSize="14"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,6"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        KeyDown="SearchTextBox_KeyDown"
                        GotFocus="SearchTextBox_GotFocus"
                        LostFocus="SearchTextBox_LostFocus" />
                
                <!-- Search Icon -->
                <TextBlock Text="🔍" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0"
                          Foreground="#666666"
                          IsHitTestVisible="False"/>
            </Grid>
        </Border>
        
        <!-- Results Popup -->
        <Popup x:Name="ResultsPopup"
               IsOpen="{Binding ShowResults}"
               PlacementTarget="{Binding ElementName=SearchTextBox}"
               Placement="Bottom"
               StaysOpen="False">
            <Border Background="White" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1"
                    MinWidth="300"
                    MaxHeight="250"
                    Effect="{DynamicResource DropShadowEffect}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Filter Suggestions -->
                        <ItemsControl ItemsSource="{Binding FilterSuggestions}"
                                     Visibility="{Binding FilterSuggestions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F5F5F5" 
                                           Margin="2"
                                           Padding="8,4"
                                           CornerRadius="2">
                                        <TextBlock Text="{Binding Text}" 
                                                  FontSize="12"
                                                  Foreground="#666666"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Search Results -->
                        <ItemsControl ItemsSource="{Binding FilteredResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                           MouseLeftButtonDown="Result_MouseLeftButtonDown"
                                           MouseEnter="Result_MouseEnter">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E6F3FF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Margin="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Type Icon -->
                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding Icon}" 
                                                      FontSize="16"
                                                      Margin="0,0,8,0"
                                                      VerticalAlignment="Center"/>
                                            
                                            <!-- Title and Subtitle -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" 
                                                          FontWeight="Bold"
                                                          FontSize="14"/>
                                                <TextBlock Text="{Binding Subtitle}" 
                                                          FontSize="12"
                                                          Foreground="#666666"
                                                          Visibility="{Binding Subtitle, Converter={StaticResource StringToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
                                            <!-- Score -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Score, StringFormat={}{0:P0}}" 
                                                      FontSize="10"
                                                      Foreground="#999999"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Popup>
    </Grid>
</UserControl>