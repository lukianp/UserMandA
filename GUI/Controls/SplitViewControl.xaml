<UserControl x:Class="MandADiscoverySuite.Controls.SplitViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Split Pane Style -->
            <Style x:Key="SplitPaneStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="2"/>
            </Style>

            <!-- Pane Header Style -->
            <Style x:Key="PaneHeaderStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Padding" Value="8,6"/>
            </Style>

            <!-- Splitter Style -->
            <Style x:Key="SplitterStyle" TargetType="GridSplitter">
                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="ResizeBehavior" Value="PreviousAndNext"/>
                <Setter Property="ShowsPreview" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GridSplitter">
                            <Border Background="{TemplateBinding Background}">
                                <Rectangle Fill="{DynamicResource AccentBrush}" 
                                           Width="2" Height="2"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.5"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Layout Button Style -->
            <Style x:Key="LayoutButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                    </Trigger>
                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Split View Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Layout Options -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Layout:" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontSize="12"
                               Foreground="{DynamicResource MutedForegroundBrush}"/>
                    
                    <Button Content="📄" 
                            ToolTip="Single Pane"
                            Command="{Binding SetLayoutCommand}"
                            CommandParameter="Single"
                            Style="{StaticResource LayoutButtonStyle}"/>
                    
                    <Button Content="⚌" 
                            ToolTip="Horizontal Split"
                            Command="{Binding SetLayoutCommand}"
                            CommandParameter="Horizontal"
                            Style="{StaticResource LayoutButtonStyle}"/>
                    
                    <Button Content="⚍" 
                            ToolTip="Vertical Split"
                            Command="{Binding SetLayoutCommand}"
                            CommandParameter="Vertical"
                            Style="{StaticResource LayoutButtonStyle}"/>
                    
                    <Button Content="⚏" 
                            ToolTip="Quad Split"
                            Command="{Binding SetLayoutCommand}"
                            CommandParameter="Quad"
                            Style="{StaticResource LayoutButtonStyle}"/>

                    <Rectangle Width="1" 
                               Fill="{DynamicResource BorderBrush}"
                               Margin="8,2"/>

                    <Button Content="+" 
                            ToolTip="Add Pane"
                            Command="{Binding AddPaneCommand}"
                            Style="{StaticResource ThemedSecondaryButtonStyle}"
                            Padding="6,2"
                            FontSize="12"/>
                </StackPanel>

                <!-- Split View Info -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentLayout, StringFormat='Layout: {0}'}" 
                               FontSize="12"
                               Foreground="{DynamicResource MutedForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding PaneCount, StringFormat={}{0} panes}" 
                               FontSize="12"
                               Foreground="{DynamicResource MutedForegroundBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="🔄" 
                            ToolTip="Sync Panes"
                            Command="{Binding SyncPanesCommand}"
                            Style="{StaticResource ThemedSecondaryButtonStyle}"
                            Padding="6,2"
                            FontSize="12"
                            Margin="0,0,4,0"/>
                    
                    <Button Content="⚙️" 
                            ToolTip="Split View Options"
                            Command="{Binding ShowOptionsCommand}"
                            Style="{StaticResource ThemedSecondaryButtonStyle}"
                            Padding="6,2"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Split View Content -->
        <Grid Grid.Row="1" x:Name="SplitContainer">
            <!-- Single Pane Layout -->
            <Border x:Name="SinglePane" 
                    Style="{StaticResource SplitPaneStyle}"
                    Visibility="{Binding IsSingleLayout, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="📄" 
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"/>

                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SinglePane.Title}" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="2" 
                                    Content="⚌" 
                                    ToolTip="Split Horizontally"
                                    Command="{Binding SetLayoutCommand}"
                                    CommandParameter="Horizontal"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    FontSize="10"
                                    Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <ContentPresenter Grid.Row="1" 
                                      Content="{Binding SinglePane.Content}"
                                      Margin="8"/>
                </Grid>
            </Border>

            <!-- Horizontal Split Layout -->
            <Grid x:Name="HorizontalSplit" 
                  Visibility="{Binding IsHorizontalLayout, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Pane -->
                <Border Grid.Row="0" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="📄" 
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TopPane.Title}" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        ToolTip="Close Pane"
                                        Command="{Binding ClosePaneCommand}"
                                        CommandParameter="Top"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        FontSize="10"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" 
                                          Content="{Binding TopPane.Content}"
                                          Margin="8"/>
                    </Grid>
                </Border>

                <!-- Horizontal Splitter -->
                <GridSplitter Grid.Row="1" 
                              Style="{StaticResource SplitterStyle}"
                              HorizontalAlignment="Stretch"
                              ResizeDirection="Rows"/>

                <!-- Bottom Pane -->
                <Border Grid.Row="2" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="📄" 
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding BottomPane.Title}" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        ToolTip="Close Pane"
                                        Command="{Binding ClosePaneCommand}"
                                        CommandParameter="Bottom"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        FontSize="10"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" 
                                          Content="{Binding BottomPane.Content}"
                                          Margin="8"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Vertical Split Layout -->
            <Grid x:Name="VerticalSplit" 
                  Visibility="{Binding IsVerticalLayout, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Pane -->
                <Border Grid.Column="0" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="📄" 
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding LeftPane.Title}" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        ToolTip="Close Pane"
                                        Command="{Binding ClosePaneCommand}"
                                        CommandParameter="Left"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        FontSize="10"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" 
                                          Content="{Binding LeftPane.Content}"
                                          Margin="8"/>
                    </Grid>
                </Border>

                <!-- Vertical Splitter -->
                <GridSplitter Grid.Column="1" 
                              Style="{StaticResource SplitterStyle}"
                              VerticalAlignment="Stretch"
                              ResizeDirection="Columns"/>

                <!-- Right Pane -->
                <Border Grid.Column="2" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="📄" 
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding RightPane.Title}" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        ToolTip="Close Pane"
                                        Command="{Binding ClosePaneCommand}"
                                        CommandParameter="Right"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        FontSize="10"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" 
                                          Content="{Binding RightPane.Content}"
                                          Margin="8"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Quad Split Layout -->
            <Grid x:Name="QuadSplit" 
                  Visibility="{Binding IsQuadLayout, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top-Left Pane -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📄" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding TopLeftPane.Title}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="2" Content="✕" Command="{Binding ClosePaneCommand}" CommandParameter="TopLeft" Background="Transparent" BorderThickness="0" Padding="4" FontSize="10" Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" Content="{Binding TopLeftPane.Content}" Margin="8"/>
                    </Grid>
                </Border>

                <!-- Top-Right Pane -->
                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📄" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding TopRightPane.Title}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="2" Content="✕" Command="{Binding ClosePaneCommand}" CommandParameter="TopRight" Background="Transparent" BorderThickness="0" Padding="4" FontSize="10" Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" Content="{Binding TopRightPane.Content}" Margin="8"/>
                    </Grid>
                </Border>

                <!-- Bottom-Left Pane -->
                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📄" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding BottomLeftPane.Title}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="2" Content="✕" Command="{Binding ClosePaneCommand}" CommandParameter="BottomLeft" Background="Transparent" BorderThickness="0" Padding="4" FontSize="10" Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" Content="{Binding BottomLeftPane.Content}" Margin="8"/>
                    </Grid>
                </Border>

                <!-- Bottom-Right Pane -->
                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource SplitPaneStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource PaneHeaderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📄" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding BottomRightPane.Title}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="2" Content="✕" Command="{Binding ClosePaneCommand}" CommandParameter="BottomRight" Background="Transparent" BorderThickness="0" Padding="4" FontSize="10" Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <ContentPresenter Grid.Row="1" Content="{Binding BottomRightPane.Content}" Margin="8"/>
                    </Grid>
                </Border>

                <!-- Splitters for Quad Layout -->
                <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Style="{StaticResource SplitterStyle}" VerticalAlignment="Stretch" ResizeDirection="Columns"/>
                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource SplitterStyle}" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>