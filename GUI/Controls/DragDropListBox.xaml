<ListBox x:Class="MandADiscoverySuite.Controls.DragDropListBox"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         mc:Ignorable="d" 
         d:DesignHeight="300" d:DesignWidth="400"
         Background="{DynamicResource CardBrush}"
         BorderBrush="{DynamicResource BorderBrush}"
         BorderThickness="1"
         AllowDrop="True">

    <ListBox.Resources>
        <!-- Drop zone indicator style -->
        <Style x:Key="DropZoneIndicatorStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="Stroke" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeDashArray" Value="5,3"/>
            <Setter Property="Height" Value="3"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="RadiusX" Value="1"/>
            <Setter Property="RadiusY" Value="1"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Drag item style -->
        <Style x:Key="DragItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Top drop indicator -->
                                <Rectangle x:Name="TopDropIndicator"
                                         Grid.Row="0"
                                         Style="{StaticResource DropZoneIndicatorStyle}"/>
                                
                                <!-- Content -->
                                <Grid Grid.Row="1" x:Name="ContentGrid">
                                    <ContentPresenter x:Name="ContentHost"
                                                    ContentSource="Content"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"/>
                                    
                                    <!-- Drag handle -->
                                    <Border x:Name="DragHandle"
                                            Width="20" Height="20"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            Cursor="SizeAll"
                                            Visibility="Collapsed"
                                            Margin="4,0">
                                        <Path Fill="{DynamicResource ForegroundSecondaryBrush}"
                                              Data="M0,2 L8,2 M0,5 L8,5 M0,8 L8,8"
                                              Stroke="{DynamicResource ForegroundSecondaryBrush}"
                                              StrokeThickness="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Bottom drop indicator -->
                                <Rectangle x:Name="BottomDropIndicator"
                                         Grid.Row="2"
                                         Style="{StaticResource DropZoneIndicatorStyle}"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <!-- Hover state -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter TargetName="DragHandle" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            
                            <!-- Selected state -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SelectedBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                            
                            <!-- Dragging state -->
                            <Trigger Property="Tag" Value="Dragging">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <BlurEffect Radius="2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ItemBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource AccentColor}" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Drop target state -->
                            <Trigger Property="Tag" Value="DropTarget">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{DynamicResource SuccessColor}" Offset="0" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
            <Style.Triggers>
                <!-- Animation for drop target -->
                <Trigger Property="Tag" Value="DropTarget">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               From="1.0" To="1.02" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               From="1.0" To="1.02" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </ListBox.Resources>

    <ListBox.ItemContainerStyle>
        <StaticResource ResourceKey="DragItemStyle"/>
    </ListBox.ItemContainerStyle>

    <!-- Default item template for demo -->
    <ListBox.ItemTemplate>
        <DataTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Border Grid.Column="0"
                        Width="32" Height="32"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="16"
                        Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“„"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                </Border>
                
                <!-- Content -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding}"
                             FontWeight="SemiBold"
                             Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock Text="Drag to reorder"
                             FontSize="11"
                             Foreground="{DynamicResource ForegroundSecondaryBrush}"
                             Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>