<UserControl x:Class="MandADiscoverySuite.Controls.BusyIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <UserControl.Resources>
        <!-- Spinning Dots Animation -->
        <Storyboard x:Key="SpinningDotsAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="DotsRotation"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:1.5"/>
        </Storyboard>
        
        <!-- Wave Animation -->
        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Wave1"
                                          Storyboard.TargetProperty="Height">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="20"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Wave2"
                                          Storyboard.TargetProperty="Height"
                                          BeginTime="0:0:0.1">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="20"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Wave3"
                                          Storyboard.TargetProperty="Height"
                                          BeginTime="0:0:0.2">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="20"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Wave4"
                                          Storyboard.TargetProperty="Height"
                                          BeginTime="0:0:0.3">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="20"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Wave5"
                                          Storyboard.TargetProperty="Height"
                                          BeginTime="0:0:0.4">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="20"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <!-- Pulse Ring Animation -->
        <Storyboard x:Key="PulseRingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="PulseRing1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.8" To="0" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing1Scale"
                           Storyboard.TargetProperty="ScaleX"
                           From="0.5" To="1.5" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing1Scale"
                           Storyboard.TargetProperty="ScaleY"
                           From="0.5" To="1.5" Duration="0:0:1.5"/>
            
            <DoubleAnimation Storyboard.TargetName="PulseRing2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.8" To="0" Duration="0:0:1.5"
                           BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing2Scale"
                           Storyboard.TargetProperty="ScaleX"
                           From="0.5" To="1.5" Duration="0:0:1.5"
                           BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing2Scale"
                           Storyboard.TargetProperty="ScaleY"
                           From="0.5" To="1.5" Duration="0:0:1.5"
                           BeginTime="0:0:0.5"/>
        </Storyboard>
        
        <!-- Bouncing Dots Animation -->
        <Storyboard x:Key="BouncingDotsAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BounceDot1"
                                          Storyboard.TargetProperty="(Canvas.Top)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="40"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BounceDot2"
                                          Storyboard.TargetProperty="(Canvas.Top)"
                                          BeginTime="0:0:0.1">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="40"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BounceDot3"
                                          Storyboard.TargetProperty="(Canvas.Top)"
                                          BeginTime="0:0:0.2">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="40"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="20"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="40"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="IndicatorRoot">
        <!-- Spinning Dots Indicator -->
        <Canvas x:Name="SpinningDots" Width="60" Height="60" 
                Visibility="Visible" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <RotateTransform x:Name="DotsRotation" Angle="0"/>
            </Canvas.RenderTransform>
            
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="26" Canvas.Top="2" Opacity="1"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="42" Canvas.Top="8" Opacity="0.9"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="50" Canvas.Top="26" Opacity="0.8"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="42" Canvas.Top="44" Opacity="0.7"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="26" Canvas.Top="50" Opacity="0.6"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="10" Canvas.Top="44" Opacity="0.5"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="2" Canvas.Top="26" Opacity="0.4"/>
            <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" 
                     Canvas.Left="10" Canvas.Top="8" Opacity="0.3"/>
        </Canvas>
        
        <!-- Wave Bars Indicator -->
        <StackPanel x:Name="WaveBars" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <Rectangle x:Name="Wave1" Width="6" Height="20" 
                      Fill="{DynamicResource AccentBrush}" Margin="2"
                      VerticalAlignment="Center"/>
            <Rectangle x:Name="Wave2" Width="6" Height="20" 
                      Fill="{DynamicResource AccentBrush}" Margin="2"
                      VerticalAlignment="Center"/>
            <Rectangle x:Name="Wave3" Width="6" Height="20" 
                      Fill="{DynamicResource AccentBrush}" Margin="2"
                      VerticalAlignment="Center"/>
            <Rectangle x:Name="Wave4" Width="6" Height="20" 
                      Fill="{DynamicResource AccentBrush}" Margin="2"
                      VerticalAlignment="Center"/>
            <Rectangle x:Name="Wave5" Width="6" Height="20" 
                      Fill="{DynamicResource AccentBrush}" Margin="2"
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Pulse Rings Indicator -->
        <Grid x:Name="PulseRings" Width="60" Height="60" Visibility="Collapsed">
            <Ellipse x:Name="PulseRing1" Width="60" Height="60"
                    Stroke="{DynamicResource AccentBrush}" StrokeThickness="2"
                    Fill="Transparent" Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="PulseRing1Scale" ScaleX="0.5" ScaleY="0.5"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse x:Name="PulseRing2" Width="60" Height="60"
                    Stroke="{DynamicResource AccentBrush}" StrokeThickness="2"
                    Fill="Transparent" Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="PulseRing2Scale" ScaleX="0.5" ScaleY="0.5"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Width="12" Height="12"
                    Fill="{DynamicResource AccentBrush}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Bouncing Dots Indicator -->
        <Canvas x:Name="BouncingDots" Width="60" Height="60" Visibility="Collapsed">
            <Ellipse x:Name="BounceDot1" Width="10" Height="10"
                    Fill="{DynamicResource AccentBrush}"
                    Canvas.Left="10" Canvas.Top="40"/>
            <Ellipse x:Name="BounceDot2" Width="10" Height="10"
                    Fill="{DynamicResource AccentBrush}"
                    Canvas.Left="25" Canvas.Top="40"/>
            <Ellipse x:Name="BounceDot3" Width="10" Height="10"
                    Fill="{DynamicResource AccentBrush}"
                    Canvas.Left="40" Canvas.Top="40"/>
        </Canvas>
        
        <!-- Modern Ring Indicator -->
        <Grid x:Name="ModernRing" Width="60" Height="60" Visibility="Collapsed">
            <Path Stroke="{DynamicResource BorderBrush}" StrokeThickness="4"
                  Fill="Transparent">
                <Path.Data>
                    <EllipseGeometry Center="30,30" RadiusX="28" RadiusY="28"/>
                </Path.Data>
            </Path>
            <Path x:Name="ModernRingProgress" Stroke="{DynamicResource AccentBrush}" 
                  StrokeThickness="4" Fill="Transparent"
                  RenderTransformOrigin="0.5,0.5">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="30,2">
                            <ArcSegment Size="28,28" Point="58,30"
                                      SweepDirection="Clockwise"
                                      IsLargeArc="False"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.RenderTransform>
                    <RotateTransform x:Name="ModernRingRotation" Angle="0"/>
                </Path.RenderTransform>
            </Path>
        </Grid>
        
        <!-- Text Display -->
        <TextBlock x:Name="BusyText"
                   Text="Loading..."
                   FontSize="12"
                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,70,0,0"
                   Visibility="Collapsed"/>
    </Grid>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard x:Name="DefaultAnimation">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="DotsRotation"
                                   Storyboard.TargetProperty="Angle"
                                   From="0" To="360" Duration="0:0:1.5"
                                   RepeatBehavior="Forever"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>