<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MandADiscoverySuite.Controls">

    <!-- Pie Chart Control -->
    <ControlTemplate x:Key="PieChartTemplate" TargetType="{x:Type local:PieChart}">
        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
            <Grid>
                <Canvas x:Name="PART_ChartCanvas" 
                        Background="Transparent"
                        Margin="10"/>
                
                <!-- Legend -->
                <StackPanel x:Name="PART_Legend" 
                           Orientation="Vertical"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,20,20,0"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- Bar Chart Control -->
    <ControlTemplate x:Key="BarChartTemplate" TargetType="{x:Type local:BarChart}">
        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Canvas x:Name="PART_ChartCanvas" 
                        Grid.Row="0"
                        Background="Transparent"
                        Margin="50,20,20,10"/>
                
                <Canvas x:Name="PART_AxisCanvas"
                        Grid.Row="0"
                        Background="Transparent"
                        Margin="50,20,20,10"/>
                
                <!-- X-Axis Labels -->
                <StackPanel x:Name="PART_XAxisLabels"
                           Grid.Row="1"
                           Orientation="Horizontal"
                           Margin="50,0,20,10"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- Line Chart Control -->
    <ControlTemplate x:Key="LineChartTemplate" TargetType="{x:Type local:LineChart}">
        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
            <Grid>
                <Canvas x:Name="PART_ChartCanvas" 
                        Background="Transparent"
                        Margin="50,20,20,40"/>
                
                <Canvas x:Name="PART_AxisCanvas"
                        Background="Transparent"
                        Margin="50,20,20,40"/>
                
                <!-- Legend -->
                <StackPanel x:Name="PART_Legend" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,10"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- Chart Styles -->
    <Style x:Key="ModernChartStyle" TargetType="UserControl">
        <Setter Property="Background" Value="#FF2D3748"/>
        <Setter Property="BorderBrush" Value="#FF4A5568"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="ChartTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#FFE2E8F0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,20"/>
    </Style>

    <Style x:Key="LegendItemStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <Style x:Key="LegendColorStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
    </Style>

    <Style x:Key="LegendTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#FFA0AEC0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>