<UserControl x:Class="MandADiscoverySuite.Controls.ProfileDropZone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:MandADiscoverySuite.Behaviors">
    
    <Border Name="DropZoneBorder" 
            BorderBrush="#4CAF50" 
            BorderThickness="2" 
            CornerRadius="8"
            Background="Transparent"
            Padding="20"
            MinHeight="120"
            behaviors:DragDropBehavior.IsEnabled="True"
            behaviors:DragDropBehavior.DropCommand="{Binding DropFilesCommand}"
            behaviors:DragDropBehavior.AllowedExtensions=".json"
            behaviors:DragDropBehavior.DropZoneText="Drop JSON profile files here"
            behaviors:DragDropBehavior.ShowVisualFeedback="True">
        
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#104CAF50" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        
        <StackPanel Orientation="Vertical" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
            
            <TextBlock Text="📁" 
                      FontSize="48" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"
                      Foreground="#4CAF50" />
            
            <TextBlock Text="Drop Profile Files Here" 
                      FontSize="16" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center" 
                      Foreground="#4CAF50"
                      Margin="0,0,0,5" />
            
            <TextBlock Text="or" 
                      FontSize="12" 
                      HorizontalAlignment="Center" 
                      Foreground="#666"
                      Margin="0,0,0,5" />
            
            <Button Content="Browse Files..." 
                   Command="{Binding ImportProfileCommand}"
                   Padding="15,8"
                   Background="#4CAF50"
                   Foreground="White"
                   BorderThickness="0"
                   FontWeight="Bold"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <TextBlock Text="Supported formats: JSON files (.json)" 
                      FontSize="10" 
                      HorizontalAlignment="Center" 
                      Foreground="#999"
                      Margin="0,10,0,0" />
            
        </StackPanel>
    </Border>
</UserControl>