<UserControl x:Class="MandADiscoverySuite.Controls.EnhancedTooltipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Tooltip Container Style -->
            <Style x:Key="TooltipContainerStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="MaxWidth" Value="400"/>
                <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
                <Style.Triggers>
                    <!-- Theme-based styling -->
                    <DataTrigger Binding="{Binding Theme}" Value="Warning">
                        <Setter Property="Background" Value="#FFF3CD"/>
                        <Setter Property="BorderBrush" Value="#FFEAA3"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Theme}" Value="Error">
                        <Setter Property="Background" Value="#F8D7DA"/>
                        <Setter Property="BorderBrush" Value="#F1AEB5"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Theme}" Value="Success">
                        <Setter Property="Background" Value="#D1E7DD"/>
                        <Setter Property="BorderBrush" Value="#A3CFB3"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Theme}" Value="Accent">
                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Section Header Style -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>

            <!-- Section Content Style -->
            <Style x:Key="Section ContentStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- Keyboard Shortcut Style -->
            <Style x:Key="KeyboardShortcutStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Padding" Value="4,2"/>
                <Setter Property="Margin" Value="0,0,4,2"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{StaticResource TooltipContainerStyle}">
        <StackPanel>
            <!-- Header with Icon and Title -->
            <StackPanel Orientation="Horizontal" 
                        Margin="0,0,0,8"
>
                
                <TextBlock Text="{Binding Icon}" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"
/>
                
                <TextBlock Text="{Binding Title}" 
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Simple Content -->
            <TextBlock Text="{Binding Content}" 
                       FontSize="12"
                       Foreground="{DynamicResource MutedForegroundBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"
                       Visibility="{Binding TooltipType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Simple}"/>

            <!-- Rich Content Sections -->
            <ItemsControl ItemsSource="{Binding Sections}"
                          Visibility="{Binding TooltipType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Rich}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="{Binding Key}" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBlock Text="{Binding Value}" Style="{StaticResource SectionContentStyle}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Help Content -->
            <StackPanel Visibility="{Binding TooltipType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Help}">
                
                <!-- Description -->
                <TextBlock Text="{Binding Content}" 
                           FontSize="12"
                           Foreground="{DynamicResource MutedForegroundBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,8"
/>

                <!-- Keyboard Shortcuts -->
                <StackPanel>
                    <TextBlock Text="Keyboard Shortcuts:" Style="{StaticResource SectionHeaderStyle}"/>
                    <ItemsControl ItemsSource="{Binding KeyboardShortcuts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource KeyboardShortcutStyle}">
                                    <TextBlock Text="{Binding}" 
                                               FontSize="10"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource ForegroundBrush}"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Tips -->
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="💡 Tips:" Style="{StaticResource SectionHeaderStyle}"/>
                    <ItemsControl ItemsSource="{Binding Tips}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Style="{StaticResource SectionContentStyle}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <!-- Status/Type-specific Content -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,4,0,0"
                        Visibility="{Binding TooltipType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Warning|Error|Success|Info}">
                
                <!-- Status Icon -->
                <TextBlock FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Warning">
                                    <Setter Property="Text" Value="⚠️"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Error">
                                    <Setter Property="Text" Value="❌"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Success">
                                    <Setter Property="Text" Value="✅"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Info">
                                    <Setter Property="Text" Value="ℹ️"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Status Content -->
                <TextBlock Text="{Binding Content}" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Warning">
                                    <Setter Property="Foreground" Value="#856404"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Error">
                                    <Setter Property="Foreground" Value="#721C24"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Success">
                                    <Setter Property="Foreground" Value="#0A3622"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TooltipType}" Value="Info">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Text="{Binding Footer}" 
                       FontSize="10"
                       FontStyle="Italic"
                       Foreground="{DynamicResource MutedForegroundBrush}"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Right"
                       Margin="0,8,0,0"
/>
        </StackPanel>
    </Border>
</UserControl>