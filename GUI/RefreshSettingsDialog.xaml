<Window x:Class="MandADiscoverySuite.RefreshSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Refresh Settings" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A202C"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ModernTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ModernTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A5568"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF718096"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="BorderBrush" Value="#FF4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </Window.Resources>

    <Border Margin="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Data Refresh Settings" Style="{StaticResource HeaderTextStyle}"/>
            
            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Global Refresh Interval -->
                    <Border Background="#FF2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="🕒 Refresh Interval" Style="{StaticResource ModernTextStyle}" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                            <TextBlock Text="How often should data be automatically refreshed?" Style="{StaticResource ModernTextStyle}" FontSize="12" Foreground="#FFA0AEC0" Margin="0,0,0,12"/>
                            <ComboBox x:Name="IntervalComboBox" Style="{StaticResource ModernComboBoxStyle}" Width="200" HorizontalAlignment="Left"
                                      SelectedValue="{Binding Settings.GlobalInterval}" SelectedValuePath="Tag">
                                <ComboBoxItem Content="Disabled" Tag="0"/>
                                <ComboBoxItem Content="Every 30 seconds" Tag="30"/>
                                <ComboBoxItem Content="Every minute" Tag="60"/>
                                <ComboBoxItem Content="Every 2 minutes" Tag="120"/>
                                <ComboBoxItem Content="Every 5 minutes" Tag="300"/>
                                <ComboBoxItem Content="Every 10 minutes" Tag="600"/>
                                <ComboBoxItem Content="Every 15 minutes" Tag="900"/>
                                <ComboBoxItem Content="Every 30 minutes" Tag="1800"/>
                                <ComboBoxItem Content="Every hour" Tag="3600"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- View-Specific Settings -->
                    <Border Background="#FF2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="📊 Views to Refresh" Style="{StaticResource ModernTextStyle}" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                            <TextBlock Text="Select which views should be automatically refreshed" Style="{StaticResource ModernTextStyle}" FontSize="12" Foreground="#FFA0AEC0" Margin="0,0,0,12"/>
                            <CheckBox Content="📈 Dashboard" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.DashboardEnabled}"/>
                            <CheckBox Content="👤 Users" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.UsersEnabled}"/>
                            <CheckBox Content="🌐 Infrastructure" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.InfrastructureEnabled}"/>
                            <CheckBox Content="👥 Groups" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.GroupsEnabled}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Refresh Behavior -->
                    <Border Background="#FF2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="⚙️ Refresh Behavior" Style="{StaticResource ModernTextStyle}" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                            <TextBlock Text="Configure how automatic refresh behaves" Style="{StaticResource ModernTextStyle}" FontSize="12" Foreground="#FFA0AEC0" Margin="0,0,0,12"/>
                            <CheckBox Content="Only refresh visible view" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.RefreshOnlyWhenVisible}">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="When enabled, only the currently visible view will be refreshed, saving resources" MaxWidth="250" TextWrapping="Wrap"/>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <CheckBox Content="Pause when discovery is running" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="{Binding Settings.PauseWhenDiscoveryRunning}">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="Automatically pause refresh when discovery operations are running to avoid conflicts" MaxWidth="250" TextWrapping="Wrap"/>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button x:Name="ApplyButton" Content="Apply" Style="{StaticResource ModernButtonStyle}" 
                        Background="#FF48BB78" Margin="0,0,12,0" Click="ApplyButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButtonStyle}" 
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>