                        <Button x:Name="DashboardButton" Style="{StaticResource NavButtonStyle}" Click="NavigationButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,16,0"/>
