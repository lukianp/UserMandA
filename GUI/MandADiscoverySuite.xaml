<Window x:Class="MandADiscoverySuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="M&amp;A Discovery Suite - EMERGENCY SIMPLIFIED VERSION" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="#FF0F1419" KeyDown="MainWindow_KeyDown"
        Closing="Window_Closing"
        AutomationProperties.Name="M&amp;A Discovery Suite Main Window"
        AutomationProperties.HelpText="Emergency simplified main window to prevent BeginInit crashes">
    
    <Window.Resources>
        <ResourceDictionary>
            <!-- ONLY ESSENTIAL RESOURCES - NO COMPLEX TEMPLATES OR BEHAVIORS -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Basic Button Style -->
            <Style x:Key="BasicButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#FF2D3748"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#FF4A5568"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            
            <!-- Basic TextBlock Style -->
            <Style x:Key="BasicTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="4"/>
            </Style>
            
            <!-- Header Text Style -->
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="4"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ULTRA-SIMPLIFIED MAIN CONTENT - NO BEHAVIORS, NO COMPLEX CONTROLS -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Simple Header -->
        <Border Grid.Row="0" Background="#FF1A202C" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="M&amp;A Discovery Suite" 
                               Style="{StaticResource HeaderTextStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Emergency Simplified Mode" 
                               Foreground="#FFA0AEC0" 
                               FontSize="12" 
                               VerticalAlignment="Center" 
                               Margin="16,0,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Help (F1)" 
                        Style="{StaticResource BasicButtonStyle}"
                        Click="HelpButton_Click"/>
            </Grid>
        </Border>
        
        <!-- BASIC TABCONTROL - NO BEHAVIORS, NO COMPLEX CONTENT -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" 
                    Background="Transparent" 
                    BorderThickness="0"
                    TabStripPlacement="Top">
            
            <TabControl.Resources>
                <!-- Simple Tab Item Style -->
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#FF2D3748"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="BorderBrush" Value="#FF4A5568"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Dashboard Tab -->
            <TabItem Header="ðŸ“Š Dashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="M&amp;A Discovery Suite Dashboard" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="âœ… Application Successfully Launched" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   Foreground="LightGreen" 
                                   FontSize="16"
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Emergency simplified mode active to prevent BeginInit crashes" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#FFA0AEC0"
                                   Margin="0,0,0,30"/>
                        
                        <!-- Simple Status Panel -->
                        <Border Background="#FF2D3748" CornerRadius="8" Padding="20" Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="System Status" Style="{StaticResource HeaderTextStyle}" FontSize="16"/>
                                    <TextBlock Text="âœ“ Core Services: Running" Style="{StaticResource BasicTextStyle}" Foreground="LightGreen"/>
                                    <TextBlock Text="âœ“ GUI Framework: Stable" Style="{StaticResource BasicTextStyle}" Foreground="LightGreen"/>
                                    <TextBlock Text="âœ“ No BeginInit Conflicts" Style="{StaticResource BasicTextStyle}" Foreground="LightGreen"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Build Information" Style="{StaticResource HeaderTextStyle}" FontSize="16"/>
                                    <TextBlock Text="Version: Emergency Build" Style="{StaticResource BasicTextStyle}"/>
                                    <TextBlock Text="Mode: Simplified" Style="{StaticResource BasicTextStyle}"/>
                                    <TextBlock Text="Status: Operational" Style="{StaticResource BasicTextStyle}" Foreground="LightGreen"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <UniformGrid Columns="3" Margin="0,20">
                            <Button Content="ðŸ” Start Discovery" Style="{StaticResource BasicButtonStyle}"/>
                            <Button Content="ðŸ“ˆ View Reports" Style="{StaticResource BasicButtonStyle}"/>
                            <Button Content="âš™ï¸ Settings" Style="{StaticResource BasicButtonStyle}"/>
                        </UniformGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Discovery Tab -->
            <TabItem Header="ðŸ” Discovery">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Discovery Module" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Discovery functionality available in simplified mode" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <Border Background="#FF2D3748" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Available Discovery Modules:" Style="{StaticResource HeaderTextStyle}" FontSize="16"/>
                                <TextBlock Text="â€¢ Network Discovery" Style="{StaticResource BasicTextStyle}"/>
                                <TextBlock Text="â€¢ User Account Discovery" Style="{StaticResource BasicTextStyle}"/>
                                <TextBlock Text="â€¢ Infrastructure Discovery" Style="{StaticResource BasicTextStyle}"/>
                                <TextBlock Text="â€¢ Application Discovery" Style="{StaticResource BasicTextStyle}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Users Tab -->
            <TabItem Header="ðŸ‘¥ Users">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="User Management" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="User management features available" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Infrastructure Tab -->
            <TabItem Header="ðŸ—ï¸ Infrastructure">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Infrastructure Discovery" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Infrastructure discovery and analysis tools" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Migration Tab -->
            <TabItem Header="ðŸ”„ Migration">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Migration Tools" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Migration planning and execution tools" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Reports Tab -->
            <TabItem Header="ðŸ“Š Reports">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Reports &amp; Analytics" 
                                   Style="{StaticResource HeaderTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Comprehensive reporting and analytics" 
                                   Style="{StaticResource BasicTextStyle}" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Simple Status Bar -->
        <Border Grid.Row="2" Background="#FF1A202C" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="M&amp;A Discovery Suite - Emergency Simplified Mode - No BeginInit Conflicts" 
                           Style="{StaticResource BasicTextStyle}" 
                           VerticalAlignment="Center"
                           Foreground="#FFA0AEC0"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='Last Updated: {0:HH:mm:ss}'}" 
                           Style="{StaticResource BasicTextStyle}" 
                           VerticalAlignment="Center"
                           Foreground="#FFA0AEC0"
                           xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>