                        </StackPanel>
                    </Button>

                    <Button x:Name="FileServersButton" Style="{StaticResource NavButtonStyle}" Click="NavigationButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,16,0"/>
