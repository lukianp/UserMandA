                                        <StackPanel>
                                            <TextBlock Text="🔗" FontSize="24" Margin="0,0,0,4"/>
                                            <TextBlock Text="Dependency Map"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource ModernButtonStyle}" 
