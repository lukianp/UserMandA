<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Focus Visual Style -->
    <Style x:Key="ModernFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="#007ACC"
                            BorderThickness="2"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect Color="#007ACC"
                                            BlurRadius="8"
                                            ShadowDepth="0"
                                            Opacity="0.4"/>
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Subtle Focus Visual Style -->
    <Style x:Key="SubtleFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#80007ACC"
                             StrokeThickness="2"
                             StrokeDashArray="2,2"
                             SnapsToDevicePixels="True"
                             Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Glow Focus Visual Style -->
    <Style x:Key="GlowFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="Transparent"
                            BorderBrush="#007ACC"
                            BorderThickness="1"
                            CornerRadius="3">
                        <Border.Effect>
                            <DropShadowEffect Color="#007ACC"
                                            BlurRadius="12"
                                            ShadowDepth="0"
                                            Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- High Contrast Focus Visual Style -->
    <Style x:Key="HighContrastFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                             StrokeThickness="3"
                             SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Animated Focus Visual Style -->
    <Style x:Key="AnimatedFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border x:Name="FocusBorder"
                            BorderBrush="#007ACC"
                            BorderThickness="2"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="FocusScale" 
                                          ScaleX="1" 
                                          ScaleY="1" 
                                          CenterX="0.5" 
                                          CenterY="0.5"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="0.8" To="1.0"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="FocusScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       From="0.8" To="1.0"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Focus Enhancement Service -->
    <Style x:Key="AccessibleFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="#007ACC"
                            BorderThickness="3"
                            CornerRadius="2">
                        <Border Background="#20007ACC"
                                BorderBrush="#80007ACC"
                                BorderThickness="1"
                                CornerRadius="1"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>