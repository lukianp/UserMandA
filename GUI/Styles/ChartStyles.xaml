<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Chart Color Palette -->
    <SolidColorBrush x:Key="ChartPrimary" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="ChartSecondary" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="ChartTertiary" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="ChartQuaternary" Color="#FFE91E63"/>
    <SolidColorBrush x:Key="ChartQuinary" Color="#FF9C27B0"/>
    <SolidColorBrush x:Key="ChartSenary" Color="#FF00BCD4"/>
    <SolidColorBrush x:Key="ChartBackground" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ChartGridLines" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ChartAxisText" Color="#616161"/>
    <SolidColorBrush x:Key="ChartTitle" Color="#212121"/>

    <!-- Chart Series Gradient Brushes -->
    <LinearGradientBrush x:Key="ChartGradient1" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2196F3" Offset="0"/>
        <GradientStop Color="#801976D2" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ChartGradient2" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF4CAF50" Offset="0"/>
        <GradientStop Color="#80388E3C" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ChartGradient3" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFF9800" Offset="0"/>
        <GradientStop Color="#80F57C00" Offset="1"/>
    </LinearGradientBrush>

    <!-- Chart Container Style -->
    <Style x:Key="ModernChartContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ChartBackground}"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#20000000" 
                                BlurRadius="8" 
                                ShadowDepth="2" 
                                Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Chart Title Style -->
    <Style x:Key="ChartTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource ChartTitle}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Chart Subtitle Style -->
    <Style x:Key="ChartSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource ChartAxisText}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Chart Legend Style -->
    <Style x:Key="ChartLegendStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <!-- Legend Item Style -->
    <Style x:Key="LegendItemStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>

    <!-- Legend Color Indicator -->
    <Style x:Key="LegendColorStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="RadiusX" Value="2"/>
        <Setter Property="RadiusY" Value="2"/>
    </Style>

    <!-- Legend Text Style -->
    <Style x:Key="LegendTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource ChartAxisText}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Chart Axis Style -->
    <Style x:Key="ChartAxisStyle" TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource ChartGridLines}"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

    <!-- Chart Grid Line Style -->
    <Style x:Key="ChartGridStyle" TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource ChartGridLines}"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
        <Setter Property="StrokeDashArray" Value="2,2"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- Data Point Style -->
    <Style x:Key="DataPointStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Fill" Value="{StaticResource ChartPrimary}"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF2196F3" 
                                        BlurRadius="8" 
                                        ShadowDepth="0" 
                                        Opacity="0.6"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Chart Tooltip Style -->
    <Style x:Key="ChartTooltipStyle" TargetType="Border">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#40000000" 
                                BlurRadius="6" 
                                ShadowDepth="3" 
                                Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tooltip Text Style -->
    <Style x:Key="TooltipTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource ChartTitle}"/>
    </Style>

    <!-- Chart Animation Styles -->
    <Style x:Key="AnimatedBar" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource ChartGradient1}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,1"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleY="0"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)"
                                       From="0" To="1" 
                                       Duration="0:0:0.8"
                                       BeginTime="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.05" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.0" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Animated Pie Slice -->
    <Style x:Key="AnimatedPieSlice" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource ChartGradient1}"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="0" ScaleY="0"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleX)"
                                       From="0" To="1" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleY)"
                                       From="0" To="1" Duration="0:0:0.6">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#40000000" 
                                        BlurRadius="8" 
                                        ShadowDepth="4" 
                                        Opacity="0.5"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Chart Loading Indicator -->
    <Style x:Key="ChartLoadingStyle" TargetType="Grid">
        <Setter Property="Background" Value="#F0FFFFFF"/>
        <Style.Triggers>
            <Trigger Property="Visibility" Value="Visible">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           From="0" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Chart Error State -->
    <Style x:Key="ChartErrorStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#D32F2F"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Text" Value="Error loading chart data"/>
    </Style>

    <!-- Chart Empty State -->
    <Style x:Key="ChartEmptyStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#757575"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Text" Value="No data available"/>
    </Style>

    <!-- Modern Gradient Backgrounds -->
    <LinearGradientBrush x:Key="ModernChartBackground1" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF8F9FA" Offset="0"/>
        <GradientStop Color="#FFF1F3F4" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ModernChartBackground2" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF3E5F5" Offset="0"/>
        <GradientStop Color="#FFE8EAF6" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ModernChartBackground3" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFE3F2FD" Offset="0"/>
        <GradientStop Color="#FFE1F5FE" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>