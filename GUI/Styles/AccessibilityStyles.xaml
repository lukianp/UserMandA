<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Enhanced Focus Visual Styles for Accessibility -->
    
    <!-- High Contrast Focus Rectangle -->
    <Style x:Key="HighContrastFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#FF00D4FF" 
                              StrokeThickness="3" 
                              StrokeDashArray="2,2"
                              SnapsToDevicePixels="True"
                              Margin="-2"
                              Fill="Transparent"
                              RadiusX="3"
                              RadiusY="3"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Tab Item Focus Style -->
    <Style x:Key="AccessibleTabItemFocusStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#FF00D4FF" 
                              StrokeThickness="3" 
                              SnapsToDevicePixels="True"
                              Margin="1"
                              Fill="Transparent"
                              RadiusX="4"
                              RadiusY="4"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Button Focus Style -->
    <Style x:Key="AccessibleButtonFocusStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#FF00D4FF" 
                              StrokeThickness="2" 
                              StrokeDashArray="1,1"
                              SnapsToDevicePixels="True"
                              Margin="-1"
                              Fill="Transparent"
                              RadiusX="2"
                              RadiusY="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- DataGrid Focus Style -->
    <Style x:Key="AccessibleDataGridFocusStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#FF00D4FF" 
                              StrokeThickness="2" 
                              SnapsToDevicePixels="True"
                              Margin="0"
                              Fill="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TextBox Focus Style -->
    <Style x:Key="AccessibleTextBoxFocusStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="#FF00D4FF" 
                              StrokeThickness="2" 
                              SnapsToDevicePixels="True"
                              Margin="-2"
                              Fill="Transparent"
                              RadiusX="3"
                              RadiusY="3"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced Button Style with Accessibility -->
    <Style x:Key="AccessibleModernButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource AccessibleButtonFocusStyle}"/>
        <Setter Property="KeyboardNavigation.IsTabStop" Value="True"/>
        <Setter Property="AutomationProperties.AutomationId" Value="{Binding RelativeSource={RelativeSource Self}, Path=Name}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#FF00D4FF"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Enhanced TabItem Style with Accessibility -->
    <Style x:Key="AccessibleTabItemStyle" TargetType="TabItem">
        <Setter Property="FocusVisualStyle" Value="{StaticResource AccessibleTabItemFocusStyle}"/>
        <Setter Property="KeyboardNavigation.IsTabStop" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="Border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="0,0,0,3"
                            Padding="16,12"
                            Margin="0,0,4,0">
                        <ContentPresenter x:Name="ContentSite"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#FF2D3748"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF00D4FF"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#FF4A5568"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF00D4FF"/>
                            <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FF718096"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced TextBox Style with Accessibility -->
    <Style x:Key="AccessibleTextBoxStyle" TargetType="TextBox">
        <Setter Property="FocusVisualStyle" Value="{StaticResource AccessibleTextBoxFocusStyle}"/>
        <Setter Property="KeyboardNavigation.IsTabStop" Value="True"/>
        <Setter Property="Background" Value="#FF2D3748"/>
        <Setter Property="Foreground" Value="#FFE2E8F0"/>
        <Setter Property="BorderBrush" Value="#FF4A5568"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#FF00D4FF"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#FF718096"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- High Contrast Support -->
    <Style x:Key="HighContrastButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource HighContrastFocusVisualStyle}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                <Setter Property="BorderThickness" Value="3"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>