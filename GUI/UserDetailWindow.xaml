<Window x:Class="MandADiscoverySuite.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details - {Binding UserName}" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A202C"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFA0AEC0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="CompactDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#FF374151"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF1A202C" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#FF2D3748" CornerRadius="12,12,0,0" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Ellipse Width="40" Height="40" Fill="#FF4299E1" Margin="0,0,16,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.3" BlurRadius="4"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <StackPanel VerticalAlignment="Center">
                            <TextBox x:Name="UserDisplayNameText" Text="{Binding DisplayName}" 
                                     Foreground="#FFE2E8F0" FontSize="18" FontWeight="SemiBold" 
                                     Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                            <TextBox x:Name="UserPrincipalNameText" Text="{Binding UserPrincipalName}" 
                                     Foreground="#FFA0AEC0" FontSize="12" 
                                     Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="2" Content="✕" 
                            Background="Transparent" 
                            Foreground="#FFA0AEC0" 
                            BorderThickness="0" 
                            FontSize="16" 
                            Padding="12,8" 
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        
                        <!-- User Information Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📋 User Information" Style="{StaticResource SectionHeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Email:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="EmailText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Job Title:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="JobTitleText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Department:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="DepartmentText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Manager:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="ManagerText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Location:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="LocationText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Account Enabled:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="AccountEnabledText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Created:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="CreatedDateText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Last Sign-In:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="7" Grid.Column="1" x:Name="LastSignInText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Group Memberships Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="👥 Group Memberships" Style="{StaticResource SectionHeaderStyle}"/>
                                <DataGrid x:Name="GroupMembershipsGrid" Style="{StaticResource CompactDataGridStyle}" MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Group Name" Binding="{Binding DisplayName}" Width="*"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding GroupType}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Application Assignments Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📱 Application Access" Style="{StaticResource SectionHeaderStyle}"/>
                                <DataGrid x:Name="ApplicationsGrid" Style="{StaticResource CompactDataGridStyle}" MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Application" Binding="{Binding DisplayName}" Width="*"/>
                                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1">

                        <!-- Device Relationships Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="💻 Associated Devices" Style="{StaticResource SectionHeaderStyle}"/>
                                <DataGrid x:Name="DevicesGrid" Style="{StaticResource CompactDataGridStyle}" MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Device Name" Binding="{Binding DisplayName}" Width="*"/>
                                        <DataGridTextColumn Header="OS" Binding="{Binding OperatingSystem}" Width="100"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding TrustType}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Directory Roles Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🛡️ Directory Roles" Style="{StaticResource SectionHeaderStyle}"/>
                                <DataGrid x:Name="DirectoryRolesGrid" Style="{StaticResource CompactDataGridStyle}" MaxHeight="150">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Role" Binding="{Binding DisplayName}" Width="*"/>
                                        <DataGridTextColumn Header="Scope" Binding="{Binding Description}" Width="150"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Licenses Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📄 License Assignments" Style="{StaticResource SectionHeaderStyle}"/>
                                <DataGrid x:Name="LicensesGrid" Style="{StaticResource CompactDataGridStyle}" MaxHeight="150">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="License" Binding="{Binding SkuPartNumber}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Security Information Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🔒 Security Information" Style="{StaticResource SectionHeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="MFA Enabled:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="MFAStatusText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Risk Level:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="RiskLevelText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Auth Methods:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="AuthMethodsText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Password Change:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="PasswordChangeText" Style="{StaticResource ValueStyle}" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="#FF2D3748" CornerRadius="0,0,12,12" Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Export User Profile" 
                            Background="#FF4299E1" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Padding="16,8" 
                            Margin="0,0,12,0"
                            Click="ExportProfile_Click"
                            Cursor="Hand"/>
                    <Button Content="Close" 
                            Background="#FF6B7280" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Padding="16,8"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>