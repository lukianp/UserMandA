<Window x:Class="MandADiscoverySuite.Dialogs.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error - M&amp;A Discovery Suite" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#0F1419">
    
    <Window.Resources>
        <Style x:Key="ErrorButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                x:Name="ButtonBorder">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#2B6CB0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Icon -->
        <Border Grid.Row="0" Background="#2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="{Binding Title}" 
                              Foreground="#F7FAFC" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="TimestampText" Text="{Binding Timestamp}"
                              Foreground="{DynamicResource MutedForegroundBrush}" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Error Message -->
        <Border Grid.Row="1" Background="#1A202C" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <TextBlock x:Name="ErrorMessageText" Text="{Binding ErrorMessage}"
                      Foreground="#E2E8F0" FontSize="14" TextWrapping="Wrap"/>
        </Border>
        
        <!-- Details Section -->
        <Border Grid.Row="2" Background="#1A202C" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Button Grid.Row="0" x:Name="ToggleDetailsButton" Content="{Binding ToggleButtonText}" 
                        Command="{Binding ToggleDetailsCommand}"
                        Background="Transparent" Foreground="#4299E1" 
                        BorderThickness="0" HorizontalAlignment="Left"
                        Visibility="{Binding HasDetails, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,0,0,8" Cursor="Hand"/>
                
                <ScrollViewer Grid.Row="1" x:Name="DetailsScrollViewer" 
                             Visibility="{Binding DetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Error Details:" Foreground="{DynamicResource MutedForegroundBrush}"
                                  FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="DetailsText" Text="{Binding ExceptionDetails}"
                                  Foreground="#E2E8F0" FontSize="12" 
                                  FontFamily="Consolas" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="What would you like to do?" Foreground="{DynamicResource MutedForegroundBrush}"
                          FontSize="12" Margin="0,0,0,8"/>
                <WrapPanel>
                    <Button x:Name="RetryButton" Content="🔄 Retry" 
                            Command="{Binding RetryCommand}" Style="{StaticResource ErrorButtonStyle}"
                            Visibility="{Binding CanRetry, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#48BB78"/>
                    <Button x:Name="IgnoreButton" Content="⏭️ Continue" 
                            Command="{Binding IgnoreCommand}" Style="{StaticResource ErrorButtonStyle}"
                            Visibility="{Binding CanRetry, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#ED8936"/>
                    <Button x:Name="CopyButton" Content="📋 Copy Error" 
                            Click="Copy_Click" Style="{StaticResource ErrorButtonStyle}"/>
                    <Button x:Name="ReportButton" Content="📧 Report Issue" 
                            Click="Report_Click" Style="{StaticResource ErrorButtonStyle}"
                            Background="#6B46C1"/>
                </WrapPanel>
            </StackPanel>
        </Border>
        
        <!-- Close Button -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseButton" Content="Close" 
                    Command="{Binding CloseCommand}" Style="{StaticResource ErrorButtonStyle}"
                    Background="#718096"/>
        </StackPanel>
    </Grid>
</Window>