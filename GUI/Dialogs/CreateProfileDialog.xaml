<Window x:Class="MandADiscoverySuite.Dialogs.CreateProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MandADiscoverySuite.Converters"
        Title="Create Company Profile" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize"
        Style="{DynamicResource ThemedWindowStyle}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/ThemeStyles.xaml"/>
                <ResourceDictionary Source="../Styles/ValidationStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ValidationLevelToColorConverter x:Key="ValidationLevelToColorConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="{Binding DialogTitle}" 
                   Style="{StaticResource ThemedHeaderTextStyle}"
                   FontSize="18" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Company Name" Style="{StaticResource ThemedTextBlockStyle}"/>
            <TextBlock Text=" *" Foreground="Red" FontWeight="Bold" VerticalAlignment="Top"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2">
            <Border x:Name="TextBoxBorder" BorderThickness="2" CornerRadius="4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationLevel}" Value="Error">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FFDC2626" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationLevel}" Value="Warning">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FFED8936" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationLevel}" Value="Success">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FF48BB78" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBox x:Name="ProfileNameTextBox" 
                         Style="{StaticResource ThemedTextBoxStyle}"
                         Padding="10,8"
                         BorderThickness="0"
                         KeyDown="ProfileNameTextBox_KeyDown"
                         TextChanged="ProfileNameTextBox_TextChanged"
                         Tag="Required field: Enter a company name"/>
            </Border>
            <TextBlock x:Name="ProfileNameValidationText" 
                       Style="{StaticResource ValidationMessageStyle}"
                       Text="{Binding ValidationMessage}"
                       Foreground="{Binding ValidationLevel, Converter={StaticResource ValidationLevelToColorConverter}}"
                       Margin="0,4,0,16"
                       Visibility="{Binding IsValidationVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"
                    Style="{StaticResource ThemedSecondaryButtonStyle}"
                    Padding="20,8" Margin="0,0,10,0"/>
            
            <Button x:Name="CreateButton" Content="{Binding ActionButtonText}" Command="{Binding CreateCommand}" IsDefault="True"
                    Style="{StaticResource ThemedButtonStyle}"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>