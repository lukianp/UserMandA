<Window x:Class="MandADiscoverySuite.Dialogs.CompanyProfileSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Company Profile" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Window.Resources>
        <Style x:Key="ValidationMessageStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ValidationLevel}" Value="Error">
                    <Setter Property="Foreground" Value="#FF6B4E"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ValidationLevel}" Value="Success">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ValidationLevel}" Value="Info">
                    <Setter Property="Foreground" Value="#2196F3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Company Profile Selection" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Text="Choose an existing company profile or create a new one for discovery operations." 
                       FontSize="12" 
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Profile Selection Mode -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <RadioButton Name="ExistingProfileRadio" 
                         Content="Use existing profile" 
                         IsChecked="{Binding IsNewProfile, Converter={StaticResource InverseBooleanConverter}}"
                         GroupName="ProfileMode"
                         Margin="0,0,0,10"/>
            <RadioButton Name="NewProfileRadio" 
                         Content="Create new profile" 
                         IsChecked="{Binding IsNewProfile}"
                         GroupName="ProfileMode"/>
        </StackPanel>
        
        <!-- Profile Content -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Existing Profile Selection -->
            <StackPanel Grid.Row="0" 
                        Visibility="{Binding IsNewProfile, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <TextBlock Text="Select Company Profile:" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding ExistingProfiles}" 
                          SelectedItem="{Binding SelectedProfileName}"
                          Height="30"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                <TextBlock Text="Profiles are automatically detected from C:\DiscoveryData"
                           FontSize="10"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- New Profile Creation -->
            <StackPanel Grid.Row="1" 
                        Visibility="{Binding IsNewProfile, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,10,0,0">
                <TextBlock Text="New Profile Name:" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}" 
                         Height="30"
                         IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                <TextBlock Text="Enter a name for the new company profile. A directory structure will be created at C:\DiscoveryData\[ProfileName]"
                           FontSize="10"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,5,0,10"
                           TextWrapping="Wrap"/>
                           
                <!-- Profile Structure Preview -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="Directory Structure:" 
                                   FontWeight="SemiBold" 
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                        <TextBlock FontFamily="Consolas" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}">
                            <Run Text="📁 "/>
                            <Run Text="{Binding NewProfileName, StringFormat='c:\\discoverydata\\{0}\\', FallbackValue='c:\\discoverydata\\[ProfileName]\\'}" FontWeight="SemiBold"/>
                            <LineBreak/>
                            <Run Text="  📁 Credentials (Azure AD app credentials)"/>
                            <LineBreak/>
                            <Run Text="  📁 Raw (Discovery output CSV files)"/>
                            <LineBreak/>
                            <Run Text="  📁 Logs (Discovery execution logs)"/>
                            <LineBreak/>
                            <Run Text="  📁 Reports (Generated reports)"/>
                            <LineBreak/>
                            <Run Text="  📁 Archives (Historical data)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Validation Message -->
            <TextBlock Grid.Row="2"
                       Text="{Binding ValidationMessage}"
                       Style="{StaticResource ValidationMessageStyle}"
                       Visibility="{Binding IsValidationVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
        
        <!-- Loading Indicator -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="0,15,0,0">
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Height="4"/>
            <TextBlock Text="{Binding LoadingMessage}" 
                       Margin="10,0,0,0" 
                       VerticalAlignment="Center"
                       FontSize="12"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Width="80" 
                    Height="32" 
                    Margin="0,0,10,0"/>
            <Button x:Name="ActionButton" 
                    Content="Select"
                    Command="{Binding SelectCommand}"
                    Width="80" 
                    Height="32" 
                    Style="{DynamicResource PrimaryButtonStyle}"/>
        </StackPanel>
        
        <!-- Error Message -->
        <Border Grid.Row="4" 
                Background="#FFE6E6" 
                BorderBrush="#FF6B6B" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10"
                Margin="0,10,0,0"
                Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       FontSize="12"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>