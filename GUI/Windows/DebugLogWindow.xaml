<Window x:Class="MandADiscoverySuite.Windows.DebugLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Log Viewer" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2a4c82" Offset="0"/>
                                            <GradientStop Color="#3a62a8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Debug Log Viewer" 
                       Foreground="{DynamicResource PrimaryTextBrush}" FontSize="20" FontWeight="SemiBold"
                       VerticalAlignment="Center" Margin="0,0,16,0"/>
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="8,4">
                <TextBlock x:Name="SessionInfo" Text="Session: Main" 
                           Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
            </Border>
        </StackPanel>
        
        <!-- Log Level Controls -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Log Filtering" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="ShowVerbose" Content="Verbose" Foreground="{DynamicResource SecondaryTextBrush}" 
                              IsChecked="{Binding ShowVerbose}" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ShowDebug" Content="Debug" Foreground="{DynamicResource SecondaryTextBrush}" 
                              IsChecked="{Binding ShowDebug}" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ShowInfo" Content="Info" Foreground="{DynamicResource SecondaryTextBrush}" 
                              IsChecked="{Binding ShowInfo}" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ShowWarning" Content="Warning" Foreground="{DynamicResource WarningBrush}" 
                              IsChecked="{Binding ShowWarning}" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ShowError" Content="Error" Foreground="{DynamicResource ErrorBrush}" 
                              IsChecked="{Binding ShowError}" Margin="0,0,16,0"/>
                    <Button Content="Clear" Command="{Binding ClearLogCommand}" Style="{StaticResource ModernButtonStyle}" 
                            Background="{DynamicResource BorderBrush}" Margin="16,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Log Display Area -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" Padding="12">
                <RichTextBox x:Name="LogTextBox" 
                           Background="Transparent" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           BorderThickness="0"
                           IsReadOnly="True"/>
            </ScrollViewer>
        </Border>
        
        <!-- Status and Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <TextBlock x:Name="LogCount" Text="{Binding LogCount}" Foreground="{DynamicResource MutedForegroundBrush}" 
                       FontSize="12" VerticalAlignment="Center" Margin="0,0,16,0"/>
            <Button x:Name="ExportButton" Content="Export Log" Style="{StaticResource ModernButtonStyle}" 
                    Command="{Binding ExportLogCommand}" Margin="0,0,12,0"
                    Background="{DynamicResource SuccessBrush}"/>
            <Button x:Name="RefreshButton" Content="Refresh" Style="{StaticResource ModernButtonStyle}" 
                    Command="{Binding RefreshLogCommand}" Margin="0,0,12,0"
                    Background="{DynamicResource AccentBrush}"/>
            <Button x:Name="CloseButton" Content="Close" Style="{StaticResource ModernButtonStyle}" 
                    Command="{Binding CloseCommand}"
                    Background="#4A5568"/>
        </StackPanel>
    </Grid>
</Window>