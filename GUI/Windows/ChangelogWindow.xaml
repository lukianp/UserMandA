<Window x:Class="MandADiscoverySuite.Windows.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="What's New - M&amp;A Discovery Suite" 
        Height="600" Width="800"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Style="{StaticResource CustomWindowStyle}">

    <Window.Resources>
        <!-- Changelog Item Template -->
        <DataTemplate x:Key="ChangelogItemTemplate">
            <Border Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,16"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" 
                                    ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with version and date -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Version Badge -->
                        <Border Grid.Column="0" 
                                Background="{DynamicResource AccentBrush}"
                                CornerRadius="12"
                                Padding="8,4">
                            <TextBlock Text="{Binding Version}"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                        </Border>
                        
                        <!-- Title -->
                        <TextBlock Grid.Column="1"
                                 Text="{Binding Title}"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 VerticalAlignment="Center"
                                 Margin="12,0,12,0"/>
                        
                        <!-- Date -->
                        <TextBlock Grid.Column="2"
                                 Text="{Binding ReleaseDate, StringFormat='MMM dd, yyyy'}"
                                 FontSize="12"
                                 Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                 VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Description -->
                    <TextBlock Grid.Row="1"
                             Text="{Binding Description}"
                             FontSize="14"
                             Foreground="{DynamicResource ForegroundSecondaryBrush}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,16"
                             Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                    
                    <!-- New Features -->
                    <ItemsControl Grid.Row="2" 
                                ItemsSource="{Binding NewFeatures}"
                                Margin="0,0,0,8"
                                Visibility="{Binding NewFeatures.Count, Converter={StaticResource IntToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="ðŸŽ‰" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding}" 
                                             FontSize="13"
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Improvements -->
                    <ItemsControl Grid.Row="3" 
                                ItemsSource="{Binding Improvements}"
                                Visibility="{Binding Improvements.Count, Converter={StaticResource IntToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="âœ¨" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding}" 
                                             FontSize="13"
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Animation for items -->
        <Storyboard x:Key="ItemSlideIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Grid Grid.Column="0" Width="48" Height="48" 
                      Background="{DynamicResource AccentBrush}"
                      Margin="0,0,16,0">
                    <Grid.Clip>
                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,48,48"/>
                    </Grid.Clip>
                    <TextBlock Text="ðŸ“‹" FontSize="24" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Title and subtitle -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="What's New"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock Text="Recent updates and improvements to M&amp;A Discovery Suite"
                             FontSize="14"
                             Foreground="{DynamicResource ForegroundSecondaryBrush}"
                             Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button Grid.Column="2"
                        Content="âœ•"
                        Style="{StaticResource FluentIconButtonStyle}"
                        Width="32" Height="32"
                        FontSize="14"
                        Click="CloseButton_Click"
                        ToolTip="Close"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="32,24">
            <ItemsControl x:Name="ChangelogItemsControl"
                         ItemsSource="{Binding ChangelogEntries}"
                         ItemTemplate="{StaticResource ChangelogItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TranslateTransform/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource ItemSlideIn}"/>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Version info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Current Version:"
                             Foreground="{DynamicResource ForegroundSecondaryBrush}"
                             FontSize="12"/>
                    <TextBlock x:Name="CurrentVersionText"
                             Text="2.1.0"
                             Foreground="{DynamicResource AccentBrush}"
                             FontWeight="SemiBold"
                             FontSize="12"
                             Margin="4,0,0,0"/>
                </StackPanel>
                
                <!-- Don't show again -->
                <CheckBox Grid.Column="1"
                         x:Name="DontShowAgainCheckBox"
                         Content="Don't show on startup"
                         FontSize="12"
                         Foreground="{DynamicResource ForegroundSecondaryBrush}"
                         Margin="0,0,16,0"/>
                
                <!-- OK Button -->
                <Button Grid.Column="2"
                       Content="Got it"
                       Style="{StaticResource FluentButtonStyle}"
                       Padding="20,8"
                       Click="OkButton_Click"
                       IsDefault="True"/>
            </Grid>
        </Border>
    </Grid>
    
    <!-- Window entry animation -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                   From="0.95" To="1" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                   From="0.95" To="1" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    
    <Window.RenderTransform>
        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
    </Window.RenderTransform>
</Window>