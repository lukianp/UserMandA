<Window x:Class="MandADiscoverySuite.Windows.PowerShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PowerShell Execution" Height="600" Width="900"
    WindowStartupLocation="CenterOwner"
    Background="{DynamicResource BackgroundBrush}"
    ResizeMode="CanResize">
    
    <Window.Resources>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF2a4c82" Offset="0"/>
                                            <GradientStop Color="#FF3a62a8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF1a2c52" Offset="0"/>
                                            <GradientStop Color="#FF2a4278" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" x:Name="WindowTitle" Text="PowerShell Script Execution"
                   Foreground="{DynamicResource PrimaryTextBrush}" FontSize="20" FontWeight="SemiBold"
                   Margin="0,0,0,16"/>
        
        <!-- Script Info -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="ScriptName" Text="Script: DiscoveryCreateAppRegistration.ps1" 
                           Foreground="{DynamicResource AccentBrush}" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                <TextBlock x:Name="ScriptDescription" 
                           Text="Creates Azure AD app registration with comprehensive permissions for M&amp;A environment discovery"
                           Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Output Area -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <ScrollViewer x:Name="OutputScrollViewer" VerticalScrollBarVisibility="Auto" Padding="12">
                <TextBox x:Name="OutputText" FontFamily="Consolas" FontSize="12" 
                         Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap" 
                         Background="Transparent" BorderThickness="0"
                         IsReadOnly="True" 
                         SelectionBrush="#FF4299E1"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         KeyDown="OutputText_KeyDown">
                    <TextBox.ContextMenu>
                        <ContextMenu Background="{DynamicResource SurfaceBrush}" Foreground="{DynamicResource SecondaryTextBrush}">
                            <MenuItem Header="Select All" Click="SelectAll_Click" InputGestureText="Ctrl+A"/>
                            <MenuItem Header="Copy" Click="CopySelected_Click" InputGestureText="Ctrl+C"/>
                            <MenuItem Header="Copy All Output" Click="CopyButton_Click" InputGestureText="Ctrl+Shift+C"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
            </ScrollViewer>
        </Border>
        
        <!-- Progress Bar -->
        <ProgressBar Grid.Row="3" x:Name="ExecutionProgress" Height="4" 
                     Background="{DynamicResource SurfaceBrush}" Foreground="{DynamicResource AccentBrush}" 
                     Margin="0,12,0,12" Visibility="Collapsed"/>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RunButton" Content="â–¶ Run Script" Style="{StaticResource ModernButtonStyle}" 
                    Click="RunButton_Click" Margin="0,0,12,0"
                    Background="{DynamicResource SuccessBrush}"/>
            <Button x:Name="StopButton" Content="â¹ Stop" Style="{StaticResource ModernButtonStyle}" 
                    Click="StopButton_Click" Margin="0,0,12,0" IsEnabled="False"
                    Background="{DynamicResource ErrorBrush}"/>
            <Button x:Name="CopyButton" Content="ðŸ“‹ Copy Output" Style="{StaticResource ModernButtonStyle}" 
                    Click="CopyButton_Click" Margin="0,0,12,0"
                    Background="#FF4299E1"/>
            <Button x:Name="ClearButton" Content="ðŸ—‘ Clear" Style="{StaticResource ModernButtonStyle}" 
                    Click="ClearButton_Click" Margin="0,0,12,0"
                    Background="{DynamicResource BorderBrush}"/>
            <Button x:Name="CloseButton" Content="âœ– Close" Style="{StaticResource ModernButtonStyle}" 
                    Click="CloseButton_Click"
                    Background="#FF4A5568"/>
        </StackPanel>
    </Grid>
</Window>
