<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Consistent Spacing System -->
    <!-- Base unit: 4px for consistent rhythm -->
    
    <!-- Spacing Values -->
    <sys:Double x:Key="SpacingXS">4</sys:Double>
    <sys:Double x:Key="SpacingS">8</sys:Double>
    <sys:Double x:Key="SpacingM">16</sys:Double>
    <sys:Double x:Key="SpacingL">24</sys:Double>
    <sys:Double x:Key="SpacingXL">32</sys:Double>
    <sys:Double x:Key="SpacingXXL">48</sys:Double>
    <sys:Double x:Key="SpacingXXXL">64</sys:Double>
    
    <!-- Thickness Values for Margins/Padding -->
    <Thickness x:Key="MarginXS">4</Thickness>
    <Thickness x:Key="MarginS">8</Thickness>
    <Thickness x:Key="MarginM">16</Thickness>
    <Thickness x:Key="MarginL">24</Thickness>
    <Thickness x:Key="MarginXL">32</Thickness>
    
    <Thickness x:Key="PaddingXS">4</Thickness>
    <Thickness x:Key="PaddingS">8</Thickness>
    <Thickness x:Key="PaddingM">16</Thickness>
    <Thickness x:Key="PaddingL">24</Thickness>
    <Thickness x:Key="PaddingXL">32</Thickness>
    
    <!-- Component-Specific Spacing -->
    <Thickness x:Key="CardPadding">20</Thickness>
    <Thickness x:Key="CardMargin">8</Thickness>
    <Thickness x:Key="ButtonPadding">12,8</Thickness>
    <Thickness x:Key="TextBoxPadding">12,8</Thickness>
    <Thickness x:Key="DialogPadding">24</Thickness>
    <Thickness x:Key="SectionMargin">0,0,0,16</Thickness>
    <Thickness x:Key="ListItemPadding">12,8</Thickness>
    <Thickness x:Key="TabPadding">16,12</Thickness>
    
    <!-- Grid Row/Column Spacing -->
    <GridLength x:Key="GridSpacingS">8</GridLength>
    <GridLength x:Key="GridSpacingM">16</GridLength>
    <GridLength x:Key="GridSpacingL">24</GridLength>
    
    <!-- Corner Radius Values -->
    <CornerRadius x:Key="CornerRadiusS">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusM">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusL">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXL">16</CornerRadius>
    
    <!-- Typography System -->
    <sys:Double x:Key="FontSizeXS">10</sys:Double>
    <sys:Double x:Key="FontSizeS">12</sys:Double>
    <sys:Double x:Key="FontSizeM">14</sys:Double>
    <sys:Double x:Key="FontSizeL">16</sys:Double>
    <sys:Double x:Key="FontSizeXL">20</sys:Double>
    <sys:Double x:Key="FontSizeXXL">24</sys:Double>
    <sys:Double x:Key="FontSizeXXXL">32</sys:Double>
    <sys:Double x:Key="FontSizeDisplay">48</sys:Double>
    
    <!-- Line Heights -->
    <sys:Double x:Key="LineHeightTight">1.2</sys:Double>
    <sys:Double x:Key="LineHeightNormal">1.5</sys:Double>
    <sys:Double x:Key="LineHeightRelaxed">1.75</sys:Double>
    <sys:Double x:Key="LineHeightLoose">2</sys:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
    <!-- Typography Styles -->
    <Style x:Key="HeadingXL" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXXL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style x:Key="HeadingL" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <Style x:Key="HeadingM" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style x:Key="HeadingS" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <Style x:Key="BodyTextSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    
    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <Style x:Key="ButtonText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
    </Style>
    
    <!-- Animation Durations -->
    <Duration x:Key="AnimationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationNormal">0:0:0.3</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.5</Duration>
    
    <!-- Easing Functions -->
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <ExponentialEase x:Key="EaseIn" EasingMode="EaseIn"/>
    
</ResourceDictionary>