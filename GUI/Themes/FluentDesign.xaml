<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fluent Design System Colors -->
    
    <!-- System Colors -->
    <Color x:Key="SystemAccentColor">#0078D4</Color>
    <Color x:Key="SystemAccentColorLight1">#40E0FF</Color>
    <Color x:Key="SystemAccentColorLight2">#99EBFF</Color>
    <Color x:Key="SystemAccentColorLight3">#CCF5FF</Color>
    <Color x:Key="SystemAccentColorDark1">#005A9E</Color>
    <Color x:Key="SystemAccentColorDark2">#004578</Color>
    <Color x:Key="SystemAccentColorDark3">#003E5C</Color>

    <!-- Light Theme Colors -->
    <Color x:Key="LightSystemChromeLow">#F2F2F2</Color>
    <Color x:Key="LightSystemChromeMediumLow">#E6E6E6</Color>
    <Color x:Key="LightSystemChromeMedium">#CCCCCC</Color>
    <Color x:Key="LightSystemChromeHigh">#B3B3B3</Color>
    <Color x:Key="LightSystemChromeAltLow">#F2F2F2</Color>
    <Color x:Key="LightSystemListLow">#F9F9F9</Color>
    <Color x:Key="LightSystemListMedium">#E6E6E6</Color>
    <Color x:Key="LightSystemAltHigh">#FFFFFF</Color>
    <Color x:Key="LightSystemAltMediumHigh">#FFFFFF</Color>
    <Color x:Key="LightSystemAltMedium">#E6E6E6</Color>
    <Color x:Key="LightSystemAltLow">#E6E6E6</Color>
    <Color x:Key="LightSystemBaseHigh">#000000</Color>
    <Color x:Key="LightSystemBaseMediumHigh">#CC000000</Color>
    <Color x:Key="LightSystemBaseMedium">#99000000</Color>
    <Color x:Key="LightSystemBaseLow">#33000000</Color>

    <!-- Dark Theme Colors -->
    <Color x:Key="DarkSystemChromeLow">#171717</Color>
    <Color x:Key="DarkSystemChromeMediumLow">#2B2B2B</Color>
    <Color x:Key="DarkSystemChromeMedium">#1C1C1C</Color>
    <Color x:Key="DarkSystemChromeHigh">#767676</Color>
    <Color x:Key="DarkSystemChromeAltLow">#171717</Color>
    <Color x:Key="DarkSystemListLow">#1A1A1A</Color>
    <Color x:Key="DarkSystemListMedium">#2B2B2B</Color>
    <Color x:Key="DarkSystemAltHigh">#000000</Color>
    <Color x:Key="DarkSystemAltMediumHigh">#CC000000</Color>
    <Color x:Key="DarkSystemAltMedium">#1A1A1A</Color>
    <Color x:Key="DarkSystemAltLow">#1A1A1A</Color>
    <Color x:Key="DarkSystemBaseHigh">#FFFFFF</Color>
    <Color x:Key="DarkSystemBaseMediumHigh">#CCFFFFFF</Color>
    <Color x:Key="DarkSystemBaseMedium">#99FFFFFF</Color>
    <Color x:Key="DarkSystemBaseLow">#33FFFFFF</Color>

    <!-- Fluent Brushes -->
    <SolidColorBrush x:Key="FluentAccentBrush" Color="{DynamicResource SystemAccentColor}"/>
    <SolidColorBrush x:Key="FluentAccentLightBrush" Color="{DynamicResource SystemAccentColorLight1}"/>
    <SolidColorBrush x:Key="FluentAccentDarkBrush" Color="{DynamicResource SystemAccentColorDark1}"/>

    <!-- Dynamic Theme Brushes -->
    <SolidColorBrush x:Key="FluentSystemChromeLowBrush" Color="{DynamicResource SystemChromeLowColor}"/>
    <SolidColorBrush x:Key="FluentSystemChromeMediumLowBrush" Color="{DynamicResource SystemChromeMediumLowColor}"/>
    <SolidColorBrush x:Key="FluentSystemChromeMediumBrush" Color="{DynamicResource SystemChromeMediumColor}"/>
    <SolidColorBrush x:Key="FluentSystemChromeHighBrush" Color="{DynamicResource SystemChromeHighColor}"/>
    <SolidColorBrush x:Key="FluentSystemListLowBrush" Color="{DynamicResource SystemListLowColor}"/>
    <SolidColorBrush x:Key="FluentSystemListMediumBrush" Color="{DynamicResource SystemListMediumColor}"/>
    <SolidColorBrush x:Key="FluentSystemAltHighBrush" Color="{DynamicResource SystemAltHighColor}"/>
    <SolidColorBrush x:Key="FluentSystemBaseLowBrush" Color="{DynamicResource SystemBaseLowColor}"/>
    <SolidColorBrush x:Key="FluentSystemBaseMediumBrush" Color="{DynamicResource SystemBaseMediumColor}"/>
    <SolidColorBrush x:Key="FluentSystemBaseHighBrush" Color="{DynamicResource SystemBaseHighColor}"/>

    <!-- Fluent Design Effects -->
    
    <!-- Acrylic Background Effect -->
    <LinearGradientBrush x:Key="AcrylicBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#80FFFFFF" Offset="0"/>
            <GradientStop Color="#60FFFFFF" Offset="0.5"/>
            <GradientStop Color="#80FFFFFF" Offset="1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AcrylicDarkBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#80000000" Offset="0"/>
            <GradientStop Color="#60000000" Offset="0.5"/>
            <GradientStop Color="#80000000" Offset="1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <!-- Reveal Effect Brushes -->
    <RadialGradientBrush x:Key="RevealBorderBrush" RadiusX="0.5" RadiusY="0.5">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#40FFFFFF" Offset="0"/>
            <GradientStop Color="#20FFFFFF" Offset="0.8"/>
            <GradientStop Color="#00FFFFFF" Offset="1"/>
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="RevealBackgroundBrush" RadiusX="0.8" RadiusY="0.8">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#10FFFFFF" Offset="0"/>
            <GradientStop Color="#05FFFFFF" Offset="0.8"/>
            <GradientStop Color="#00FFFFFF" Offset="1"/>
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <!-- Fluent Button Style -->
    <Style x:Key="FluentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource FluentSystemChromeLowBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource FluentSystemBaseHighBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FluentSystemChromeMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BackgroundBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        
                        <!-- Reveal Effect Layer -->
                        <Border x:Name="RevealBorder"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="4"
                                Opacity="0">
                            <ContentPresenter x:Name="ContentPresenter"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"
                                            RecognizesAccessKey="True"/>
                        </Border>
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" 
                                    Value="{DynamicResource FluentSystemChromeMediumLowBrush}"/>
                            <Setter TargetName="RevealBorder" Property="Background" 
                                    Value="{StaticResource RevealBackgroundBrush}"/>
                            <Setter TargetName="RevealBorder" Property="BorderBrush" 
                                    Value="{StaticResource RevealBorderBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RevealBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RevealBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" 
                                    Value="{DynamicResource FluentSystemChromeMediumBrush}"/>
                            <Setter TargetName="ContentPresenter" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ContentPresenter" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                        
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent Accent Button Style -->
    <Style x:Key="FluentAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource FluentButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource FluentAccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FluentAccentDarkBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource FluentAccentLightBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource FluentAccentDarkBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Fluent TextBox Style -->
    <Style x:Key="FluentTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource FluentSystemAltHighBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource FluentSystemBaseHighBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FluentSystemChromeMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="BackgroundBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                            
                            <!-- Placeholder Text -->
                            <TextBlock x:Name="PlaceholderText"
                                      Text="{TemplateBinding Tag}"
                                      Foreground="{DynamicResource FluentSystemBaseMediumBrush}"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      IsHitTestVisible="False"
                                      Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="BorderBrush" 
                                    Value="{DynamicResource FluentSystemChromeHighBrush}"/>
                        </Trigger>
                        
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="BorderBrush" 
                                    Value="{DynamicResource FluentAccentBrush}"/>
                            <Setter TargetName="BackgroundBorder" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                                <Condition Property="IsFocused" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                        </MultiTrigger>
                        
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent Card Style -->
    <Style x:Key="FluentCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource FluentSystemAltHighBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FluentSystemChromeLowBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" 
                                Opacity="0.1" 
                                ShadowDepth="2" 
                                BlurRadius="8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" 
                                        Opacity="0.15" 
                                        ShadowDepth="4" 
                                        BlurRadius="12"/>
                    </Setter.Value>
                </Setter>
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1.02" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.02" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Fluent ListView Style -->
    <Style x:Key="FluentListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Margin" Value="0,1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="ItemBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                    
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                                
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" 
                                                Value="{DynamicResource FluentSystemListLowBrush}"/>
                                    </Trigger>
                                    
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" 
                                                Value="{DynamicResource FluentAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>