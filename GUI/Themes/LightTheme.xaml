<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/> <!-- White background -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F9FAFB"/> <!-- Light gray surface -->
    <SolidColorBrush x:Key="CardBrush" Color="#F3F4F6"/> <!-- Card backgrounds -->
    <SolidColorBrush x:Key="ElevatedBrush" Color="#EDEDF0"/> <!-- Elevated surfaces -->

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFF"/> <!-- Primary background -->
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#1F2937"/> <!-- Primary foreground for text -->

    <!-- Text Colors -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#1F2937"/> <!-- Primary text -->
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#374151"/> <!-- Secondary text -->
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#6B7280"/> <!-- Muted text -->
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#9CA3AF"/> <!-- Disabled text -->
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/> <!-- Default borders -->
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#3B82F6"/> <!-- Focus borders -->
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#93C5FD"/> <!-- Hover borders -->
    
    <!-- Accent Colors (Default Blue) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/> <!-- Primary accent -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#DBEAFE"/> <!-- Light accent -->
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#1D4ED8"/> <!-- Dark accent -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#60A5FA"/> <!-- Hover accent -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#2563EB"/> <!-- Pressed accent -->
    
    <!-- State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#059669"/> <!-- Success green -->
    <SolidColorBrush x:Key="WarningBrush" Color="#D97706"/> <!-- Warning amber -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/> <!-- Error red -->
    <SolidColorBrush x:Key="InfoBrush" Color="#0891B2"/> <!-- Info cyan -->
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F4F6"/> <!-- Hover overlay -->
    <SolidColorBrush x:Key="PressedBrush" Color="#E5E7EB"/> <!-- Pressed overlay -->
    <SolidColorBrush x:Key="SelectedBrush" Color="#DBEAFE"/> <!-- Selected items -->
    <SolidColorBrush x:Key="FocusBrush" Color="#DBEAFE"/> <!-- Focus overlay -->
    
    <!-- Input Controls -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/> <!-- Input backgrounds -->
    <SolidColorBrush x:Key="InputBorderBrush" Color="#D1D5DB"/> <!-- Input borders -->
    <SolidColorBrush x:Key="InputFocusBrush" Color="#3B82F6"/> <!-- Input focus -->
    <SolidColorBrush x:Key="InputDisabledBrush" Color="#F3F4F6"/> <!-- Disabled inputs -->
    
    <!-- Additional Theme Keys -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F2937"/> <!-- Primary text (same as ForegroundBrush) -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#374151"/> <!-- Secondary text (same as SecondaryForegroundBrush) -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#60A5FA"/> <!-- Button hover (same as AccentHoverBrush) -->
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#E5E7EB"/> <!-- Button pressed (same as PressedBrush) -->
    <SolidColorBrush x:Key="InputFocusedBackgroundBrush" Color="#DBEAFE"/> <!-- Input focused background -->
    <SolidColorBrush x:Key="ValidBorderBrush" Color="#059669"/> <!-- Valid input border -->
    <SolidColorBrush x:Key="InvalidBorderBrush" Color="#DC2626"/> <!-- Invalid input border -->

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#DC2626" Offset="0"/>
        <GradientStop Color="#B91C1C" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>