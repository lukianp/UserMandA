<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFFFF"/> <!-- White background -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFF9FAFB"/> <!-- Light gray surface -->
    <SolidColorBrush x:Key="CardBrush" Color="#FFF3F4F6"/> <!-- Card backgrounds -->
    <SolidColorBrush x:Key="ElevatedBrush" Color="#FFEDEDF0"/> <!-- Elevated surfaces -->
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF1F2937"/> <!-- Primary text -->
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FF374151"/> <!-- Secondary text -->
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#FF6B7280"/> <!-- Muted text -->
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#FF9CA3AF"/> <!-- Disabled text -->
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FFD1D5DB"/> <!-- Default borders -->
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#FF3B82F6"/> <!-- Focus borders -->
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#FF93C5FD"/> <!-- Hover borders -->
    
    <!-- Accent Colors (Default Blue) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/> <!-- Primary accent -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FFDBEAFE"/> <!-- Light accent -->
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#FF1D4ED8"/> <!-- Dark accent -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF60A5FA"/> <!-- Hover accent -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FF2563EB"/> <!-- Pressed accent -->
    
    <!-- State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF059669"/> <!-- Success green -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FFD97706"/> <!-- Warning amber -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFDC2626"/> <!-- Error red -->
    <SolidColorBrush x:Key="InfoBrush" Color="#FF0891B2"/> <!-- Info cyan -->
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#FFF3F4F6"/> <!-- Hover overlay -->
    <SolidColorBrush x:Key="PressedBrush" Color="#FFE5E7EB"/> <!-- Pressed overlay -->
    <SolidColorBrush x:Key="SelectedBrush" Color="#FFDBEAFE"/> <!-- Selected items -->
    <SolidColorBrush x:Key="FocusBrush" Color="#FFDBEAFE"/> <!-- Focus overlay -->
    
    <!-- Input Controls -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFFFF"/> <!-- Input backgrounds -->
    <SolidColorBrush x:Key="InputBorderBrush" Color="#FFD1D5DB"/> <!-- Input borders -->
    <SolidColorBrush x:Key="InputFocusBrush" Color="#FF3B82F6"/> <!-- Input focus -->
    <SolidColorBrush x:Key="InputDisabledBrush" Color="#FFF3F4F6"/> <!-- Disabled inputs -->
    
    <!-- Additional Theme Keys -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FF1F2937"/> <!-- Primary text (same as ForegroundBrush) -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FF374151"/> <!-- Secondary text (same as SecondaryForegroundBrush) -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF60A5FA"/> <!-- Button hover (same as AccentHoverBrush) -->
    <SolidColorBrush x:Key="ValidBorderBrush" Color="#FF059669"/> <!-- Valid input border -->
    <SolidColorBrush x:Key="InvalidBorderBrush" Color="#FFDC2626"/> <!-- Invalid input border -->

</ResourceDictionary>