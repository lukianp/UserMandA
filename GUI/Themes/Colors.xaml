<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Refined Color Palette for MandADiscoverySuite -->
    
    <!-- Primary Brand Colors -->
    <Color x:Key="BrandPrimaryColor">#0066CC</Color>        <!-- Primary -->
    <Color x:Key="BrandSecondaryColor">#2E2E2E</Color>      <!-- Secondary -->
    <Color x:Key="BrandAccentColor">#FF6B35</Color>         <!-- Accent -->
    
    <!-- Extended Brand Palette -->
    <Color x:Key="BrandPrimaryLight1">#1A86DA</Color>
    <Color x:Key="BrandPrimaryLight2">#3394E0</Color>
    <Color x:Key="BrandPrimaryLight3">#4DA2E6</Color>
    <Color x:Key="BrandPrimaryDark1">#0068B8</Color>
    <Color x:Key="BrandPrimaryDark2">#00589C</Color>
    <Color x:Key="BrandPrimaryDark3">#004880</Color>

    <!-- Semantic Colors -->

    <!-- Success Colors -->
    <Color x:Key="SuccessColor">#28A745</Color>             <!-- Green -->
    <Color x:Key="SuccessColorLight">#51B25F</Color>
    <Color x:Key="SuccessColorDark">#1E7040</Color>

    <!-- Warning Colors -->
    <Color x:Key="WarningColor">#FFC107</Color>             <!-- Yellow -->
    <Color x:Key="WarningColorLight">#FFCE38</Color>
    <Color x:Key="WarningColorDark">#EBB90F</Color>

    <!-- Error Colors -->
    <Color x:Key="ErrorColor">#DC3545</Color>               <!-- Red -->
    <Color x:Key="ErrorColorLight">#E5766F</Color>
    <Color x:Key="ErrorColorDark">#C7353E</Color>
    
    <!-- Info Colors -->
    <Color x:Key="InfoColor">#4299E1</Color>                <!-- Light Blue -->
    <Color x:Key="InfoColorLight">#63B3ED</Color>
    <Color x:Key="InfoColorDark">#3182CE</Color>

    <!-- Light Theme Palette -->
    
    <!-- Background Colors -->
    <Color x:Key="LightBackgroundColor">#F5F5F5</Color>     <!-- Background -->
    <Color x:Key="LightSurfaceColor">#FFFFFF</Color>        <!-- Pure White -->
    <Color x:Key="LightCardColor">#FFFFFF</Color>           <!-- White -->
    <Color x:Key="LightModalColor">#FFFFFF</Color>          <!-- White -->
    
    <!-- Text Colors -->
    <Color x:Key="LightForegroundColor">#333333</Color>     <!-- Foreground -->
    <Color x:Key="LightForegroundSecondaryColor">#4A5568</Color> <!-- Medium Gray -->
    <Color x:Key="LightMutedForegroundColor">#718096</Color>    <!-- Light Gray -->
    
    <!-- Border and Divider Colors -->
    <Color x:Key="LightBorderColor">#E2E8F0</Color>         <!-- Light Border -->
    <Color x:Key="LightDividerColor">#EDF2F7</Color>        <!-- Very Light Border -->
    
    <!-- Interactive Colors -->
    <Color x:Key="LightHoverColor">#F7FAFC</Color>          <!-- Light Hover -->
    <Color x:Key="LightPressedColor">#EDF2F7</Color>        <!-- Light Pressed -->
    <Color x:Key="LightSelectedColor">#E6FFFA</Color>       <!-- Very Light Teal -->
    <Color x:Key="LightFocusColor">#0078D4</Color>          <!-- Focus Ring -->

    <!-- Dark Theme Palette -->
    
    <!-- Background Colors -->
    <Color x:Key="DarkBackgroundColor">#1A202C</Color>      <!-- Very Dark Blue-Gray -->
    <Color x:Key="DarkSurfaceColor">#2D3748</Color>         <!-- Dark Blue-Gray -->
    <Color x:Key="DarkCardColor">#2D3748</Color>            <!-- Dark Blue-Gray -->
    <Color x:Key="DarkModalColor">#2D3748</Color>           <!-- Dark Blue-Gray -->
    
    <!-- Text Colors -->
    <Color x:Key="DarkForegroundColor">#F7FAFC</Color>      <!-- Very Light Gray -->
    <Color x:Key="DarkForegroundSecondaryColor">#CBD5E0</Color> <!-- Light Gray -->
    <Color x:Key="DarkMutedForegroundColor">#A0AEC0</Color>     <!-- Medium Gray -->
    
    <!-- Border and Divider Colors -->
    <Color x:Key="DarkBorderColor">#4A5568</Color>          <!-- Medium Dark Gray -->
    <Color x:Key="DarkDividerColor">#4A5568</Color>         <!-- Medium Dark Gray -->
    
    <!-- Interactive Colors -->
    <Color x:Key="DarkHoverColor">#4A5568</Color>           <!-- Dark Hover -->
    <Color x:Key="DarkPressedColor">#2D3748</Color>         <!-- Dark Pressed -->
    <Color x:Key="DarkSelectedColor">#234E52</Color>        <!-- Dark Teal -->
    <Color x:Key="DarkFocusColor">#40E0D0</Color>           <!-- Bright Focus -->

    <!-- Specialized Colors -->
    
    <!-- Chart Colors -->
    <Color x:Key="ChartColor1">#0078D4</Color>              <!-- Primary Blue -->
    <Color x:Key="ChartColor2">#40E0D0</Color>              <!-- Turquoise -->
    <Color x:Key="ChartColor3">#48BB78</Color>              <!-- Green -->
    <Color x:Key="ChartColor4">#F6AD55</Color>              <!-- Orange -->
    <Color x:Key="ChartColor5">#E53E3E</Color>              <!-- Red -->
    <Color x:Key="ChartColor6">#9F7AEA</Color>              <!-- Purple -->
    <Color x:Key="ChartColor7">#ED64A6</Color>              <!-- Pink -->
    <Color x:Key="ChartColor8">#38B2AC</Color>              <!-- Teal -->
    
    <!-- Status Indicator Colors -->
    <Color x:Key="OnlineStatusColor">#48BB78</Color>        <!-- Green -->
    <Color x:Key="OfflineStatusColor">#E53E3E</Color>       <!-- Red -->
    <Color x:Key="IdleStatusColor">#F6AD55</Color>          <!-- Orange -->
    <Color x:Key="UnknownStatusColor">#718096</Color>       <!-- Gray -->
    
    <!-- Priority Colors -->
    <Color x:Key="HighPriorityColor">#E53E3E</Color>        <!-- Red -->
    <Color x:Key="MediumPriorityColor">#F6AD55</Color>      <!-- Orange -->
    <Color x:Key="LowPriorityColor">#48BB78</Color>         <!-- Green -->
    <Color x:Key="CriticalPriorityColor">#9B2C2C</Color>    <!-- Dark Red -->

    <!-- Brushes - Light Theme -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="LightCardBrush" Color="{StaticResource LightCardColor}"/>
    <SolidColorBrush x:Key="LightModalBrush" Color="{StaticResource LightModalColor}"/>
    <SolidColorBrush x:Key="LightForegroundBrush" Color="{StaticResource LightForegroundColor}"/>
    <SolidColorBrush x:Key="LightForegroundSecondaryBrush" Color="{StaticResource LightForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="LightMutedForegroundBrush" Color="{StaticResource LightMutedForegroundColor}"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="LightDividerBrush" Color="{StaticResource LightDividerColor}"/>
    <SolidColorBrush x:Key="LightHoverBrush" Color="{StaticResource LightHoverColor}"/>
    <SolidColorBrush x:Key="LightPressedBrush" Color="{StaticResource LightPressedColor}"/>
    <SolidColorBrush x:Key="LightSelectedBrush" Color="{StaticResource LightSelectedColor}"/>
    <SolidColorBrush x:Key="LightFocusBrush" Color="{StaticResource LightFocusColor}"/>

    <!-- Brushes - Dark Theme -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="{StaticResource DarkSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkCardBrush" Color="{StaticResource DarkCardColor}"/>
    <SolidColorBrush x:Key="DarkModalBrush" Color="{StaticResource DarkModalColor}"/>
    <SolidColorBrush x:Key="DarkForegroundBrush" Color="{StaticResource DarkForegroundColor}"/>
    <SolidColorBrush x:Key="DarkForegroundSecondaryBrush" Color="{StaticResource DarkForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkMutedForegroundBrush" Color="{StaticResource DarkMutedForegroundColor}"/>
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorderColor}"/>
    <SolidColorBrush x:Key="DarkDividerBrush" Color="{StaticResource DarkDividerColor}"/>
    <SolidColorBrush x:Key="DarkHoverBrush" Color="{StaticResource DarkHoverColor}"/>
    <SolidColorBrush x:Key="DarkPressedBrush" Color="{StaticResource DarkPressedColor}"/>
    <SolidColorBrush x:Key="DarkSelectedBrush" Color="{StaticResource DarkSelectedColor}"/>
    <SolidColorBrush x:Key="DarkFocusBrush" Color="{StaticResource DarkFocusColor}"/>

    <!-- Shared Brushes -->
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}"/>
    <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccentColor}"/>
    
    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="OnlineStatusBrush" Color="{StaticResource OnlineStatusColor}"/>
    <SolidColorBrush x:Key="OfflineStatusBrush" Color="{StaticResource OfflineStatusColor}"/>
    <SolidColorBrush x:Key="IdleStatusBrush" Color="{StaticResource IdleStatusColor}"/>
    <SolidColorBrush x:Key="UnknownStatusBrush" Color="{StaticResource UnknownStatusColor}"/>
    
    <!-- Priority Brushes -->
    <SolidColorBrush x:Key="HighPriorityBrush" Color="{StaticResource HighPriorityColor}"/>
    <SolidColorBrush x:Key="MediumPriorityBrush" Color="{StaticResource MediumPriorityColor}"/>
    <SolidColorBrush x:Key="LowPriorityBrush" Color="{StaticResource LowPriorityColor}"/>
    <SolidColorBrush x:Key="CriticalPriorityBrush" Color="{StaticResource CriticalPriorityColor}"/>

    <!-- Gradient Brushes -->
    
    <!-- Primary Gradients -->
    <LinearGradientBrush x:Key="BrandGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BrandPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BrandAccentColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Success Gradient -->
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SuccessColor}" Offset="0"/>
        <GradientStop Color="{StaticResource SuccessColorLight}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Warning Gradient -->
    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource WarningColor}" Offset="0"/>
        <GradientStop Color="{StaticResource WarningColorLight}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Error Gradient -->
    <LinearGradientBrush x:Key="ErrorGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource ErrorColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ErrorColorLight}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Subtle Background Gradients -->
    <LinearGradientBrush x:Key="SubtleLightGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F7FAFC" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SubtleDarkGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2D3748" Offset="0"/>
        <GradientStop Color="#1A202C" Offset="1"/>
    </LinearGradientBrush>

    <!-- Dynamic Theme Resources -->
    <!-- These will be overridden by theme switching -->
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource LightCardColor}"/>
    <SolidColorBrush x:Key="ModalBrush" Color="{StaticResource LightModalColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource LightForegroundColor}"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="{StaticResource LightForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource LightMutedForegroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource LightDividerColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource LightHoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource LightPressedColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource LightSelectedColor}"/>
    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource LightFocusColor}"/>
    
    <!-- Alias brushes for compatibility -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource BrandAccentColor}"/>
    
    <!-- Button-specific color variations -->
    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource LightHoverColor}"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource LightPressedColor}"/>
    
    <!-- List item color variations -->
    <SolidColorBrush x:Key="ListItemBackgroundPointerOver" Color="{StaticResource LightHoverColor}"/>
    <SolidColorBrush x:Key="ListItemBackgroundSelected" Color="{StaticResource LightSelectedColor}"/>
    
    <!-- Chart Color Collection -->
    <x:Array x:Key="ChartColorArray" Type="Color">
        <Color>#0078D4</Color>
        <Color>#40E0D0</Color>
        <Color>#48BB78</Color>
        <Color>#F6AD55</Color>
        <Color>#E53E3E</Color>
        <Color>#9F7AEA</Color>
        <Color>#ED64A6</Color>
        <Color>#38B2AC</Color>
    </x:Array>
    
    <!-- Data Visualization Colors -->
    <Color x:Key="DataPositiveColor">#48BB78</Color>        <!-- Green for positive values -->
    <Color x:Key="DataNegativeColor">#E53E3E</Color>        <!-- Red for negative values -->
    <Color x:Key="DataNeutralColor">#718096</Color>         <!-- Gray for neutral values -->
    <Color x:Key="DataHighlightColor">#40E0D0</Color>       <!-- Turquoise for highlights -->

    <!-- Missing brushes for OneDriveBusinessDiscoveryView compatibility -->
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource DarkMutedForegroundBrush}" />

</ResourceDictionary>