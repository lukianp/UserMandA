<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- High Contrast Theme Color Palette -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FF101010"/>
    <SolidColorBrush x:Key="ElevatedBrush" Color="#FF202020"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#FF999999"/>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#FF666666"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#FFFFFF7F"/>

    <!-- Accent Colors (Default Yellow) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FFFFFF7F"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#FF999900"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FFFFFF33"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FFCCCC00"/>

    <!-- State Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF00FF00"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFFA500"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF0000"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#FF00FFFF"/>

    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#FF202020"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#FF404040"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="FocusBrush" Color="#FFFFFF00"/>

    <!-- Input Controls -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="InputFocusBrush" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="InputDisabledBrush" Color="#FF101010"/>

    <!-- Additional Theme Keys -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFFFFF33"/>
    <SolidColorBrush x:Key="ValidBorderBrush" Color="#FF00FF00"/>
    <SolidColorBrush x:Key="InvalidBorderBrush" Color="#FFFF0000"/>

</ResourceDictionary>
