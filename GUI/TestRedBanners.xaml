<Window x:Class="MandADiscoverySuite.TestRedBanners"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MandADiscoverySuite.Views"
        Title="Test Red Banners" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Converters.xaml"/>
                <ResourceDictionary Source="Resources/DataGridTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <TabControl>
            <TabItem Header="Users">
                <views:UsersViewNew x:Name="UsersView"/>
            </TabItem>
            <TabItem Header="Applications">
                <views:ApplicationsViewNew x:Name="ApplicationsView"/>
            </TabItem>
            <TabItem Header="Groups">
                <views:GroupsViewNew x:Name="GroupsView"/>
            </TabItem>
            <TabItem Header="File Servers">
                <views:FileServersViewNew x:Name="FileServersView"/>
            </TabItem>
            <TabItem Header="Databases">
                <views:DatabasesViewNew x:Name="DatabasesView"/>
            </TabItem>
            <TabItem Header="Group Policies">
                <views:GroupPoliciesViewNew x:Name="GroupPoliciesView"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>