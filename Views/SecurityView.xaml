<UserControl x:Class="MandADiscoverySuite.Views.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Security" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBlock Text="Security groups and group policies overview" 
                       FontSize="14" Foreground="{DynamicResource MutedForegroundBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Header Warnings Banner -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding HeaderWarnings}" 
                      Visibility="{Binding HeaderWarnings.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource ErrorBrush}" Opacity="0.3" Padding="10" Margin="0,0,0,5" CornerRadius="4">
                        <TextBlock Text="{Binding}" Foreground="White" FontWeight="Medium"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Error Banner -->
        <Border Grid.Row="2" Background="{DynamicResource ErrorBrush}" Opacity="0.3" Padding="10" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding LastError, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding LastError}" Foreground="White" FontWeight="Medium"/>
        </Border>
        
        <!-- Security KPI Cards -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="15" Margin="0,0,10,0" BorderBrush="#10B981" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Security Groups" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding SecurityGroups.Count}" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                    <TextBlock Text="groups loaded" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="15" Margin="5,0" BorderBrush="#FBBF24" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Group Policies" FontSize="12" Foreground="{DynamicResource MutedForegroundBrush}"/>
                    <TextBlock Text="{Binding GroupPolicies.Count}" FontSize="24" FontWeight="Bold" Foreground="#FBBF24"/>
                    <TextBlock Text="policies loaded" FontSize="10" Foreground="{DynamicResource MutedForegroundBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Security Groups -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="20" Margin="0,0,10,0" BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Security Groups" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                    
                    <!-- Loading State -->
                    <StackPanel Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,10"/>
                        <TextBlock Text="Loading security groups..." FontSize="14" 
                                   Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Security Groups Grid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding SecurityGroups}"
                              Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              Background="{DynamicResource BackgroundBrush}"
                              BorderBrush="{DynamicResource MutedForegroundBrush}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*"/>
                            <DataGridTextColumn Header="Group Type" Binding="{Binding GroupType}" Width="100"/>
                            <DataGridTextColumn Header="Security Enabled" Binding="{Binding SecurityEnabled}" Width="100"/>
                            <DataGridTextColumn Header="Mail Enabled" Binding="{Binding MailEnabled}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- No Data State -->
                    <StackPanel Grid.Row="1" Visibility="{Binding HasData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ›¡ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No security groups found" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Run discovery to populate data" FontSize="14"
                                   Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Group Policies -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                    Padding="20" Margin="10,0,0,0" BorderBrush="{DynamicResource MutedForegroundBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Group Policies" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                    
                    <!-- Loading State -->
                    <StackPanel Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,10"/>
                        <TextBlock Text="Loading group policies..." FontSize="14" 
                                   Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Group Policies Grid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding GroupPolicies}"
                              Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              Background="{DynamicResource BackgroundBrush}"
                              BorderBrush="{DynamicResource MutedForegroundBrush}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="100"/>
                            <DataGridTextColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- No Data State -->
                    <StackPanel Grid.Row="1" Visibility="{Binding HasData, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No group policies found" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Run discovery to populate data" FontSize="14"
                                   Foreground="{DynamicResource MutedForegroundBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>