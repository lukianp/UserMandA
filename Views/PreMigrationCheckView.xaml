<UserControl x:Class="MandADiscoverySuite.Views.PreMigrationCheckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MandADiscoverySuite.Controls"
             xmlns:vm="clr-namespace:MandADiscoverySuite.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:PreMigrationCheckViewModel}"
             Background="#0F1419">

    <UserControl.Resources>
        <!-- Style for status indicators -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <!-- Style for action buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Style for filter controls -->
        <Style x:Key="FilterStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <!-- Data template for eligibility items -->
        <DataTemplate x:Key="EligibilityItemTemplate">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!-- Status indicator -->
                <Ellipse Grid.Column="0" Style="{StaticResource StatusIndicatorStyle}">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{Binding IsEligible, Converter={StaticResource BoolToColorConverter}, 
                                       ConverterParameter='Green|Red'}"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Name -->
                <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" 
                          VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                          ToolTip="{Binding Name}"/>

                <!-- Type -->
                <TextBlock Grid.Column="2" Text="{Binding Type}" 
                          VerticalAlignment="Center" FontSize="11" Foreground="Gray"/>

                <!-- Eligibility Status -->
                <TextBlock Grid.Column="3" Text="{Binding EligibilityStatus}" 
                          VerticalAlignment="Center" FontWeight="Medium">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="{Binding IsEligible, Converter={StaticResource BoolToColorConverter}, 
                                       ConverterParameter='Green|Red'}"/>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Mapping Status -->
                <TextBlock Grid.Column="4" Text="{Binding MappingStatus}" 
                          VerticalAlignment="Center" FontSize="11"/>

                <!-- Issues Summary -->
                <TextBlock Grid.Column="5" Text="{Binding IssuesSummary}" 
                          VerticalAlignment="Center" FontSize="11" Foreground="DarkRed"
                          TextWrapping="Wrap" MaxHeight="40" ToolTip="{Binding IssuesSummary}"/>

                <!-- Actions -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Map" Command="{Binding DataContext.CreateMappingCommand, 
                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                           CommandParameter="{Binding}" Style="{StaticResource ActionButtonStyle}"
                           Visibility="{Binding IsEligible, Converter={StaticResource BoolToVisibilityConverter}}"
                           FontSize="10" MinWidth="50" Padding="6,3"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Data template for mapping items -->
        <DataTemplate x:Key="MappingItemTemplate">
            <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="8" 
                   Background="AliceBlue" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <!-- Source Info -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceName}" Margin="5,2"/>

                    <!-- Target Input -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Target ID:" FontWeight="Bold" Margin="0,2"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TargetId}" Margin="5,2"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Target Name:" FontWeight="Bold" Margin="0,2"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TargetName}" Margin="5,2"/>

                    <!-- Notes -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Notes:" FontWeight="Bold" Margin="0,2"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Notes}" Margin="5,2"
                            TextWrapping="Wrap" MaxHeight="60"/>

                    <!-- Actions -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Orientation="Vertical" 
                               VerticalAlignment="Center">
                        <Button Content="Apply" Command="{Binding DataContext.ApplyMappingCommand, 
                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                               CommandParameter="{Binding}" Margin="2" Padding="8,4"/>
                        <Button Content="Remove" Command="{Binding DataContext.RemoveMappingCommand, 
                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                               CommandParameter="{Binding}" Margin="2" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <!-- Title and Actions -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="10" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" Text="Pre-Migration Eligibility Checks" 
                      FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Run Checks" Command="{Binding RunChecksCommand}" 
                       Style="{StaticResource ActionButtonStyle}" FontWeight="Bold"
                       Background="DodgerBlue" Foreground="White"/>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                       Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Export Report" Command="{Binding ExportReportCommand}" 
                       Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Save Mappings" Command="{Binding SaveMappingsCommand}" 
                       Style="{StaticResource ActionButtonStyle}" FontWeight="Bold"
                       Background="Green" Foreground="White"/>
            </StackPanel>
        </DockPanel>

        <!-- Progress Indicator -->
        <Border Grid.Row="1" Grid.ColumnSpan="3" 
               Background="LightYellow" BorderBrush="Orange" BorderThickness="1"
               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
               Margin="10,5" Padding="10" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="{Binding ProgressMessage}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ProgressBar Value="{Binding ProgressPercentage}" Maximum="100" Height="8"/>
                <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0}%'}" 
                          HorizontalAlignment="Right" FontSize="11" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Summary Statistics -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="LightBlue" BorderBrush="DodgerBlue" 
               BorderThickness="1" Margin="10,5" Padding="10" CornerRadius="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="15,0">
                    <Ellipse Width="12" Height="12" Fill="Green" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalEligible, StringFormat='Eligible: {0}'}" 
                              FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,0">
                    <Ellipse Width="12" Height="12" Fill="Red" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalBlocked, StringFormat='Blocked: {0}'}" 
                              FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,0">
                    <Ellipse Width="12" Height="12" Fill="Orange" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalUnmapped, StringFormat='Unmapped: {0}'}" 
                              FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,0">
                    <Ellipse Width="12" Height="12" Fill="Blue" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalMapped, StringFormat='Mapped: {0}'}" 
                              FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="0,0,0,1" 
                   Padding="10,8">
                <StackPanel>
                    <TextBlock Text="Filters" FontWeight="Bold" Margin="0,0,0,5"/>
                    <WrapPanel>
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                MinWidth="150" Margin="0,0,15,0"/>
                        
                        <TextBlock Text="Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedItem="{Binding SelectedTypeFilter}" 
                                 ItemsSource="{Binding TypeFilterOptions}"
                                 Style="{StaticResource FilterStyle}"/>
                        
                        <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedItem="{Binding SelectedStatusFilter}" 
                                 ItemsSource="{Binding StatusFilterOptions}"
                                 Style="{StaticResource FilterStyle}"/>
                        
                        <TextBlock Text="Mapping:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedItem="{Binding SelectedMappingFilter}" 
                                 ItemsSource="{Binding MappingFilterOptions}"
                                 Style="{StaticResource FilterStyle}"/>
                        
                        <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" 
                               Style="{StaticResource ActionButtonStyle}" Margin="15,0,0,0"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Results List -->
            <ListBox Grid.Row="1" ItemsSource="{Binding AllItems}" 
                    SelectedItem="{Binding SelectedItem}"
                    ItemTemplate="{StaticResource EligibilityItemTemplate}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Row="3" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                     Background="LightGray" ResizeBehavior="PreviousAndNext"/>

        <!-- Mapping Panel -->
        <Grid Grid.Row="3" Grid.Column="2" Visibility="{Binding ShowMappingPanel, 
              Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Mapping Panel Header -->
            <Border Grid.Row="0" Background="DodgerBlue" Padding="10">
                <DockPanel LastChildFill="False">
                    <TextBlock DockPanel.Dock="Left" Text="Manual Mappings" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                    <Button DockPanel.Dock="Right" Content="âœ•" 
                           Command="{Binding ShowMappingPanelCommand}"
                           Background="Transparent" Foreground="White" 
                           BorderThickness="0" FontSize="16" Padding="8,4"/>
                </DockPanel>
            </Border>

            <!-- Mapping Items -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock Text="Pending Mappings" FontWeight="Bold" Margin="0,5"/>
                    <ItemsControl ItemsSource="{Binding PendingMappings}"
                                 ItemTemplate="{StaticResource MappingItemTemplate}"/>
                    
                    <TextBlock Text="No pending mappings" 
                              Visibility="{Binding PendingMappings.Count, 
                              Converter={StaticResource IntToVisibilityConverter}, 
                              ConverterParameter=Inverse}"
                              Foreground="Gray" FontStyle="Italic" Margin="10"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Toggle Mapping Panel Button (when panel is hidden) -->
        <Button Grid.Row="3" Grid.Column="2" Content="Manual Mapping"
               Command="{Binding ShowMappingPanelCommand}"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               Margin="10" Padding="10,5"
               Visibility="{Binding ShowMappingPanel, 
               Converter={StaticResource BoolToVisibilityConverter}, 
               ConverterParameter=Inverse}"/>

        <!-- Status Bar -->
        <Border Grid.Row="4" Grid.ColumnSpan="3" Background="LightGray" 
               BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="10,5">
            <DockPanel LastChildFill="False">
                <TextBlock DockPanel.Dock="Left" Text="Ready" VerticalAlignment="Center"/>
                <TextBlock DockPanel.Dock="Right" 
                          Text="{Binding AllItems.Count, StringFormat='Total Items: {0}'}" 
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Empty State -->
        <Border Grid.Row="3" Grid.ColumnSpan="3"
               Background="#1E1E1E" BorderBrush="#4A5568" BorderThickness="1"
               Visibility="{Binding AllItems.Count, 
               Converter={StaticResource IntToVisibilityConverter}, 
               ConverterParameter=Inverse}"
               Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" Margin="0,20"/>
                <TextBlock Text="No Eligibility Data" FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="Click 'Run Checks' to start pre-migration eligibility analysis" 
                          FontSize="14" Foreground="Gray" HorizontalAlignment="Center" 
                          TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center" Margin="0,5,0,20"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>