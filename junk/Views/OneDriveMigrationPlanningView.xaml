<UserControl x:Class="MandADiscoverySuite.Views.OneDriveMigrationPlanningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#0F1419">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- OneDrive-inspired Styles -->
        <Style x:Key="OneDriveCard" TargetType="Border">
            <Setter Property="Background" Value="#1A202C"/>
            <Setter Property="BorderBrush" Value="#2D3748"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatisticCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1B4392" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="3" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1B4392"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#374151"/>
        </Style>
        
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8,8,0,0" 
                                Margin="2,0">
                            <ContentPresenter ContentSource="Header" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1B4392"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource OneDriveCard}" Margin="8,8,8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“ OneDrive Migration Planning" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#1B4392" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Comprehensive OneDrive and file share migration planning with intelligent batch generation" 
                               FontSize="14" 
                               Foreground="#9CA3AF" 
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ” Discover Users" 
                            Command="{Binding DiscoverUsersCommand}" 
                            Style="{StaticResource PrimaryButton}" 
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“‚ Scan File Shares" 
                            Command="{Binding ScanFileSharesCommand}" 
                            Style="{StaticResource PrimaryButton}" 
                            Background="#0891B2"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ”¬ Analyze Content" 
                            Command="{Binding AnalyzeContentCommand}" 
                            Style="{StaticResource PrimaryButton}" 
                            Background="#059669"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Statistics Dashboard -->
        <Border Grid.Row="1" Style="{StaticResource OneDriveCard}" Margin="8,4,8,4">
            <UniformGrid Rows="1" Columns="7">
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalUsers}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Users" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‚" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalFileShares}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="File Shares" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalDataSizeGB, StringFormat='{}{0:F1} GB'}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Data Size" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="â±ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding EstimatedMigrationHours}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Est. Hours" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalMigrationBatches}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Migration Batches" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="âš ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding UsersWithIssues}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Users w/ Issues" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatisticCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“ˆ" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding FileSharesAnalyzed}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Shares Analyzed" 
                                   FontSize="12" 
                                   Foreground="#BFDBFE" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>
        
        <!-- Progress Indicator -->
        <Border Grid.Row="2" 
                Background="#1F2937" 
                CornerRadius="4" 
                Margin="8,0,8,4" 
                Padding="12,6"
                Visibility="{Binding IsAnalysisRunning, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding AnalysisStatusMessage}" 
                               Foreground="White" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <ProgressBar Value="{Binding AnalysisProgress}" 
                                 Maximum="100" 
                                 Height="8" 
                                 Background="#374151" 
                                 Foreground="#1B4392"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding AnalysisProgress, StringFormat='{}{0:F0}%'}" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content Tabs -->
        <TabControl Grid.Row="2" 
                    Background="#0F1419" 
                    BorderThickness="0" 
                    Margin="8,4,8,8">
            
            <!-- Project Settings Tab -->
            <TabItem Header="Project Settings" Style="{StaticResource TabItemStyle}">
                <Border Style="{StaticResource OneDriveCard}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Migration Project Configuration" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Project Name:" Foreground="White" Margin="0,0,0,4"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProjectName}" Background="#374151" Foreground="White" Padding="8" Margin="8,0,0,8"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" Foreground="White" Margin="0,8,0,4"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProjectDescription}" Background="#374151" Foreground="White" Padding="8" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="8,8,0,8"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Source Environment:" Foreground="White" Margin="0,8,0,4"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Text="{Binding SourceEnvironment}" Background="#374151" Foreground="White" Padding="8" Margin="8,8,0,8" IsEditable="True">
                                    <ComboBoxItem Content="File Servers / Network Shares"/>
                                    <ComboBoxItem Content="SharePoint On-Premises"/>
                                    <ComboBoxItem Content="Google Drive"/>
                                    <ComboBoxItem Content="Dropbox Business"/>
                                    <ComboBoxItem Content="Box"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Target Environment:" Foreground="White" Margin="0,8,0,4"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" Text="{Binding TargetEnvironment}" Background="#374151" Foreground="White" Padding="8" Margin="8,8,0,8" IsEditable="True">
                                    <ComboBoxItem Content="OneDrive for Business"/>
                                    <ComboBoxItem Content="SharePoint Online"/>
                                    <ComboBoxItem Content="Microsoft Teams"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Planned Start Date:" Foreground="White" Margin="0,8,0,4"/>
                                <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding PlannedStartDate}" Background="#374151" Foreground="White" Margin="8,8,0,8"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Planned End Date:" Foreground="White" Margin="0,8,0,4"/>
                                <DatePicker Grid.Row="5" Grid.Column="1" SelectedDate="{Binding PlannedEndDate}" Background="#374151" Foreground="White" Margin="8,8,0,8"/>
                            </Grid>
                            
                            <TextBlock Text="Migration Options" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,24,0,8"/>
                            
                            <UniformGrid Columns="2" Rows="3">
                                <CheckBox Content="Preserve Permissions" IsChecked="{Binding PreservePermissions}" Foreground="White" Margin="0,4"/>
                                <CheckBox Content="Migrate Version History" IsChecked="{Binding MigrateVersionHistory}" Foreground="White" Margin="0,4"/>
                                <CheckBox Content="Copy Only Active Files" IsChecked="{Binding CopyOnlyActiveFiles}" Foreground="White" Margin="0,4"/>
                                <CheckBox Content="Enable Delta Sync" IsChecked="{Binding EnableDeltaSync}" Foreground="White" Margin="0,4"/>
                            </UniformGrid>
                            
                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Max Concurrent Migrations:" Foreground="White" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="{Binding MaxConcurrentMigrations}" Background="#374151" Foreground="White" Padding="8" Margin="16,0,0,0" HorizontalContentAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <!-- Users & File Shares Tab -->
            <TabItem Header="Users &amp; File Shares" Style="{StaticResource TabItemStyle}">
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Users Section -->
                    <Border Grid.Column="0" Style="{StaticResource OneDriveCard}" Margin="0,0,4,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="OneDrive Users" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalUsers, StringFormat='({0})'}" FontSize="14" Foreground="#9CA3AF" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0" 
                                         Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="#374151" 
                                         Foreground="White" 
                                         Padding="8" 
                                         BorderThickness="1" 
                                         BorderBrush="#4B5563"/>
                                
                                <CheckBox Grid.Column="1" 
                                          Content="Issues Only" 
                                          IsChecked="{Binding ShowOnlyIssues}" 
                                          Foreground="White" 
                                          Margin="12,0,0,0" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                            
                            <DataGrid Grid.Row="2" 
                                      ItemsSource="{Binding UserDrivesView}" 
                                      SelectedItem="{Binding SelectedUser}"
                                      AutoGenerateColumns="False" 
                                      Background="#1F2937" 
                                      Foreground="White" 
                                      GridLinesVisibility="Horizontal" 
                                      HorizontalGridLinesBrush="#374151" 
                                      BorderThickness="0" 
                                      CanUserAddRows="False"
                                      SelectionChanged="UsersDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="140"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="160"/>
                                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="100"/>
                                    <DataGridTextColumn Header="Size (GB)" Binding="{Binding DataSizeGB, StringFormat='{}{0:F1}'}" Width="80"/>
                                    <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" Width="60"/>
                                    <DataGridCheckBoxColumn Header="Issues" Binding="{Binding HasIssues}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                    
                    <!-- File Shares Section -->
                    <Border Grid.Column="1" Style="{StaticResource OneDriveCard}" Margin="4,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="File Shares" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalFileShares, StringFormat='({0})'}" FontSize="14" Foreground="#9CA3AF" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0" 
                                         Text="{Binding FileShareSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="#374151" 
                                         Foreground="White" 
                                         Padding="8" 
                                         BorderThickness="1" 
                                         BorderBrush="#4B5563"/>
                                
                                <Button Grid.Column="1" 
                                        Content="ðŸ” Analyze" 
                                        Command="{Binding ValidatePermissionsCommand}" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Background="#0891B2"
                                        Margin="8,0,0,0"/>
                            </Grid>
                            
                            <DataGrid Grid.Row="2" 
                                      ItemsSource="{Binding FileSharesView}" 
                                      SelectedItem="{Binding SelectedFileShare}"
                                      AutoGenerateColumns="False" 
                                      Background="#1F2937" 
                                      Foreground="White" 
                                      GridLinesVisibility="Horizontal" 
                                      HorizontalGridLinesBrush="#374151" 
                                      BorderThickness="0" 
                                      CanUserAddRows="False"
                                      SelectionChanged="FileSharesDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Share Name" Binding="{Binding ShareName}" Width="120"/>
                                    <DataGridTextColumn Header="Server" Binding="{Binding ServerName}" Width="80"/>
                                    <DataGridTextColumn Header="Size (GB)" Binding="{Binding DataSizeGB, StringFormat='{}{0:F1}'}" Width="80"/>
                                    <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" Width="70"/>
                                    <DataGridTextColumn Header="Users" Binding="{Binding UserCount}" Width="60"/>
                                    <DataGridCheckBoxColumn Header="Issues" Binding="{Binding HasPermissionIssues}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Migration Batches Tab -->
            <TabItem Header="Migration Batches" Style="{StaticResource TabItemStyle}">
                <Border Style="{StaticResource OneDriveCard}" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Migration Batches" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalMigrationBatches, StringFormat='({0} batches)'}" FontSize="14" Foreground="#9CA3AF" Margin="12,0,24,0" VerticalAlignment="Center"/>
                            <Button Content="âš¡ Generate Batches" 
                                    Command="{Binding GenerateBatchesCommand}" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Background="#059669"/>
                            <Button Content="ðŸ“„ Export Plan" 
                                    Command="{Binding ExportPlanCommand}" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Margin="8,0,0,0"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="2" 
                                  ItemsSource="{Binding MigrationBatches}" 
                                  SelectedItem="{Binding SelectedBatch}"
                                  AutoGenerateColumns="False" 
                                  Background="#1F2937" 
                                  Foreground="White" 
                                  GridLinesVisibility="Horizontal" 
                                  HorizontalGridLinesBrush="#374151" 
                                  BorderThickness="0" 
                                  CanUserAddRows="False"
                                  SelectionChanged="BatchesDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Batch Name" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80"/>
                                <DataGridTextColumn Header="Items" Binding="{Binding TotalItems}" Width="60"/>
                                <DataGridTextColumn Header="Size (MB)" Binding="{Binding TotalSizeBytes}" Width="80"/>
                                <DataGridTextColumn Header="Scheduled Start" Binding="{Binding PlannedStartDate, StringFormat='MMM dd, yyyy'}" Width="120"/>
                                <DataGridTextColumn Header="Est. Duration" Binding="{Binding EstimatedDuration, StringFormat='h\\:mm'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Content Issues Tab -->
            <TabItem Header="Content Issues" Style="{StaticResource TabItemStyle}">
                <Border Style="{StaticResource OneDriveCard}" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Content Validation Issues" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ContentIssues.Count, StringFormat='({0} issues)'}" FontSize="14" Foreground="#9CA3AF" Margin="12,0,24,0" VerticalAlignment="Center"/>
                            <Button Content="ðŸ”¬ Validate Content" 
                                    Command="{Binding AnalyzeContentCommand}" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Background="#DC2626"/>
                            <Button Content="ðŸ”„ Refresh" 
                                    Command="{Binding RefreshStatisticsCommand}" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Margin="8,0,0,0"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="2" 
                                  ItemsSource="{Binding ContentIssues}" 
                                  AutoGenerateColumns="False" 
                                  Background="#1F2937" 
                                  Foreground="White" 
                                  GridLinesVisibility="Horizontal" 
                                  HorizontalGridLinesBrush="#374151" 
                                  BorderThickness="0" 
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Issue Type" Binding="{Binding IssueType}" Width="150"/>
                                <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                                <DataGridTextColumn Header="Affected Item" Binding="{Binding AffectedItem}" Width="200"/>
                                <DataGridTextColumn Header="Recommended Action" Binding="{Binding RecommendedAction}" Width="250"/>
                                <DataGridTextColumn Header="Detected At" Binding="{Binding DetectedAt, StringFormat='MMM dd HH:mm'}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>